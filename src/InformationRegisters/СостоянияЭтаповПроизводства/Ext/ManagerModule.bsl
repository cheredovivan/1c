	РезультатЗапроса  = Запрос.ВыполнитьПакет();
	КоличествоПакетов = РезультатЗапроса.Количество();
	
	Если ПараметрыРасчета.ОпределитьСпособЗаписи Тогда
		ВыборкаИзменений = РезультатЗапроса[КоличествоПакетов-2].Выбрать();
