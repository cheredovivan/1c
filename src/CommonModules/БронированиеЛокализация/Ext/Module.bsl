					ИзмененныеДатыОтражения.Добавить(НачалоДня(Изменение.Дата))
				КонецЕсли;
				
				Если АнализируемыеТипыОпераций.Найти(Изменение.ТипОперации) <> Неопределено Тогда
					ИзменениеСуммыДокумента = ИзменениеСуммыДокумента + ?(Изменение.НомерСтроки < 0, -1, 1) * Изменение.Сумма;
				КонецЕсли;
				
				Если (Изменение.ТипОперации = Перечисления.ТипыОперацийСБилетами.Возврат
					Или Изменение.ТипОперации = Перечисления.ТипыОперацийСБилетами.Доплата)
					И Объект.ДатаПрибытия > Изменение.Дата
					И ИзмененныеДатыОтражения.Найти(Объект.ДатаПрибытия) = Неопределено Тогда 
					ИзмененныеДатыОтражения.Добавить(Объект.ДатаПрибытия);
				КонецЕсли;
				
			КонецЦикла;
		КонецЦикла;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ИзменениеСуммыДокумента) И ИзмененныеДатыОтражения.Найти(Объект.ДатаПрибытия) = Неопределено Тогда
		ИзмененныеДатыОтражения.Добавить(Объект.ДатаПрибытия);
