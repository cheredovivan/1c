Процедура ПроверитьТипОС(ДоступныеТипыОС, Объект, ИмяТЧ, ИмяПоля, Отказ) Экспорт
	
	ТекстЗапроса = 
	"ВЫБРАТЬ
	|	ОбъектыЭксплуатации.Ссылка КАК Ссылка,
	|	ОбъектыЭксплуатации.Представление КАК Представление
	|ИЗ
	|	Справочник.ОбъектыЭксплуатации КАК ОбъектыЭксплуатации
	|
	|ГДЕ
	|	ОбъектыЭксплуатации.Ссылка В (&СписокОС)
	|	И НЕ ОбъектыЭксплуатации.ТипОС В (&ДоступныеТипыОС)
	|";
	
	Запрос = Новый Запрос(ТекстЗапроса);
	Запрос.УстановитьПараметр("СписокОС", ?(ИмяТЧ <> Неопределено, Объект[ИмяТЧ].ВыгрузитьКолонку(ИмяПоля), Объект[ИмяПоля]));
	Запрос.УстановитьПараметр("ДоступныеТипыОС", ДоступныеТипыОС);
	
	Результат = Запрос.Выполнить();
	Если Результат.Пустой() Тогда
		Возврат;
	КонецЕсли;
	
	РезультатПроверки = Новый Соответствие();
	Выборка = Результат.Выбрать();
	Пока Выборка.Следующий() Цикл
		РезультатПроверки.Вставить(Выборка.Ссылка, Выборка.Представление);
	КонецЦикла;
	
	Если ИмяТЧ <> Неопределено Тогда
		
		Для Каждого ДанныеСтроки Из Объект[ИмяТЧ] Цикл
			
			Представление = РезультатПроверки.Получить(ДанныеСтроки[ИмяПоля]);

			Если Представление <> Неопределено Тогда
				
				ТекстСообщения = НСтр("ru = 'Тип основного средства %1 не поддерживается в документе, необходимо выбрать другое основное средство или исправить тип ОС.';
										|en = '%1 fixed asset type is not supported in the document. Select another fixed asset or correct the fixed asset type.'");
				ТекстСообщения = СтрШаблон(ТекстСообщения, Представление);
				Поле = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти(ИмяТЧ, ДанныеСтроки.НомерСтроки, ИмяПоля);
				ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, Объект, Поле, "", Отказ);
			
			КонецЕсли;
			
		КонецЦикла;
	
	Иначе
		
		Представление = РезультатПроверки.Получить(Объект[ИмяПоля]);
		
		Если Представление <> Неопределено Тогда
			ТекстСообщения = НСтр("ru = 'Тип основного средства %1 не поддерживается в документе, необходимо выбрать другое основное средство или исправить тип ОС.';
									|en = '%1 fixed asset type is not supported in the document. Select another fixed asset or correct the fixed asset type.'");
			ТекстСообщения = СтрШаблон(ТекстСообщения, Представление);
			ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, Объект, ИмяПоля,, Отказ);
		КонецЕсли;
		
	КонецЕсли;
	
КонецПроцедуры

