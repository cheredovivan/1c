				КонецЕсли;
				НомерАналитикиИсточника = БюджетированиеПовтИсп.НомерВидаАналитикиСтатьиПоказателяБюджетов(ОписаниеПравила.Источник, СтрокаВидАналитики.ВидАналитикиИсточника);
				Выражение = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(ШаблонВыраженияСоответствияЗначенийАналитик, НомерАналитикиИсточника, СтрСоединить(МассивВыраженийСоответствия, Символы.ПС + Символы.Таб), БюджетированиеСервер.ВыражениеПустогоЗначенияАналитики());
			Иначе
				ЗначениеАналитики = СтрокаВидАналитики.ЗначениеАналитики;
				Выражение = ФинансовыйУчетПоДаннымБалансовыхРегистров.СтрокаВыборкиЗначения(ЗначениеАналитики);
				Если СтрНачинаетсяС(Выражение, "Параметр") Тогда
					НайтиИДобавитьПараметрЗапроса(Выражение, ЗначениеАналитики, ДанныеДляЗапроса.ПараметрыЗапроса);
					Выражение = "&"+Выражение;
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
		ВыраженияЗаполненияАналитики.Добавить(Выражение + " КАК Аналитика" + НомерАналитики); // @query-part
	КонецЦикла;
	
	ТекстПолейАналитик = СтрСоединить(ВыраженияЗаполненияАналитики, "," + Символы.ПС + Символы.Таб);
	ФрагментыТекстаЗапроса.ТекстПолейАналитик = ТекстПолейАналитик;
	
	// Отбор
	Отбор = НастройкиСКДИсточника.Отбор;

	ТекстУсловия = ПреобразоватьОтборКомпоновкиДанныхВТекстУсловияЗапроса(Отбор, ДанныеДляЗапроса,
		НастройкиСКДИсточника.ДоступныеПоляОтбора, ДеревоРеквизитовПолейИсточника);
	ФрагментыТекстаЗапроса.ТекстУсловия = ?(ПустаяСтрока(ТекстУсловия), "ИСТИНА", ТекстУсловия);
	
	// Выражение смещения периода
	Если Не ПустаяСтрока(ВыражениеПериодСмещения) Тогда
		ФрагментыТекстаЗапроса.ВыражениеПериодСмещения = ВыражениеПоляДляПомещенияВТекстЗапроса(ВыражениеПериодСмещения, ДанныеДляЗапроса,
			НастройкиСКДИсточника.ДоступныеПоляВыбора, ДеревоРеквизитовПолейИсточника);
	КонецЕсли;
	
	Возврат ДанныеДляЗапроса;
	
КонецФункции

// Возвращает запрос по схеме компоновки данных правила с произвольным запросом.
//
// Параметры:
//  СхемаКомпоновкиДанных - СхемаКомпоновкиДанных - схема компоновки данных правила
//  ИмяВременнойТаблицы - Строка - имя временной таблицы для помещения данных запроса
//
// Возвращаемое значение:
//  Неопределено,
//  Запрос
//
Функция ЗапросПоСхемеИсточникаДанныхПравила(СхемаКомпоновкиДанных, ИмяВременнойТаблицы) Экспорт
	
	КомпоновкаДанныхСервер.ДобавитьПараметр(СхемаКомпоновкиДанных, "Документ",
		Новый ОписаниеТипов("ДокументСсылка.ЗаявкаНаРасходованиеДенежныхСредств, ДокументСсылка.ЗаявкаНаКомандировку"));
	Настройки = СхемаКомпоновкиДанных.НастройкиПоУмолчанию;
	ФинансоваяОтчетностьСервер.НовыйОтбор(Настройки.Отбор, "Регистратор",
		Новый ПолеКомпоновкиДанных("ПараметрыДанных.Документ"));
	
	МакетКомпоновки = КомпоновкаДанныхСервер.ПолучитьМакетКомпоновки(СхемаКомпоновкиДанных, Настройки);
	Если МакетКомпоновки.НаборыДанных.Количество() = 0 Тогда
		Возврат Неопределено;
	КонецЕсли;
	
	Запрос = КомпоновкаДанныхСервер.ПолучитьЗапросИзМакетаКомпоновки(МакетКомпоновки, МакетКомпоновки.НаборыДанных[0].Имя);
	ПараметрыКУдалению = Новый Массив;
	Для Каждого ПараметрЗапроса Из Запрос.Параметры Цикл
		Если ПараметрЗапроса.Ключ = "Документ" Тогда
			// Параметр "Документ" пустой, но он заполняется при проведении контролируемого документа
			Продолжить;
		КонецЕсли;
		СтрокаЗначениеПараметра = ФинансовыйУчетПоДаннымБалансовыхРегистров.СтрокаВыборкиЗначения(
			ПараметрЗапроса.Значение);
		Если СтрНачинаетсяС(СтрокаЗначениеПараметра, "Параметр") Тогда
			Продолжить;
		Иначе
			Запрос.Текст = СтрЗаменить(Запрос.Текст, "&" + ПараметрЗапроса.Ключ, СтрокаЗначениеПараметра);
			ПараметрыКУдалению.Добавить(ПараметрЗапроса.Ключ);
		КонецЕсли;
	КонецЦикла;
	Для Каждого ПараметрЗапроса Из ПараметрыКУдалению Цикл
		Запрос.Параметры.Удалить(ПараметрЗапроса);
	КонецЦикла;
	
	ТекстЗапроса = 
		"ВЫБРАТЬ
		|	*
		|ПОМЕСТИТЬ ИмяВременнойТаблицы
		|ИЗ
		|	&ИсточникДанныхПравила";
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&ИсточникДанныхПравила", "(" + Запрос.Текст + ") КАК ВложенныйЗапрос");
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "ИмяВременнойТаблицы", ИмяВременнойТаблицы);
	Запрос.Текст = ТекстЗапроса;
	
	Возврат Запрос;
	
КонецФункции

