	ВспомогательныеРеквизиты.Вставить(
		"ПараметрыУчетнойПолитикиНастройкиУчетаНалогаНаПрибыль", 
		ПараметрыУчетнойПолитикиНастройкиУчетаНалогаНаПрибыль);
	
