	ОтложенныеЗадания.ДобавитьЗаданияВОчередь(
		Очередь,
		Новый Структура("Документ", Документ.Ссылка),,
		ПроведениеДокументов.ТаблицаОчередейЗаданий(Документ, Очередь));
	
