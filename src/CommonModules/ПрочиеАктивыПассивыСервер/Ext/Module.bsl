// Записывает суммы акциза в регистр "Движения Прочие активы и пассивы".
//
// Параметры:
//	ДокументСсылка - ДокументСсылка - ссылка на документ, по которому необходимо записать прочие активы и пассивы.
//
Процедура ЗаписатьПрочиеАктивыПассивы(ДокументСсылка) Экспорт
	
	НаборЗаписей = Неопределено;
	ТипДокумента = ТипЗнч(ДокументСсылка);
	
	Если ТипДокумента <> Тип("ДокументСсылка.Сторно") Тогда
		
		МенеджерДокумента = ОбщегоНазначения.МенеджерОбъектаПоСсылке(ДокументСсылка);
		Результат = МенеджерДокумента.ПолучитьДанныеПоПрочимАктивамПассивам(ДокументСсылка);
		
		НаборЗаписей = РегистрыНакопления.ДвиженияПоПрочимАктивамПассивам.СоздатьНаборЗаписей();
		НаборЗаписей.ДополнительныеСвойства.Вставить("ОтложенноеПроведение");
		НаборЗаписей.ДополнительныеСвойства.Вставить("ТаблицыКонтроля");
		НаборЗаписей.ДополнительныеСвойства.Вставить("МенеджерВременныхТаблиц", Новый МенеджерВременныхТаблиц);
		НаборЗаписей.Отбор.Регистратор.Установить(ДокументСсылка);
		Выборка = Результат.Выбрать();
		Пока Выборка.Следующий() Цикл
			ЗаполнитьЗначенияСвойств(НаборЗаписей.Добавить(), Выборка);
		КонецЦикла;
		
	КонецЕсли;
	
	Если ТипДокумента = Тип("ДокументСсылка.СписаниеНедостачТоваров")
		Или ТипДокумента = Тип("ДокументСсылка.ВнутреннееПотребление") Тогда
		
		РеквизитыДокумента = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(ДокументСсылка, "Исправление, СторнируемыйДокумент");
		
		Если РеквизитыДокумента.Исправление Тогда
			ДвиженияДляСторно(ДокументСсылка, РеквизитыДокумента.СторнируемыйДокумент, НаборЗаписей);
		КонецЕсли;
		
	ИначеЕсли ТипДокумента = Тип("ДокументСсылка.Сторно") Тогда
		
		СторнируемыйДокумент = ОбщегоНазначения.ЗначениеРеквизитаОбъекта(ДокументСсылка, "СторнируемыйДокумент");
		ТипДокумента = ТипЗнч(СторнируемыйДокумент);
		
		Если ТипДокумента = Тип("ДокументСсылка.СписаниеНедостачТоваров")
			Или ТипДокумента = Тип("ДокументСсылка.ВнутреннееПотребление") Тогда
			
			НаборЗаписей = РегистрыНакопления.ДвиженияПоПрочимАктивамПассивам.СоздатьНаборЗаписей();
			НаборЗаписей.ДополнительныеСвойства.Вставить("ОтложенноеПроведение");
			НаборЗаписей.ДополнительныеСвойства.Вставить("ТаблицыКонтроля");
			НаборЗаписей.ДополнительныеСвойства.Вставить("МенеджерВременныхТаблиц", Новый МенеджерВременныхТаблиц);
			НаборЗаписей.Отбор.Регистратор.Установить(ДокументСсылка);
			
			ДвиженияДляСторно(ДокументСсылка, СторнируемыйДокумент, НаборЗаписей);
			
		КонецЕсли;
		
	КонецЕсли;
	
	Если НаборЗаписей <> Неопределено Тогда
		НаборЗаписей.Записать();
		ПроверитьДатуЗапретаПоТаблицеИзменений(НаборЗаписей);
	КонецЕсли;
	
КонецПроцедуры

