	Запрос.Текст = СтрЗаменить(Запрос.Текст, "ПодстановкаЗаданияКРасчетуГрафика", "(" + ПодстановкаЗаданияКРасчетуГрафика + ")");
	
	РезультатЗапроса = Запрос.ВыполнитьПакет();
	КоличествоПакетов = РезультатЗапроса.Количество();
	
#Область ГрафикПроизводства
	
	// В нормативном графике задания регистрируются по упрощенной схеме, в боевом графике рассчитываются по изменениям.
	
	Если Не ИспользуетсяГрафикПроизводства Тогда
		РегистрыСведений.ЗаданияКРасчетуСтруктурыЗаказаГрафикПроизводства.ДобавитьЗадания(РезультатЗапроса[КоличествоПакетов-3].Выгрузить());
