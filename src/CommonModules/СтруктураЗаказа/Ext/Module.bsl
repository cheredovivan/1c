				Если Не Изделие.ПобочныйВыпуск Тогда
					Если Не Изделие.МножественныйЗапуск Тогда
						ИзделиеГруппы.ПоляГруппировки = "" + Изделие.КлючНоменклатура;
					Иначе
						
						Хеш = Новый ХешированиеДанных(ХешФункция.SHA256);
						
						Если Изделие.МножественныйЗапуск Тогда
							Хеш.Добавить("" + Изделие.ГруппаИзделий);
							Хеш.Добавить("" + Изделие.КлючПартияРодитель);
							Хеш.Добавить("" + Изделие.ДлительностьДоВыпускаРодитель);
						КонецЕсли;
						
						Если Не Изделие.НазначениеСтруктуры.Пустая() Тогда
							Хеш.Добавить("" + Изделие.НазначениеСтруктуры.УникальныйИдентификатор()); 
							ЕстьОграничениеДоступности = Истина;
						КонецЕсли;
						
						Если Изделие.ПараметрическаяСпецификация Тогда
							Хеш.Добавить("" + Изделие.Номенклатура.УникальныйИдентификатор());
							Хеш.Добавить("" + Изделие.Характеристика.УникальныйИдентификатор());
							ЕстьОграничениеДоступности = Истина;
						КонецЕсли;
						
						ИзделиеГруппы.ПоляГруппировки = Хеш.ХешСумма;
					КонецЕсли;
					
				КонецЕсли;
				
				Если МаксПорядок <> Изделие.Порядок Тогда
					МаксПорядок = Макс(МаксПорядок, Изделие.Порядок);
					ЕстьРазныйПорядок = Истина;
				КонецЕсли;
				
				Индекс = Индекс + 1;
				
			КонецЦикла;
			
			ПоляСортировки = "ДлительностьДоВыпускаРодитель УБЫВ, ПобочныйВыпуск, ИдентификаторВГруппеИзделийРодитель, ПоляГруппировки, Порядок, Требуется УБЫВ";
			ИзделияГруппы.Сортировать(ПоляСортировки, Новый СравнениеЗначений());

			ГраницаИзделияГруппы = ИзделияГруппы.Количество() - 1;
			ТактРасчетаРазмераПартии = Истина;
			i = 0; // курсор для поиска остатка в партиях
			X = 0; // итератор обхода изделий
			Y = 0; // итератор расчета состава партий (правая граница)
			ГраницаИзделийПредыдущая = 0;
			ГраницаПартийТекущая = -1;
			ПоляГруппировки = Неопределено;
			ЕстьОшибки = Ложь;
			
			ТекущееИзделие = Неопределено; // основное изделие партии
			ТекущийПорядок = -1;
			ПредыдующийРазмерПартии = 0;
			РазмерПартии = 0;
			КоличествоИзделия = 0;
			
			Пока ГраницаИзделияГруппы >= X Цикл
				
				ИзделиеГруппы = ИзделияГруппы[X];
				
				Если ЕстьРазныйПорядок И ТекущийПорядок <> ИзделиеГруппы.Порядок Или ЕстьОграничениеДоступности И (МинимальныйВыпуск > 0 Или Не ВыпускПроизвольнымиПорциями) Тогда
					// обходим все партии, если состав изделий разрозненный или есть остаток в партиях, но не из всех партий можно брать остатки
					i = 0;
				КонецЕсли;
				
				Пока ГраницаПартийТекущая >= i И ИзделиеГруппы.Требуется > 0 Цикл // учет остатка в партиях 
					
					Изделие = ИзделиеГруппы.Изделие;
					Партия = ПартииГруппы[i];
					
					Если Партия.КлючПартия <> ПустойКлючСвязи Тогда // партия инициализирована
						Если ЕстьОграничениеДоступности
							И (НЕ Изделие.ПобочныйВыпуск И Изделие.НазначениеСтруктуры <> Партия.Строки[0].НазначениеСтруктуры
								ИЛИ Изделие.ПараметрическаяСпецификация 
									И Изделие.Порядок = 1 
									И (Изделие.Номенклатура <> Партия.Строки[0].Номенклатура
											ИЛИ Изделие.Характеристика <> Партия.Строки[0].Характеристика)) Тогда
							ОстатокПартии = 0;
						Иначе
							Если Не ЕстьРазныйПорядок Тогда 
								ОстатокПартии = Партия.Остаток;
							Иначе
								ОстатокПартии = Партия.Остаток[ИзделиеГруппы.Порядок - 1];
								Если ОстатокПартии = Неопределено Тогда
									ОстатокПартии = ?(Изделие.Порядок > 1, Партия.РазмерПартии * Изделие.КоличествоНаЕдиницуПартииЗапуска / Изделие.КоличествоОсновногоИзделияНаЕдиницуПартииЗапуска, Партия.РазмерПартии);
								КонецЕсли;
							КонецЕсли;
						КонецЕсли;
					Иначе
						ЗаполнитьЗначенияСвойств(Партия, Изделие, "ЗаказНаПроизводство,ГруппаИзделий,Спецификация" + ",ПроизводствоИзДавальческогоСырья");
						ИдентификаторВГруппеИзделийКлючРодитель = ИзвлечьКлючПартииИзИдентификатора(Изделие.ИдентификаторВГруппеИзделийРодитель); // идентификатор родителя
						Если Не ВсеПартииНовые
							И НайтиВКэшеКлючПартии(ПартииДоИзменения, ИдентификаторВГруппеИзделийКлючРодитель, Изделие.ГруппаИзделий, Изделие, КэшПартияКлючПоиска, КэшПартия) Тогда
							ЗаполнитьЗначенияСвойств(Партия, КэшПартия, "КлючПартия,ИдентификаторВГруппеИзделий");
						Иначе
							МаксимальныйНомерПартии = МаксимальныйНомерПартии + 1;
							Партия.КлючПартия = Новый УникальныйИдентификатор();
							Партия.НоваяПартия = Истина;
							Партия.ИдентификаторВГруппеИзделий = ИдентификаторПартииВГруппеИзделий(
								Изделие.ГруппаИзделий,
								ИдентификаторВГруппеИзделийКлючРодитель,
								Изделие.УровеньРодитель,
								МаксимальныйНомерПартии);
						КонецЕсли;
						ОстатокПартии = ?(Изделие.Порядок > 1, Партия.РазмерПартии * Изделие.КоличествоНаЕдиницуПартииЗапуска / Изделие.КоличествоОсновногоИзделияНаЕдиницуПартииЗапуска, Партия.РазмерПартии);
						Если ЕстьРазныйПорядок Тогда
							Партия.Остаток = Новый Массив(МаксПорядок);
						КонецЕсли;
					КонецЕсли;
					
					Распределено = Мин(ОстатокПартии, ИзделиеГруппы.Требуется);
					Если Распределено > 0 Тогда
						
						Партия.Строки.Добавить(Изделие);
						
						Если Распределено <> Изделие.Требуется Тогда 
							Партия.КорректировкаСтрок = ?(Партия.КорректировкаСтрок = Неопределено, Новый Соответствие(), Партия.КорректировкаСтрок);
							Партия.КорректировкаСтрок.Вставить(Изделие.КлючНоменклатура, Изделие.Требуется - Распределено);
						КонецЕсли;
						
						ИзделиеГруппы.Требуется = ИзделиеГруппы.Требуется - Распределено;  
						ОстатокПартии = ОстатокПартии - Распределено;	
					
						Если ЕстьРазныйПорядок Тогда
							Партия.Остаток[ИзделиеГруппы.Порядок-1] = ОстатокПартии;
						Иначе
							Партия.Остаток = ОстатокПартии;
						КонецЕсли;
						
					КонецЕсли;
					
					Если ОстатокПартии = 0 Тогда
						i = i + 1;
					КонецЕсли;
					
				КонецЦикла;
				
				Если ТактРасчетаРазмераПартии Тогда
					
					ГруппировкаРавна = (ПоляГруппировки = ИзделиеГруппы.ПоляГруппировки 
						Или ПоляГруппировки = Неопределено);
					Если ГруппировкаРавна Тогда // расчет размера партий
						Если ТекущееИзделие = Неопределено Тогда
							ТекущееИзделие = ИзделиеГруппы.Изделие;
							ТекущийПорядок = ИзделиеГруппы.Порядок;
						КонецЕсли;
						// побочный выпуск не участвует в расчете размера партий
						Если Не ИзделиеГруппы.Изделие.ПобочныйВыпуск Тогда
						 	Если ТекущийПорядок = ИзделиеГруппы.Порядок Тогда 
								КоличествоИзделия = КоличествоИзделия + ИзделиеГруппы.Требуется;
							Иначе
								РазмерПартии = ?(ТекущееИзделие.Порядок > 1, КоличествоИзделия * ТекущееИзделие.КоличествоОсновногоИзделияНаЕдиницуПартииЗапуска / ТекущееИзделие.КоличествоНаЕдиницуПартииЗапуска, КоличествоИзделия);
								РазмерПартии = ?(ТекущееИзделие.ЕдиницаИзмеренияШтучная И РазмерПартии > Цел(РазмерПартии), Цел(РазмерПартии) + 1, РазмерПартии);
								ПредыдующийРазмерПартии = Макс(РазмерПартии, ПредыдующийРазмерПартии);
								ТекущееИзделие = ИзделиеГруппы.Изделие;
								ТекущийПорядок = ИзделиеГруппы.Порядок;
								КоличествоИзделия = ИзделиеГруппы.Требуется;
							КонецЕсли;
						КонецЕсли;
						X = X + 1;
						Y = X;
					КонецЕсли;
					Если Не ГруппировкаРавна Или X > ГраницаИзделияГруппы Тогда // формирование партий
						
						РазмерПартии = ?(ТекущееИзделие.Порядок > 1, КоличествоИзделия * ТекущееИзделие.КоличествоОсновногоИзделияНаЕдиницуПартииЗапуска / ТекущееИзделие.КоличествоНаЕдиницуПартииЗапуска, КоличествоИзделия);
						РазмерПартии = ?(ТекущееИзделие.ЕдиницаИзмеренияШтучная И РазмерПартии > Цел(РазмерПартии), Цел(РазмерПартии) + 1, РазмерПартии);
						РазмерПартии = Макс(РазмерПартии, ПредыдующийРазмерПартии);

						ТактРасчетаРазмераПартии = Ложь;
						X = ГраницаИзделийПредыдущая;
						ГраницаПартийПредыдущая = ГраницаПартийТекущая;
						
						Если Не ВыпускПроизвольнымиПорциями Тогда
							// округление до целых партий
							КоличествоПорций = РазмерПартии / КоэффициентПересчетаПартииЗапуска;
							Если Цел(КоличествоПорций) <> КоличествоПорций Тогда
								РазмерПартии = (Цел(КоличествоПорций) + 1) * КоэффициентПересчетаПартииЗапуска;
							КонецЕсли;
						КонецЕсли;
						
						Если РазмерПартии > 0 Тогда
							Если ОптимальныйВыпуск > 0 Тогда 
								
								Пока РазмерПартии >= ОптимальныйВыпуск Цикл
									ПартииГруппы.Добавить().РазмерПартии = ОптимальныйВыпуск;
									РазмерПартии = РазмерПартии - ОптимальныйВыпуск; 
									ГраницаПартийТекущая = ГраницаПартийТекущая + 1;
								КонецЦикла;
								
								КоличествоПартий = (ГраницаПартийТекущая - ГраницаПартийПредыдущая);
								
								// если можем покрыть остаток за счет допустимого превышения
								Если РазмерПартии <= КоличествоПартий * ДопустимоеПревышение Тогда
									
									Для Сч = -ГраницаПартийТекущая По -(ГраницаПартийПредыдущая + 1) Цикл
										Если РазмерПартии <= 0 Тогда
											Прервать;
										КонецЕсли;
										ПартииГруппы[-Сч].РазмерПартии = ПартииГруппы[-Сч].РазмерПартии + Мин(ДопустимоеПревышение, РазмерПартии);
										РазмерПартии = РазмерПартии - Мин(ДопустимоеПревышение, РазмерПартии);
									КонецЦикла;
									
								// если можем покрыть остаток за счет сокращения оптимальных партий до минимальных
								Иначе  
								
									Для Сч = -ГраницаПартийТекущая По -(ГраницаПартийПредыдущая + 1) Цикл
										Если РазмерПартии >= МинимальныйВыпуск Тогда
											Прервать;
										КонецЕсли;
										ПартииГруппы[-Сч].РазмерПартии = ПартииГруппы[-Сч].РазмерПартии - Мин(ДельтаМинимумОптимум, МинимальныйВыпуск - РазмерПартии);
										РазмерПартии = РазмерПартии + Мин(ДельтаМинимумОптимум, МинимальныйВыпуск - РазмерПартии);
									КонецЦикла;
									
									ПартииГруппы.Добавить().РазмерПартии = Макс(РазмерПартии, МинимальныйВыпуск);
									ГраницаПартийТекущая = ГраницаПартийТекущая + 1;

								КонецЕсли;
								
							Иначе
								
								ПартииГруппы.Добавить().РазмерПартии = Макс(РазмерПартии, МинимальныйВыпуск);
								ГраницаПартийТекущая = ГраницаПартийТекущая + 1;
								
							КонецЕсли;
						КонецЕсли;
						
						i = ГраницаПартийПредыдущая + 1;
						
						ТекущееИзделие = Неопределено;
						ТекущийПорядок = -1;
						ПредыдующийРазмерПартии = 0;
						РазмерПартии =  0;
						КоличествоИзделия = 0;
						
					КонецЕсли;
					ПоляГруппировки = ИзделиеГруппы.ПоляГруппировки;
					
				Иначе
					Если ИзделиеГруппы.Требуется > 0 Тогда
						ЕстьОшибки = Истина;
					КонецЕсли;
					X = X + 1;
					Если Y = X Тогда
						ТактРасчетаРазмераПартии = Истина;
						ГраницаИзделийПредыдущая = Y;
					КонецЕсли;
				КонецЕсли;
				
			КонецЦикла;
			
			Если ЕстьОшибки Тогда
				
				Если ГраницаПартийТекущая = -1 Тогда // в заказе только побочные изделия
					
					Партия = ПартииГруппы.Добавить();
					ЗаполнитьЗначенияСвойств(Партия, Изделие, "ЗаказНаПроизводство,ГруппаИзделий,Спецификация, КлючПартия");
					
					Для каждого Строка Из ИзделияГруппы Цикл
						Партия.Строки.Добавить(Строка.Изделие);
					КонецЦикла;
					
					Если Партия.КлючПартия = ПустойКлючСвязи Тогда
						Партия.НоваяПартия = Истина;
						Партия.КлючПартия = Новый УникальныйИдентификатор();
					КонецЕсли;
					
				КонецЕсли;
				
				Партия = ПартииГруппы[0];
				
				Для каждого Строка Из ИзделияГруппы Цикл
					
					Если Строка.Требуется = 0 Тогда
						Продолжить;
					КонецЕсли;
					
					Партия.БылиОшибки = Истина;
					ПредставлениеНоменклатуры = НоменклатураКлиентСервер.ПредставлениеНоменклатуры(Строка.Изделие.Номенклатура, Строка.Изделие.Характеристика,,,Строка.Изделие.Назначение);
					Шаблон = НСтр("ru = 'Не удалось запланировать изделие ""%1"" в количестве %2 %3 по спецификации %4 ""%5"".';
									|en = 'Cannot schedule the ""%1"" finished product in the amount of %2 %3 under the %4 ""%5"" BOM.'");
					ТекстСообщения = СтрШаблон(Шаблон,
						ПредставлениеНоменклатуры, Строка.Требуется, Строка.Изделие.Номенклатура.ЕдиницаИзмерения, Строка.Изделие.Спецификация.Код, Строка.Изделие.Спецификация.Наименование);
					ДобавитьСообщениеВСписокОшибок(Партия.Протокол, ТекстСообщения);
					ЗаписьЖурналаРегистрации(СтруктураЗаказа.ИмяСобытияЖурналаРегистрации(), УровеньЖурналаРегистрации.Ошибка,,Партия.ЗаказНаПроизводство,
						ТекстСообщения);
					
				КонецЦикла;
				
			КонецЕсли;
			
			ИзделияГруппы.Очистить();
			
		КонецЕсли;
		
		Для каждого Партия Из ПартииГруппы Цикл
			
			Если Партия.Строки.Количество() > 0
				И ПроверитьЗацикливаниеРазузлованияСтруктурыЗаказа(Партия, Партия.Строки, ПараметрыРасчета) Тогда
				Партия.РазмерПартии = 0; // блокируем расчет
			КонецЕсли;
			
			ЗаполнитьДвиженияПоРезультатуРазузлования(Хранилище, Партия, Партия.Строки, КэшДанных, ДанныеСпецификаций, КлючиСвязи);
			
			Партия.Действует             = Партия.РазмерПартии > 0 Или Партия.Строки.Количество() > 0;
			Партия.РассчитыватьИзменения = Партия.Действует И НЕ Партия.НоваяПартия И НЕ Изделие.ПолныйРасчет И НЕ Партия.БылиОшибки И ПараметрыРасчета.РассчитыватьИзменения;
			
			ЗаполнитьЗначенияСвойств(Партии.Добавить(), Партия);
			
			Если ИспользуетсяГрафикПроизводства
				И Партия.Действует
				И (Не ЕстьЗаданияКРасчетуГрафикаПолныйРасчет
					ИЛИ ЗаданияКРасчетуГрафикаПолныйРасчет.Найти(Партия.ЗаказНаПроизводство, "ЗаказНаПроизводство") = Неопределено) Тогда
				ЗаполнитьЗначенияСвойств(ЗаданияКРасчетуГрафика.Добавить(), Партия);
			КонецЕсли;
			
			БылиОшибки = БылиОшибки Или Партия.БылиОшибки;
			
		КонецЦикла;
		
		ПартииГруппы.Очистить();
		
	КонецЦикла;
	
	Изделия.Очистить();
	КлючиСвязи = Неопределено;
	
	// в ИБ после расчета могут остаться "старые" ключи партий, по ним нужно "затереть" данные
	
	Если Не
		ВсеПартииНовые Тогда
		
		Партии.Индексы.Добавить("КлючПартия");
		
		Для каждого ПартияДоИзменения Из ПартииДоИзменения Цикл
			
			БылиОшибки = БылиОшибки Или ПартияДоИзменения.БылиОшибки;
			
			Партия = Партии.Найти(ПартияДоИзменения.КлючПартия, "КлючПартия");
			
			Если Не Партия = Неопределено Тогда
				Партия.БылиОшибки = Партия.БылиОшибки Или ПартияДоИзменения.БылиОшибки; 
				Продолжить;
			КонецЕсли;
			
			ЗаполнитьЗначенияСвойств(Партии.Добавить(), ПартияДоИзменения);
			
			Если ИспользуетсяГрафикПроизводства Тогда
				ЗаполнитьЗначенияСвойств(ЗаданияКОчисткеГрафика.Добавить(), ПартияДоИзменения);
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЕсли;

	МаксимальныйКодПартииВГруппеИзделий = Неопределено;
	ПартииДоИзменения = Неопределено;
	
	// расчет "дельты" для записи изменений по спецификациям "повт.исп = ложь" (в режиме "дополнение")
	
	Если ВсеПартииНовые Тогда
		
		ВсегоСтрок = 0;
		
		Для каждого Данные Из Хранилище Цикл
			
			Таблица = Данные.Значение; // ТаблицаЗначений
			
			Таблица.Колонки.Добавить("НомерПорции", ОбщегоНазначения.ОписаниеТипаЧисло(4, 0));
			Таблица.Индексы.Добавить("КлючПартия");
			
			ВсегоСтрок = Макс(ВсегоСтрок, Таблица.Количество());
			
		КонецЦикла;
		
	Иначе
		
		НайденныеПартии = Партии.НайтиСтроки(Новый Структура("РассчитыватьИзменения", Истина));
		
		ВсегоСтрок = 0;
		Для каждого Данные Из Хранилище Цикл
			
			Таблица = Данные.Значение; // ТаблицаЗначений
			
			Если НайденныеПартии.ВГраница() <> -1 Тогда
				
				ЗначенияЗаполнения = Новый Структура("РассчитыватьИзменения", Истина);
				
				ПараметрыОтбора = Новый Структура("КлючПартия");
				
				Таблица.Колонки.Добавить("РассчитыватьИзменения", Новый ОписаниеТипов("Булево"));
				Таблица.Индексы.Добавить("КлючПартия");
				
				Для каждого Партия Из НайденныеПартии Цикл
					ЗаполнитьЗначенияСвойств(ПараметрыОтбора, Партия);
					ЗаполнитьКолонкиВТаблицеПоПараметрамОтбора(Таблица, ПараметрыОтбора, ЗначенияЗаполнения);
				КонецЦикла;
				
				Таблица.Индексы.Удалить(0);
				
				Если Данные.Ключ = "СтруктураЗаказа" Тогда
					РассчитатьИзмененияИДобавитьСторноДвиженияВТаблицуСтруктураЗаказа(Таблица);
				КонецЕсли;
				
				Если Данные.Ключ = "ТрудозатратыСтруктурыЗаказа" Тогда
					РассчитатьИзмененияИДобавитьСторноДвиженияВТаблицуТрудозатратыСтруктурыЗаказа(Таблица);
				КонецЕсли;
				
			КонецЕсли;
			
			Таблица.Колонки.Добавить("НомерПорции", ОбщегоНазначения.ОписаниеТипаЧисло(4, 0));
			Таблица.Индексы.Добавить("КлючПартия");
			
			ВсегоСтрок = Макс(ВсегоСтрок, Таблица.Количество());
			
		КонецЦикла;
		
	КонецЕсли;
	
	Партии.Колонки.Добавить("НомерПорции", ОбщегоНазначения.ОписаниеТипаЧисло(4, 0));
	
	// группировка партий в ПорцииЗаписи по порциям записи
	
	ПорцииЗаписи = ПорцииЗаписи();
	
	Если ВсеПартииНовые
		И КоличествоСтрокВНабореЗаписей() > ВсегоСтрок Тогда
		
		ПорцииЗаписи.Добавить().НомерПорции = 0;
		
	Иначе
	
		ВсегоПартий = Партии.Количество();
		
		КоличествоСтрок = 0;
		Контейнер = Новый Массив();
		
		Для X = 0 По ВсегоПартий - 1 Цикл
			
			Партия = Партии[X];
			
			ЗаполнитьЗначенияСвойств(ПартияСтруктура, Партия);
			
			Замещать = Не Партия.НоваяПартия И Не Партия.РассчитыватьИзменения;
			
			Для каждого Данные Из Хранилище Цикл
				Контейнер.Добавить(Данные.Значение.НайтиСтроки(ПартияСтруктура));
			КонецЦикла;
			
			КоличествоСтрок = Контейнер[0].Количество();
			
			ПорцияЗаписи = ПорцияЗаписи(ПорцииЗаписи, Замещать, Истина, КоличествоСтрок);
			
			Для каждого Коллекция Из Контейнер Цикл
				УстановитьНомерПорцииВКоллекцииДвижений(Коллекция, ПорцияЗаписи.НомерПорции);
			КонецЦикла;
			
			Партия.НомерПорции = ПорцияЗаписи.НомерПорции;
			
			Контейнер.Очистить();
			
			ПорцияЗаписи.КоличествоСтрок = ПорцияЗаписи.КоличествоСтрок + КоличествоСтрок;
			ПорцияЗаписи.Доступно = КоличествоСтрокВНабореЗаписей() > ПорцияЗаписи.КоличествоСтрок;
			
		КонецЦикла;
		
	КонецЕсли;
	
	// расчет таблицы изменений для регистрации заданий к распределению запасов
	
	ПустаяГруппаИзделийСтруктура = Новый Структура("ГруппаИзделий", ПустаяГруппаИзделий()); // исключаем строки вида ПроизводствоПродукция, ПроизводствоПолуфабриката
	
	Если ВсеПартииНовые
		Или ПараметрыРасчета.РассчитыватьИзменения Тогда
		
		ИзменениеЗапасов = Хранилище.СтруктураЗаказа.Скопировать(ПустаяГруппаИзделийСтруктура, "НомерПорции," + "Номенклатура,Характеристика,Склад,Назначение" + ",ЗаказНаПроизводство"); // ТаблицаЗначений
		ИзменениеЗапасов.Свернуть("НомерПорции," + "Номенклатура,Характеристика,Склад,Назначение" + ",ЗаказНаПроизводство");
		ИзменениеЗапасов.Индексы.Добавить("НомерПорции");
		
	Иначе
		
		Измерения = РегистрыСведений.СтруктураЗаказа.СтруктураМетаданных().ИзмеренияСтрока;
		ИзменениеЗапасов = Хранилище.СтруктураЗаказа.Скопировать(ПустаяГруппаИзделийСтруктура, "НомерПорции," + Измерения + ",Требуется,Запланировано"); // ТаблицаЗначений
		СвернутьТаблицуИУдалитьНулевыеСтроки(ИзменениеЗапасов, "НомерПорции," + Измерения, "Требуется,Запланировано");
		ИзменениеЗапасов.Свернуть("НомерПорции," + "Номенклатура,Характеристика,Склад,Назначение" + ",ЗаказНаПроизводство");
		ИзменениеЗапасов.Индексы.Добавить("НомерПорции");
		
	КонецЕсли;
	
	// подготовка к записи ошибок расчета
	
	Если БылиОшибки Тогда
		
		КонтрольДублей = Новый Соответствие();
		ОшибкиПартий = РегистрыСведений.ПротоколРасчетаСтруктурыЗаказа.СоздатьНаборЗаписей().ВыгрузитьКолонки("ЗаказНаПроизводство,ИдентификаторОшибки");
		ОшибкиПартий.Колонки.Добавить("НомерПорции", ОбщегоНазначения.ОписаниеТипаЧисло(4, 0));
		ОшибкиПартий.Колонки.Добавить("Протокол");
		ПартииСОшибками = Партии.НайтиСтроки(Новый Структура("БылиОшибки", Истина));
		
		Для каждого Партия Из ПартииСОшибками Цикл
			
			ТекстСообщения = "";
			
			Если ЗначениеЗаполнено(Партия.Протокол) Тогда // исключаем дубли
				КонтрольДублей_ГруппаИзделий = КонтрольДублей.Получить(Партия.ГруппаИзделий);
				Если КонтрольДублей_ГруппаИзделий = Неопределено Тогда
					КонтрольДублей_ГруппаИзделий = Новый Соответствие();
					КонтрольДублей.Вставить(Партия.ГруппаИзделий, КонтрольДублей_ГруппаИзделий);
				КонецЕсли;
				Для Каждого Сообщение Из Партия.Протокол Цикл
					Хеш = Новый ХешированиеДанных(ХешФункция.SHA256);
					Хеш.Добавить(Сообщение);
					Если КонтрольДублей_ГруппаИзделий[Хеш.ХешСумма] <> Истина Тогда
						ТекстСообщения = ?(ТекстСообщения = "", Сообщение, ТекстСообщения + ";" + Сообщение);
						КонтрольДублей_ГруппаИзделий.Вставить(Хеш.ХешСумма, Истина);
					КонецЕсли;
				КонецЦикла;
			КонецЕсли;
			
			Если ТекстСообщения = "" И Партия.НоваяПартия Тогда // по "старым" партиям ошибки нужно очистить (БылиОшибки = Истина)
				Продолжить;
			КонецЕсли;
			
			Ошибка = ОшибкиПартий.Добавить();
			ЗаполнитьЗначенияСвойств(Ошибка, Партия, "ЗаказНаПроизводство,НомерПорции");
			Ошибка.ИдентификаторОшибки = Партия.КлючПартия;
			
			Если Не ТекстСообщения = "" Тогда
 				Протокол = РегистрыСведений.ПротоколРасчетаСтруктурыЗаказа.ПротоколМакет();
				Протокол.Данные = СтруктураПоПолям(Партия, "Спецификация, ЗаказНаПроизводство");
				Протокол.ТекстСообщения = ТекстСообщения;
				Ошибка.Протокол = Новый ХранилищеЗначения(Протокол, Новый СжатиеДанных(9)); // регистрация ошибок
			КонецЕсли;
			
		КонецЦикла;
		
		ОшибкиПартий.Индексы.Добавить("НомерПорции");

		ПартииСОшибками = Неопределено;
		КонтрольДублей = Неопределено;

	КонецЕсли;
	
	// подготовка движений к записи (удаление записей "до изменения", необходимых для контроля изменений на предыдущем шаге)
	
	Если Не
		ВсеПартииНовые Тогда
		
		Для каждого Данные Из Хранилище Цикл
			НайденныеСтроки = Данные.Значение.НайтиСтроки(Новый Структура("ДвиженияДоИзменения", Истина));
			УдалитьСтрокиИзТаблицы(Данные.Значение, НайденныеСтроки);
		КонецЦикла;
		
	КонецЕсли;
	
	Для каждого Данные Из Хранилище Цикл
		Таблица = Данные.Значение; // ТаблицаЗначений
		Таблица.ЗагрузитьКолонку(Таблица.ВыгрузитьКолонку("КлючПартия"), "КлючНабор"); // отдельное измерение для записи движений
		Таблица.Индексы.Добавить("НомерПорции");
	КонецЦикла;
	
	Партии.Индексы.Добавить("НомерПорции");
	
	// запись результата разузлования
	
	Если ИспользуетсяГрафикПроизводства Тогда
		Если ЗаданияКОчисткеГрафика.Количество() > 0 Тогда
			РегистрыСведений.ГрафикЭтаповПроизводства2_2.ОчиститьГрафикИЗагрузкуПартии(ЗаданияКОчисткеГрафика);
			ЗаданияКОчисткеГрафика.Очистить();
		КонецЕсли;
		Если ЗаданияКРасчетуГрафика.Количество() > 0 Тогда
			РегистрыСведений.ЗаданияКРасчетуСтруктурыЗаказаГрафикПроизводства.ДобавитьЗадания(ЗаданияКРасчетуГрафика);
			ЗаданияКРасчетуГрафика.Очистить();
		КонецЕсли;
	КонецЕсли;
	
	ВсегоПорций = ПорцииЗаписи.Количество();
	Индекс = 0;
	
	СчетчикОшибок = 1;
	
	Пока ВсегоПорций > Индекс Цикл
		
		ПорцияЗаписи = ПорцииЗаписи[Индекс];
		ПорцияЗаписиСтруктура = Новый Структура("НомерПорции", ПорцияЗаписи.НомерПорции);
		ИзмененныеСтроки = ИзменениеЗапасов.Скопировать(ПорцияЗаписиСтруктура);
		
		НачатьТранзакцию();
		Попытка
			
			Если Не ПорцияЗаписи.Замещать Тогда
				
				НаборЗаписей = РегистрыСведений.СтруктураЗаказа.СоздатьНаборЗаписей();
				НаборЗаписей.Загрузить(Хранилище.СтруктураЗаказа.Скопировать(ПорцияЗаписиСтруктура));
				НаборЗаписей.Записать(Ложь);
				
				НаборЗаписей = РегистрыСведений.ТрудозатратыСтруктурыЗаказа.СоздатьНаборЗаписей();
				НаборЗаписей.Загрузить(Хранилище.ТрудозатратыСтруктурыЗаказа.Скопировать(ПорцияЗаписиСтруктура));
				НаборЗаписей.Записать(Ложь);
				
			Иначе
				
				НайденныеПартии = Партии.НайтиСтроки(ПорцияЗаписиСтруктура);
				
				Для каждого Партия Из НайденныеПартии Цикл
					
					ЗаполнитьЗначенияСвойств(ПартияСтруктура, Партия);
					
					НаборЗаписей = РегистрыСведений.СтруктураЗаказа.СоздатьНаборЗаписей();
					НаборЗаписей.Отбор.КлючНабор.Установить(Партия.КлючПартия);
					Если Партия.Действует Тогда
						НаборЗаписей.Загрузить(Хранилище.СтруктураЗаказа.Скопировать(ПартияСтруктура));
					КонецЕсли;
					НаборЗаписей.Записать(Истина);
					
					НаборЗаписей = РегистрыСведений.ТрудозатратыСтруктурыЗаказа.СоздатьНаборЗаписей();
					НаборЗаписей.Отбор.КлючНабор.Установить(Партия.КлючПартия);
					Если Партия.Действует Тогда
						НаборЗаписей.Загрузить(Хранилище.ТрудозатратыСтруктурыЗаказа.Скопировать(ПартияСтруктура));
					КонецЕсли;
					НаборЗаписей.Записать(Истина);
					
				КонецЦикла;
				
			КонецЕсли;
			
			РегистрыСведений.ЗаданияКРасчетуСтруктурыЗаказаРаспределениеЗапасов.ДобавитьЗаданияВСледующуюОчередь(ИзмененныеСтроки, ПараметрыДействия.Очередь);
			
			Если БылиОшибки Тогда
				СтруктураОшибок = Новый Структура();
				СтруктураОшибок.Вставить("ТипОшибки", Перечисления.ТипыОшибокРасчетаСтруктурыЗаказаНаПроизводство.ОшибкаЗаполненияДанныхСпецификации);
				СтруктураОшибок.Вставить("Ошибки", ОшибкиПартий.Скопировать(ПорцияЗаписиСтруктура));
				РегистрыСведений.ПротоколРасчетаСтруктурыЗаказа.ЗарегистрироватьОшибки(СтруктураОшибок);
			КонецЕсли;
			
			ЗафиксироватьТранзакцию();
			
		Исключение
			
			ОтменитьТранзакцию();
			
			ТекстОшибки = ПодробноеПредставлениеОшибки(ИнформацияОбОшибке());
			
			Если СчетчикОшибок < КоличествоПопытокЗаписи() Тогда
				ЗаписатьНеудачнуюПопыткуЗаписиВЖурналРегистрации(СчетчикОшибок, ТекстОшибки);
				СчетчикОшибок = СчетчикОшибок + 1;
				Продолжить;
			КонецЕсли;
			
			ВызватьИсключение ТекстОшибки;
			
		КонецПопытки;
		
		Индекс = Индекс + 1;
		СчетчикОшибок = 1;
		
	КонецЦикла;
	
КонецПроцедуры

Функция Хранилище()
	
	Хранилище = Новый Структура(); // Хранилище движений
	
	Возврат Хранилище;
	
КонецФункции

Процедура ЗагрузитьДвиженияВХранилище(Хранилище, ИмяРегистра, Данные, ПривестиТипы = Истина, КолонкиПоЗначению = Неопределено)

	Если ПривестиТипы Тогда
	
		Набор = РегистрыСведений[ИмяРегистра].СоздатьНаборЗаписей();
		Набор.Загрузить(Данные);
		Хранилище.Вставить(ИмяРегистра, Набор.Выгрузить());
		
	Иначе
		Хранилище.Вставить(ИмяРегистра, Данные);
	КонецЕсли;
	
	Таблица = Хранилище[ИмяРегистра]; // ТаблицаЗначений
	
	Если КолонкиПоЗначению <> Неопределено Тогда
		Для каждого Колонка Из КолонкиПоЗначению Цикл
			МассивТипов = Новый Массив;
			МассивТипов.Добавить(ТипЗнч(Колонка.Значение));
			Таблица.Колонки.Добавить(Колонка.Ключ, Новый ОписаниеТипов(МассивТипов));
			Таблица.ЗаполнитьЗначения(Колонка.Значение, Колонка.Ключ);
		КонецЦикла;
	КонецЕсли;
	
КонецПроцедуры

Функция ПроверитьЗацикливаниеРазузлованияСтруктурыЗаказа(Партия, Изделия, ПараметрыРасчета)
	
	ОписаниеЦикла = "";
	
	ЕстьОшибки = Ложь;
	
	Изделие = Изделия[0];
	Уровень = Изделие.УровеньРодитель + 1;

	Если Уровень > ПараметрыРасчета.МаксГлубинаРасчета Тогда
		ЕстьОшибки = Истина;
		Партия.БылиОшибки = Истина;
		Шаблон = НСтр("ru = 'Превышена максимальная глубина разузлования структуры заказа (%1)';
						|en = 'The maximum explosion depth of the order structure is exceeded (%1)'");
		ТекстСообщения = СтрШаблон(Шаблон, ПараметрыРасчета.МаксГлубинаРасчета);
		ДобавитьСообщениеВСписокОшибок(Партия.Протокол, ТекстСообщения);
		ЗаписьЖурналаРегистрации(СтруктураЗаказа.ИмяСобытияЖурналаРегистрации(), УровеньЖурналаРегистрации.Ошибка,,Изделие.ЗаказНаПроизводство,
			ТекстСообщения);
	КонецЕсли;
	
	Если Не ЕстьОшибки И Уровень > ПараметрыРасчета.ИскатьЦиклыПосле Тогда
		
		ЕстьОшибки = Ложь;
		
		СвязиСпецификаций = Новый Соответствие();
		
		Запрос = Новый Запрос();
		
