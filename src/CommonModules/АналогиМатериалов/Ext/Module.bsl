	ТаблицаМатериаловРазрешений.Индексы.Добавить("Разрешение, Ссылка");
	ТаблицаМатериаловРазрешений.Индексы.Добавить("Разрешение, КонтролироватьКратность");
	
	ТаблицаАналоговРазрешений = МассивРезультатов[МассивРезультатов.ВГраница() - 2].Выгрузить();
	ТаблицаАналоговРазрешений.Индексы.Добавить("Разрешение, Ссылка");
	ТаблицаАналоговРазрешений.Индексы.Добавить("Номенклатура, Характеристика, Склад");
	
	ТаблицаРазрешенийПоПриоритетам = МассивРезультатов[МассивРезультатов.ВГраница() - 1].Выгрузить(); // см. ПроизводствоСервер.СлужебнаяСтруктураТаблицыЗначений
	ТаблицаРазрешенийПоПриоритетам.Индексы.Добавить("Разрешение, Ссылка");
	ТаблицаРазрешенийПоПриоритетам.Индексы.Добавить("НомерСтроки");
	
	ТаблицаНазначений = МассивРезультатов[МассивРезультатов.ВГраница()].Выгрузить();
	ТаблицаНазначений.Индексы.Добавить("Разрешение, Ссылка");
	
	ТаблицаДанныеУпаковок = МассивРезультатов[МассивРезультатов.ВГраница() - 4].Выгрузить();
	УправлениеДаннымиОбИзделиях.ЗаполнитьДанныеУпаковокВНабореДанных(ТаблицаМатериаловРазрешений, ТаблицаДанныеУпаковок);
	УправлениеДаннымиОбИзделиях.ЗаполнитьДанныеУпаковокВНабореДанных(ТаблицаАналоговРазрешений, ТаблицаДанныеУпаковок);
	
	ТаблицаТоваровПоРазрешению = ТаблицаТоваров.СкопироватьКолонки("Номенклатура, Характеристика, Количество"); // ТаблицаЗначений - 
	ТаблицаТоваровПоРазрешению.Колонки.Добавить("НомераСтрок", Новый ОписаниеТипов("Массив"));
	ТаблицаТоваровПоРазрешению.Индексы.Добавить("Номенклатура, Характеристика");
	
	ТаблицаЗамен = ТаблицаТоваров.СкопироватьКолонки("НомерСтроки, Ссылка, Номенклатура, Характеристика, Количество, Склад"); // ТаблицаЗначений - 
	ТаблицаЗамен.Колонки.Добавить("Разрешение", Новый ОписаниеТипов("ДокументСсылка.РазрешениеНаЗаменуМатериалов"));
	ТаблицаЗамен.Колонки.Добавить("ЗамененноеКоличествоПострочно", Новый ОписаниеТипов("Соответствие"));
	ТаблицаЗамен.Колонки.Добавить("ЭтоАналог", Новый ОписаниеТипов("Булево"));
	ТаблицаЗамен.Колонки.Добавить("Назначение", Новый ОписаниеТипов("СправочникСсылка.Назначения"));
	ТаблицаЗамен.Колонки.Добавить("Обособленно", Новый ОписаниеТипов("Булево"));
	
	Если РезервироватьНаСкладе Тогда
		ТаблицаЗамен.Колонки.Добавить("ВариантОбеспечения", Новый ОписаниеТипов("ПеречислениеСсылка.ВариантыОбеспечения"));
	КонецЕсли;
	
	ТаблицаЗамен.Индексы.Добавить("НомерСтроки");
	
	ОтборВзаимозаменяемыхМатериалов = Новый Структура("Разрешение, Ссылка, Номенклатура, Характеристика");
	ОтборПоРазрешению = Новый Структура("Разрешение, Ссылка");
	ОтборПоРазрешениюИНазначению = Новый Структура("Разрешение, Ссылка, Назначение, ВзаимозаменяемыйАналог");
	ОтборАналоговПоРазрешению = Новый Структура("Разрешение, Ссылка");
	ОтборПоКратности = Новый Структура("Разрешение, КонтролироватьКратность", Неопределено, Истина);
	ОтборПоНоменклатуре = Новый Структура("Номенклатура, Характеристика");
	ПоискАналоговБезОстатка = Новый Структура("ОстатокНаСкладе, ВзаимозаменяемыйАналог, ЭтоРабота", 0, Ложь, Ложь);
	ПоискВзаимозаменяемыхАналоговБезОстатка = Новый Структура("ОстатокНаСкладе, ВзаимозаменяемыйАналог, ЭтоРабота", 0, Истина, Ложь);
	
	ОтборПоРазрешениюИНазначению.ВзаимозаменяемыйАналог = Ложь;
		
	Пока ТаблицаРазрешенийПоПриоритетам.Количество() > 0 Цикл
		
		СтрокаРазрешенийПоПриоритетам = ТаблицаРазрешенийПоПриоритетам[0];
		ЗаполнитьЗначенияСвойств(ОтборПоКратности, СтрокаРазрешенийПоПриоритетам, "Разрешение");
		КонтролироватьКратность = ТаблицаМатериаловРазрешений.НайтиСтроки(ОтборПоКратности).Количество() > 0;
		ЗаменаПоПринципуСписка = СтрокаРазрешенийПоПриоритетам.РольНоменклатуры = Перечисления.РолиАналогов.ВзаимозаменяемыйАналог;
		
		ЗаполнитьЗначенияСвойств(ОтборПоРазрешению, СтрокаРазрешенийПоПриоритетам);
		ЗаполнитьЗначенияСвойств(ОтборАналоговПоРазрешению, СтрокаРазрешенийПоПриоритетам);
		
		ТаблицаОбхода = ТаблицаОбходаМатериалов(
			ТаблицаРазрешенийПоПриоритетам, ТаблицаНазначений, ОтборПоРазрешению, ЗаменаПоПринципуСписка);
		
		Для Каждого СтрокаОбхода Из ТаблицаОбхода Цикл
			
			НормативАналога = 1;
			КоэффициентВзаимозаменяемогоМатериала = 1;
			ОбщееКоличествоКРаспределению = 0;
			НазначениеНабора = СтрокаОбхода.Назначение;
			ИсключитьОбособленныйОстаток = Ложь;
			ИспользоватьТолькоОбособленныйОстаток = Ложь;
			ЗаполнитьЗначенияСвойств(ОтборПоРазрешению, ОтборАналоговПоРазрешению);
			
			ТаблицаТоваровПоРазрешению.Очистить();
			
			МассивНазначений = Новый Массив;
			МассивОбособленно = Новый Массив;
			ЕстьОбособленнаяПозицияСНазначением = Ложь;
			МассивСтрокРазрешения = ТаблицаРазрешенийПоПриоритетам.НайтиСтроки(СтрокаОбхода.ПараметрыОтбора);
			Для каждого СтрокаТаблицы Из МассивСтрокРазрешения Цикл
				
				ЗаполнитьЗначенияСвойств(ОтборПоНоменклатуре, СтрокаТаблицы);
				
				МассивСтрокТовары = ТаблицаТоваровПоРазрешению.НайтиСтроки(ОтборПоНоменклатуре);
				Если МассивСтрокТовары.Количество() > 0 Тогда
					СтрокаТовары = МассивСтрокТовары[0];
				Иначе
					СтрокаТовары = ТаблицаТоваровПоРазрешению.Добавить();
					ЗаполнитьЗначенияСвойств(СтрокаТовары, ОтборПоНоменклатуре);
					СтрокаТовары.Количество = 0;
				КонецЕсли;
				
				СтрокаТовары.Количество = СтрокаТовары.Количество + СтрокаТаблицы.Количество;
	
				МассивНомеровСтрок = СтрокаТовары.НомераСтрок; // Массив - 
				МассивНомеровСтрок.Добавить(СтрокаТаблицы.НомерСтроки);
				
				МассивНазначений.Добавить(СтрокаТаблицы.Назначение);
				МассивОбособленно.Добавить(СтрокаТаблицы.Обособленно);
				
				Если СтрокаТаблицы.Обособленно
				   И ЗначениеЗаполнено(СтрокаТаблицы.Назначение) Тогда
				
					ЕстьОбособленнаяПозицияСНазначением = Истина;
				
				КонецЕсли;
				
				ЗаполнитьЗначенияСвойств(ОтборВзаимозаменяемыхМатериалов, СтрокаТаблицы);
				
			КонецЦикла;
				
			МассивКоэффициентов = Новый Массив;
			
			МассивНазначенийСгруппированный = ОбщегоНазначенияКлиентСервер.СвернутьМассив(МассивНазначений);
			МассивОбособленноСгруппированный = ОбщегоНазначенияКлиентСервер.СвернутьМассив(МассивОбособленно);
			КоличествоНазначенийВНаборе = МассивНазначенийСгруппированный.Количество();
			КоличествоЭлементовОбособленноВНаборе = МассивОбособленноСгруппированный.Количество();
			
			Если КоличествоНазначенийВНаборе = 1 Тогда
				
				Если МассивОбособленноСгруппированный.Найти(Истина) <> Неопределено Тогда
				
					ИспользоватьТолькоОбособленныйОстаток = Истина;
					
				КонецЕсли;
				
			Иначе
				
				Если КоличествоЭлементовОбособленноВНаборе = 1 Тогда
					
					ЗначениеОбособления = МассивОбособленноСгруппированный[0];
					
					Если ЗначениеОбособления = Истина Тогда
						МассивКоэффициентов.Добавить(0);
					Иначе
						ИсключитьОбособленныйОстаток = Истина;
					КонецЕсли;
					
				Иначе
					
					Если ЕстьОбособленнаяПозицияСНазначением Тогда
						МассивКоэффициентов.Добавить(0);
					Иначе
						ИсключитьОбособленныйОстаток = Истина;
					КонецЕсли;
				
				КонецЕсли;
				
			КонецЕсли;
			
			ОтборМатериалов = ?(ЗаменаПоПринципуСписка, ОтборВзаимозаменяемыхМатериалов, ОтборПоРазрешению);
			
			МассивСтрокМатериалы = ТаблицаМатериаловРазрешений.НайтиСтроки(ОтборМатериалов);
			Для каждого СтрокаТаблицы Из МассивСтрокМатериалы Цикл
				
				ЗаполнитьЗначенияСвойств(ОтборПоНоменклатуре, СтрокаТаблицы);
				
				МассивСтрокТоваровПоРазрешению = ТаблицаТоваровПоРазрешению.НайтиСтроки(ОтборПоНоменклатуре);
				
				КоэффициентРасчета = ?(МассивСтрокТоваровПоРазрешению.Количество() = 0,
											0, ПроизводствоКлиентСервер.КоэффициентПоНормативу(
																			КонтролироватьКратность, 
																			МассивСтрокТоваровПоРазрешению[0].Количество,
																			СтрокаТаблицы.Норматив,
																			СтрокаТаблицы.ДанныеУпаковки));
				
				КоэффициентВыбран = МассивКоэффициентов.Количество() > 0;
				КоэффициентВзаимозаменяемогоМатериала = КоэффициентРасчета;
				
				Если Не КоэффициентВыбран 
				 Или КоэффициентВыбран И МассивКоэффициентов[0] > КоэффициентРасчета Тогда
					МассивКоэффициентов.Вставить(0, КоэффициентРасчета);
				КонецЕсли;
				
			КонецЦикла;
			
			КоличествоКЗамене = ТаблицаТоваровПоРазрешению.Итог("Количество");
			СуммарныйОстаток = 0;
			МассивВычитания = Новый Массив;
			МассивСтрокАналоги = ТаблицаАналоговРазрешений.НайтиСтроки(ОтборАналоговПоРазрешению);
			Для каждого СтрокаТаблицы Из МассивСтрокАналоги Цикл
				
				Если СтрокаТаблицы.Обособленно
				   И (ИсключитьОбособленныйОстаток Или СтрокаТаблицы.Назначение <> НазначениеНабора) Тогда
				
					МассивВычитания.Добавить(СтрокаТаблицы);
					Продолжить;
				
				КонецЕсли;
				
				Если Не СтрокаТаблицы.Обособленно
				   И ИспользоватьТолькоОбособленныйОстаток Тогда
				
					МассивВычитания.Добавить(СтрокаТаблицы);
					Продолжить;
				
				КонецЕсли;
				
				Если Не ИспользоватьТолькоОбособленныйОстаток
				   И Не ИсключитьОбособленныйОстаток
				   И СтрокаТаблицы.Назначение <> НазначениеНабора Тогда
				
					Если Не ЗаменаПоПринципуСписка Тогда
						МассивВычитания.Добавить(СтрокаТаблицы);
					КонецЕсли;
					
					Продолжить;
				
				КонецЕсли;
				
				Если СтрокаТаблицы.ЭтоРабота Тогда
					
					НормативАналога = СтрокаТаблицы.Норматив;
					СуммарныйОстаток = КоличествоКЗамене;
					Продолжить;
					
				КонецЕсли;
				
				ОстатокПоСтроке = ?(ИспользоватьТолькоОбособленныйОстаток, 
					СтрокаТаблицы.ОбособленныйОстаток, 
					СтрокаТаблицы.ОстатокНаСкладе);
					
				КоэффициентРасчета	= ПроизводствоКлиентСервер.КоэффициентПоНормативу(
																	КонтролироватьКратность, 
																	ОстатокПоСтроке, 
																	СтрокаТаблицы.Норматив,
																	СтрокаТаблицы.ДанныеУпаковки);
					
				СуммарныйОстаток = СуммарныйОстаток + КоэффициентРасчета;
				НормативАналога = СтрокаТаблицы.Норматив;
				
				Если МассивКоэффициентов[0] > КоэффициентРасчета Тогда
					МассивКоэффициентов.Вставить(0, КоэффициентРасчета);
				КонецЕсли;
				
			КонецЦикла;
			
			МассивСтрокАналоги = ОбщегоНазначенияКлиентСервер.РазностьМассивов(МассивСтрокАналоги, МассивВычитания);
			
			Если СуммарныйОстаток = 0 Тогда
				КоэффициентРасчета = 0;
			ИначеЕсли ЗаменаПоПринципуСписка Тогда
			
				АналоговХватает = СуммарныйОстаток >= КоличествоКЗамене;
				
				Если АналоговХватает Тогда
					КоэффициентРасчета = КоэффициентВзаимозаменяемогоМатериала;
				Иначе
					КоэффициентРасчета = Мин(СуммарныйОстаток, КоэффициентВзаимозаменяемогоМатериала);
				КонецЕсли;
				
				ОбщееКоличествоКРаспределению = КоэффициентРасчета * НормативАналога;
					
			Иначе
				КоэффициентРасчета = МассивКоэффициентов[0];
			КонецЕсли;
			
			Если КоэффициентРасчета > 0 Тогда
				
				ЗамененноеКоличествоПострочно = Новый Соответствие;// Ключ: номер строки материала; Значение: замененное количество
				
				Для каждого СтрокаТаблицы Из МассивСтрокМатериалы Цикл
					
					КоличествоКРаспределению = КоэффициентРасчета * СтрокаТаблицы.Норматив
						* СтрокаТаблицы.ДанныеУпаковки.Числитель / СтрокаТаблицы.ДанныеУпаковки.Знаменатель;
						
					ЗаполнитьЗначенияСвойств(ОтборПоНоменклатуре, СтрокаТаблицы);
					МассивНомеровСтрок = ТаблицаТоваровПоРазрешению.НайтиСтроки(ОтборПоНоменклатуре)[0].НомераСтрок;
					Для каждого НомерСтроки Из МассивНомеровСтрок Цикл
						
						ОтборПоНомеру = Новый Структура("НомерСтроки", НомерСтроки);
						
						МассивСтрокПоНомеру = ТаблицаРазрешенийПоПриоритетам.НайтиСтроки(ОтборПоНомеру);
						
						Если МассивСтрокПоНомеру.Количество() > 0 Тогда
						
							КоличествоМатериала = Мин(МассивСтрокПоНомеру[0].Количество, КоличествоКРаспределению);
						
							Если КоличествоМатериала > 0 Тогда
								ЗамененноеКоличествоПострочно.Вставить(НомерСтроки, КоличествоМатериала);
							КонецЕсли;
							
							Для каждого СтрокаПоПриоритетам Из МассивСтрокПоНомеру Цикл
								СтрокаПоПриоритетам.Количество = СтрокаПоПриоритетам.Количество - КоличествоМатериала;
							КонецЦикла;
							
							МассивСтрокТаблицыЗамен = ТаблицаЗамен.НайтиСтроки(ОтборПоНомеру);
							СтрокаТаблицыЗамен = 
								?(МассивСтрокТаблицыЗамен.Количество() > 0, МассивСтрокТаблицыЗамен[0], ТаблицаЗамен.Добавить()); 
							ЗаполнитьЗначенияСвойств(СтрокаТаблицыЗамен, СтрокаПоПриоритетам,, "Разрешение");
								
							Если СтрокаПоПриоритетам.Количество = 0 Тогда
								ИндексСтроки = МассивСтрокПоНомеру.ВГраница();
								Пока ИндексСтроки > -1 Цикл
									ТаблицаРазрешенийПоПриоритетам.Удалить(МассивСтрокПоНомеру[ИндексСтроки]);
									ИндексСтроки = ИндексСтроки - 1;
								КонецЦикла;
							КонецЕсли;
							
							КоличествоКРаспределению = КоличествоКРаспределению - КоличествоМатериала;
							Если КоличествоКРаспределению = 0 Тогда
								Прервать;
							КонецЕсли;	
						
						КонецЕсли;
						
					КонецЦикла;
					
				КонецЦикла;
				
				УдалитьРазрешенияПоАналогам = Ложь;
				Для каждого СтрокаТаблицы Из МассивСтрокАналоги Цикл
					
					Если ОбщееКоличествоКРаспределению = 0 И ЗаменаПоПринципуСписка Тогда
						Прервать;
					КонецЕсли;
					
					КоличествоАналога = КоэффициентРасчета * СтрокаТаблицы.Норматив
						* СтрокаТаблицы.ДанныеУпаковки.Числитель / СтрокаТаблицы.ДанныеУпаковки.Знаменатель;
						
					Если ЗаменаПоПринципуСписка Тогда
						
						ОстатокНаСкладе = ?(СтрокаТаблицы.Обособленно, СтрокаТаблицы.ОбособленныйОстаток, СтрокаТаблицы.ОстатокНаСкладе);
						КоличествоАналога = Мин(КоличествоАналога, ОстатокНаСкладе, ОбщееКоличествоКРаспределению);
						
						Если СтрокаТаблицы.ЭтоРабота И (Не СтрокаТаблицы.Обособленно Или ИспользоватьТолькоОбособленныйОстаток) Тогда
							
