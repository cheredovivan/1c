// Возвращает массив из переданного значения, если переданное значение массив, тогда возвращается его копия,
// если значение структура или соответствие, тогда возвращаются все значения коллекции в массиве, выполняется рекурсивно.
// 
// Параметры:
//  Значение - Произвольный
//  Вложенные - Булево - упаковывать вложенные значения
// 
// Возвращаемое значение:
//  Массив из Произвольный
// 
Функция УпаковатьВМассив(Значение, Вложенные = Истина) Экспорт
	
	МассивЗначений = Новый Массив();
	Если ТипЗнч(Значение) = Тип("Массив") Тогда
		
		МассивЗначений = Новый Массив(Новый ФиксированныйМассив(Значение));
		
	ИначеЕсли ТипЗнч(Значение) = Тип("Структура") Или ТипЗнч(Значение) = Тип("Соответствие") Тогда
		
		Для Каждого КлючИЗначение Из Значение Цикл
			
			Если Не ЗначениеЗаполнено(КлючИЗначение.Значение) Тогда
				Продолжить;
			КонецЕсли;
			
			Если Вложенные И (
				ТипЗнч(КлючИЗначение.Значение) = Тип("Массив") 
				Или ТипЗнч(КлючИЗначение.Значение) = Тип("Структура") 
				Или ТипЗнч(КлючИЗначение.Значение) = Тип("Соответствие")) Тогда
				
				УпакованныйМассив = УпаковатьВМассив(КлючИЗначение.Значение);
				Для Каждого Элемент Из УпакованныйМассив Цикл
					МассивЗначений.Добавить(Элемент);
				КонецЦикла;
				
			Иначе
				МассивЗначений.Добавить(КлючИЗначение.Значение);
				
			КонецЕсли;
			
		КонецЦикла;
		
	Иначе
		
		Если ЗначениеЗаполнено(Значение) Тогда
			МассивЗначений.Добавить(Значение);
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат МассивЗначений;
	
КонецФункции

