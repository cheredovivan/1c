					НСтр("ru = 'Пересечение ключей источника и приемника: ""%1"".';
						|en = 'The source and destination have identical keys: ""%1"".'"), Элемент.Ключ);
			КонецЕсли
		КонецЕсли;
		Приемник.Вставить(Элемент.Ключ, Элемент.Значение);
	КонецЦикла;
	
