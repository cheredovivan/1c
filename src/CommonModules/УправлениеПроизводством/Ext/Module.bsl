		|		ОбеспечениеЗаказов.Этап                КАК Этап,
		|		ОбеспечениеЗаказов.КлючПартия          КАК КлючПартия,
		|		ОбеспечениеЗаказов.ДатаОбеспечения     КАК ДатаОбеспечения,
		|		ОбеспечениеЗаказов.ДатаДоступности     КАК ДатаДоступности,
		|		РасчетДатыПоставкиПереопределяемый.ПлановаяДатаПоставки КАК ПлановаяДатаПоставки
		|	ИЗ
		|		СтруктураЗаказаОбеспечениеЗаказов КАК ОбеспечениеЗаказов
		|	
		|			ЛЕВОЕ СОЕДИНЕНИЕ РасчетСпособаОбеспеченияПереопределяемый ПО ИСТИНА
		|			ЛЕВОЕ СОЕДИНЕНИЕ РасчетДатыПоставкиПереопределяемый ПО ИСТИНА
		|	
		|) КАК ВложенныйЗапрос
		|	
		|СГРУППИРОВАТЬ ПО
		|	&ПоляГруппировка,
		|	ВложенныйЗапрос.ЗаказНаПроизводство,
		|	ВложенныйЗапрос.Этап,
		|	ВложенныйЗапрос.КлючПартия
		|
		|ИНДЕКСИРОВАТЬ ПО
		|	ЗаказНаПроизводство,
		|	Этап,
		|	КлючПартия
		|";
	
	// Подстановка расчета плановой даты поставки
	Подстановки = ОбеспечениеВДокументахСервер.ПодстановкиОсновногоСпособаОбеспечения(
		"ОбеспечениеЗаказов.Номенклатура",
		"ОбеспечениеЗаказов.Характеристика",
		"ОбеспечениеЗаказов.Склад",
		"ОбеспечениеЗаказов.ТребуетсяОбеспечение");
	
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "РасчетСпособаОбеспеченияПереопределяемый.Ссылка", Подстановки.Поле);
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "ЛЕВОЕ СОЕДИНЕНИЕ РасчетСпособаОбеспеченияПереопределяемый ПО ИСТИНА",
		Подстановки.Соединения);
	
	Подстановки = ОбеспечениеВДокументахСервер.ПодстановкиПлановойДатыПоставки(Подстановки.Поле, "&НачалоТекущегоДня");
	
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "РасчетДатыПоставкиПереопределяемый.ПлановаяДатаПоставки", Подстановки.Поле);
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "ЛЕВОЕ СОЕДИНЕНИЕ РасчетДатыПоставкиПереопределяемый ПО ИСТИНА",
		Подстановки.Соединения);
	
	// Подстановка полей выборки
	Если ВРазрезеНоменклатуры Тогда
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&ПоляВыборка", "
			|	ВложенныйЗапрос.Номенклатура    КАК Номенклатура,
			|	ВложенныйЗапрос.Характеристика  КАК Характеристика");
	Иначе
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&ПоляВыборка,", "");
	КонецЕсли;
	
	// Подстановка полей группировки
	Если ВРазрезеНоменклатуры Тогда
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&ПоляГруппировка", "
			|ВложенныйЗапрос.Номенклатура,
			|ВложенныйЗапрос.Характеристика");
	Иначе
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&ПоляГруппировка,", "");
	КонецЕсли;
	
	Тексты = Новый Массив();
	ТекстВременнойТаблицы = ОбеспечениеВДокументахСервер.ВременнаяТаблицаГодыГрафикаПредприятия();
	Тексты.Добавить(ТекстВременнойТаблицы);
	Тексты.Добавить(ТекстЗапроса);
	Тексты.Добавить("УНИЧТОЖИТЬ ГодыГрафикаПредприятия");
	Тексты.Добавить("УНИЧТОЖИТЬ СтруктураЗаказаОбеспечениеЗаказов");
	ТекстЗапроса = СтрСоединить(Тексты, ОбщегоНазначения.РазделительПакетаЗапросов());
	
	Запрос = Новый Запрос(ТекстЗапроса);
	
	Если ТипЗнч(УсловиеПолучения) = Тип("Строка") Тогда // временная таблица перечня позиций номенклатурного плана
		
		Запрос.Текст = СтрЗаменить(Запрос.Текст, "&УсловиеПолучения", СтрЗаменить(УсловиеПолучения, "&ТекстИмяТаблицы", "СтруктураЗаказа")); 
		
	Иначе

		Если ТипЗнч(УсловиеПолучения) = Тип("ДокументСсылка.ЗаказНаПроизводство2_2") Тогда
		
			Запрос.Текст = СтрЗаменить(Запрос.Текст, "&УсловиеПолучения", "СтруктураЗаказа.ЗаказНаПроизводство = &ЗаказНаПроизводство");
			Запрос.УстановитьПараметр("ЗаказНаПроизводство", УсловиеПолучения);
			
		Иначе
			
			КонструкторОтбора = Новый Массив;
			
			Для каждого КлючЗначение Из УсловиеПолучения Цикл
				КонструкторОтбора.Добавить(СтрШаблон("ТаблицаОтбора.%1 = &%1", КлючЗначение.Ключ));
				Запрос.УстановитьПараметр(КлючЗначение.Ключ, КлючЗначение.Значение);
			КонецЦикла;
		
			УсловиеПолученияТекстЗапроса = 
				"ИСТИНА В
				|	(ВЫБРАТЬ ПЕРВЫЕ 1
				|		ИСТИНА
				|	ИЗ
				|		РегистрСведений.СтруктураЗаказа КАК ТаблицаОтбора
				|	ГДЕ
				|		&ТекстОтбора
				|		И ТаблицаОтбора.Номенклатура        = СтруктураЗаказа.Номенклатура
				|		И ТаблицаОтбора.Характеристика      = СтруктураЗаказа.Характеристика
				|		И ТаблицаОтбора.Склад               = СтруктураЗаказа.Склад
				|		И ТаблицаОтбора.Назначение          = СтруктураЗаказа.Назначение
				|		И ТаблицаОтбора.ЗаказНаПроизводство = СтруктураЗаказа.ЗаказНаПроизводство
				|		И ТаблицаОтбора.КлючНоменклатура    = СтруктураЗаказа.КлючНоменклатура
				|		И ТаблицаОтбора.ВидСтроки = ЗНАЧЕНИЕ(Перечисление.ВидыСтрокСтруктурыЗаказаНаПроизводство.Потребление))";
			
			УсловиеПолученияТекстЗапроса =
				СтрЗаменить(
					УсловиеПолученияТекстЗапроса,
					"&ТекстОтбора",
					?(КонструкторОтбора.Количество() > 0, СтрСоединить(КонструкторОтбора, " И "), "ЛОЖЬ"));
			
			Запрос.Текст = СтрЗаменить(Запрос.Текст, "&УсловиеПолучения", УсловиеПолученияТекстЗапроса);
	
		КонецЕсли;
		
	КонецЕсли;
	
	НачалоТекущегоДня = НачалоДня(ТекущаяДатаСеанса());
	
	Запрос.УстановитьПараметр("СтатусГрафика", СтатусГрафика);
	Запрос.УстановитьПараметр("НачалоТекущегоДня", НачалоТекущегоДня);
	Запрос.УстановитьПараметр("НачалоСледующегоДня", НачалоТекущегоДня + 86400);
	Запрос.УстановитьПараметр("ИсключитьДанныеГрафикаПроизводства", ИсключитьДанныеГрафикаПроизводства);
	
	Запрос.МенеджерВременныхТаблиц = МенеджерВременныхТаблиц;
	Запрос.Выполнить();
	
КонецПроцедуры

// По данным графика производства проверяет соблюдение условия: дата обеспечения материалов находится 
// раньше даты начала этапов по графику. Этапы для которых условие не соблюдается помечаются как требующие пересчета.
//
// Параметры:
//  МенеджерВременныхТаблиц - МенеджерВременныхТаблиц - менеджер временных таблиц, в нем будет создана временная таблица.
//  ТекстОтбора - Строка - произвольный текст отбора строк в структуре заказа.
//
Процедура ПроверитьСрокиОбеспеченияЭтаповДинамическаяСтруктура(МенеджерВременныхТаблиц, ТекстОтбора) Экспорт
	
	УстановитьПривилегированныйРежим(Истина);
	
	СоздатьВТОграниченияГрафикаПроизводстваПоМатериаламДинамическаяСтруктура(
		МенеджерВременныхТаблиц,
		ТекстОтбора,
		Ложь,
		Ложь);
	
	Запрос = Новый Запрос(
		"ВЫБРАТЬ РАЗЛИЧНЫЕ
		|	Ограничения.ЗаказНаПроизводство КАК ЗаказНаПроизводство,
		|	Ограничения.Этап                КАК ЭтапПроизводства,
		|	Ограничения.КлючПартия          КАК КлючПартия
		|ИЗ
		|	ВТОграниченияГрафикаПроизводстваПоМатериалам КАК Ограничения
		|
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ РегистрСведений.ГрафикЭтаповПроизводства2_2 КАК График
		|		ПО Ограничения.ЗаказНаПроизводство = График.ЗаказНаПроизводство
		|			И Ограничения.Этап             = График.Этап
		|			И Ограничения.КлючПартия       = График.КлючПартия
		|			И График.СтатусГрафика = &РабочийГрафик
		|
		|ГДЕ
		|	График.Начало < Ограничения.ДатаДоступности");
	
	Запрос.УстановитьПараметр("РабочийГрафик", РегистрыСведений.ГрафикЭтаповПроизводства2_2.СтатусРабочийГрафик());
	Запрос.МенеджерВременныхТаблиц = МенеджерВременныхТаблиц;
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Если Не РезультатЗапроса.Пустой() Тогда
		РегистрыСведений.ЗаданияКРасчетуСтруктурыЗаказаГрафикПроизводства.ДобавитьЗадания(РезультатЗапроса.Выгрузить());
	КонецЕсли;
	
КонецПроцедуры

// Выполняет действия, общие для графика производства версии 2.2 и графика динамической структуры заказа.
// 
// Параметры:
//  Заказ - ДокументСсылка.ЗаказНаПроизводство2_2
//  Этапы - Массив из ДокументСсылка.ЭтапПроизводства2_2
//
Процедура ОбновитьДвиженияДокументовПослеЗаписиГрафикаПроизводства(Заказ, Этапы, ДинамическаяСтруктура = Ложь) Экспорт
	
	УниверсальнаяОчередьОперативныхЗаданий.ОбработатьЗадания(Этапы, Перечисления.ЗаданияУниверсальнойОчереди.ОбновлениеГрафикаДвиженияТоваровПослеРасчетаГрафикаПроизводства);
	
	Если ДинамическаяСтруктура Тогда
		УниверсальнаяОчередьОперативныхЗаданий.ОбработатьЗадание(Заказ, Перечисления.ЗаданияУниверсальнойОчереди.ОбновлениеГрафикаДвиженияТоваровПослеРасчетаГрафикаПроизводства);
	Иначе
		РегистрыКОтражению = СостоянияДокументов.РегистрыКОтражениюСостоянияЗаказов();
		РегистрыКОтражению.СостоянияЗаказовНаПроизводство = Истина;
		СостоянияДокументов.ДобавитьЗаданияКОтражениюСостоянияЗаказов(Неопределено, Заказ,, РегистрыКОтражению);
	КонецЕсли;
	
КонецПроцедуры

// Обновляет график движения товаров после расчета графика производства.
//
// Параметры:
//  Задания - ТаблицаЗначений - колонки соответствуют измерениям, ресурсам и реквизитам регистра сведений
//                              "УниверсальнаяОчередьОперативныхЗаданий", есть и служебные колонки:
//             * Объект                 - ДокументСсылка          - ссылка на заказ или этап производства
//             * ИдентификаторЗаписи    - УникальныйИдентификатор -
//             * ДатаЗаписи             - Дата                    -
//             * ИдентификаторЗадания   - УникальныйИдентификатор - служебная
//             * ДатаЗадания            - Дата                    - служебная
//  ИдентификаторыНеОбработанныхЗаписей - Соответствие из УникальныйИдентификатор - ключ, это идентификатор 
//                                                                                   не выполненных (выдающих ошибку при
//                                                                                   выполнении) записей регистра
//                                                                                   сведений очереди заданий
//                                                                                   (измерение ИдентификаторЗаписи
//                                                                                   регистра сведений очереди заданий),
//                                                                                  значение, это представление ошибки.
//  ДополнительныеСвойства - Неопределено, Структура - дополнительные свойства выполнения заданий.
//
Процедура ОбновитьПланируемоеПоступлениеТоваров(
			Задания,
			ИдентификаторыНеОбработанныхЗаписей,
			ДополнительныеСвойства = Неопределено) Экспорт	
	
	СоответствиеТипов = Новый Соответствие;
	
	Для Каждого Задание Из Задания Цикл
		
		ТипОбъекта = Задание.Объект.Метаданные().ПолноеИмя();
		ТекущийТипОбъекта = СоответствиеТипов.Получить(ТипОбъекта); // ТаблицаЗначений - 
		Если ТекущийТипОбъекта = Неопределено Тогда
			СоответствиеТипов.Вставить(ТипОбъекта, Задания.СкопироватьКолонки());
			ТекущийТипОбъекта = СоответствиеТипов.Получить(ТипОбъекта);
		КонецЕсли;
		
		ЗаполнитьЗначенияСвойств(ТекущийТипОбъекта.Добавить(), Задание);
		
	КонецЦикла;
	
	Для каждого Элемент Из СоответствиеТипов Цикл
		
		МенеджерОбъекта = ОбщегоНазначения.МенеджерОбъектаПоПолномуИмени(Элемент.Ключ);
		
		МенеджерОбъекта.ОбновитьПланируемоеПоступлениеТоваров(
			Элемент.Значение, ИдентификаторыНеОбработанныхЗаписей, ДополнительныеСвойства);
		
	КонецЦикла;
	
КонецПроцедуры

// Обновляет приоритет в этапах производства после изменения приоритета в заказе на производство.
//
// Параметры:
//  Задания - ТаблицаЗначений - колонки соответствуют измерениям, ресурсам и реквизитам регистра сведений
//                              "УниверсальнаяОчередьОперативныхЗаданий", есть и служебные колонки:
//             * Объект                 - ДокументСсылка          - ссылка на заказ на производство
//             * ИдентификаторЗаписи    - УникальныйИдентификатор -
//             * ДатаЗаписи             - Дата                    -
//             * ИдентификаторЗадания   - УникальныйИдентификатор - служебная
//             * ДатаЗадания            - Дата                    - служебная
//  ИдентификаторыНеОбработанныхЗаписей - Соответствие из УникальныйИдентификатор - ключ, это идентификатор 
//                                                                                   не выполненных (выдающих ошибку при
//                                                                                   выполнении) записей регистра
//                                                                                   сведений очереди заданий
//                                                                                   (измерение ИдентификаторЗаписи
//                                                                                   регистра сведений очереди заданий),
//                                                                                  значение, это представление ошибки.
//  ДополнительныеСвойства - Неопределено, Структура - дополнительные свойства выполнения заданий.
//
Процедура ОбновитьПриоритетВЭтапахПроизводства(
			Задания,
			ИдентификаторыНеОбработанныхЗаписей,
			ДополнительныеСвойства = Неопределено) Экспорт
	
	УстановитьПривилегированныйРежим(Истина);
	
	Запрос = Новый Запрос(
		"ВЫБРАТЬ
		|	Таблица.Ссылка КАК Ссылка
		|ИЗ
		|	Документ.ЭтапПроизводства2_2 КАК Таблица
		|ГДЕ
		|	Таблица.Распоряжение = &ЗаказНаПроизводство
		|	И Таблица.Проведен");
	
	МетаРегистра = Неопределено;
	
	Для каждого Задание Из Задания Цикл
	
		Попытка
			
			Запрос.УстановитьПараметр("ЗаказНаПроизводство", Задание.Объект);
			Этапы = Запрос.Выполнить().Выгрузить().ВыгрузитьКолонку(0);
			Если Этапы.Количество() > 0 Тогда
				Документы.ЭтапПроизводства2_2.ОбновитьРеестрДокументов(Задание.Объект, Этапы);
				РаспределениеЗапасовДвижения.ПриИзмененииПриоритета(Этапы);
			КонецЕсли;
			Этапы = Неопределено;
			
		Исключение
			
			Если МетаРегистра = Неопределено Тогда
				
				МетаРегистра = Метаданные.РегистрыСведений.УниверсальнаяОчередьОперативныхЗаданий;
				
				ИмяСобытия   = ОтложенныеЗадания.ИмяСобытия();
				
				ПоляОшибки   = Новый Структура("Объект");
				ДанныеОшибки = Новый Структура("Объект");
				
				Задания.Индексы.Добавить("Объект");
				
			КонецЕсли;
			
			ТекстИсключения = ОбработкаОшибок.ПодробноеПредставлениеОшибки(ИнформацияОбОшибке());
			
			ЗаписьЖурналаРегистрации(ИмяСобытия, УровеньЖурналаРегистрации.Ошибка, МетаРегистра,, ТекстИсключения);
			
			ДанныеОшибки.Объект = Задание.Объект;
			
			ТекстОшибки = ОтложенныеЗадания.ТекстОшибкиВыполнения(ПоляОшибки, ДанныеОшибки, ТекстИсключения);
			
			НайденныеСтроки = Задания.НайтиСтроки(ДанныеОшибки);
			Для каждого НайденнаяСтрока Из НайденныеСтроки Цикл
				ИдентификаторыНеОбработанныхЗаписей.Вставить(НайденнаяСтрока.ИдентификаторЗаписи, ТекстОшибки);
			КонецЦикла;
			
		КонецПопытки;
	
	КонецЦикла;
	
КонецПроцедуры

// Заменяет в тексте запроса ГрафикЭтаповПроизводства2_2 на НормативныйГрафикСтруктурыЗаказа при необходимости.
// 
