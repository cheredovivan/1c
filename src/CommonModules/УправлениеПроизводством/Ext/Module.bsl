		Запрос.УстановитьПараметр("Исполнитель", Исполнитель);
		Выборка = Запрос.Выполнить().Выбрать();
		Выборка.Следующий();
		ЗаполнитьЗначенияСвойств(ИнформацияОМестеРаботы, Выборка);		
