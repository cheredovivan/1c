			Если ЭтоГруппировка Тогда
				ВложенныйМассивКУдалению = ЭлементыОтбораСКДКУдалению(ПолеОтбора, Неопределено);
				ОбщегоНазначенияКлиентСервер.ДополнитьМассив(КУдалению, ВложенныйМассивКУдалению);
			Иначе
				Если Не ПолеОтбора.Использование Тогда
					КУдалению.Добавить(ПолеОтбора);
				ИначеЕсли Не ЗначениеЗаполнено(ПолеОтбора.ЛевоеЗначение)
					Или Не ЗначениеЗаполнено(ПолеОтбора.ПравоеЗначение) Тогда
					КУдалению.Добавить(ПолеОтбора);
				КонецЕсли;
			КонецЕсли;
		КонецЦикла;
		
	Иначе
		
		Для Каждого ПолеОтбора Из ОтборыНастроек.Элементы Цикл
			ЭтоГруппировка = СервисПрогнозированияПереопределяемыйКлиентСервер.ЭтоГруппировкаКомпоновкиДанных(ПолеОтбора);
			Если ЭтоГруппировка Тогда
				ВложенныйМассивКУдалению = ЭлементыОтбораСКДКУдалению(ПолеОтбора, ПоляКоторыеСледуетОставить);
				ОбщегоНазначенияКлиентСервер.ДополнитьМассив(КУдалению, ВложенныйМассивКУдалению);
			Иначе
				ПолеНайдено = Ложь;
				Для Каждого ИмяОтбираемогоПоля Из ПоляКоторыеСледуетОставить Цикл
					ПолеНайдено = ПолеНайдено Или СтрНачинаетсяС(Строка(ПолеОтбора.ЛевоеЗначение), ИмяОтбираемогоПоля);
				КонецЦикла;
				Если Не ПолеНайдено Или Не ЗначениеЗаполнено(ПолеОтбора.ПравоеЗначение) Тогда
					КУдалению.Добавить(ПолеОтбора);
				КонецЕсли;
			КонецЕсли;
		КонецЦикла;
		
	КонецЕсли;
	
	Возврат КУдалению;
	
КонецФункции

Функция ПолучитьРезультатСКД(СхемаКомпоновкиДанных, НастройкиОтборов,
	ИменаОтбираемыхПолей = Неопределено,
	ВнешниеНаборыДанных = Неопределено)
	
	ПараметрыСКД = КомпоновкаДанныхСервер.ПараметрыВыгрузитьРезультатСКД();
	
	НастройкиСхемы = СхемаКомпоновкиДанных.НастройкиПоУмолчанию;
	КомпоновкаДанныхКлиентСервер.СкопироватьЭлементы(НастройкиСхемы.Отбор, НастройкиОтборов.Отбор);
	
	КУдалению = Новый Массив();
	
	ТребуемыеПоля = Неопределено;
	Если ИменаОтбираемыхПолей <> Неопределено Тогда
		ТребуемыеПоля = Новый Массив();
		Если ТипЗнч(ИменаОтбираемыхПолей) = Тип("Массив") Тогда
			ТребуемыеПоля = ИменаОтбираемыхПолей;
		Иначе
			ТребуемыеПоля = СтрРазделить(ИменаОтбираемыхПолей, ", ", Ложь);
		КонецЕсли;
	КонецЕсли;
	
	ЭлементыОтбораКУдалению = ЭлементыОтбораСКДКУдалению(НастройкиСхемы.Отбор, ТребуемыеПоля);
	ОбщегоНазначенияКлиентСервер.ДополнитьМассив(КУдалению, ЭлементыОтбораКУдалению);
	
	Для Каждого УдаляемыйЭлемент Из КУдалению Цикл
		Если УдаляемыйЭлемент.Родитель <> Неопределено Тогда
			УдаляемыйЭлемент.Родитель.Элементы.Удалить(УдаляемыйЭлемент);
		Иначе
			НастройкиСхемы.Отбор.Элементы.Удалить(УдаляемыйЭлемент);
		КонецЕсли;
	КонецЦикла;
	
	СоединитьОтборыПоПолюВЕдиныйОтбор(НастройкиСхемы.Отбор.Элементы, Ложь);
	
	ПараметрыСКД.СхемаКомпоновки = СхемаКомпоновкиДанных;
	ПараметрыСКД.НастройкиКомпоновки = НастройкиСхемы;
	ПараметрыСКД.ВнешниеНаборыДанных = ВнешниеНаборыДанных;
	
	УстановитьПривилегированныйРежим(Истина);
	РезультатСКД = КомпоновкаДанныхСервер.ВыгрузитьРезультатСКД(ПараметрыСКД);
	УстановитьПривилегированныйРежим(Ложь);
	Возврат РезультатСКД;
	
КонецФункции

Процедура СоединитьОтборыПоПолюВЕдиныйОтбор(КоллекцияЭлементовОтбора, ЭтоГруппа)
	
	КоличествоОтборов = КоллекцияЭлементовОтбора.Количество();
	Если КоличествоОтборов < 2
		И ЭтоГруппа Тогда
		Возврат;
	КонецЕсли;
	
	ПолеНоменклатура   = Новый ПолеКомпоновкиДанных("Номенклатура");
	ПолеСклад          = Новый ПолеКомпоновкиДанных("Склад");
	ПолеПартнер        = Новый ПолеКомпоновкиДанных("Партнер");
	ПолеХарактеристика = Новый ПолеКомпоновкиДанных("Характеристика");
	
	Номенклатуры       = Новый СписокЗначений;
	Склады             = Новый СписокЗначений;
	Партнеры           = Новый СписокЗначений;
	Характеристики     = Новый СписокЗначений;
	
	ГруппыОтбора = Новый Массив;
	
	Индекс = 0;
	Пока КоличествоОтборов > 0 Цикл
		
		ЭлементОтбора = КоллекцияЭлементовОтбора[Индекс];
		Если Не ЭлементОтбора.Использование Тогда
			Индекс = Индекс + 1;
			КоличествоОтборов = КоличествоОтборов - 1;
			Продолжить;
		КонецЕсли;
		
		Если СервисПрогнозированияПереопределяемыйКлиентСервер.ЭтоГруппировкаКомпоновкиДанных(ЭлементОтбора) Тогда
			
			Если ЭлементОтбора.ТипГруппы = ТипГруппыЭлементовОтбораКомпоновкиДанных.ГруппаИ Тогда
				ГруппыОтбора.Добавить(ЭлементОтбора);
			КонецЕсли;
			Индекс = Индекс + 1;
			
		Иначе
			
			Если Не ЗначениеЗаполнено(ЭлементОтбора.ПравоеЗначение) Тогда
				Индекс = Индекс + 1;
				КоличествоОтборов = КоличествоОтборов - 1;
				Продолжить;
			КонецЕсли;
			
			Если ЭлементОтбора.ВидСравнения = ВидСравненияКомпоновкиДанных.Равно Тогда
				
				Если ЭлементОтбора.ЛевоеЗначение = ПолеНоменклатура Тогда
					Номенклатуры.Добавить(ЭлементОтбора.ПравоеЗначение);
					КоллекцияЭлементовОтбора.Удалить(ЭлементОтбора);
				ИначеЕсли ЭлементОтбора.ЛевоеЗначение = ПолеСклад Тогда
					Склады.Добавить(ЭлементОтбора.ПравоеЗначение);
					КоллекцияЭлементовОтбора.Удалить(ЭлементОтбора);
				ИначеЕсли ЭлементОтбора.ЛевоеЗначение = ПолеПартнер Тогда
					Партнеры.Добавить(ЭлементОтбора.ПравоеЗначение);
					КоллекцияЭлементовОтбора.Удалить(ЭлементОтбора);
				ИначеЕсли ЭлементОтбора.ЛевоеЗначение = ПолеХарактеристика Тогда
					Характеристики.Добавить(ЭлементОтбора.ПравоеЗначение);
					КоллекцияЭлементовОтбора.Удалить(ЭлементОтбора);
				Иначе
					Индекс = Индекс + 1;
				КонецЕсли;
				
			Иначе
				Индекс = Индекс + 1;
			КонецЕсли;
			
		КонецЕсли;
		
		КоличествоОтборов = КоличествоОтборов - 1; 
		
	КонецЦикла;
	
	ТипОтбора = Тип("ЭлементОтбораКомпоновкиДанных");
	Если Номенклатуры.Количество() > 1 Тогда
		ЕдиныйОтбор = КоллекцияЭлементовОтбора.Добавить(ТипОтбора);
		ЕдиныйОтбор.ВидСравнения   = ВидСравненияКомпоновкиДанных.ВСписке;
		ЕдиныйОтбор.ЛевоеЗначение  = ПолеНоменклатура;
		ЕдиныйОтбор.ПравоеЗначение = Номенклатуры;
	ИначеЕсли Номенклатуры.Количество() = 1 Тогда
		ИзначальныйОтбор = КоллекцияЭлементовОтбора.Добавить(ТипОтбора);
		ИзначальныйОтбор.ВидСравнения   = ВидСравненияКомпоновкиДанных.Равно;
		ИзначальныйОтбор.ЛевоеЗначение  = ПолеНоменклатура;
		ИзначальныйОтбор.ПравоеЗначение = Номенклатуры[0].Значение;
	КонецЕсли;
	Если Склады.Количество() > 1 Тогда
		ЕдиныйОтбор = КоллекцияЭлементовОтбора.Добавить(ТипОтбора);
		ЕдиныйОтбор.ВидСравнения   = ВидСравненияКомпоновкиДанных.ВСписке;
		ЕдиныйОтбор.ЛевоеЗначение  = ПолеСклад;
		ЕдиныйОтбор.ПравоеЗначение = Склады;
	ИначеЕсли Склады.Количество() = 1 Тогда
		ИзначальныйОтбор = КоллекцияЭлементовОтбора.Добавить(ТипОтбора);
		ИзначальныйОтбор.ВидСравнения   = ВидСравненияКомпоновкиДанных.Равно;
		ИзначальныйОтбор.ЛевоеЗначение  = ПолеСклад;
		ИзначальныйОтбор.ПравоеЗначение = Склады[0].Значение;
	КонецЕсли;
	Если Партнеры.Количество() > 1 Тогда
		ЕдиныйОтбор = КоллекцияЭлементовОтбора.Добавить(ТипОтбора);
		ЕдиныйОтбор.ВидСравнения   = ВидСравненияКомпоновкиДанных.ВСписке;
		ЕдиныйОтбор.ЛевоеЗначение  = ПолеПартнер;
		ЕдиныйОтбор.ПравоеЗначение = Партнеры;
	ИначеЕсли Партнеры.Количество() = 1 Тогда
		ИзначальныйОтбор = КоллекцияЭлементовОтбора.Добавить(ТипОтбора);
		ИзначальныйОтбор.ВидСравнения   = ВидСравненияКомпоновкиДанных.Равно;
		ИзначальныйОтбор.ЛевоеЗначение  = ПолеПартнер;
		ИзначальныйОтбор.ПравоеЗначение = Партнеры[0].Значение;
	КонецЕсли;
	Если Характеристики.Количество() > 1 Тогда
		ЕдиныйОтбор = КоллекцияЭлементовОтбора.Добавить(ТипОтбора);
		ЕдиныйОтбор.ВидСравнения   = ВидСравненияКомпоновкиДанных.ВСписке;
		ЕдиныйОтбор.ЛевоеЗначение  = ПолеХарактеристика;
		ЕдиныйОтбор.ПравоеЗначение = Характеристики;
	ИначеЕсли Характеристики.Количество() = 1 Тогда
		ИзначальныйОтбор = КоллекцияЭлементовОтбора.Добавить(ТипОтбора);
		ИзначальныйОтбор.ВидСравнения   = ВидСравненияКомпоновкиДанных.Равно;
		ИзначальныйОтбор.ЛевоеЗначение  = ПолеХарактеристика;
		ИзначальныйОтбор.ПравоеЗначение = Характеристики[0].Значение;
	КонецЕсли;
	
	Для Каждого Группа Из ГруппыОтбора Цикл
		СоединитьОтборыПоПолюВЕдиныйОтбор(Группа.Элементы, Истина);
	КонецЦикла;
	
КонецПроцедуры

