	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&ТекстПолей", ТекстПолей);
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "ВТ_ИмяРегистра", ?(ИмяВременнойТаблицы <> "", ИмяВременнойТаблицы, ИмяРегистраЗаписиСУчетомИсправлений(ИмяРегистра)));
	
	ТекстЗапроса = ТекстЗапроса + "
	|ИНДЕКСИРОВАТЬ ПО
	|	ОсновноеСредство" + ?(ЕстьОрганизация, ",Организация", "");
	
	Если ЗначениеЗаполнено(ИмяПоляПериод) Тогда
