Функция ДатаИзСтрокиJSONФорматаISO(Значение)
	
	МассивПодчастейСтроки = СтроковыеФункцииКлиентСервер.РазложитьСтрокуВМассивПодстрок(Значение, ".", Истина, Истина);
	
	Если МассивПодчастейСтроки.Количество() = 2 Тогда
		
		ЧастьДата = МассивПодчастейСтроки[0];
		
		Если СтрНайти(ЧастьДата, "T") > 0 Тогда
			ЧастьДата = СтрЗаменить(ЧастьДата, "T", " ");
		КонецЕсли;
		
		Возврат СтроковыеФункцииКлиентСервер.СтрокаВДату(ЧастьДата, ЧастиДаты.ДатаВремя);
		
	Иначе
		Возврат Дата(1, 1, 1);
	КонецЕсли;
	
