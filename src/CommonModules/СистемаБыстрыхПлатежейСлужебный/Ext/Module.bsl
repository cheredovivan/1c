		Реквизиты.Добавить(
			НовыйОписаниеРеквизита(
				"Токен",
				ОбщегоНазначения.ОписаниеТипаСтрока(1000),
				НСтр("ru = 'Токен';
					|en = 'Token'"),
				Истина,
