	Условие.ПравоеЗначение = "ИдентификаторНеизвестного";

	ОформлениеКрасный = НастройкиПлатежныхСистемСлужебный.НовыйПараметрыОформления();
	ОформлениеКрасный.ИмяПараметра = "ЦветТекста";
	ОформлениеКрасный.ЗначениеПараметра = ЦветаСтиля.ЦветИнформацияОшибочна;

	УсловноеОформление.Оформление.Добавить(ОформлениеКрасный);
	УсловноеОформление.Условия.Добавить(Условие);
	УсловноеОформление.ОформляемыеПоля.Добавить("Ссылка");
	
