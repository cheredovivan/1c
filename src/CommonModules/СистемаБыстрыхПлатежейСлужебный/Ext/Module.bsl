// Формирует дерево для формы общих настроек платежных систем
// 
// Параметры:
//  Дерево - ДеревоЗначений - дерево, которое необходимо заполнить.
//    см. НастройкиПлатежныхСистемСлужебный.НовыйДеревоНастроек.
//  ПараметрыДерева - Структура - параметры вывода дерева.
//    см. НастройкиПлатежныхСистемСлужебный.НовыйПараметрыДерева.
Процедура ПриФормированииДереваПоПодсистеме(
		Дерево,
		ПараметрыДерева) Экспорт
	
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	НастройкиСБП.Ссылка КАК Ссылка,
	|	ВЫБОР
	|		КОГДА НастройкиСБП.ЭтоГруппа
	|		И НастройкиСБП.Родитель = ЗНАЧЕНИЕ(Справочник.НастройкиПодключенияКСистемеБыстрыхПлатежей.ПустаяСсылка)
	|		И НастройкиСБП.ВариантНастройки = ЗНАЧЕНИЕ(Перечисление.ВариантыНастройкиСБП.b2b)
	|			ТОГДА 3
	|		КОГДА НастройкиСБП.ЭтоГруппа
	|		И НастройкиСБП.Родитель = ЗНАЧЕНИЕ(Справочник.НастройкиПодключенияКСистемеБыстрыхПлатежей.ПустаяСсылка)
	|		И НастройкиСБП.ВариантНастройки = ЗНАЧЕНИЕ(Перечисление.ВариантыНастройкиСБП.c2b)
	|			ТОГДА 2
	|		КОГДА НастройкиСБП.ЭтоГруппа
	|		И НастройкиСБП.Родитель <> ЗНАЧЕНИЕ(Справочник.НастройкиПодключенияКСистемеБыстрыхПлатежей.ПустаяСсылка)
	|			ТОГДА 1
	|		ИНАЧЕ 0
	|	КОНЕЦ КАК Картинка,
	|	ВЫБОР
	|		КОГДА НастройкиСБП.ИдентификаторУчастника = &ИдентификаторНеизвестногоУчастника
	|			ТОГДА ""ИдентификаторНеизвестного""
	|		ИНАЧЕ ВЫБОР
	|			КОГДА НЕ НастройкиСБП.ЭтоГруппа
	|			И НЕ НастройкиСБП.Используется
	|				ТОГДА ""НеИспользуется""
	|			ИНАЧЕ """"
	|		КОНЕЦ
	|	КОНЕЦ КАК ИдентификаторУсловногоОформления,
	|	НастройкиСБП.ЭтоГруппа КАК ЭтоГруппа
	|ИЗ
	|	Справочник.НастройкиПодключенияКСистемеБыстрыхПлатежей КАК НастройкиСБП
	|ГДЕ
	|	НЕ ПометкаУдаления
	|	И &Отбор
	|
	|УПОРЯДОЧИТЬ ПО
	|	НастройкиСБП.ЭтоГруппа,
	|	НастройкиСБП.Наименование";
	
	Запрос.УстановитьПараметр(
		"ИдентификаторНеизвестногоУчастника",
		СистемаБыстрыхПлатежейКлиентСервер.ИдентификаторНеизвестногоУчастника());
	
	Отбор = Новый Массив;
	Если ПараметрыДерева.ТолькоГруппы Тогда
		Отбор.Добавить("НастройкиСБП.ЭтоГруппа");
	КонецЕсли;
	
	ОбрабатываемыеПараметры = Новый Структура;
	ОбрабатываемыеПараметры.Вставить("Отбор",                   Неопределено);
	ОбрабатываемыеПараметры.Вставить("ВариантНастройки",        Неопределено);
	ОбрабатываемыеПараметры.Вставить("СверкаВзаиморасчетовc2b", Неопределено);
	ОбрабатываемыеПараметры.Вставить("Отображение",             "");
	
	Если ТипЗнч(ПараметрыДерева.ПараметрыПодсистемы) = Тип("Структура")
		Или ТипЗнч(ПараметрыДерева.ПараметрыПодсистемы) = Тип("ФиксированнаяСтруктура") Тогда
		ЗаполнитьЗначенияСвойств(ОбрабатываемыеПараметры, ПараметрыДерева.ПараметрыПодсистемы);
	КонецЕсли;

	// Произвольные отборы
	НастройкиПлатежныхСистемСлужебный.ДополнитьЗапросСтандартнымОтбором(
		Отбор,
		ОбрабатываемыеПараметры.Отбор,
		Запрос);
	
	// Отбор по варианту настройки
	Если ОбрабатываемыеПараметры.ВариантНастройки <> Неопределено Тогда
			
		ВариантНастройки = Перечисления.ВариантыНастройкиСБП[ОбрабатываемыеПараметры.ВариантНастройки];
		КорневаяГруппа = Справочники.НастройкиПодключенияКСистемеБыстрыхПлатежей.ГруппаВариантНастройки(
			ВариантНастройки,
			Ложь,
			Ложь);
		Отбор.Добавить("Родитель В ИЕРАРХИИ (&РодительВариантНастройки)");
		Запрос.УстановитьПараметр("РодительВариантНастройки", КорневаяГруппа);
			
	КонецЕсли;
	
	// Сверка взаиморасчетов c2b
	Если ОбрабатываемыеПараметры.СверкаВзаиморасчетовc2b = Истина Тогда
		
		КлючиПоиска = Новый Структура;
		КлючиПоиска.Вставить("СверкаВзаиморасчетовc2b", Истина);

		Отбор.Добавить("ИдентификаторУчастника В (&ИдентификаторыУчастника)");
		Запрос.УстановитьПараметр(
			"ИдентификаторыУчастника",
			УчастникиСБППоНастройкам(КлючиПоиска));
			
		Отбор.Добавить("Родитель В ИЕРАРХИИ (&РодительСверкаВзаиморасчетовc2b)");
		Запрос.УстановитьПараметр(
			"РодительСверкаВзаиморасчетовc2b",
			Справочники.НастройкиПодключенияКСистемеБыстрыхПлатежей.ГруппаВариантНастройки(
				Перечисления.ВариантыНастройкиСБП.c2b,
				Ложь,
				Ложь));
		
	КонецЕсли;
	
	Если Отбор.Количество() = 0 Тогда
		ТекстЗамены = "ИСТИНА";
	Иначе
		ТекстЗамены = СтрСоединить(Отбор, " И ");
	КонецЕсли;
	
	Запрос.Текст = СтрЗаменить(
		Запрос.Текст,
		"&Отбор",
		ТекстЗамены);
	
	Если ОбрабатываемыеПараметры.Отображение = "Список" Тогда
		
		Выборка = Запрос.Выполнить().Выбрать();
		Пока Выборка.Следующий() Цикл
			НоваяСтрока = Дерево.Строки.Добавить();
			ЗаполнитьЗначенияСвойств(НоваяСтрока, Выборка);
		КонецЦикла;
		
	Иначе
		
		Запрос.Текст = Запрос.Текст + "
		|
		|ИТОГИ
		|ПО
		|	Ссылка ИЕРАРХИЯ";
		
		НастройкиПлатежныхСистемСлужебный.ЗапросВДерево(Запрос, Дерево);
		
	КонецЕсли;
	
	ПараметрыДерева.ВыводитьПодсистему = Истина;
	
	// Условное оформление
	// Серый для неиспользуемых
	УсловноеОформление = НастройкиПлатежныхСистемСлужебный.НовыйНастройкиУсловногоОформления();
	
	Условие = НастройкиПлатежныхСистемСлужебный.НовыйУсловиеОформления();
	Условие.ЛевоеЗначение  = "ИдентификаторУсловногоОформления";
	Условие.ВидСравнения   = ВидСравненияКомпоновкиДанных.Равно;
	Условие.ПравоеЗначение = "НеИспользуется";
	
	ОформлениеСерый = НастройкиПлатежныхСистемСлужебный.НовыйПараметрыОформления();
	ОформлениеСерый.ИмяПараметра = "ЦветТекста";
	ОформлениеСерый.ЗначениеПараметра = ЦветаСтиля.ТекстЗапрещеннойЯчейкиЦвет;
	
	УсловноеОформление.Оформление.Добавить(ОформлениеСерый);
	УсловноеОформление.Условия.Добавить(Условие);
	УсловноеОформление.ОформляемыеПоля.Добавить("Ссылка");
	
	ПараметрыДерева.УсловноеОформление.Добавить(УсловноеОформление);
	
	// Красный для ошибочных идентификаторов
	УсловноеОформление = НастройкиПлатежныхСистемСлужебный.НовыйНастройкиУсловногоОформления();
	
