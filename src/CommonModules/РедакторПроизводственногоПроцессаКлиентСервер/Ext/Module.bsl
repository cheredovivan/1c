// Заполняет параметры по умолчанию в строке действия
// 
// Параметры:
//  ДанныеСтроки - ДанныеФормыСтруктура
//  ИмяТЧЭтапа - Строка - имя табличной части этапа
//
Процедура ЗаполнитьПараметрыДействияПоУмолчанию(ДанныеСтроки, ИмяТЧЭтапа) Экспорт
	
	Если НЕ ДанныеСтроки.Изменено Тогда
		ДанныеСтроки.ТолькоПросмотр = Истина;
		ДанныеСтроки.Комментарий = КомментарийСовпадает();
	ИначеЕсли ДанныеСтроки.КоличествоТехпроцесс > ДанныеСтроки.КоличествоЭтап И МожноУвеличить(ДанныеСтроки) > 0 Тогда
		ДанныеСтроки.Действие = ДействиеУвеличить();
	ИначеЕсли ДанныеСтроки.КоличествоТехпроцесс > ДанныеСтроки.КоличествоЭтап Тогда
		ДанныеСтроки.Действие = ДействиеДобавить();
	ИначеЕсли ДанныеСтроки.КоличествоТехпроцесс = 0 Тогда
		ДанныеСтроки.Действие = ДействиеУдалить();
		Если ДанныеСтроки.НельзяУменьшить > 0 Тогда
			ДанныеСтроки.ТолькоПросмотр = Истина;
			ДанныеСтроки.Комментарий = КомментарийНельзяУдалить();
		КонецЕсли;
	ИначеЕсли ДанныеСтроки.КоличествоТехпроцесс < ДанныеСтроки.КоличествоЭтап Тогда
		ДанныеСтроки.Действие = ДействиеУменьшить();
		Если ДанныеСтроки.КоличествоЭтап - ДанныеСтроки.КоличествоТехпроцесс > МожноУменьшить(ДанныеСтроки) Тогда
			ДанныеСтроки.ТолькоПросмотр = Истина;
			ДанныеСтроки.Комментарий = КомментарийНельзяУменьшить();
		КонецЕсли;
	КонецЕсли;
	
	Если ДанныеСтроки.Действие <> ДействиеДобавить() Тогда
		ЗаполнитьЗначенияСвойств(ДанныеСтроки, Новый Структура("Обособленно,Склад,СтатьяКалькуляции"));
	КонецЕсли;
	
	ДанныеСтроки.Отметка = ОтметкаПоУмолчанию(ДанныеСтроки, ИмяТЧЭтапа);
	
КонецПроцедуры

// Отметка в строке по умолчанию.
// 
// Параметры:
//  ДанныеСтроки - ДанныеФормыСтруктура
//  ИмяТЧЭтапа - Строка - имя табличной части этапа
// 
// Возвращаемое значение:
//  Булево 
Функция ОтметкаПоУмолчанию(ДанныеСтроки, ИмяТЧЭтапа)
	
	Результат = Ложь;
	
	Если НЕ ДанныеСтроки.Изменено
		ИЛИ ДанныеСтроки.ТолькоПросмотр Тогда
		Результат = Ложь;
	ИначеЕсли ИмяТЧЭтапа = "Трудозатраты" Тогда
		Результат = Истина;
	ИначеЕсли ИмяТЧЭтапа = "ОбеспечениеМатериаламиИРаботами"
		И (ДанныеСтроки.Действие = ДействиеДобавить()
			ИЛИ ДанныеСтроки.Действие = ДействиеУвеличить()) Тогда
		Результат = Истина;
	ИначеЕсли ИмяТЧЭтапа = "ВыходныеИзделия"
		И (ДанныеСтроки.Действие = ДействиеДобавить()
			ИЛИ (ДанныеСтроки.Действие = ДействиеУвеличить())
				И ДанныеСтроки.ТипСтоимости = ПредопределенноеЗначение("Перечисление.ТипыСтоимостиВыходныхИзделий.Фиксированная")) Тогда
		Результат = Истина;
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

