// Определяет, можно ли изменить строку этапа.
// 
// Параметры:
//  ИмяТЧ - Строка
//  ДанныеСтроки - ДанныеФормыСтруктура
//  Действие - Строка
// 
// Возвращаемое значение:
//  Булево
Функция МожноИзменитьСтрокуЭтапа(ИмяТЧ, ДанныеСтроки, Действие) Экспорт
	
	ВариантыОбеспечения = ВариантыОбеспеченияСтрокЭтапаНередактируемые();
	ПустойУИД = ОбщегоНазначенияКлиентСервер.ПустойУникальныйИдентификатор();
	
	Отказ = (ИмяТЧ = "ВыходныеИзделия" И Действие = ДействиеУвеличить()
						И (ДанныеСтроки.Произведено ИЛИ ДанныеСтроки.Отменено))
		ИЛИ (ИмяТЧ = "ВыходныеИзделия" И Действие = ДействиеУменьшить()
						И ДанныеСтроки.Произведено)
		ИЛИ (ИмяТЧ = "ПобочныеИзделия" И Действие = ДействиеУвеличить()
						И (ДанныеСтроки.Произведено ИЛИ ДанныеСтроки.Отменено))
		ИЛИ (ИмяТЧ = "ПобочныеИзделия" И Действие = ДействиеУменьшить()
						И ДанныеСтроки.Произведено)
		ИЛИ (ИмяТЧ = "ОбеспечениеМатериаламиИРаботами" И Действие = ДействиеУвеличить()
						И (ДанныеСтроки.КлючСвязиНабор <> ПустойУИД ИЛИ ВариантыОбеспечения.Найти(ДанныеСтроки.ВариантОбеспечения) <> Неопределено))
		ИЛИ (ИмяТЧ = "ОбеспечениеМатериаламиИРаботами" И Действие = ДействиеУменьшить()
						И (ДанныеСтроки.Производится ИЛИ ВариантыОбеспечения.Найти(ДанныеСтроки.ВариантОбеспечения) <> Неопределено)
		ИЛИ (ИмяТЧ = "Трудозатраты" И Действие = ДействиеУвеличить()
						И (ДанныеСтроки.Выполнено ИЛИ ДанныеСтроки.Отменено))
		ИЛИ (ИмяТЧ = "Трудозатраты" И Действие = ДействиеУменьшить()
						И ДанныеСтроки.Выполнено));
	
	Возврат НЕ Отказ;
	
