	Результат = ЗапросНачисленияВосстановления.ВыполнитьПакет();
	
	// ВНА, не входящие в ЕГДС.
	ДанныеПоОСНМА = Результат[7].Выгрузить(); // ТаблицаЗначений - 

	Для Каждого СтрокаОСНМА Из ДанныеПоОСНМА Цикл
		
		СуммаНачисленияРегл = 0;
		СуммаНачисленияУпр = 0;
		СуммаВосстановленияРегл = 0;
		СуммаВосстановленияУпр = 0;
		НачислениеУбытокОтОбесцененияРегл = 0;
		НачислениеУбытокОтОбесцененияУпр  = 0;
		ВосстановлениеУбытокОтОбесцененияРегл = 0;
		ВосстановлениеУбытокОтОбесцененияУпр  = 0;
		
		РезервДооценкиРегл = ?(СтрокаОСНМА.РезервПереоценкиСтоимостиРегл - СтрокаОСНМА.РезервПереоценкиАмортизацииРегл > 0
								И СтрокаОСНМА.РезервПереоценкиСтоимостиРегл > 0,
									СтрокаОСНМА.РезервПереоценкиСтоимостиРегл - СтрокаОСНМА.РезервПереоценкиАмортизацииРегл, // Была дооценка
									0);										   // Была уценка
									
		РезервДооценкиУпр  = ?(СтрокаОСНМА.РезервПереоценкиСтоимостиУпр - СтрокаОСНМА.РезервПереоценкиАмортизацииУпр > 0
								И СтрокаОСНМА.РезервПереоценкиСтоимостиУпр > 0,
									СтрокаОСНМА.РезервПереоценкиСтоимостиУпр - СтрокаОСНМА.РезервПереоценкиАмортизацииУпр,  // Была дооценка
									0);										   // Была уценка
									
		СтоимостьСУчетомПредыдущегоОбесцененияРегл = СтрокаОСНМА.СтоимостьРегл - СтрокаОСНМА.ОбесценениеРегл;
		СтоимостьСУчетомПредыдущегоОбесцененияУпр = СтрокаОСНМА.СтоимостьУпр - СтрокаОСНМА.ОбесценениеУпр;
		
		Если СтрокаОСНМА.ВозмещаемаяСтоимостьРегл <> 0 
			И СтрокаОСНМА.ВозмещаемаяСтоимостьРегл < СтоимостьСУчетомПредыдущегоОбесцененияРегл Тогда
			// Обесцениваем в регл.
			СуммаНачисленияРегл = СтоимостьСУчетомПредыдущегоОбесцененияРегл - СтрокаОСНМА.ВозмещаемаяСтоимостьРегл; // Общая сумма обесценения
			
			// Сумма на 83 счете определяется как разница между суммой обесценения и убытком от обесценения,
			// но не может быть больше резерва дооценки.
			НачислениеУбытокОтОбесцененияРегл = ?(РезервДооценкиРегл <= 0,
													СуммаНачисленияРегл, // Все обесценение на 91 счет.
													?(РезервДооценкиРегл <= СуммаНачисленияРегл,  // Обесценение на 83 счет:
														СуммаНачисленияРегл - РезервДооценкиРегл, // Частично.
														0));										  // Полностью.
												
		КонецЕсли;
		
		Если СтрокаОСНМА.ВозмещаемаяСтоимостьРегл = 0 Тогда
			// Полное восстановление.
			СуммаВосстановленияРегл = СтрокаОСНМА.ОбесценениеРегл;          // Общая сумма обесценения
			ВосстановлениеУбытокОтОбесцененияРегл = СтрокаОСНМА.УбытокОтОбесцененияРегл;  //Сумма обесценения, ранее отраженная на счете 91.02.
			
		ИначеЕсли СтрокаОСНМА.ВозмещаемаяСтоимостьРегл > СтоимостьСУчетомПредыдущегоОбесцененияРегл Тогда
			// Восстанавливаем в пределах остатка обесценения регл.
			СуммаВосстановленияРегл = 
				Мин(СтрокаОСНМА.ВозмещаемаяСтоимостьРегл - СтрокаОСНМА.СтоимостьРегл + СтрокаОСНМА.ОбесценениеРегл, 
					СтрокаОСНМА.ОбесценениеРегл);
					
			ВосстановлениеУбытокОтОбесцененияРегл = ?(СуммаВосстановленияРегл <= СтрокаОСНМА.УбытокОтОбесцененияРегл,
											СуммаВосстановленияРегл,  // Восстановление в размере ранее признанного убытка на 91.01 
											СтрокаОСНМА.УбытокОтОбесцененияРегл); // Возникает дельта между полной суммой обесценения 
											 									  // и убытком от обесценения равная сумме по 83 счету
											
		КонецЕсли;
		
		Если СтрокаОСНМА.ВозмещаемаяСтоимостьУпр <> 0
			И СтрокаОСНМА.ВозмещаемаяСтоимостьУпр < СтоимостьСУчетомПредыдущегоОбесцененияУпр Тогда
			// Обесцениваем в упр.
			СуммаНачисленияУпр = СтоимостьСУчетомПредыдущегоОбесцененияУпр - СтрокаОСНМА.ВозмещаемаяСтоимостьУпр ;
			
			// Сумма на 83 счете определяется как разница между суммой обесценения и убытком от обесценения,
			// но не может быть больше резерва дооценки.
			НачислениеУбытокОтОбесцененияУпр = ?(РезервДооценкиУпр <= 0,
													СуммаНачисленияУпр, // Все обесценение на 91 счет.
													?(РезервДооценкиУпр <= СуммаНачисленияУпр,  // Обесценение на 83 счет:
														СуммаНачисленияУпр - РезервДооценкиУпр, // Частично.
														0));										// Полностью.
												
		КонецЕсли;
		
		Если СтрокаОСНМА.ВозмещаемаяСтоимостьУпр = 0 Тогда
			// Полное восстановление.
			СуммаВосстановленияУпр = СтрокаОСНМА.ОбесценениеУпр;
			ВосстановлениеУбытокОтОбесцененияУпр = СтрокаОСНМА.УбытокОтОбесцененияУпр;
			
		ИначеЕсли СтрокаОСНМА.ВозмещаемаяСтоимостьУпр > СтоимостьСУчетомПредыдущегоОбесцененияУпр Тогда
			// Восстанавливаем в пределах остатка обесценения Упр.
			СуммаВосстановленияУпр = 
				Мин(СтрокаОСНМА.ВозмещаемаяСтоимостьУпр - СтрокаОСНМА.СтоимостьУпр + СтрокаОСНМА.ОбесценениеУпр, 
					СтрокаОСНМА.ОбесценениеУпр);
			
			ВосстановлениеУбытокОтОбесцененияУпр = ?(СуммаВосстановленияУпр <= СтрокаОСНМА.УбытокОтОбесцененияУпр,
											СуммаВосстановленияУпр,  // Восстановление в размере ранее признанного убытка на 91.01 
											СтрокаОСНМА.УбытокОтОбесцененияУпр); // Возникает дельта между полной суммой обесценения 
																				 // и убытком от обесценения равная сумме по 83 счету
											 
		КонецЕсли;
		
		Если СуммаНачисленияРегл <> 0 Или СуммаНачисленияУпр <> 0 Тогда
		// Начисление.
			СтрокаНачисления = Начисления.Добавить();
			ЗаполнитьЗначенияСвойств(СтрокаНачисления, СтрокаОСНМА);
			СтрокаНачисления.ОбесценениеРегл = СуммаНачисленияРегл;
			СтрокаНачисления.ОбесценениеУпр = СуммаНачисленияУпр;
			СтрокаНачисления.УбытокОтОбесцененияРегл = НачислениеУбытокОтОбесцененияРегл;
			СтрокаНачисления.УбытокОтОбесцененияУпр  = НачислениеУбытокОтОбесцененияУпр;
		
		// Изменение резерва стоимости для регистров Стоимости и амортизации.
			Если СтрокаОСНМА.РезервПереоценкиСтоимостиУпр > 0 Тогда
				ОбесценениеДляРасчетаРезерваПереоценкиУпр = Мин(СтрокаНачисления.ОбесценениеУпр, РезервДооценкиУпр);
				
				СтрокаНачисления.ИзменениеРезерваСтоимости = 
								Окр(ОбесценениеДляРасчетаРезерваПереоценкиУпр / 
										(1 - СтрокаОСНМА.РезервПереоценкиАмортизацииУпр / 
												СтрокаОСНМА.РезервПереоценкиСтоимостиУпр), 
									2);

				СтрокаНачисления.ИзменениеРезерваАмортизации = 
									ОбесценениеДляРасчетаРезерваПереоценкиУпр
									- СтрокаНачисления.ИзменениеРезерваСтоимости;
			КонецЕсли;

			Если СтрокаОСНМА.РезервПереоценкиСтоимостиРегл > 0 Тогда
				ОбесценениеДляРасчетаРезерваПереоценкиРегл = Мин(СтрокаНачисления.ОбесценениеРегл, РезервДооценкиРегл);
				
				СтрокаНачисления.ИзменениеРезерваСтоимостиРегл = 
								Окр(ОбесценениеДляРасчетаРезерваПереоценкиРегл / 
										(1 - СтрокаОСНМА.РезервПереоценкиАмортизацииРегл / 
												СтрокаОСНМА.РезервПереоценкиСтоимостиРегл), 
								2);

				СтрокаНачисления.ИзменениеРезерваАмортизацииРегл = 
									ОбесценениеДляРасчетаРезерваПереоценкиРегл
									- СтрокаНачисления.ИзменениеРезерваСтоимостиРегл;
			КонецЕсли;
		КонецЕсли;
		
		Если СуммаВосстановленияРегл <> 0 Или СуммаВосстановленияУпр <> 0 Тогда
			// Восстановление.
			СтрокаВосстановления = Восстановления.Добавить();
			ЗаполнитьЗначенияСвойств(СтрокаВосстановления, СтрокаОСНМА);
			СтрокаВосстановления.ОбесценениеРегл = СуммаВосстановленияРегл;
			СтрокаВосстановления.ОбесценениеУпр = СуммаВосстановленияУпр;
			СтрокаВосстановления.УбытокОтОбесцененияРегл = ВосстановлениеУбытокОтОбесцененияРегл;
			СтрокаВосстановления.УбытокОтОбесцененияУпр  = ВосстановлениеУбытокОтОбесцененияУпр;
			
			// Изменение резерва стоимости для регистров Стоимости и амортизации. 
			// Вся сумма обесценения идет на Стоимость.
			СтрокаВосстановления.ИзменениеРезерваСтоимости = Макс(СуммаВосстановленияУпр - ВосстановлениеУбытокОтОбесцененияУпр, 0);
			СтрокаВосстановления.ИзменениеРезерваАмортизации = 0;
			СтрокаВосстановления.ИзменениеРезерваСтоимостиРегл = Макс(СуммаВосстановленияРегл - ВосстановлениеУбытокОтОбесцененияРегл, 0);
			СтрокаВосстановления.ИзменениеРезерваАмортизацииРегл = 0;
		КонецЕсли;
		
	КонецЦикла;
	
	// ВНА, входящие в ЕГДС.
	ДанныеПоЕГДС = Результат[13].Выгрузить(); // ТаблицаЗначений - 
	
	// По организациям с филиалами требуется распределить общую сумму обесценения между филиалами, 
	// и уже в рамках филиалов распределить обесценение по активам.
	
	ДанныеПоФилиалам = Результат[12].Выгрузить(); // ТаблицаЗначений -
	СписокЕГДС = ДанныеПоФилиалам.Скопировать(,"ЕГДС");
	СписокЕГДС.Свернуть("ЕГДС","");
	
	ТаблицаЕГДС = ДанныеПоЕГДС.Скопировать(, "Организация, ЕГДС, ВозмещаемаяСтоимостьРегл, ВозмещаемаяСтоимостьУпр, СтоимостьРегл, СтоимостьУпр");
	ТаблицаЕГДС.Очистить();
	
	Для Каждого СтрокаСпискаЕГДС Из СписокЕГДС Цикл
		
		КРаспределениюПоЕГДС = ДанныеПоФилиалам.Скопировать(Новый Структура("ЕГДС", СтрокаСпискаЕГДС.ЕГДС));
		
		РаспределеннаяВозмещаяемаяСтоимостьРегл = ОбщегоНазначенияУТКлиентСервер.РаспределитьПропорционально(
													КРаспределениюПоЕГДС.Получить(0).ВозмещаемаяСтоимостьРегл,
													КРаспределениюПоЕГДС.ВыгрузитьКолонку("СтоимостьРегл"));
													
		РаспределеннаяВозмещаяемаяСтоимостьУпр = ОбщегоНазначенияУТКлиентСервер.РаспределитьПропорционально(
													КРаспределениюПоЕГДС.Получить(0).ВозмещаемаяСтоимостьУпр,
													КРаспределениюПоЕГДС.ВыгрузитьКолонку("СтоимостьУпр"));
		
		КРаспределениюПоЕГДС.ЗагрузитьКолонку(РаспределеннаяВозмещаяемаяСтоимостьРегл, "ВозмещаемаяСтоимостьРегл");
		КРаспределениюПоЕГДС.ЗагрузитьКолонку(РаспределеннаяВозмещаяемаяСтоимостьУпр, "ВозмещаемаяСтоимостьУпр");
		
		ОбщегоНазначенияКлиентСервер.ДополнитьТаблицу(КРаспределениюПоЕГДС, ТаблицаЕГДС);
	КонецЦикла;
	
	Для Каждого СтрокаЕГДС Из ТаблицаЕГДС Цикл
		
		СтруктураОтбора = Новый Структура("ЕГДС, Организация", СтрокаЕГДС.ЕГДС, СтрокаЕГДС.Организация);
		СтрокиВНА = ДанныеПоЕГДС.НайтиСтроки(СтруктураОтбора);
		ТаблицаОбесцененияЕГДС = ДанныеПоЕГДС.Скопировать(СтрокиВНА,); // по организации.
		
		СтоимостьРегл = ТаблицаОбесцененияЕГДС.Итог("СтоимостьРегл");
		СтоимостьУпр = ТаблицаОбесцененияЕГДС.Итог("СтоимостьУпр");
		
		// Заново рассчитываем новую сумму обесценения ЕГДС, распределяем по ВНА и по каждому ВНА 
		// начисляем/восстанавливаем в зависимости от того, уменьшилась сумма или увеличилась.
		Если СтрокаЕГДС.ВозмещаемаяСтоимостьРегл <> 0 
			И СтрокаЕГДС.ВозмещаемаяСтоимостьРегл < СтоимостьРегл Тогда
			СуммаОбесцененияРегл = СтоимостьРегл - СтрокаЕГДС.ВозмещаемаяСтоимостьРегл;
		Иначе
			СуммаОбесцененияРегл = 0;
		КонецЕсли;
		
		Если СтрокаЕГДС.ВозмещаемаяСтоимостьУпр <> 0
			И СтрокаЕГДС.ВозмещаемаяСтоимостьУпр < СтоимостьУпр Тогда
			СуммаОбесцененияУпр = СтоимостьУпр - СтрокаЕГДС.ВозмещаемаяСтоимостьУпр;
		Иначе
			СуммаОбесцененияУпр = 0;
		КонецЕсли;
		
		// Таблицы обесценения, распределенного по ВНА пропорционально балансовой стоимости
		// с учетом ликвидационных обязательств.
		НачисленияРегл = ОбщегоНазначенияУТКлиентСервер.РаспределитьПропорционально(
			СуммаОбесцененияРегл,
			ТаблицаОбесцененияЕГДС.ВыгрузитьКолонку("БазаРаспределенияРегл"));
		НачисленияУпр = ОбщегоНазначенияУТКлиентСервер.РаспределитьПропорционально(
			СуммаОбесцененияУпр,
			ТаблицаОбесцененияЕГДС.ВыгрузитьКолонку("БазаРаспределенияУпр"));
			
		Для Каждого СтрокаВНА Из ТаблицаОбесцененияЕГДС Цикл
			Индекс = ТаблицаОбесцененияЕГДС.Индекс(СтрокаВНА);
			
			РезервДооценкиРегл = ?(СтрокаВНА.РезервПереоценкиСтоимостиРегл - СтрокаВНА.РезервПереоценкиАмортизацииРегл > 0
									И СтрокаВНА.РезервПереоценкиСтоимостиРегл > 0,
									СтрокаВНА.РезервПереоценкиСтоимостиРегл - СтрокаВНА.РезервПереоценкиАмортизацииРегл,
