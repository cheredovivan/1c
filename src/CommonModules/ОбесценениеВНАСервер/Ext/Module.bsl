			РезервДооценкиУпр  = ?(СтрокаВНА.РезервПереоценкиСтоимостиУпр - СтрокаВНА.РезервПереоценкиАмортизацииУпр > 0
									И СтрокаВНА.РезервПереоценкиСтоимостиУпр > 0,
									СтрокаВНА.РезервПереоценкиСтоимостиУпр - СтрокаВНА.РезервПереоценкиАмортизацииУпр,
									0);
			
			Если НачисленияРегл <> Неопределено Тогда
				Если НачисленияРегл[Индекс] > СтрокаВНА.ОбесценениеРегл Тогда //начисляем
					СтрокаНачисления = Начисления.Добавить();
					ЗаполнитьЗначенияСвойств(СтрокаНачисления, СтрокаВНА);
					СтрокаНачисления.ОбесценениеРегл = НачисленияРегл[Индекс] - СтрокаВНА.ОбесценениеРегл;
					
					// Сумма на 83 счете определяется как разница между суммой обесценения и убытком от обесценения,
					// но не может быть больше резерва дооценки.
					СтрокаНачисления.УбытокОтОбесцененияРегл = ?(РезервДооценкиРегл <= 0,
													СтрокаНачисления.ОбесценениеРегл, // Все обесценение на 91 счет.
													?(РезервДооценкиРегл <= СтрокаНачисления.ОбесценениеРегл,  // Обесценение на 83 счет:
														СтрокаНачисления.ОбесценениеРегл - РезервДооценкиРегл, // Частично.
														0));										// Полностью.
												
					СтрокаНачисления.ОбесценениеУпр = 0;
					СтрокаНачисления.УбытокОтОбесцененияУпр = 0;

					// Изменение резерва стоимости для регистров Стоимости и амортизации.
					СтрокаНачисления.ИзменениеРезерваСтоимости = 0;
					СтрокаНачисления.ИзменениеРезерваАмортизации = 0;
					
					Если СтрокаВНА.РезервПереоценкиСтоимостиРегл > 0 Тогда
						ОбесценениеДляРасчетаРезерваПереоценкиРегл = Мин(СтрокаНачисления.ОбесценениеРегл, РезервДооценкиРегл);
						
						СтрокаНачисления.ИзменениеРезерваСтоимостиРегл = Окр(ОбесценениеДляРасчетаРезерваПереоценкиРегл 
																				/ (1 - СтрокаВНА.РезервПереоценкиАмортизацииРегл 
																						/ СтрокаВНА.РезервПереоценкиСтоимостиРегл),
																			2);
																	
						СтрокаНачисления.ИзменениеРезерваАмортизацииРегл = 
											ОбесценениеДляРасчетаРезерваПереоценкиРегл
											- СтрокаНачисления.ИзменениеРезерваСтоимостиРегл;
					КонецЕсли;
					
		
				ИначеЕсли СтрокаВНА.ОбесценениеРегл > НачисленияРегл[Индекс] Тогда //восстанавливаем
					СтрокаВосстановления = Восстановления.Добавить();
					ЗаполнитьЗначенияСвойств(СтрокаВосстановления, СтрокаВНА);
					СтрокаВосстановления.ОбесценениеРегл = СтрокаВНА.ОбесценениеРегл - НачисленияРегл[Индекс];
					
					СуммаВосстановленияРегл = Мин(НачисленияРегл[Индекс] - СтрокаВНА.БазаРаспределенияРегл + СтрокаВНА.ОбесценениеРегл, 
													СтрокаВНА.ОбесценениеРегл);
	
					СтрокаВосстановления.УбытокОтОбесцененияРегл = ?(СуммаВосстановленияРегл <= СтрокаВНА.УбытокОтОбесцененияРегл,
											СуммаВосстановленияРегл,  // Восстановление в размере ранее признанного убытка на 91.01 
											СтрокаВНА.УбытокОтОбесцененияРегл); // Возникает дельта между полной суммой обесценения 
																				// и убытком от обесценения равная сумме по 83 счету
											 
					СтрокаВосстановления.ОбесценениеУпр = 0;
					СтрокаВосстановления.УбытокОтОбесцененияУпр = 0;
					// Изменение резерва стоимости для регистров Стоимости и амортизации. 
					// Вся сумма идет на Стоимость.
					СтрокаВосстановления.ИзменениеРезерваСтоимости = 0;
					СтрокаВосстановления.ИзменениеРезерваАмортизации = 0;
					СтрокаВосстановления.ИзменениеРезерваСтоимостиРегл = Макс(СуммаВосстановленияРегл - СтрокаВосстановления.УбытокОтОбесцененияРегл, 0);
					СтрокаВосстановления.ИзменениеРезерваАмортизацииРегл = 0;
					
				КонецЕсли;
			Иначе
				Если СтрокаВНА.ОбесценениеРегл > 0 Тогда //восстанавливаем полностью
					СтрокаВосстановления = Восстановления.Добавить();
					ЗаполнитьЗначенияСвойств(СтрокаВосстановления, СтрокаВНА);
					СтрокаВосстановления.ОбесценениеРегл = СтрокаВНА.ОбесценениеРегл;
					СтрокаВосстановления.УбытокОтОбесцененияРегл = СтрокаВНА.УбытокОтОбесцененияРегл;
					
					СтрокаВосстановления.ОбесценениеУпр = 0;
					СтрокаВосстановления.УбытокОтОбесцененияУпр = 0;
					
					// Изменение резерва стоимости для регистров Стоимости и амортизации. 
					// Вся сумма идет на Стоимость.
					СтрокаВосстановления.ИзменениеРезерваСтоимости = 0;
					СтрокаВосстановления.ИзменениеРезерваАмортизации = 0;
					СтрокаВосстановления.ИзменениеРезерваСтоимостиРегл = Макс(СуммаВосстановленияРегл - СтрокаВосстановления.УбытокОтОбесцененияРегл, 0);
					СтрокаВосстановления.ИзменениеРезерваАмортизацииРегл = 0;
					
				КонецЕсли;
			КонецЕсли;
			
			Если НачисленияУпр <> Неопределено Тогда
				Если НачисленияУпр[Индекс] > СтрокаВНА.ОбесценениеУпр Тогда //Начисляем.
					СтрокаНачисления = Начисления.Добавить();
					ЗаполнитьЗначенияСвойств(СтрокаНачисления, СтрокаВНА);
					СтрокаНачисления.ОбесценениеУпр = НачисленияУпр[Индекс] - СтрокаВНА.ОбесценениеУпр;
					
					СтрокаНачисления.УбытокОтОбесцененияУпр = ?(РезервДооценкиУпр >= СтрокаНачисления.ОбесценениеУпр,
											0,
											СтрокаНачисления.ОбесценениеУпр - РезервДооценкиУпр); //Сумма обесценения, отраженная на счете 91.02.
					// Сумма на 83 счете определяется как разница между суммой обесценения и убытком от обесценения,
					// но не может быть больше резерва дооценки.
					СтрокаНачисления.УбытокОтОбесцененияУпр = ?(РезервДооценкиУпр <= 0,
													СтрокаНачисления.ОбесценениеУпр, // Все обесценение на 91 счет.
													?(РезервДооценкиУпр <= СтрокаНачисления.ОбесценениеУпр,  // Обесценение на 83 счет:
														СтрокаНачисления.ОбесценениеУпр - РезервДооценкиУпр, // Частично.
														0));										 		 // Полностью.
												
					СтрокаНачисления.ОбесценениеРегл = 0;
					СтрокаНачисления.УбытокОтОбесцененияРегл = 0;
					
					// Изменение резерва стоимости для регистров Стоимости и амортизации.
					Если СтрокаВНА.РезервПереоценкиСтоимостиУпр > 0 Тогда
						ОбесценениеДляРасчетаРезерваПереоценкиУпр = Мин(СтрокаНачисления.ОбесценениеУпр, РезервДооценкиУпр);
						
						СтрокаНачисления.ИзменениеРезерваСтоимости = Окр(ОбесценениеДляРасчетаРезерваПереоценкиУпр 
																			/ (1 - СтрокаВНА.РезервПереоценкиАмортизацииУпр 
																					/ СтрокаВНА.РезервПереоценкиСтоимостиУпр),
																		2);
																	
						СтрокаНачисления.ИзменениеРезерваАмортизации = 
														ОбесценениеДляРасчетаРезерваПереоценкиУпр
														- СтрокаНачисления.ИзменениеРезерваСтоимости;
					КонецЕсли;

					СтрокаНачисления.ИзменениеРезерваСтоимостиРегл = 0;
					СтрокаНачисления.ИзменениеРезерваАмортизацииРегл = 0;
					
