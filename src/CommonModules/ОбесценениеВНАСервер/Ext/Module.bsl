					СтрокаВосстановления = Восстановления.Добавить();
					ЗаполнитьЗначенияСвойств(СтрокаВосстановления, СтрокаВНА);
					СтрокаВосстановления.ОбесценениеУпр = СтрокаВНА.ОбесценениеУпр - НачисленияУпр[Индекс];
					
					СуммаВосстановленияУпр = Мин(НачисленияУпр[Индекс] - СтрокаВНА.БазаРаспределенияУпр + СтрокаВНА.ОбесценениеУпр, 
													СтрокаВНА.ОбесценениеУпр);
	
					СтрокаВосстановления.УбытокОтОбесцененияУпр = ?(СуммаВосстановленияУпр <= СтрокаВНА.УбытокОтОбесцененияУпр,
											СуммаВосстановленияУпр,  // Восстановление в размере ранее признанного убытка на 91.01 
											СтрокаВНА.УбытокОтОбесцененияУпр); // Возникает дельта между полной суммой обесценения 
																			   // и убытком от обесценения равная сумме по 83 счету
											 	
					СтрокаВосстановления.ОбесценениеРегл = 0;
					СтрокаВосстановления.УбытокОтОбесцененияРегл = 0;
					
					// Изменение резерва стоимости для регистров Стоимости и амортизации. 
					// Вся сумма идет на Стоимость.
					СтрокаВосстановления.ИзменениеРезерваСтоимости = Макс(СуммаВосстановленияУпр - СтрокаВосстановления.УбытокОтОбесцененияУпр, 0);
					СтрокаВосстановления.ИзменениеРезерваАмортизации = 0;
					СтрокаВосстановления.ИзменениеРезерваСтоимостиРегл = 0;
					СтрокаВосстановления.ИзменениеРезерваАмортизацииРегл = 0;
					
				КонецЕсли;
			Иначе
				Если СтрокаВНА.ОбесценениеУпр > 0 Тогда // Восстанавливаем полностью.
					СтрокаВосстановления = Восстановления.Добавить();
					ЗаполнитьЗначенияСвойств(СтрокаВосстановления, СтрокаВНА);
					СтрокаВосстановления.ОбесценениеУпр = СтрокаВНА.ОбесценениеУпр;
					СтрокаВосстановления.УбытокОтОбесцененияУпр = СтрокаВНА.УбытокОтОбесцененияУпр;
					
					СтрокаВосстановления.ОбесценениеРегл = 0;
					СтрокаВосстановления.УбытокОтОбесцененияРегл = 0;
					
					// Изменение резерва стоимости для регистров Стоимости и амортизации. 
					// Вся сумма идет на Стоимость.
					СтрокаВосстановления.ИзменениеРезерваСтоимости = Макс(СуммаВосстановленияУпр - СтрокаВосстановления.УбытокОтОбесцененияУпр, 0);
					СтрокаВосстановления.ИзменениеРезерваАмортизации = 0;
					СтрокаВосстановления.ИзменениеРезерваСтоимостиРегл = 0;
					СтрокаВосстановления.ИзменениеРезерваАмортизацииРегл = 0;
					
				КонецЕсли;
			КонецЕсли;
		КонецЦикла;
	КонецЦикла;
	
	// Свернем таблицы Начисления и Восстановления.
	МассивКолонокГруппировки = Новый Массив;
	МассивКолонокСуммирования = Новый Массив;
	Для Каждого Колонка Из Начисления.Колонки Цикл
		Если СтрЧислоВхождений(Колонка.Имя, "Обесценение") = 0
				И СтрЧислоВхождений(Колонка.Имя, "УбытокОтОбесценения") = 0
				И СтрЧислоВхождений(Колонка.Имя, "КоэффициентРезерва") = 0
				И СтрЧислоВхождений(Колонка.Имя, "ИзменениеРезерва") = 0 Тогда
			МассивКолонокГруппировки.Добавить(Колонка.Имя);
		Иначе
			МассивКолонокСуммирования.Добавить(Колонка.Имя);
		КонецЕсли;
	КонецЦикла;
	
	КолонкиГруппировок  = СтрСоединить(МассивКолонокГруппировки , ",");
	КолонкиСуммирования = СтрСоединить(МассивКолонокСуммирования, ",");

	Начисления.Свернуть(КолонкиГруппировок,КолонкиСуммирования);
	Восстановления.Свернуть(КолонкиГруппировок,КолонкиСуммирования);

	ОбщегоНазначенияУТ.ДобавитьИдентификаторСтрокВТаблицу(Начисления, "ИдентификаторФинЗаписи", "Строка");
	ОбщегоНазначенияУТ.ДобавитьИдентификаторСтрокВТаблицу(Восстановления, "ИдентификаторФинЗаписи", "Строка");
	
	ЗапросНачисленияВосстановления.УстановитьПараметр("Начисления", Начисления);
	ЗапросНачисленияВосстановления.УстановитьПараметр("Восстановления", Восстановления);
	
	ЗапросНачисленияВосстановления.Текст =
	"
