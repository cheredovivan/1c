	ОписаниеНастроек.Вставить("АналитикаРасходовЕНВД", Неопределено);
	
	ОписаниеНастроек.Вставить("СтатьяРасходовСписаниеНДС", ПланыВидовХарактеристик.СтатьиРасходов.ПустаяСсылка());
	ОписаниеНастроек.Вставить("АналитикаРасходовСписаниеНДС", Неопределено);

	//-- Локализация
	
КонецПроцедуры 

// Возращает текст запроса по данным регистра.
//
// Параметры:
//  ТекстЗапроса - Строка - текст запроса.
//  ДобавитьУсловие - Булево - Истина, если нужно добавить условие в текст запроса.
//
Процедура ДополнитьТекстЗапросаДействующиеПараметрыНДС(ТекстЗапроса, ДобавитьУсловие = Ложь) Экспорт
	
	//++ Локализация
	Если ДобавитьУсловие Тогда
		ДополнительноеУсловие = " И НЕ ЕстьNull(ТаблицаНалогообложений.ОсновноеНалогообложение,Значение(Перечисление.ТипыНалогообложенияНДС.ПродажаОблагаетсяНДС))
								|	= Значение(Перечисление.ТипыНалогообложенияНДС.ЛьготноеНалогообложениеНДСНаУСН)";
		ИсключаемыеНастройки = Новый Массив;
		ИсключаемыеНастройки.Добавить(".ПрименяетсяУчетНДСПоФактическомуИспользованию");
		ИсключаемыеНастройки.Добавить(".ЕстьРеализацияРаботУслугНеНаТерриторииРФ");
		ИсключаемыеНастройки.Добавить(".РаздельныйУчетТоваровПоНалогообложениюНДС");
		ИсключаемыеНастройки.Добавить(".Учитывать5ПроцентныйПорог");
		ИсключаемыеНастройки.Добавить(".УчетНДСВКосмическойДеятельности");
		ИсключаемыеНастройки.Добавить(".ПрименяетсяУчетНДСПоФактическомуИспользованию");
		ИсключаемыеНастройки.Добавить(".Учитывать5ПроцентныйПорог");
		Для каждого Настройка из ИсключаемыеНастройки Цикл
			ТекстЗапроса = СтрЗаменить(ТекстЗапроса,Настройка,Настройка + ДополнительноеУсловие);
		КонецЦикла;
	Иначе
		ТекстЗапроса = "
		|ВЫБРАТЬ РАЗРЕШЕННЫЕ
		|	ВЫБОР КОГДА Таблица.Период ЕСТЬ NULL Тогда
		|		ЛОЖЬ
		|	ИНАЧЕ
		|		ИСТИНА
		|	КОНЕЦ КАК УчетнаяПолитикаСуществует,
		|	Таблица.Период КАК Период,
		|	ГоловныеОрганизации.ОбособленноеПодразделение КАК Организация,
		|	ВЫБОР КОГДА ЕСТЬNULL(УчетнаяПолитикаФинансовогоУчета.МетодОценкиСтоимостиТоваров, НЕОПРЕДЕЛЕНО) =
		|		ЗНАЧЕНИЕ(Перечисление.МетодыОценкиСтоимостиТоваров.Среднескользящая) ТОГДА
		|			ИСТИНА
		|	ИНАЧЕ
		|		ЕСТЬNULL(Таблица.ФормироватьНДСПредъявленныйПриВключенииВСтоимость, ЛОЖЬ)
		|	КОНЕЦ КАК ФормироватьНДСПредъявленныйПриВключенииВСтоимость
		|ИЗ
		|	ВтГоловныеОрганизации КАК ГоловныеОрганизации
		|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.НастройкиУчетаНДС.СрезПоследних(&Период, Организация В
		|			(ВЫБРАТЬ
		|				ГоловныеОрганизации.Организация
		|			ИЗ
		|				ВтГоловныеОрганизации КАК ГоловныеОрганизации)) КАК Таблица
		|		ПО ГоловныеОрганизации.Организация = Таблица.Организация 
		|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.НастройкиУчетаНДСПриУСН.СрезПоследних(&Период, Организация В
		|			(ВЫБРАТЬ
		|				ГоловныеОрганизации.Организация
		|			ИЗ
		|				ВтГоловныеОрганизации КАК ГоловныеОрганизации)) КАК ТаблицаНалогообложений
		|		ПО ГоловныеОрганизации.Организация = ТаблицаНалогообложений.Организация
		|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.УчетнаяПолитикаФинансовогоУчета.СрезПоследних(&Период, Организация В
		|			(ВЫБРАТЬ
		|				ГоловныеОрганизации.Организация
		|			ИЗ
		|				ВтГоловныеОрганизации КАК ГоловныеОрганизации)) КАК УчетнаяПолитикаФинансовогоУчета
		|		ПО ГоловныеОрганизации.Организация = УчетнаяПолитикаФинансовогоУчета.Организация
		|";
	
	КонецЕсли
	//-- Локализация
	
КонецПроцедуры

// Дополнить описание настроек учета НДС.
// 
// Параметры:
//  Организация - СправочникСсылка.Организации
//  ДатаДействия - Дата - Дата действия
//  СтрокаОписанияНастроек - Строка - Строка с описанием настроек
Процедура ДополнитьОписаниеНастроекУчетаНДС(Организация, ДатаДействия,СтрокаОписанияНастроек) Экспорт
	//++ Локализация  
	ДействующиеНастройки = НастройкиНалоговУчетныхПолитик.ДействующиеПараметрыНалоговУчетныхПолитикНаДату(
			"НастройкиУчетаНДСПриУСН",
			Организация,
			ДатаДействия,
			Ложь);
	Если ДействующиеНастройки <> Неопределено 
				И ДействующиеНастройки.ОсновноеНалогообложение = Перечисления.ТипыНалогообложенияНДС.ПродажаНеОблагаетсяНДС Тогда
				СтрокаОписанияНастроек = НСтр("ru = 'Настройка не требуется';
												|en = 'Setting is not required'"); 
	КонецЕсли;
	//-- Локализация
КонецПроцедуры

// Параметры:
//  МассивСтрокОписания - Массив из Строка
//  ДействующиеНастройки - см. РегистрыСведений.НастройкиУчетаНДС.ОписаниеДействующихПараметров
//  Все - Булево - если Истина, то возвращает описание всех настроек.
//
Процедура ДополнитьОписаниеДействующихНастроекУчетаНДС(МассивСтрокОписания, ДействующиеНастройки, Все = Ложь) Экспорт
	
	//++ Локализация
	СтрокаШаблон = "%1: %2." + Символы.ПС;
	СтрокаШаблонБулево = "%1." + Символы.ПС;
	
	МассивСтрокОписания = Новый Массив;
	
	Если ДействующиеНастройки.ПрименяетсяОсвобождениеОтУплатыНДС Тогда
		МассивСтрокОписания.Добавить(СтрШаблон(СтрокаШаблонБулево, НСтр("ru = 'Организация освобождена от уплаты НДС';
																		|en = 'The company is exempt from VAT'")));
	Иначе
		
		МассивСтрокОписания.Добавить(
			СтрШаблон(СтрокаШаблон,
				НСтр("ru = 'Правило отбора авансов';
					|en = 'Rule of advance filter'"),
				ДействующиеНастройки.ПравилоОтбораАвансовДляРегистрацииСчетовФактур));
		Если ДействующиеНастройки.РаздельныйУчетТоваровПоНалогообложениюНДС Или Все Тогда
			МассивСтрокОписания.Добавить(СтрШаблон(СтрокаШаблонБулево, НСтр("ru = 'Используется раздельный учет НДС';
																			|en = 'Separate VAT accounting is used'")));
		КонецЕсли;
		
		Если ЗначениеЗаполнено(ДействующиеНастройки.ПериодичностьОформленияСводныхСправок) Или Все Тогда
			МассивСтрокОписания.Добавить(
				СтрШаблон(СтрокаШаблон,
					НСтр("ru = 'Сводные справки оформляются с периодичностью';
						|en = 'Reconciliated certificates are drawn up with a frequency'"),
					ДействующиеНастройки.ПериодичностьОформленияСводныхСправок));
		КонецЕсли;
		
		Если ЗначениеЗаполнено(ДействующиеНастройки.ПериодичностьФормированияВычетовИВосстановленийНДС) Или Все Тогда
			МассивСтрокОписания.Добавить(
				СтрШаблон(СтрокаШаблон,
					НСтр("ru = 'Формирование вычетов и восстановлений НДС выполняется с периодичностью';
						|en = 'VAT deductions and reinstatements are generated with frequency'"),
					ДействующиеНастройки.ПериодичностьФормированияВычетовИВосстановленийНДС));
		КонецЕсли;
		
		Если ДействующиеНастройки.ЕстьРеализацияТоваровФизлицамВЕАЭС Или Все Тогда
			МассивСтрокОписания.Добавить(
				СтрШаблон(СтрокаШаблонБулево, НСтр("ru = 'Организация реализует товары физическим лицам в ЕАЭС (п.4 ст. 147 НК РФ)';
													|en = 'Company sells goods to persons in EAEU (cl. 4 art. 147 of the Tax Code of the Russian Federation)'")));
		КонецЕсли;
		
		Если ДействующиеНастройки.ЕстьРеализацияРаботУслугНеНаТерриторииРФ Или Все Тогда
			МассивСтрокОписания.Добавить(
				СтрШаблон(СтрокаШаблонБулево, НСтр("ru = 'Организация реализует работы (услуги) не на территории РФ';
													|en = 'The company sells work (services) outside the territory of the Russian Federation'")));
		КонецЕсли;
		
		Если ДействующиеНастройки.РаздельныйУчетТоваровПоНалогообложениюНДС Или Все Тогда
		
			Если ДействующиеНастройки.РаздельныйУчетПостатейныхПроизводственныхЗатратПоНалогообложениюНДС Или Все Тогда
				МассивСтрокОписания.Добавить(
					СтрШаблон(СтрокаШаблонБулево, НСтр("ru = 'Используется раздельный учет НДС по постатейным производственным затратам';
														|en = 'Separate VAT accounting for itemized production costs is used.'")));
			КонецЕсли; 
					
			Если ДействующиеНастройки.ПрименяетсяУчетНДСПоФактическомуИспользованию Или Все Тогда
				МассивСтрокОписания.Добавить(
					СтрШаблон(СтрокаШаблонБулево, НСтр("ru = 'Применяется учет НДС по фактическому использованию';
														|en = 'VAT accounting by actual usage is applied'")));
			КонецЕсли;
				
			Если ДействующиеНастройки.УчетНДСДлительногоЦиклаПроизводства Или Все Тогда
				МассивСтрокОписания.Добавить(
					СтрШаблон(СтрокаШаблонБулево, НСтр("ru = 'Применяется особый порядок учета НДС при длит. цикле производства (п. 13 ст. 167 НК РФ)';
														|en = 'Special procedure for VAT accounting is applied for lengthy production cycle (cl. 13 art. 167 of the Russian Tax Code)'")));
			КонецЕсли;
			
			Если ДействующиеНастройки.УчетНДСВКосмическойДеятельности Или Все Тогда
				МассивСтрокОписания.Добавить(
					СтрШаблон(СтрокаШаблонБулево, НСтр("ru = 'Применяется особый порядок учета НДС в космической деятельности (пп. 5 п. 1 ст. 164 и п. 7 ст. 165 НК РФ)';
														|en = 'Special procedure for VAT accounting is applied for space activity (subcl. 5 cl. 1 art. 164 and cl. 7 art. 165 of the Tax Code of the Russian Federation)'")));
			КонецЕсли;
			
			Если ДействующиеНастройки.ПрименяетсяРасчетНДССМежценовойРазницы Или Все Тогда
				МассивСтрокОписания.Добавить(
					СтрШаблон(СтрокаШаблонБулево, НСтр("ru = 'Применяется расчет НДС с межценовой разницы';
														|en = 'VAT calculation from price difference is applied'")));
			КонецЕсли;
				
			Если ДействующиеНастройки.Учитывать5ПроцентныйПорог Или Все Тогда
				МассивСтрокОписания.Добавить(
					СтрШаблон(СтрокаШаблонБулево, НСтр("ru = 'Применяется 5% порог при распределении НДС по видам деятельности';
														|en = '5% limit is applied while allocating VAT according to the activity categories '")));
			КонецЕсли;
			
