		ТекстЗапроса,
		"&КоэффициентУпаковки",
		ТекстЗапросаКоэффициентУпаковки);
	
	ОбеспечениеПроизводства.ВыполнитьПодстановкуПараметровОбеспеченияМатериалов(ТекстЗапроса,
		"ТаблицаСопоставления",,
		"&Подразделение",
		Перечисления.ВариантыЗаполненияОбеспеченияПроизводства.ПоСхемамОбеспечения);
	
	Запрос = Новый Запрос(ТекстЗапроса);
	
	Для каждого КлючИЗначение Из ПараметрыЗапроса Цикл
		Запрос.УстановитьПараметр(КлючИЗначение.Ключ, КлючИЗначение.Значение);
	КонецЦикла; 
	
	ТаблицаСопоставления = Запрос.Выполнить().Выгрузить();
	
	ТаблицаСопоставления.Колонки.Добавить("Отметка", Новый ОписаниеТипов("Булево"));
