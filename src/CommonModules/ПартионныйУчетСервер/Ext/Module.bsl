			ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, Документ,,, Отказ);
			
		КонецЦикла;
		
	КонецЕсли;
	
КонецПроцедуры

// Генерирует текст запроса для сторнирования записей по регистру накопления.
// Для числовых ресурсов и числовых реквизитов регистра формирует записи со знаком минус.
// 
// Параметры:
// 	МетаданныеРегистра - ОбъектМетаданныхРегистрНакопления - Метаданные регистра накопления для сторнирования.
// 	МетаданныеДокумента - ОбъектМетаданныхДокумент - Метаданные регистра накопления для сторнирования.
// 	
// Возвращаемое значение:
// 	Строка - Текст сторнирующего запроса.
Функция ТекстСторнирующегоЗапроса(МетаданныеРегистра, МетаданныеДокумента) Экспорт
	
	ШаблонЗапроса =
	"ВЫБРАТЬ
	|	ДокументыСторно.Ссылка  КАК Регистратор,
	|	ДокументыСторно.Дата КАК Период,
	|	&ПоляВыборки,
	|	ИСТИНА КАК Сторно
	|ИЗ
	|	&ИмяРегистра КАК ДанныеРегистра
	|	ВНУТРЕННЕЕ СОЕДИНЕНИЕ #ИмяДокумента КАК ДокументыСторно
	|		ПО ДанныеРегистра.Регистратор = ДокументыСторно.СторнируемыйДокумент
	|		И ДокументыСторно.Ссылка В (&Ссылка)
	|	ЛЕВОЕ СОЕДИНЕНИЕ ВТПараметрыПартионногоУчетаДляПроведения КАК УчетнаяПолитика
	|		ПО НАЧАЛОПЕРИОДА(ДокументыСторно.Дата, МЕСЯЦ) = УчетнаяПолитика.Период
	|		И &Организация = УчетнаяПолитика.Организация
	|ГДЕ
	|	НЕ ДанныеРегистра.Сторно 
	|	И (&ДопУсловия)";
	
	МассивПолейВыборки = Новый Массив;
	
	Исключения = Новый Массив;
	Исключения.Добавить("Регистратор");
	Исключения.Добавить("Период");
	Исключения.Добавить("Сторно");
	Исключения.Добавить("НомерСтроки");
	Исключения.Добавить("Активность");
	
	ПереопределяемыеПоля = Новый Массив;
	ПереопределяемыеПоля.Добавить("РасчетПартий");
	ПереопределяемыеПоля.Добавить("РасчетСебестоимости");
	ПереопределяемыеПоля.Добавить("Партия");
	ПереопределяемыеПоля.Добавить("АналитикаУчетаПартий");
	ПереопределяемыеПоля.Добавить("АналитикаФинансовогоУчета");
	ПереопределяемыеПоля.Добавить("ВидДеятельностиНДС");

	ОбщегоНазначенияКлиентСервер.ДополнитьМассив(Исключения, ПереопределяемыеПоля, Истина);
	
	ПроведениеДокументов.ДобавитьПоляВыборкиСторнирующегоЗапроса(МетаданныеРегистра.СтандартныеРеквизиты, 
		МассивПолейВыборки,
		Исключения);
	ПроведениеДокументов.ДобавитьПоляВыборкиСторнирующегоЗапроса(МетаданныеРегистра.Измерения, 
		МассивПолейВыборки,
		Исключения);
	ПроведениеДокументов.ДобавитьПоляВыборкиСторнирующегоЗапроса(МетаданныеРегистра.Ресурсы, 
		МассивПолейВыборки,
		Исключения,
		Истина);
	ПроведениеДокументов.ДобавитьПоляВыборкиСторнирующегоЗапроса(МетаданныеРегистра.Реквизиты, 
		МассивПолейВыборки,
		Исключения,
		Истина);
		
	// Поля, заполняемые по условию
	ЕстьОрганизация = МетаданныеРегистра.Измерения.Найти("Организация") <> Неопределено;
	ЕстьРасчетПартий = МетаданныеРегистра.Реквизиты.Найти("РасчетПартий") <> Неопределено;
	ЕстьРасчетСебестоимости = МетаданныеРегистра.Реквизиты.Найти("РасчетСебестоимости") <> Неопределено;
	
	Если ЕстьОрганизация Тогда
		ШаблонЗапроса = СтрЗаменить(ШаблонЗапроса, "&Организация", "ДанныеРегистра.Организация");
	Иначе
		ШаблонЗапроса = СтрЗаменить(ШаблонЗапроса, "&Организация", "ДанныеРегистра.АналитикаУчетаПоПартнерам.Организация");
	КонецЕсли;
	
	// Аналогичные условия используются для движения по регистру себестоимости в ТекстыЗапросовСторнирования() этого модуля.
	Для Каждого ИмяПоля Из ПереопределяемыеПоля Цикл
		
		Если МетаданныеРегистра.Измерения.Найти(ИмяПоля) = Неопределено Тогда
			
			Если ИмяПоля = "РасчетПартий" И ЕстьРасчетПартий Тогда
				ШаблонПоля = 
					"	ВЫБОР КОГДА ЕСТЬNULL(УчетнаяПолитика.Среднескользящая, ЛОЖЬ)
					|		ТОГДА ЛОЖЬ
					|		ИНАЧЕ ДанныеРегистра.РасчетПартий
					|	КОНЕЦ КАК РасчетПартий";
			ИначеЕсли ИмяПоля = "РасчетСебестоимости" И ЕстьРасчетСебестоимости Тогда
				ШаблонПоля = 
					"	ВЫБОР КОГДА ЕСТЬNULL(УчетнаяПолитика.Среднескользящая, ЛОЖЬ)
					|		ТОГДА ЛОЖЬ
					|		ИНАЧЕ ДанныеРегистра.РасчетСебестоимости
					|	КОНЕЦ КАК РасчетСебестоимости";
			Иначе
				Продолжить;
			КонецЕсли;
			
		Иначе
			Если ИмяПоля = "Партия" Тогда
				ШаблонПоля = 
					"	ВЫБОР КОГДА ЕСТЬNULL(УчетнаяПолитика.Среднескользящая, ЛОЖЬ)
					|	 И ДанныеРегистра.РазделУчета <> ЗНАЧЕНИЕ(Перечисление.РазделыУчетаСебестоимостиТоваров.НеотфактурованныеПоставки)
					//++ НЕ УТ
					|	 И ТИПЗНАЧЕНИЯ(ДанныеРегистра.Партия) <> ТИП(Справочник.ПартииПроизводства)
					//-- НЕ УТ
					|		ТОГДА НЕОПРЕДЕЛЕНО
					|		ИНАЧЕ ДанныеРегистра.Партия
					|	КОНЕЦ КАК Партия";
			ИначеЕсли ИмяПоля = "АналитикаУчетаПартий" Тогда
				ШаблонПоля = 
					"	ВЫБОР КОГДА ЕСТЬNULL(УчетнаяПолитика.Среднескользящая, ЛОЖЬ)
					|	 И ДанныеРегистра.РазделУчета <> ЗНАЧЕНИЕ(Перечисление.РазделыУчетаСебестоимостиТоваров.НеотфактурованныеПоставки)
					//++ НЕ УТ
					|	 И ТИПЗНАЧЕНИЯ(ДанныеРегистра.Партия) <> ТИП(Справочник.ПартииПроизводства)
					//-- НЕ УТ
					|		ТОГДА НЕОПРЕДЕЛЕНО
					|		ИНАЧЕ ДанныеРегистра.АналитикаУчетаПартий
					|	КОНЕЦ КАК АналитикаУчетаПартий";
			ИначеЕсли ИмяПоля = "АналитикаФинансовогоУчета" Тогда
				ШаблонПоля = 
					"	ВЫБОР КОГДА ЕСТЬNULL(УчетнаяПолитика.Среднескользящая, ЛОЖЬ)
					//++ НЕ УТ
					|	 И ТИПЗНАЧЕНИЯ(ДанныеРегистра.Партия) <> ТИП(Справочник.ПартииПроизводства)
					//-- НЕ УТ
					|		ТОГДА НЕОПРЕДЕЛЕНО
					|		ИНАЧЕ ДанныеРегистра.АналитикаФинансовогоУчета
					|	КОНЕЦ КАК АналитикаФинансовогоУчета";
			ИначеЕсли ИмяПоля = "ВидДеятельностиНДС" Тогда
				ШаблонПоля = 
					"	ВЫБОР КОГДА ЕСТЬNULL(УчетнаяПолитика.Среднескользящая, ЛОЖЬ)
					//++ НЕ УТ
					|	 И ТИПЗНАЧЕНИЯ(ДанныеРегистра.Партия) <> ТИП(Справочник.ПартииПроизводства)
					//-- НЕ УТ
					|		ТОГДА НЕОПРЕДЕЛЕНО
					|		ИНАЧЕ ДанныеРегистра.ВидДеятельностиНДС
					|	КОНЕЦ КАК ВидДеятельностиНДС";
			Иначе
				Продолжить;
			КонецЕсли;
			
		КонецЕсли;
		
		МассивПолейВыборки.Добавить(ШаблонПоля);
		
	КонецЦикла;
	
	ТекстПоляВыборки = СтрСоединить(МассивПолейВыборки,"," + Символы.ПС);
	
	ТекстДопУсловий = "";
	
	Если ЕстьРасчетПартий И ЕстьРасчетСебестоимости Тогда
		ТекстДопУсловий = "ЕСТЬNULL(УчетнаяПолитика.Среднескользящая, ЛОЖЬ) ИЛИ (НЕ ДанныеРегистра.РасчетПартий И НЕ ДанныеРегистра.РасчетСебестоимости)";
	ИначеЕсли ЕстьРасчетПартий Тогда
		ТекстДопУсловий = "ЕСТЬNULL(УчетнаяПолитика.Среднескользящая, ЛОЖЬ) ИЛИ НЕ ДанныеРегистра.РасчетПартий";
	ИначеЕсли ЕстьРасчетСебестоимости Тогда
		ТекстДопУсловий = "ЕСТЬNULL(УчетнаяПолитика.Среднескользящая, ЛОЖЬ) ИЛИ НЕ ДанныеРегистра.РасчетСебестоимости";
	Иначе
		ТекстДопУсловий = "ИСТИНА";
	КонецЕсли;
	
	ТекстЗапроса = СтрЗаменить(ШаблонЗапроса, "&ПоляВыборки", ТекстПоляВыборки);
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&ИмяРегистра",  МетаданныеРегистра.ПолноеИмя());
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "#ИмяДокумента", МетаданныеДокумента.ПолноеИмя());
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&ДопУсловия",	  ТекстДопУсловий);
	
	Возврат ТекстЗапроса;
	
КонецФункции

