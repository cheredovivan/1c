					Или ИмяСобытия = "ИнтеграцияСМаркетплейсомOzonСервер.ОбновитьДанные")
				И Параметр = УчетнаяЗаписьМаркетплейса Тогда
		
		ОбновитьДанныеОбИмпорте = Истина;
		ОбновитьДанныеОбИмпортеСЗадержкой = 
			(ИмяСобытия = ИнтеграцияСМаркетплейсамиКлиентСервер.ИмяСобытияЗавершенияИмпортаТоварногоКаталога());
		
	КонецЕсли;
	
	Если Не ОбновитьДанныеОбИмпорте Тогда
		Возврат;
		
	ИначеЕсли ОбновитьДанныеОбИмпортеСЗадержкой Тогда
		ПодключитьОбработчикОжидания("УправлениеДоступностьюВладельцаТоварногоКаталогаНаКлиенте", 1, Истина);
		
