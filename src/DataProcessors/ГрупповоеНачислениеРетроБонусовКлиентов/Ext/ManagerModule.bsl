// Параметры:
//  ДокументыНачисления - см. НоваяТаблицаДокументовНачисления
//
Процедура ПровестиДокументыНачисления(ДокументыНачисления)
	
	Для Каждого СтрокаДокумента Из ДокументыНачисления Цикл
		
		Если НЕ СтрокаДокумента.ПометкаУдаления
		   И НЕ СтрокаДокумента.Проведен
		   И ПустаяСтрока(СтрокаДокумента.ОписаниеОшибки) Тогда
			
			ДокументОбъект = СтрокаДокумента.ДокументНачисления.ПолучитьОбъект();
			ПровестиДокументСФиксациейРезультата(ДокументОбъект, СтрокаДокумента);
			
		КонецЕсли;
		
	КонецЦикла;
	
КонецПроцедуры

// Параметры:
//  ДокументОбъект - ДокументОбъект.НачислениеРетроБонусовКлиента
//  СтрокаДокумента - СтрокаТаблицыЗначений: см. НоваяТаблицаДокументовНачисления
//  ВосстановитьСуммыПриОшибке - Булево
// 
Процедура ПровестиДокументСФиксациейРезультата(ДокументОбъект, СтрокаДокумента, ВосстановитьСуммыПриОшибке = Ложь)
	
	ФлагПроведенияДоОбработки = ДокументОбъект.Проведен;
	
	РезультатПроведения = ПровестиДокумент(ДокументОбъект);
	Если РезультатПроведения <> Неопределено Тогда
		
		Если ВосстановитьСуммыПриОшибке Тогда
			
			СтрокаДокумента.СуммаНачисленная = СтрокаДокумента.СуммаНачисленнаяДоОбработки;
			СтрокаДокумента.СуммаРасчетная = СтрокаДокумента.СуммаРасчетнаяДоОбработки;
			СтрокаДокумента.СуммаКНачислению = 0;
			
		КонецЕсли;
		
		СтрокаДокумента.ОписаниеОшибки = РезультатПроведения.ОписаниеОшибки;
		СтрокаДокумента.Сообщения = Новый ФиксированныйМассив(РезультатПроведения.Сообщения);
		
		СтрокаДокумента.Проведен = ФлагПроведенияДоОбработки;
		
	Иначе
		
		СтрокаДокумента.Проведен = Истина;
		
	КонецЕсли;
	
КонецПроцедуры

// Выполняет попытку проведения документа.
//
// Параметры:
//  ДокументОбъект - ДокументОбъект.НачислениеРетроБонусовКлиента
//
// Возвращаемое значение:
//  Неопределено -
//  Структура:
//   * ОписаниеОшибки - Строка  - текст описания ошибки при проведении.
//   * Сообщения - Массив из Строка -
//
Функция ПровестиДокумент(ДокументОбъект)
	
	Результат = Неопределено;
	ВыполненоУспешно = Ложь;
	
	Если ДокументОбъект.ПроверитьЗаполнение() Тогда
		
		Попытка
			
			ДокументОбъект.Записать(РежимЗаписиДокумента.Проведение);
			ВыполненоУспешно = Истина;
			
		Исключение
			
			ПредставлениеОшибки = ОбработкаОшибок.КраткоеПредставлениеОшибки(ИнформацияОбОшибке());
			
		КонецПопытки;
		
	Иначе
		
		ШаблонОшибки = НСтр("ru = 'Не удалось провести ""%1""';
							|en = 'Cannot post ""%1""'");
		ПредставлениеДокумента = Строка(ДокументОбъект);
		
		ПредставлениеОшибки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			ШаблонОшибки,
			ПредставлениеДокумента);
		
	КонецЕсли;
	
	Если Не ВыполненоУспешно Тогда
		
		ТекстыСообщений = ТекстыСообщенийЗаписиДокумента();
		
		Результат = Новый Структура;
		Результат.Вставить("ОписаниеОшибки", ПредставлениеОшибки);
		Результат.Вставить("Сообщения", ТекстыСообщений);
		
	КонецЕсли;
		
	Возврат Результат;
	
КонецФункции 

