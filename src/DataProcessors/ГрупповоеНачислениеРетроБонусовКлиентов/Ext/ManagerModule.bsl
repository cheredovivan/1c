		ТекстКонтрагентКлиент = "ИсходныеДанные.Контрагент,
								|	ИсходныеДанные.Партнер КАК Партнер";
		
	ИначеЕсли ДетализацияРасчетаУчастников = Детализация.ПоКонтрагенту Тогда
		
		ТекстКонтрагентКлиент = "ИсходныеДанные.Контрагент";
		
