		ТекстКонтрагентКлиент = "ИсходныеДанные.Партнер";
		
	КонецЕсли;
	
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&ТекстКонтрагентКлиент", ТекстКонтрагентКлиент);
	
	Возврат ТекстЗапроса;
	
КонецФункции

// Параметры:
