		Запрос.Текст = ТекстЗапросаПоДаннымСтроки(ПараметрыЗаполнения.ДетализацияРасчетаУчастников);
		Запрос.УстановитьПараметр("ИсходныеДанные", ДанныеДляФормирования.ЗаполнитьПоДаннымСтроки);
		
