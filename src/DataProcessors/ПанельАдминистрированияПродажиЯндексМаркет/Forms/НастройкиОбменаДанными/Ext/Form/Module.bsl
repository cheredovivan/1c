	ДополнительнаяИнформация     = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
									НСтр("ru = 'ID кампании - %1, ID кабинета - %2';
										|en = 'Campaign ID - %1, account ID - %2'"),
									ИдентификаторКампании,
									ИдентификаторКабинета);
