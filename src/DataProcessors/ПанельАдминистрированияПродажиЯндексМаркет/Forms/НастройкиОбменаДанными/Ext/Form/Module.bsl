		Элементы.ПоказатьСкрытьПодсказку.Заголовок                 = ?(Элементы.ГруппаСпособОтраженияПродажFBS3.Видимость,
																		НСтр("ru = 'Скрыть подсказку';
																			|en = 'Hide tooltip'"),
																		НСтр("ru = 'Показать подсказку';
																			|en = 'Show tooltip'"));
	КонецЕсли;
																	
