&НаСервереБезКонтекста
Функция ОписаниеСпособаДоставки(НастройкиСкладов)
	
	СтрокиОписания = Новый Массив; // Массив из Строка
	
	Если ЗначениеЗаполнено(НастройкиСкладов.ПредставлениеСпособаДоставки) Тогда
		СтрокиОписания.Добавить(НастройкиСкладов.ПредставлениеСпособаДоставки);
	КонецЕсли;
	
	Если ЗначениеЗаполнено(НастройкиСкладов.ЗонаДоставки) Тогда
		СтрокиОписания.Добавить(СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Зона доставки: %1';
				|en = 'Delivery zone: %1'"),
			Строка(НастройкиСкладов.ЗонаДоставки)));
	КонецЕсли;
	
	Если ЗначениеЗаполнено(НастройкиСкладов.Курьер) Тогда
		СтрокиОписания.Добавить(СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Курьер: %1';
				|en = 'Courier: %1'"),
			Строка(НастройкиСкладов.Курьер)));
	КонецЕсли;
	
	Если ЗначениеЗаполнено(НастройкиСкладов.АдресДоставкиПеревозчика) Тогда
		СтрокиОписания.Добавить(СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Адрес доставки: %1';
				|en = 'Delivery address: %1'"),
			НастройкиСкладов.АдресДоставкиПеревозчика));
	КонецЕсли;
	
	Если ЗначениеЗаполнено(НастройкиСкладов.ВремяДоставкиС) И ЗначениеЗаполнено(НастройкиСкладов.ВремяДоставкиПо) Тогда
		ФорматВремени = НСтр("ru = 'ДФ=HH:mm';
							|en = 'DF=HH:mm'");
		СтрокиОписания.Добавить(СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
			НСтр("ru = 'Время доставки: с %1 по %2';
				|en = 'Delivery time: from %1 to %2'"),
			Формат(НастройкиСкладов.ВремяДоставкиС, ФорматВремени),
			Формат(НастройкиСкладов.ВремяДоставкиПо, ФорматВремени)));
	КонецЕсли;
	
