	СоглашениеРеализация         = ДанныеУчетнойЗаписи.СоглашениеРеализация;
	ДоговорРеализация            = ДанныеУчетнойЗаписи.ДоговорРеализация;

	ЗаполнитьСкладПоУчетнойЗаписи();
	СрокДоступаНаЯндексДиск      = СрокДоступаНаЯндексДиск();
