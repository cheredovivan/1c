	ТекущиеДанные = Элементы.Тарифы.ТекущиеДанные;
	
	СтоимостьУслугТекущегоТарифа = "";
	Если ТекущиеДанные = Неопределено Тогда
		ИдентификаторТекущегоТарифа = "";
	Иначе
		ИдентификаторТекущегоТарифа = ТекущиеДанные.Идентификатор;
		Если ТекущиеДанные.Стоимость = 1 Тогда
			СтоимостьУслугТекущегоТарифа = НСтр("ru = '<Идет пересчет...>';
												|en = '<Recalculating...>'");
		Иначе
			СтоимостьУслугТекущегоТарифа = Формат(ТекущиеДанные.Стоимость, "ЧЦ=15; ЧДЦ=2");
		КонецЕсли;
	КонецЕсли;
	
