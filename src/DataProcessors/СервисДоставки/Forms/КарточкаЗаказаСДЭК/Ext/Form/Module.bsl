&НаКлиенте
Процедура Подключаемый_ПодтипСписокСтрокаОтметкаПриИзменении(Элемент)
	
	Модифицированность = Истина;
	ЗарегистрироватьИзменениеОтборов(Истина, Истина, Истина);
	
	НомерСтроки = Число(СтрЗаменить(Элемент["Имя"], "ПодтипСписокСтрокаОтметка", ""));
	ТекущаяСтрока = ТаблицаВыбораПодтиповЗаказа[НомерСтроки];
	
	Если ТекущаяСтрока.Отметка Тогда
		ПодтипыЗаказа.Добавить(ТекущаяСтрока.Идентификатор, ТекущаяСтрока.Наименование);
	Иначе
		КУдалению = ПодтипыЗаказа.НайтиПоЗначению(ТекущаяСтрока.Идентификатор);
		Если КУдалению <> Неопределено Тогда
			ПодтипыЗаказа.Удалить(КУдалению);
		КонецЕсли;
	КонецЕсли;
	
	Если ПодтипыЗаказа.Количество() = 2 Тогда
		КУдалению = ПодтипыЗаказа.НайтиПоЗначению("");
		Если КУдалению <> Неопределено Тогда
			ПодтипыЗаказа.Удалить(КУдалению);
		КонецЕсли;
	ИначеЕсли ПодтипыЗаказа.Количество() = 0 Тогда
		ПодтипыЗаказа.Добавить("", НСтр("ru = 'Не нужен';
										|en = 'Not required'"));
	КонецЕсли;
	
	Адресат = "";
	Если ТекущаяСтрока.Отгрузка И ЗначениеЗаполнено(ОтправительНаселенныйПунктИдентификатор) Тогда
		Адресат = "Отправитель";
	КонецЕсли;
	Если ТекущаяСтрока.Доставка И ЗначениеЗаполнено(ПолучательНаселенныйПунктИдентификатор) Тогда
		Адресат = ?(Адресат = "", "Получатель", "Все");
	КонецЕсли;
	
	Если Адресат <> "" Тогда
		ПолучитьОфисыОтправителяПолучателяПоПодтипу(Адресат);
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура ДокументыОснованияПредставлениеОбработкаНавигационнойСсылки(Элемент, НавигационнаяСсылка,
	СтандартнаяОбработка)
	
	ОчиститьСообщения();
	
	РежимИзмененияСоставаОснований = 0;
	Если НавигационнаяСсылка = "ДобавитьДокументыОснования" Тогда
		СтандартнаяОбработка = Ложь;
		РежимИзмененияСоставаОснований = 1;
		ОткрытьФормуВыбораДокументаОснования();
	ИначеЕсли НавигационнаяСсылка = "ИзменитьДокументыОснования" Тогда
		СтандартнаяОбработка = Ложь;
		РежимИзмененияСоставаОснований = 2;
		ОткрытьФормуВыбораДокументаОснования();
	ИначеЕсли НавигационнаяСсылка = "ОчиститьДокументыОснования" Тогда
		СтандартнаяОбработка = Ложь;
		ДокументыОснования.Очистить();
		НомерОтправления = "";
		Для Каждого ГрузовоеМесто Из РазмещениеГруза.ПолучитьЭлементы() Цикл
			ТоварныйСоставГрузовогоМеста = ГрузовоеМесто.ПолучитьЭлементы();
			ТоварныйСоставГрузовогоМеста.Очистить();
		КонецЦикла;
		РазмещениеГрузаРаботаСПоказателями(НовыеПараметрыРаботыСПоказателями( , , НавигационнаяСсылка));
		НаложенныйПлатежВидОплаты = 0;
		СформироватьПредставлениеДокументаОснования();
		УстановитьВидимостьДоступностьНаложенныйПлатеж(ЭтотОбъект);
		УстановитьВидимостьДоступностьНаСтраницеПараметрыГруза(ЭтотОбъект);
		ЗарегистрироватьИзменениеОтборов( , Истина, Истина);
		Модифицированность = Истина;
	ИначеЕсли НавигационнаяСсылка = "ОткрытьФормуОснования" Тогда
		СтандартнаяОбработка = Ложь;
		ОткрытьФормуОснования();
	ИначеЕсли НавигационнаяСсылка = "ОбновитьДанныеПоОснованиям" Тогда
		СтандартнаяОбработка = Ложь;
		РежимИзмененияСоставаОснований = 3;
		ОбновитьДанныеПоОснованиям();
		УстановитьВидимостьДоступностьНаложенныйПлатеж(ЭтотОбъект);
		ЗарегистрироватьИзменениеОтборов( , Истина, Истина);
	КонецЕсли;
	
КонецПроцедуры

