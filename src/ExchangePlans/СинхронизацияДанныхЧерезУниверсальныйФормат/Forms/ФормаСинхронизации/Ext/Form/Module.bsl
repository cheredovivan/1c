&НаСервере
Процедура ОбновитьДанныеОбъекта(ПараметрыЗаполнения)
	
	ИмяТаблицыДляЗаполнения = ПараметрыЗаполнения.ИмяТаблицыДляЗаполнения;
	
	Объект[ПараметрыЗаполнения.ИмяТаблицыДляЗаполнения].Очистить();
	
	ВыбранныеЗначения = ПолучитьИзВременногоХранилища(ПараметрыЗаполнения.АдресТаблицыВоВременномХранилище); // ТаблицаЗначений
	
	Если ВыбранныеЗначения.Количество() > 0 Тогда 
		
		Если ВыбранныеЗначения.Колонки.Найти("Идентификатор") <> Неопределено 
			И ВыбранныеЗначения.Колонки.Найти("Представление") <> Неопределено Тогда
			Для каждого СтрокаТаблицы Из ВыбранныеЗначения Цикл
				НоваяСтрока = Объект[ИмяТаблицыДляЗаполнения].Добавить();
				НоваяСтрока[ПараметрыЗаполнения.ИмяКолонкиДляЗаполнения] = СтрокаТаблицы.Представление;
			КонецЦикла; 
		ИначеЕсли ТипЗнч(ВыбранныеЗначения) = Тип("ТаблицаЗначений") Тогда
			Для каждого СтрокаТаблицы Из ВыбранныеЗначения Цикл
				
				Если СтрокаТаблицы.Использовать Тогда
					НоваяСтрока = Объект[ИмяТаблицыДляЗаполнения].Добавить();
					ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаТаблицы);
				КонецЕсли;
				
			КонецЦикла;
			
		Иначе
			ВыбранныеЗначения.Колонки.Представление.Имя = ПараметрыЗаполнения.ИмяКолонкиДляЗаполнения;
			Объект[ПараметрыЗаполнения.ИмяТаблицыДляЗаполнения].Загрузить(ВыбранныеЗначения);
		КонецЕсли;
		
	КонецЕсли;
  
	Если  ПараметрыЗаполнения.ИмяТаблицыДляЗаполнения = "Организации" Тогда
		КоррекцияНастроекПриСменеОрганизации();
	КонецЕсли;
	Если ПараметрыЗаполнения.ИмяТаблицыДляЗаполнения = "ВидыЦенНоменклатуры" Тогда
		Объект.ВыгружатьЦеныНоменклатуры = (ВыбранныеЗначения.Количество() <> 0);
	КонецЕсли;  
	Если ПараметрыЗаполнения.ИмяТаблицыДляЗаполнения = "Склады" Тогда
		Объект.ИспользоватьОтборПоСкладам = (ВыбранныеЗначения.Количество() <> 0);
	КонецЕсли;
	Если ПараметрыЗаполнения.ИмяТаблицыДляЗаполнения = "Курьеры" Тогда
		Объект.ИспользоватьОтборПоКурьерам = (ВыбранныеЗначения.Количество() <> 0);
	КонецЕсли;
	Если ПараметрыЗаполнения.ИмяТаблицыДляЗаполнения = "ЭквайринговыеТерминалы" Тогда
		Объект.ИспользоватьОтборПоЭквайринговымТерминалам = (ВыбранныеЗначения.Количество() <> 0);
	КонецЕсли;
	Если ПараметрыЗаполнения.ИмяТаблицыДляЗаполнения = "КассыККМ" Тогда
		Объект.ИспользоватьОтборПоКассамККМ = (ВыбранныеЗначения.Количество() <> 0); 
		ОбновитьЗависимыеОтборы();
	КонецЕсли; 
	Если ПараметрыЗаполнения.ИмяТаблицыДляЗаполнения = "ВидыДокументов" Тогда
		Объект.ИспользоватьОтборПоРазделамУчетаИДокументам = (ВыбранныеЗначения.Количество() <> 0);
	КонецЕсли;  
	ОбновитьНаименованиеКомандФормы();
	
КонецПроцедуры

&НаСервере
Процедура КоррекцияНастроекПриСменеОрганизации()

	Если Объект.ВариантНастройки <> "ОбменКасса" 
		ИЛИ НЕ Объект.ИспользоватьОтборПоОрганизациям
		ИЛИ Объект.Организации.Количество() = 0 Тогда
		Возврат;
	КонецЕсли;
	
	Запрос = Новый Запрос;
	Запрос.Параметры.Вставить("ТекущиеЭквТерминалы", 
		Объект.ЭквайринговыеТерминалы.Выгрузить().ВыгрузитьКолонку("ЭквайринговыйТерминал"));
	Запрос.Параметры.Вставить("ТекущиеОрганизации", 
		Объект.Организации.Выгрузить().ВыгрузитьКолонку("Организация"));
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	ЭквайринговыеТерминалы.Ссылка КАК ЭквайринговыйТерминал
	|ИЗ
	|	Справочник.ЭквайринговыеТерминалы КАК ЭквайринговыеТерминалы
	|ГДЕ
	|	ЭквайринговыеТерминалы.Ссылка В(&ТекущиеЭквТерминалы)
	|	И ЭквайринговыеТерминалы.Владелец.Организация В(&ТекущиеОрганизации)";
	
	Объект.ЭквайринговыеТерминалы.Очистить();
	Объект.ЭквайринговыеТерминалы.Загрузить(Запрос.Выполнить().Выгрузить());

