	НайтиУведомление("Последний");
	Отчет.НачалоПериода = НачалоГода(Дата(Отчет.ОтчетныйГод, 1, 1));
	Отчет.КонецПериода = КонецГода(Дата(Отчет.ОтчетныйГод, 12, 31, 23, 59, 59));
	
