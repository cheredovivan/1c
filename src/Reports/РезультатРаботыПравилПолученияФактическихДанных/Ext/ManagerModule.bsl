	Вариант = Новый Структура;
	Вариант.Вставить("Имя",           "РезультатРаботыПравилПоПоказателюБюджетов");
	Вариант.Вставить("Представление", НСтр("ru = 'Результат работы правил по показателю бюджетов';
											|en = 'Rule operation result by budget balance item'"));
	Результат.Добавить(Вариант);
	
	Вариант = Новый Структура;
	Вариант.Вставить("Имя",           "РезультатРаботыПравилПоСтатьямБюджетов");
	Вариант.Вставить("Представление", НСтр("ru = 'Результат работы правил по статьям бюджетов';
											|en = 'Rule operation result by budget flow items'"));
	Результат.Добавить(Вариант);
	
	Вариант = Новый Структура;
	Вариант.Вставить("Имя",           "РезультатРаботыПравилПоПоказателямБюджетов");
	Вариант.Вставить("Представление", НСтр("ru = 'Результат работы правил по показателям бюджетов';
											|en = 'Rule operation result by budget balance items'"));
	Результат.Добавить(Вариант);
	
	Вариант = Новый Структура;
	Вариант.Вставить("Имя",           "РезультатРаботыПравилПоСтатьямИПоказателямБюджетов");
	Вариант.Вставить("Представление", НСтр("ru = 'Результат работы правил по статьям и показателям бюджетов';
