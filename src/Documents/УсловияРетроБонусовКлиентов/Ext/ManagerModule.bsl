	ЕстьКод = (СведенияОбИсточнике.ДлинаКода > 0 И ЗначениеЗаполнено(ЗагружаемаяСтрока.Код));
	ЕстьИмя = ЗначениеЗаполнено(ЗагружаемаяСтрока.ЗначениеСвойства);
	
	ДанныеНайдены = Ложь;
	
	Если ЕстьКод Тогда
		
		СтруктураПоиска = Новый Структура;
		СтруктураПоиска.Вставить("КодПоиск", СтрокаПоискаКод);
		
		НайденныеСтроки = ТаблицаЗначенийСвойств.НайтиСтроки(СтруктураПоиска);
		Если НайденныеСтроки.Количество() > 0 Тогда
			ДанныеНайдены = Истина;
		КонецЕсли;
		
	КонецЕсли;
	
	Если НЕ ДанныеНайдены
	   И ЕстьИмя Тогда
		
		СтруктураПоиска = Новый Структура;
		СтруктураПоиска.Вставить("НаименованиеПоиск", СтрокаПоискаПоНаименованию);
		
		НайденныеСтроки = ТаблицаЗначенийСвойств.НайтиСтроки(СтруктураПоиска);
		Если НайденныеСтроки.Количество() > 0 Тогда
			ДанныеНайдены = Истина;
		КонецЕсли;
		
	КонецЕсли;
	
	Если СведенияОбИсточнике.ЭтоСправочник Тогда
		
		НайденноеЗначение = Справочники[ИмяИсточника].ПустаяСсылка();
		
	Иначе
		
		НайденноеЗначение = ПланыВидовХарактеристик[ИмяИсточника].ПустаяСсылка();
		
	КонецЕсли;
	
	Если ДанныеНайдены Тогда
		
		Если НайденныеСтроки.Количество() = 1 Тогда
			
			НайденнаяСтрока = НайденныеСтроки[0];
			НайденноеЗначение = НайденнаяСтрока.Ссылка;
			
		Иначе
			
			СтрокаНеоднозначности = СписокНеоднозначностей.Добавить();
			СтрокаНеоднозначности.Идентификатор = ЗагружаемаяСтрока.Идентификатор;
			СтрокаНеоднозначности.Колонка = "ЗначениеСвойства";
			
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат НайденноеЗначение;
	
