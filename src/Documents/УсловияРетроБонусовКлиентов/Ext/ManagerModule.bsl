			ШаблонЗаголовкаДокумента = НСтр("ru = 'Условия РБ клиентов %1';
											|en = 'Conditions of customer rebates %1'");
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат ШаблонЗаголовкаДокумента;
	
