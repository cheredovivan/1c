				ВыборкаТоваров.ХарактеристикаПредставление);
			
		КонецЕсли;
		
		Индекс = Индекс + 1;
		
	КонецЦикла;
	
	ИменаПолей = "Номенклатура, Характеристика, ХарактеристикиИспользуются";
	ТаблицаКОбработке = ТаблицаТоваров.Скопировать(, ИменаПолей);
