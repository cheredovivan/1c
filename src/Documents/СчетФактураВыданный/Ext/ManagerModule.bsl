Процедура РассчитатьСуммуНДСРеглПриОтгрузке(ТаблицаТовары, ДополнительныеПараметры) Экспорт
	
	ВалютаРегламентированногоУчета = ДополнительныеПараметры.ВалютаРегламентированногоУчета;
	ЭтоКорректировочный = ДополнительныеПараметры.ЭтоКорректировочный;
	
	Если ДополнительныеПараметры.ВалютаВзаиморасчетов = ВалютаРегламентированногоУчета
		Или ДополнительныеПараметры.ВалютаВзаиморасчетов = ДополнительныеПараметры.ВалютаСчетаФактуры Тогда
		Возврат;
	КонецЕсли;
	
	ПараметрыЗаполнения = Новый Структура("ДокументОснование, Исправление, Корректировочный", 
							ДополнительныеПараметры.ДокументОснование, ДополнительныеПараметры.ЭтоИсправление, ДополнительныеПараметры.ЭтоКорректировочный);
	ПараметрыЗаполнения.Вставить("СчетФактураОснование", ?(ДополнительныеПараметры.Свойство("СчетФактураОснование"), ДополнительныеПараметры.СчетФактураОснование, Неопределено));
	ПараметрыЗаполнения.Вставить("Период", ДополнительныеПараметры.Период);
	ДатаОтгрузки = ОпределитьДатуОтгрузки(ПараметрыЗаполнения, Истина);
	
	Если Не ДополнительныеПараметры.ОплатаВВалюте Тогда // у.е. , зачет по курсу аванса
		
		Если ДополнительныеПараметры.ЭтоКорректировочный Тогда 
			
			// определим общую сумму увеличения с НДС в валюте
			РазницаСНДСВал = 0;
			СуммаСНДСВалУвеличение = 0;
			МассивКоэффициентов = Новый Массив;
			Для Каждого СтрокаТовары Из ТаблицаТовары Цикл 
				РазницаСНДСВал = РазницаСНДСВал + СтрокаТовары.СуммаБезНДСВалУвеличение - СтрокаТовары.СуммаБезНДСВалУменьшение;
				СуммаСНДСВалУвеличение = СуммаСНДСВалУвеличение + СтрокаТовары.СуммаБезНДСВалУвеличение;
				МассивКоэффициентов.Добавить(СтрокаТовары.СуммаБезНДСВалУвеличение);
			КонецЦикла;
			
			// определим общую дельту с НДС в руб.
			СуммаАвансаРегл = ?(РазницаСНДСВал < 0, 0, ?(ДополнительныеПараметры.ПлатежноРасчетныеДокументы = Неопределено, 0, ДополнительныеПараметры.ПлатежноРасчетныеДокументы.Итог("СуммаРегл")));
			СуммаАвансаВал = ?(РазницаСНДСВал < 0, 0, ?(ДополнительныеПараметры.ПлатежноРасчетныеДокументы = Неопределено, 0, ДополнительныеПараметры.ПлатежноРасчетныеДокументы.Итог("Сумма")));
			
			СуммаЗадолженностиВал = СуммаСНДСВалУвеличение - СуммаАвансаВал;
			СуммаСНДСУвеличениеРегл = СуммаАвансаРегл + РаботаСКурсамиВалютУТ.ПересчитатьВВалюту(
					СуммаЗадолженностиВал,
					ВалютаРегламентированногоУчета,
					ДополнительныеПараметры.ВалютаВзаиморасчетов,
					ВалютаРегламентированногоУчета,
					ДатаОтгрузки);
					
			МассивСуммСНДСРегл = ОбщегоНазначенияКлиентСервер.РаспределитьСуммуПропорциональноКоэффициентам(СуммаСНДСУвеличениеРегл, МассивКоэффициентов);
		
			СтруктураПоиска = Новый Структура("Распоряжение, Номенклатура, КодСтроки");
			
			Если МассивСуммСНДСРегл <> Неопределено Тогда // сумма увеличения <> сумме уменьшения
				
				ИндексМассиваСумм = 0;
				Для Каждого СтрокаТовары Из ТаблицаТовары Цикл
					
					ЗначениеСтавкиНДС = УчетНДСУПКлиентСервер.ЗначениеСтавкиНДС(СтрокаТовары.СтавкаНДС);
					СтрокаТовары.СуммаНДСУвеличение = МассивСуммСНДСРегл[ИндексМассиваСумм] * ЗначениеСтавкиНДС / (ЗначениеСтавкиНДС + 100);
					СтрокаТовары.СуммаУвеличение = МассивСуммСНДСРегл[ИндексМассиваСумм];
					ИндексМассиваСумм = ИндексМассиваСумм + 1;
					
					СтрокаТовары.СуммаУменьшение = РаботаСКурсамиВалютУТ.ПересчитатьВВалюту(
							СтрокаТовары.СуммаБезНДСВалУменьшение,
							ВалютаРегламентированногоУчета,
							ДополнительныеПараметры.ВалютаВзаиморасчетов,
							ВалютаРегламентированногоУчета,
							ДатаОтгрузки);
					СтрокаТовары.СуммаНДСУменьшение = УчетНДСУПКлиентСервер.РассчитатьСуммуНДС(СтрокаТовары.СуммаУменьшение, СтрокаТовары.СтавкаНДС);
					
					ЗаполнитьЗначенияСвойств(СтруктураПоиска, СтрокаТовары);
					НайденныеСтроки = СтрокаТовары.ПредыдущийСчетФактура.Товары.НайтиСтроки(СтруктураПоиска);
					СтрокаТовары.Сумма = ?(НайденныеСтроки.Количество() = 0, 0, НайденныеСтроки[0].Сумма) + СтрокаТовары.СуммаУвеличение - СтрокаТовары.СуммаУменьшение;
					СтрокаТовары.СуммаНДС = ?(НайденныеСтроки.Количество() = 0, 0, НайденныеСтроки[0].СуммаНДС) + СтрокаТовары.СуммаНДСУвеличение - СтрокаТовары.СуммаНДСУменьшение;
					
				КонецЦикла;
				
			Иначе
				
				РассчитатьСуммуНДСРеглПриОтгрузкеБезАвансов(ТаблицаТовары, Новый Структура("ДатаОтгрузки, ВалютаСчетаФактуры, ВалютаРегламентированногоУчета, ВалютаВзаиморасчетов, ОплатаВВалюте", ДатаОтгрузки, ДополнительныеПараметры.ВалютаСчетаФактуры, ВалютаРегламентированногоУчета, ДополнительныеПараметры.ВалютаВзаиморасчетов, Ложь));
				
			КонецЕсли;
			
		Иначе
			
			//определим общую сумму с НДС в валюте
			СуммаСНДСВал = 0;
			МассивКоэффициентов = Новый Массив;
			Для Каждого СтрокаТовары Из ТаблицаТовары Цикл 
				СуммаСНДСВал = СуммаСНДСВал + СтрокаТовары.СуммаБезНДСВал;
				МассивКоэффициентов.Добавить(СтрокаТовары.СуммаБезНДСВал);
			КонецЦикла;
			
			// определим общую сумму с НДС в руб.
			СуммаАвансаРегл = ?(ДополнительныеПараметры.ПлатежноРасчетныеДокументы = Неопределено, 0, ДополнительныеПараметры.ПлатежноРасчетныеДокументы.Итог("СуммаРегл"));
			СуммаАвансаВал = ?(ДополнительныеПараметры.ПлатежноРасчетныеДокументы = Неопределено, 0, ДополнительныеПараметры.ПлатежноРасчетныеДокументы.Итог("Сумма"));
			
			СуммаЗадолженностиВал = СуммаСНДСВал - СуммаАвансаВал;
			СуммаСНДСРегл = СуммаАвансаРегл + РаботаСКурсамиВалютУТ.ПересчитатьВВалюту(
					СуммаЗадолженностиВал,
					ВалютаРегламентированногоУчета,
					ДополнительныеПараметры.ВалютаВзаиморасчетов,
					ВалютаРегламентированногоУчета,
					ДатаОтгрузки);
					
			МассивСуммСНДСРегл = ОбщегоНазначенияКлиентСервер.РаспределитьСуммуПропорциональноКоэффициентам(СуммаСНДСРегл, МассивКоэффициентов);
			
			СтруктураПоиска = Новый Структура("Распоряжение, Номенклатура, КодСтроки");
			
			Если МассивСуммСНДСРегл <> Неопределено Тогда 
			
				ИндексМассиваСумм = 0;
				Для Каждого СтрокаТовары Из ТаблицаТовары Цикл 
					ЗначениеСтавкиНДС = УчетНДСУПКлиентСервер.ЗначениеСтавкиНДС(СтрокаТовары.СтавкаНДС);
					СтрокаТовары.СуммаНДС = МассивСуммСНДСРегл[ИндексМассиваСумм] * ЗначениеСтавкиНДС / (ЗначениеСтавкиНДС + 100);
					СтрокаТовары.Сумма = МассивСуммСНДСРегл[ИндексМассиваСумм];
					ИндексМассиваСумм = ИндексМассиваСумм + 1;
				КонецЦикла;
			
			КонецЕсли;
			
		КонецЕсли;
		
	Иначе 
		
		Для Каждого СтрокаТовары Из ТаблицаТовары Цикл 
			
			Если ДополнительныеПараметры.ЭтоКорректировочный Тогда
				РассчитатьСуммуНДСРеглПриОтгрузкеБезАвансов(ТаблицаТовары, Новый Структура("ДатаОтгрузки, ВалютаСчетаФактуры, ВалютаРегламентированногоУчета, ВалютаВзаиморасчетов, ОплатаВВалюте", ДатаОтгрузки, ДополнительныеПараметры.ВалютаСчетаФактуры, ВалютаРегламентированногоУчета, ДополнительныеПараметры.ВалютаВзаиморасчетов, Истина));
			Иначе
				СуммаНДСВал = УчетНДСУПКлиентСервер.РассчитатьСуммуНДС(СтрокаТовары.СуммаБезНДСВал, СтрокаТовары.СтавкаНДС);
				СуммаБезНДСВал = Окр(СтрокаТовары.СуммаБезНДСВал - СуммаНДСВал, 2, РежимОкругления.Окр15как20);
				СуммаБезНДСРегл = РаботаСКурсамиВалютУТ.ПересчитатьВВалюту(
									СуммаБезНДСВал,
									ВалютаРегламентированногоУчета,
									ДополнительныеПараметры.ВалютаВзаиморасчетов,
									ВалютаРегламентированногоУчета,
									ДатаОтгрузки);
				СтрокаТовары.СуммаНДС = ?(ДополнительныеПараметры.ВалютаСчетаФактуры = ВалютаРегламентированногоУчета, 
									УчетНДСУПКлиентСервер.РассчитатьСуммуНДС(СуммаБезНДСРегл, СтрокаТовары.СтавкаНДС, Ложь),
									УчетНДСУПКлиентСервер.РассчитатьСуммуНДС(СуммаБезНДСВал, СтрокаТовары.СтавкаНДС, Ложь));
				СтрокаТовары.Сумма = ?(ДополнительныеПараметры.ВалютаСчетаФактуры = ВалютаРегламентированногоУчета, СуммаБезНДСРегл + СтрокаТовары.СуммаНДС, СтрокаТовары.СуммаБезНДСВал);
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЕсли;
	
КонецПроцедуры

Процедура РассчитатьСуммуНДСРеглПриОтгрузкеБезАвансов(ТаблицаТовары, ДополнительныеПараметры)
	
	СтруктураПоиска = Новый Структура("Распоряжение, Номенклатура, КодСтроки");
	
	Для Каждого СтрокаТовары Из ТаблицаТовары Цикл
		
		Если ДополнительныеПараметры.ОплатаВВалюте Тогда
	
			СуммаНДСВалУвеличение = УчетНДСУПКлиентСервер.РассчитатьСуммуНДС(СтрокаТовары.СуммаБезНДСВалУвеличение, СтрокаТовары.СтавкаНДС);
			СуммаБезНДСВалУвеличение = Окр(СтрокаТовары.СуммаБезНДСВалУвеличение - СуммаНДСВалУвеличение, 2, РежимОкругления.Окр15как20);
			СуммаБезНДСРеглУвеличение = РаботаСКурсамиВалютУТ.ПересчитатьВВалюту(
								СуммаБезНДСВалУвеличение,
								ДополнительныеПараметры.ВалютаРегламентированногоУчета,
								ДополнительныеПараметры.ВалютаВзаиморасчетов,
								ДополнительныеПараметры.ВалютаРегламентированногоУчета,
								ДополнительныеПараметры.ДатаОтгрузки);
			СтрокаТовары.СуммаНДСУвеличение = ?(ДополнительныеПараметры.ВалютаСчетаФактуры = ДополнительныеПараметры.ВалютаРегламентированногоУчета, 
								УчетНДСУПКлиентСервер.РассчитатьСуммуНДС(СуммаБезНДСРеглУвеличение, СтрокаТовары.СтавкаНДС, Ложь),
								УчетНДСУПКлиентСервер.РассчитатьСуммуНДС(СуммаБезНДСВалУвеличение, СтрокаТовары.СтавкаНДС, Ложь));
			СтрокаТовары.СуммаУвеличение = ?(ДополнительныеПараметры.ВалютаСчетаФактуры = ДополнительныеПараметры.ВалютаРегламентированногоУчета, СуммаБезНДСРеглУвеличение + СтрокаТовары.СуммаНДСУвеличение, СтрокаТовары.СуммаБезНДСВалУвеличение);
				
			СуммаНДСВалУменьшение = УчетНДСУПКлиентСервер.РассчитатьСуммуНДС(СтрокаТовары.СуммаБезНДСВалУменьшение, СтрокаТовары.СтавкаНДС);
			СуммаБезНДСВалУменьшение = Окр(СтрокаТовары.СуммаБезНДСВалУменьшение - СуммаНДСВалУменьшение, 2, РежимОкругления.Окр15как20);
			СуммаБезНДСРеглУменьшение = РаботаСКурсамиВалютУТ.ПересчитатьВВалюту(
								СуммаБезНДСВалУменьшение,
