	Результат.Колонки.Добавить("ПредставлениеСтроки5аДокументаОснования", Новый ОписаниеТипов("Строка"));
	
	РезультатПромежуточный = Результат.СкопироватьКолонки();
	
	Запрос = Новый Запрос;
	Запрос.МенеджерВременныхТаблиц = МенеджерВременныхТаблиц;
	Запрос.УстановитьПараметр("Таблица", ТаблицаИтог);
	Запрос.УстановитьПараметр("СчетаФактурыСНомерами", СчетаФактурыСНомерами);
	Запрос.УстановитьПараметр("ТекстТоварнаяНакладная", НСтр("ru = 'Товарная накладная';
															|en = 'Invoice'"));
	Запрос.УстановитьПараметр("ТекстАкт", НСтр("ru = 'Акт';
												|en = 'Certificate'"));
	
	Запрос.Текст = "ВЫБРАТЬ
	|	СчетаФактурыОснования.Ссылка КАК Ссылка,
	|	МАКСИМУМ(ВЫБОР
