				Запрос.УстановитьПараметр("ДокументОтгрузки", РеквизитыОтгрузки.ИсправляемыйДокумент);
			КонецЕсли;
		КонецЕсли;
		Запрос.УстановитьПараметр("ДатаОтгрузки", ОпределитьДатуОтгрузки(Запрос.Параметры, Истина));
	КонецЕсли;
	
	Запрос.УстановитьПараметр("ВыводитьСчетаФактурыНаАванс", УчетНДСПереопределяемый.ВерсияПостановленияНДС1137(Запрос.Параметры.Период) >= 8);
	
