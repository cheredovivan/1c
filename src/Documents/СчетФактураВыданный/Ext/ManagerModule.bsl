										ЗначениеНастроекПовтИсп.ВалютаУправленческогоУчета(),
										Запрос.Параметры.Период);
										
	Запрос.УстановитьПараметр("КоэффициентПересчетаВВалютуУпрРегл", КоэффициентПересчетаВВалютуУпрРегл);
	
	НезаполненныеПокупателиКомиссионногоТовара = Новый Массив;
	НезаполненныеПокупателиКомиссионногоТовара.Добавить(Неопределено);
