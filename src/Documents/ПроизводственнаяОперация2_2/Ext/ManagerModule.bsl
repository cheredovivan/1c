		Иначе
			
			Заголовок = СтрШаблон(
				НСтр("ru = 'Пересчитать %1';
					|en = 'Recalculate %1'"),
				СтрСоединить(МассивРесурсов, ", "));
			
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат Новый Структура("Видимость, Заголовок", Видимость, Заголовок);
	
