// Регистрирует данные к обработке при переходе на новую версию.
// 
// Параметры:
// 	Параметры - см. ОбновлениеИнформационнойБазы.ОсновныеПараметрыОтметкиКОбработке
Процедура ЗарегистрироватьДанныеКОбработкеДляПереходаНаНовуюВерсию(Параметры) Экспорт
	
	ПараметрыВыборки = Параметры.ПараметрыВыборки;
	ПараметрыВыборки.ПолныеИменаОбъектов = "Документ.ПроизводственнаяОперация2_2";
	ПараметрыВыборки.ПоляУпорядочиванияПриРаботеПользователей.Добавить("Дата УБЫВ");
	ПараметрыВыборки.ПоляУпорядочиванияПриОбработкеДанных.Добавить("Ссылка");
	ПараметрыВыборки.СпособВыборки = ОбновлениеИнформационнойБазы.СпособВыборкиСсылки();
	
	ТекстЗапроса = "
	|ВЫБРАТЬ РАЗЛИЧНЫЕ
	|	ВложенныйЗапрос.Ссылка КАК Ссылка
	|ИЗ
	|
	|(ВЫБРАТЬ
	|	Таблица.Ссылка КАК Ссылка
	|ИЗ
	|	Документ.ПроизводственнаяОперация2_2 КАК Таблица
	|ГДЕ
	|	НЕ Таблица.ПометкаУдаления
	|	И Таблица.УдалитьВидРабочегоЦентра <> ЗНАЧЕНИЕ(Справочник.ВидыРабочихЦентров.ПустаяСсылка)
	|	И Таблица.РабочийЦентр В (
	|				НЕОПРЕДЕЛЕНО,
	|				ЗНАЧЕНИЕ(Справочник.ВидыРабочихЦентров.ПустаяСсылка),
	|				ЗНАЧЕНИЕ(Справочник.РабочиеЦентры.ПустаяСсылка))
	|
	|ОБЪЕДИНИТЬ ВСЕ
	|
	|ВЫБРАТЬ
	|	Таблица.Ссылка КАК Ссылка
	|ИЗ
	|	Документ.ПроизводственнаяОперация2_2 КАК Таблица
	|ГДЕ
	|	НЕ Таблица.ПометкаУдаления
	|	И Таблица.НаОснованииНСИ
	|	И Таблица.ИдентификаторОперации <> 0
	|	И Таблица.ИдентификаторКонтрольнойОперации = 0
	|	И Таблица.Контроль В (
	|		ЗНАЧЕНИЕ(Перечисление.ВариантыКонтроляТехнологическихОпераций.Требуется),
	|		ЗНАЧЕНИЕ(Перечисление.ВариантыКонтроляТехнологическихОпераций.ТребуетсяНаПоследующих))
	|	И ИСТИНА В (
	|		ВЫБРАТЬ ПЕРВЫЕ 1
	|			ИСТИНА
	|		ИЗ
	|			РегистрСведений.УдалитьОчередьПроизводственныхОпераций КАК УдалитьОчередь
	|		ГДЕ
	|			УдалитьОчередь.Подразделение = Таблица.Подразделение
	|			И УдалитьОчередь.Этап = Таблица.Этап
	|			И УдалитьОчередь.Операция = Таблица.Операция
	|			И УдалитьОчередь.ИдентификаторОперации = Таблица.ИдентификаторОперации
	|			И УдалитьОчередь.ИдентификаторКонтрольнойОперации <> 0)
	|
	|ОБЪЕДИНИТЬ ВСЕ
	|
	|ВЫБРАТЬ
	|	Таблица.Ссылка КАК Ссылка
	|ИЗ 
	|	Документ.ПроизводственнаяОперация2_2 КАК Таблица
	|ГДЕ
	|	НЕ Таблица.ПометкаУдаления
	|	И Таблица.НаОснованииНСИ
	|	И Таблица.ВремяШтучное <> 0
	|	И Таблица.ВремяПЗ = 0
	|	И Таблица.ВремяШтучноеЕдИзм <> Таблица.ВремяВыполненияЕдИзм
	|	И Таблица.ВремяПЗЕдИзм = Таблица.ВремяВыполненияЕдИзм
	|
	|) КАК ВложенныйЗапрос
	|";
	
	Запрос = Новый Запрос(ТекстЗапроса);
	
	ОбновлениеИнформационнойБазы.ОтметитьКОбработке(Параметры, Запрос.Выполнить().Выгрузить().ВыгрузитьКолонку("Ссылка"));
	
КонецПроцедуры

Процедура ОбработатьДанныеДляПереходаНаНовуюВерсию(Параметры) Экспорт
	
	ПолноеИмяОбъекта = "Документ.ПроизводственнаяОперация2_2";
	ОбновляемыеДанные = ОбновлениеИнформационнойБазы.ДанныеДляОбновленияВМногопоточномОбработчике(Параметры);
	
	Если ОбновляемыеДанные.Количество() = 0 Тогда
		Параметры.ОбработкаЗавершена =
			ОбновлениеИнформационнойБазы.ОбработкаДанныхЗавершена(Параметры.Очередь, ПолноеИмяОбъекта);
		Возврат;
	КонецЕсли;
	
	ТекстЗапроса = "
	|ВЫБРАТЬ
	|	ОбновляемыеДанные.Ссылка КАК Ссылка
	|ПОМЕСТИТЬ ТаблицаДокументов
	|ИЗ
	|	&ОбновляемыеДанные КАК ОбновляемыеДанные
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ТаблицаДокументов.Ссылка КАК Ссылка,
	|	ЕСТЬNULL(УдалитьОчередь.ИдентификаторКонтрольнойОперации, 0) КАК ИдентификаторКонтрольнойОперации
	|ИЗ
	|	ТаблицаДокументов КАК ТаблицаДокументов
	|		ЛЕВОЕ СОЕДИНЕНИЕ Документ.ПроизводственнаяОперация2_2 КАК ДанныеДокумента
	|		ПО ТаблицаДокументов.Ссылка = ДанныеДокумента.Ссылка
	|		ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.УдалитьОчередьПроизводственныхОпераций КАК УдалитьОчередь
	|		ПО ДанныеДокумента.Подразделение = УдалитьОчередь.Подразделение
	|		И ДанныеДокумента.Этап = УдалитьОчередь.Этап
	|		И ДанныеДокумента.Операция = УдалитьОчередь.Операция
	|		И ДанныеДокумента.ИдентификаторОперации = УдалитьОчередь.ИдентификаторОперации
	|ГДЕ
	|	ДанныеДокумента.Контроль = ЗНАЧЕНИЕ(Перечисление.ВариантыКонтроляТехнологическихОпераций.ТребуетсяНаПоследующих)
	|	И ЕСТЬNULL(УдалитьОчередь.ИдентификаторКонтрольнойОперации, 0) <> 0";
	
	Запрос = Новый Запрос;
	Запрос.Текст = ТекстЗапроса;
	Запрос.УстановитьПараметр("ОбновляемыеДанные", ОбновляемыеДанные);
	
	Идентификаторы = Запрос.Выполнить().Выгрузить();
	Идентификаторы.Индексы.Добавить("Ссылка");
	
	Для каждого Элемент Из ОбновляемыеДанные Цикл
		
		НачатьТранзакцию();
		
		Попытка
			
			Блокировка = Новый БлокировкаДанных;
			ЭлементБлокировки = Блокировка.Добавить(ПолноеИмяОбъекта);
			ЭлементБлокировки.УстановитьЗначение("Ссылка", Элемент.Ссылка);
			ЭлементБлокировки.Режим = РежимБлокировкиДанных.Исключительный;
			Блокировка.Заблокировать();
			
			ДокументОбъект = Элемент.Ссылка.ПолучитьОбъект(); // ДокументОбъект.ПроизводственнаяОперация2_2
			
			Если ДокументОбъект = Неопределено Тогда
				ОбновлениеИнформационнойБазы.ОтметитьВыполнениеОбработки(Элемент.Ссылка);
				ЗафиксироватьТранзакцию();
				Продолжить;
			КонецЕсли;
			
			ОбъектИзменен = Ложь;
			
			Если ЗначениеЗаполнено(ДокументОбъект.УдалитьВидРабочегоЦентра)
				И НЕ ЗначениеЗаполнено(ДокументОбъект.РабочийЦентр) Тогда
				ДокументОбъект.РабочийЦентр = ДокументОбъект.УдалитьВидРабочегоЦентра;
				ДокументОбъект.УдалитьВидРабочегоЦентра = Неопределено;
				ОбъектИзменен = Истина;
			КонецЕсли;
			
			Если ДокументОбъект.НаОснованииНСИ
					И ДокументОбъект.ИдентификаторОперации <> 0
					И ДокументОбъект.ИдентификаторКонтрольнойОперации = 0 Тогда
				Если ДокументОбъект.Контроль = Перечисления.ВариантыКонтроляТехнологическихОпераций.Требуется Тогда
					ДокументОбъект.ИдентификаторКонтрольнойОперации = ДокументОбъект.ИдентификаторОперации;
					ОбъектИзменен = Истина;
				ИначеЕсли ДокументОбъект.Контроль = Перечисления.ВариантыКонтроляТехнологическихОпераций.ТребуетсяНаПоследующих Тогда
					НайденнаяСтрока = Идентификаторы.Найти(Элемент.Ссылка, "Ссылка");
					Если НайденнаяСтрока <> Неопределено Тогда
						ДокументОбъект.ИдентификаторКонтрольнойОперации = НайденнаяСтрока.ИдентификаторКонтрольнойОперации;
						ОбъектИзменен = Истина;
					КонецЕсли;
				КонецЕсли;
			КонецЕсли;
			
			Если ДокументОбъект.НаОснованииНСИ
				И ДокументОбъект.ВремяШтучное <> 0
				И ДокументОбъект.ВремяПЗ = 0
				И ДокументОбъект.ВремяШтучноеЕдИзм <> ДокументОбъект.ВремяВыполненияЕдИзм
				И ДокументОбъект.ВремяПЗЕдИзм = ДокументОбъект.ВремяВыполненияЕдИзм Тогда
				Документы.ПроизводственнаяОперация2_2.ПересчитатьВремяВыполнения(ДокументОбъект);
				ОбъектИзменен = Истина;
			КонецЕсли;
			
			Если ОбъектИзменен Тогда
				ОбновлениеИнформационнойБазы.ЗаписатьОбъект(ДокументОбъект);
			Иначе
				ОбновлениеИнформационнойБазы.ОтметитьВыполнениеОбработки(Элемент.Ссылка);
			КонецЕсли;
			
			ЗафиксироватьТранзакцию();
			
		Исключение
			
			ОтменитьТранзакцию();
			ОбновлениеИнформационнойБазыУТ.СообщитьОНеудачнойОбработке(ИнформацияОбОшибке(), Элемент.Ссылка);
			
		КонецПопытки;
		
	КонецЦикла;
	
	Параметры.ОбработкаЗавершена = ОбновлениеИнформационнойБазы.ОбработкаДанныхЗавершена(Параметры.Очередь, ПолноеИмяОбъекта);
	
КонецПроцедуры

