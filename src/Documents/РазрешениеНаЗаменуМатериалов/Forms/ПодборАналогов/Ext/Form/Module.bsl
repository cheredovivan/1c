	|	Аналоги.ЭтоАналог КАК ЭтоАналог
	|ИЗ
	|	Аналоги КАК Аналоги
	|ГДЕ
	|	Аналоги.Количество > 0";
	
	Запрос.УстановитьПараметр(
		"Материалы", 
		Материалы.Выгрузить(
			, 
			"НомерСтроки, Номенклатура, Характеристика, Количество, КоличествоПодтверждено, НомерСтрокиИсходный"));
	
	Запрос.УстановитьПараметр(
		"Аналоги", 
		Аналоги.Выгрузить(
			, 
			"НомерСтроки, Разрешение, РазрешениеПредставление, ЭтоАналог, Номенклатура, Характеристика, ВзаимозаменяемыйАналог, КлючСвязиРазрешение,"
			+ " Количество, ОстатокНаСкладе, ОстатокНаСкладеПодтверждено, Склад, ЕдиницаИзмеренияПредставление"));
	
	МассивРезультатов = Запрос.ВыполнитьПакет();
	
	ТаблицаМатериалы = МассивРезультатов[МассивРезультатов.ВГраница() - 1].Выгрузить(); // см. ПроизводствоСервер.СлужебнаяСтруктураТаблицыЗначений
	
	ТаблицаАналоги = МассивРезультатов[МассивРезультатов.ВГраница()].Выгрузить();  // см. ПроизводствоСервер.СлужебнаяСтруктураТаблицыЗначений
	ТаблицаАналоги.Индексы.Добавить("Номенклатура, Характеристика, ЭтоАналог");
	
	Если Подтвердить Тогда
		ИмяКолонкиКоличествоПриемник      = "КоличествоПодтверждено";
		ИмяКолонкиОстатокНаСкладеПриемник = "ОстатокНаСкладеПодтверждено";
		ИмяКолонкиКоличествоИсточник      = "Количество";
		ИмяКолонкиОстатокНаСкладеИсточник = "ОстатокНаСкладе"; 
	Иначе
		ИмяКолонкиКоличествоПриемник      = "Количество";
		ИмяКолонкиОстатокНаСкладеПриемник = "ОстатокНаСкладе";
		ИмяКолонкиКоличествоИсточник      = "КоличествоПодтверждено";
		ИмяКолонкиОстатокНаСкладеИсточник = "ОстатокНаСкладеПодтверждено"; 
	КонецЕсли;
	
	СтруктураОтбора = Новый Структура("Номенклатура, Характеристика, ЭтоАналог");
	СтруктураОчисткиАналогов = Новый Структура("Количество, ПодсказкаЗаменено", 0, ""); 
	
	Если Подтвердить Тогда
		
		КлючСвязи = ";" 
				  + СтрЗаменить(СтрСоединить(ТаблицаМатериалы.Выгрузитьколонку("НомерСтрокиИсходный"), ";"), Символы.НПП, "") 
				  + ";";
		
		МаксимальныйНомерПодбора = МаксимальныйНомерПодбора + 1;
		
		СтруктураОтбора.ЭтоАналог = Ложь;
						
	КонецЕсли;
	
	ШаблонКлюча = НСтр("ru = ';%1;';
						|en = ';%1;'");
	
	Для каждого СтрокаТаблицы Из ТаблицаМатериалы Цикл
		
		СтрокаМатериалы = Материалы[СтрокаТаблицы.НомерСтроки - 1];
		
		СтрокаМатериалы[ИмяКолонкиКоличествоПриемник] = СтрокаМатериалы[ИмяКолонкиКоличествоИсточник];
			
		Если Подтвердить Тогда
			
			ЗаполнитьЗначенияСвойств(СтруктураОтбора, СтрокаТаблицы);
			
			КоличествоКРаспределению = СтрокаТаблицы.КоличествоКРаспределению;
			
			МассивСтрок = ТаблицаАналоги.НайтиСтроки(СтруктураОтбора);
			ИндексСтрок = МассивСтрок.ВГраница();
			Пока ИндексСтрок > -1 Цикл
				
				ИндексСтрок = ИндексСтрок - 1;
				
				СтрокаТаблицыАналоги = МассивСтрок[0];
				
				КоличествоПорции = Мин(КоличествоКРаспределению, СтрокаТаблицыАналоги.Количество);
				
				ПорцияПодбора = ПорцииПодбора.Добавить();
				ЗаполнитьЗначенияСвойств(ПорцияПодбора, СтрокаТаблицыАналоги,, "Количество");
				ЗаполнитьЗначенияСвойств(ПорцияПодбора, СтрокаМатериалы, "НомерСтрокиИсходный");
				ПорцияПодбора.Количество = КоличествоПорции;
				ПорцияПодбора.НомерПодбора = МаксимальныйНомерПодбора;
				ПорцияПодбора.КлючСвязи = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
					ШаблонКлюча, СтрокаМатериалы.НомерСтрокиИсходный);
				
				СтрокаТаблицыАналоги.Количество = СтрокаТаблицыАналоги.Количество - КоличествоПорции;
				Если СтрокаТаблицыАналоги.Количество = 0 Тогда
					
					ЗаполнитьЗначенияСвойств(Аналоги[СтрокаТаблицыАналоги.НомерСтроки - 1], СтруктураОчисткиАналогов);
					
					ТаблицаАналоги.Удалить(СтрокаТаблицыАналоги);
					МассивСтрок.Удалить(0);
					
				КонецЕсли;	
				
				КоличествоКРаспределению = КоличествоКРаспределению - КоличествоПорции;
				Если КоличествоКРаспределению = 0 Тогда
					Прервать;
				КонецЕсли;	
				
			КонецЦикла;	
			
		КонецЕсли;	
			
	КонецЦикла;
	
	НоменклатураОстатков = Новый Соответствие;
	РежимНеОбособленныеОстатки = РежимОтображенияНеОбособленныеОстатки();
	
	Для каждого СтрокаТаблицы Из ТаблицаАналоги Цикл
		
		СтрокаАналоги = Аналоги[СтрокаТаблицы.НомерСтроки - 1];
		ЗаполнитьЗначенияСвойств(СтрокаАналоги, СтруктураОчисткиАналогов);
		
		Если СтрокаАналоги.ЭтоАналог
		   И НоменклатураОстатков.Получить(СтрокаТаблицы.Номенклатура) <> СтрокаТаблицы.Характеристика Тогда
			
			НоменклатураОстатков.Вставить(СтрокаТаблицы.Номенклатура, СтрокаТаблицы.Характеристика);
			
			ЗаполнитьЗначенияСвойств(СтруктураОтбора, СтрокаТаблицы);
			
			МассивСтрок = Аналоги.НайтиСтроки(СтруктураОтбора);
			Для каждого СтрокаАналоги Из МассивСтрок Цикл
				
				СтрокаАналоги[ИмяКолонкиОстатокНаСкладеПриемник] = СтрокаАналоги[ИмяКолонкиОстатокНаСкладеИсточник];
				
				Если Не Подтвердить Тогда
					УстановитьПризнакЕстьОстатки(СтрокаАналоги);
				КонецЕсли;
				
			КонецЦикла;	
			
		КонецЕсли;
		
		Если Подтвердить Тогда
			
			КоличествоАналогаЗаменить = СтрокаТаблицы.Количество;
			
			ПараметрыОтбораОстатков = Новый Структура("Номенклатура, Характеристика, Склад");
			ЗаполнитьЗначенияСвойств(ПараметрыОтбораОстатков, СтрокаТаблицы);
				
			Если РежимОтображенияОстатков = РежимНеОбособленныеОстатки Тогда
				ПараметрыОтбораОстатков.Вставить("Назначение", Справочники.Назначения.ПустаяСсылка());
			КонецЕсли;
			
			МассивНомеровСтрок = СтрРазделить(КлючСвязи, ";", Ложь);
			
			Для каждого НомерСтроки Из МассивНомеровСтрок Цикл
				
				Если КоличествоАналогаЗаменить = 0 Тогда
					Прервать;
				КонецЕсли;
				
				СтрокиЗамененныхМатериалов = ПорцииПодбора.НайтиСтроки(
					Новый Структура("Разрешение, НомерПодбора, НомерСтрокиИсходный", СтрокаТаблицы.Разрешение, МаксимальныйНомерПодбора, НомерСтроки - 0));
				МассивОстатковАналогов = ОстаткиАналогов.НайтиСтроки(ПараметрыОтбораОстатков);
				
				Для каждого СтрокаЗамененныхМатериалов Из СтрокиЗамененныхМатериалов Цикл
					
					Если СтрокаТаблицы.ВзаимозаменяемыйАналог Тогда
						
						КоличествоАналогаПоНормативу = КоличествоАналогаЗаменить;
						
					Иначе	
						
						РасчетноеКоличествоАналога = КоличествоАналогаПоНормативам(СтрокаЗамененныхМатериалов, СтрокаТаблицы.НомерСтроки);
						КоличествоАналогаПоНормативу = ?(РасчетноеКоличествоАналога = 0, КоличествоАналогаЗаменить, РасчетноеКоличествоАналога);
						
					КонецЕсли;
					
					Если КоличествоАналогаПоНормативу > 0 Тогда
					
						Для Каждого СтрокаМассива Из МассивОстатковАналогов Цикл
						
							Если СтрокаМассива.Свободно = 0 Тогда
								Продолжить;
							КонецЕсли;
							
							Если ЗначениеЗаполнено(СтрокаМассива.Назначение)
							   И СтрокаМассива.Назначение <> Назначение Тогда
								Продолжить;	
							КонецЕсли;
							
							КоличествоКСписанию = Мин(КоличествоАналогаЗаменить, СтрокаМассива.Свободно, КоличествоАналогаПоНормативу);
							КоличествоАналогаПоНормативу = КоличествоАналогаПоНормативу - КоличествоКСписанию;
							КоличествоАналогаЗаменить = КоличествоАналогаЗаменить - КоличествоКСписанию;
							СтрокаМассива.Свободно = СтрокаМассива.Свободно - КоличествоКСписанию;
							
							ПорцияПодбора = ПорцииПодбора.Добавить();
							ЗаполнитьЗначенияСвойств(ПорцияПодбора, СтрокаТаблицы,, "Количество");
							ПорцияПодбора.Количество = КоличествоКСписанию;
							ПорцияПодбора.НомерПодбора = МаксимальныйНомерПодбора;
							ПорцияПодбора.КлючСвязи = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
								ШаблонКлюча, НомерСтроки);
							ПорцияПодбора.Обособленно = СтрокаМассива.Обособленно;
							ПорцияПодбора.Назначение = СтрокаМассива.Назначение;
							ПорцияПодбора.ПодборСверхОстатка = Ложь;
							
							Если КоличествоАналогаЗаменить = 0 ИЛИ КоличествоАналогаПоНормативу = 0 Тогда
								Прервать;
							КонецЕсли;
						
						КонецЦикла;	
					
					КонецЕсли;
					
				КонецЦикла;
				
			КонецЦикла;
			
			Если КоличествоАналогаЗаменить > 0 Тогда
				
				КлючСвязиОстаток = "";
				ЕстьНераспределенноеКоличество = Истина;
				
				Для каждого НомерСтроки Из МассивНомеровСтрок Цикл
					
					Если КоличествоАналогаЗаменить = 0 Тогда
						ЕстьНераспределенноеКоличество = Ложь;
						Прервать;
					КонецЕсли;
					
					СтрокиЗамененныхМатериалов = ПорцииПодбора.НайтиСтроки(
						Новый Структура("Разрешение, НомерПодбора, НомерСтрокиИсходный", СтрокаТаблицы.Разрешение, МаксимальныйНомерПодбора, НомерСтроки - 0));
						
					КлючСвязиСтроки = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
						ШаблонКлюча, НомерСтроки);
						
					Если ПустаяСтрока(КлючСвязиОстаток) Тогда
						КлючСвязиОстаток = КлючСвязиСтроки;
					КонецЕсли;
					
					Для каждого СтрокаЗамененныхМатериалов Из СтрокиЗамененныхМатериалов Цикл
					
						Если СтрокаТаблицы.ВзаимозаменяемыйАналог Тогда
							
							КоличествоКУчетуПоСтроке = КоличествоАналогаЗаменить;
							
						Иначе
							
							СтруктураОтбораПорции = Новый Структура;
							СтруктураОтбораПорции.Вставить("Разрешение", СтрокаТаблицы.Разрешение);
							СтруктураОтбораПорции.Вставить("Номенклатура", СтрокаТаблицы.Номенклатура);
							СтруктураОтбораПорции.Вставить("Характеристика", СтрокаТаблицы.Характеристика);
							СтруктураОтбораПорции.Вставить("Склад", СтрокаТаблицы.Склад);
							СтруктураОтбораПорции.Вставить("КлючСвязи", КлючСвязиСтроки);
							СтруктураОтбораПорции.Вставить("ЭтоАналог", Истина);
							СтруктураОтбораПорции.Вставить("НомерПодбора", МаксимальныйНомерПодбора);
							
							РаспределеноАналога = КоличествоАналогаВПорции(СтруктураОтбораПорции);
							
							РасчетноеКоличествоАналога = КоличествоАналогаПоНормативам(СтрокаЗамененныхМатериалов, СтрокаТаблицы.НомерСтроки);
							КоличествоАналогаПоНормативу = ?(РасчетноеКоличествоАналога = 0, КоличествоАналогаЗаменить, РасчетноеКоличествоАналога);
							
							КоличествоКУчетуПоСтроке = КоличествоАналогаПоНормативу - РаспределеноАналога;
						
						КонецЕсли;
						
						Если КоличествоКУчетуПоСтроке > 0 Тогда
						
							ПорцияПодбора = ПорцииПодбора.Добавить();
							ЗаполнитьЗначенияСвойств(ПорцияПодбора, СтрокаТаблицы,, "Количество");
							ПорцияПодбора.Количество = КоличествоКУчетуПоСтроке;
							ПорцияПодбора.НомерПодбора = МаксимальныйНомерПодбора;
							ПорцияПодбора.КлючСвязи = КлючСвязиСтроки;
							ПорцияПодбора.Обособленно = Ложь;
							ПорцияПодбора.Назначение = Справочники.Назначения.ПустаяСсылка();
							ПорцияПодбора.ПодборСверхОстатка = Истина;
							
							КоличествоАналогаЗаменить = КоличествоАналогаЗаменить - КоличествоКУчетуПоСтроке;
							
							Если КоличествоАналогаЗаменить = 0 Тогда
								ЕстьНераспределенноеКоличество = Ложь;
								Прервать;
							КонецЕсли;
						
						КонецЕсли;
						
					КонецЦикла;
					
				КонецЦикла;
				
				Если ЕстьНераспределенноеКоличество Тогда
				
					ПорцияПодбора = ПорцииПодбора.Добавить();
					ЗаполнитьЗначенияСвойств(ПорцияПодбора, СтрокаТаблицы,, "Количество");
					ПорцияПодбора.Количество = КоличествоАналогаЗаменить;
					ПорцияПодбора.НомерПодбора = МаксимальныйНомерПодбора;
					ПорцияПодбора.КлючСвязи = КлючСвязиОстаток;
					ПорцияПодбора.Обособленно = Ложь;
					ПорцияПодбора.Назначение = Справочники.Назначения.ПустаяСсылка();
					ПорцияПодбора.ПодборСверхОстатка = Истина;
				
				КонецЕсли;
			
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЦикла;
	
	Если Подтвердить Тогда
		ОбновитьПодсказкиВозможностьЗамены();
	КонецЕсли;	
	
КонецПроцедуры

&НаСервере
