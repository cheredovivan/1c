&НаКлиентеНаСервереБезКонтекста
Процедура ЗаполнитьОстатокНаСкладе(Форма, Обособленно, Назначение)

	СтруктураПоиска = Новый Структура;
	СтруктураПоиска.Вставить("ЭтоАналог", Истина);
	
	МассивСтрок = Форма.Аналоги.НайтиСтроки(СтруктураПоиска);
	Для Каждого СтрокаТЧ Из МассивСтрок Цикл
		
		СтрокаТЧ.ОстатокНаСкладе = 0;
		СтрокаТЧ.ОстатокНаСкладеПодтверждено = 0;
		
	КонецЦикла;
	
	ПустоеНазначение = ПредопределенноеЗначение("Справочник.Назначения.ПустаяСсылка");
	СтруктураПоиска = Новый Структура("Номенклатура, Характеристика, Склад, ЭтоАналог");
	СтруктураПоиска.ЭтоАналог = Истина;
	РежимОбособленныеОстатки = РежимОтображенияОбособленныеОстатки();
	РежимНеОбособленныеОстатки = РежимОтображенияНеОбособленныеОстатки();
	
	Если Форма.РежимОтображенияОстатков <> РежимОбособленныеОстатки Тогда
	
		ОстаткиПоПустомуНазначению = Форма.ОстаткиАналогов.НайтиСтроки(Новый Структура("Назначение", ПустоеНазначение));
	
		Для Каждого СтрокаОстатков Из ОстаткиПоПустомуНазначению Цикл
			
			ЗаполнитьЗначенияСвойств(СтруктураПоиска, СтрокаОстатков);
			МассивОстатковАналогов = Форма.Аналоги.НайтиСтроки(СтруктураПоиска);
			
			Для Каждого СтрокаАналог Из МассивОстатковАналогов Цикл
				СтрокаАналог.ОстатокНаСкладе = СтрокаОстатков.Свободно;
				СтрокаАналог.ОстатокНаСкладеПодтверждено = СтрокаОстатков.Свободно;
				СтрокаАналог.ЕстьОстатки = СтрокаОстатков.Свободно > 0
			КонецЦикла;
			
		КонецЦикла;
	
	КонецЕсли;
	
	ДоступностьРежимаОстатков = Обособленно ИЛИ ЗначениеЗаполнено(Назначение);
	
	Если Назначение <> ПустоеНазначение
	   И Форма.РежимОтображенияОстатков <> РежимНеОбособленныеОстатки Тогда
	
		ОстаткиПоНазначению = Форма.ОстаткиАналогов.НайтиСтроки(Новый Структура("Назначение", Назначение));
		ПараметрыОтбора = Новый Структура("Номенклатура, Характеристика, Склад, ЭтоАналог");
		ПараметрыОтбора.ЭтоАналог = Истина;
			
		Для Каждого СтрокаОстатков Из ОстаткиПоНазначению Цикл
		
			ЗаполнитьЗначенияСвойств(ПараметрыОтбора, СтрокаОстатков);
			МассивОстатковАналогов = Форма.Аналоги.НайтиСтроки(ПараметрыОтбора);
			
			Для Каждого СтрокаАналог Из МассивОстатковАналогов Цикл
					
				ОбособленныйОстаток = СтрокаОстатков.Свободно;
				
				СтрокаАналог.ОстатокНаСкладе = СтрокаАналог.ОстатокНаСкладе + ОбособленныйОстаток;
				СтрокаАналог.ОстатокНаСкладеПодтверждено = СтрокаАналог.ОстатокНаСкладеПодтверждено + ОбособленныйОстаток;
				
				Если Не СтрокаАналог.ЕстьОстатки Тогда
					СтрокаАналог.ЕстьОстатки = ОбособленныйОстаток > 0;
				Иначе
					СтрокаАналог.ЕстьОстатки = СтрокаАналог.ОстатокНаСкладе > 0;
				КонецЕсли;
				
			КонецЦикла;
			
		КонецЦикла;
		
	КонецЕсли;
	
	Если ДоступностьРежимаОстатков
	   И Назначение = ПустоеНазначение Тогда
	
		ДоступностьРежимаОстатков = Ложь;	
	
	КонецЕсли;
	
	Форма.ДоступностьРежимаОстатков = ДоступностьРежимаОстатков;
	Форма.ОстаткиАналогов.Сортировать("Обособленно УБЫВ");
	УстановитьДоступностьРежимаОтображенияОстатков(Форма);

КонецПроцедуры

