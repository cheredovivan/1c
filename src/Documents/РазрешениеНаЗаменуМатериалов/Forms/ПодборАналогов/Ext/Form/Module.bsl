	Если Режим = 1 Тогда
		СтруктураОтбора.Вставить("ЕстьОстаткиСлужебный", Истина);	
	КонецЕсли;
		
	Отбор = Новый ФиксированнаяСтруктура(СтруктураОтбора);
	
