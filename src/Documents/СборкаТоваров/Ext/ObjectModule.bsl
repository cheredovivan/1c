Процедура ПроверитьКорректностьУказанияПодакцизнойНоменклатуры(Отказ)
	
	Если Отказ
		Или Не ОблагаетсяАкцизом Тогда
		
		Возврат;
		
	КонецЕсли;
	
	ТекстыЗапроса = Новый Массив;
	
	ЧастьТекстаЗапроса =
	"ВЫБРАТЬ
	|	&Номенклатура КАК Номенклатура
	|ПОМЕСТИТЬ ТаблицаКомплекта";
	ТекстыЗапроса.Добавить(ЧастьТекстаЗапроса);
	
	ПараметрыТекстаЗапроса = УчетПодакцизныхТоваров.ПараметрыТекстаЗапросаВТПодакцизныеКатегорииТоваров();
	ПараметрыТекстаЗапроса.ИмяТаблицыТоваров = "ТаблицаКомплекта";
	
	ТекстыЗапроса.Добавить(УчетПодакцизныхТоваров.ТекстЗапросаВТПодакцизныеКатегорииТоваров(, ПараметрыТекстаЗапроса));
	
	ЧастьТекстаЗапроса =
	"ВЫБРАТЬ
	|	ТаблицаТоваров.Номенклатура КАК Номенклатура,
	|	ЕСТЬNULL(ДанныеКатегорий.ПодакцизныйТовар, ЛОЖЬ) КАК ПодакцизныйТовар,
	|	ЕСТЬNULL(ДанныеКатегорий.КатегорияТовара, &ПустаяКатегория) КАК КатегорияТовара
	|ИЗ
	|	ТаблицаКомплекта КАК ТаблицаТоваров
	|		ЛЕВОЕ СОЕДИНЕНИЕ ВТПодакцизныеКатегорииТоваров КАК ДанныеКатегорий
	|		ПО ТаблицаТоваров.Номенклатура = ДанныеКатегорий.Номенклатура
	|;
	|
	|/////////////////////////////////////////////////////////////////////////////
	|УНИЧТОЖИТЬ ВТПодакцизныеКатегорииТоваров
	|;
	|
	|/////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ТаблицаТоваров.НомерСтроки КАК НомерСтроки,
	|	ТаблицаТоваров.Номенклатура КАК Номенклатура
	|ПОМЕСТИТЬ ТаблицаТоваров
	|ИЗ
	|	&ТаблицаТоваров КАК ТаблицаТоваров
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	Номенклатура";
	ТекстыЗапроса.Добавить(ЧастьТекстаЗапроса);
	ТекстыЗапроса.Добавить(УчетПодакцизныхТоваров.ТекстЗапросаВТПодакцизныеКатегорииТоваров());
	
	ЧастьТекстаЗапроса =
	"ВЫБРАТЬ
	|	ТаблицаТоваров.НомерСтроки КАК НомерСтроки,
	|	ТаблицаТоваров.Номенклатура КАК Номенклатура,
	|	ЕСТЬNULL(ДанныеКатегорий.КатегорияТовара, &ПустаяКатегория) КАК КатегорияТовара
	|ИЗ
	|	ТаблицаТоваров КАК ТаблицаТоваров
	|		ЛЕВОЕ СОЕДИНЕНИЕ ВТПодакцизныеКатегорииТоваров КАК ДанныеКатегорий
	|		ПО ТаблицаТоваров.Номенклатура = ДанныеКатегорий.Номенклатура
	|ГДЕ
	|	ЕСТЬNULL(ДанныеКатегорий.ПодакцизныйТовар, ЛОЖЬ)";
	ТекстыЗапроса.Добавить(ЧастьТекстаЗапроса);
	
	ПустаяКатегория		= Справочники.КатегорииПодакцизныхТоваров.ПустаяСсылка();
	СтранаРегистрации	= ЗначениеНастроекКлиентСерверПовтИсп.СтранаРегистрацииОрганизации(Организация);
	
	Запрос = Новый Запрос;
	Запрос.Текст = СтрСоединить(ТекстыЗапроса, ОбщегоНазначения.РазделительПакетаЗапросов());
	
	Запрос.УстановитьПараметр("Дата",				Дата);
	Запрос.УстановитьПараметр("Страна",				СтранаРегистрации);
	Запрос.УстановитьПараметр("Номенклатура",		Номенклатура);
	Запрос.УстановитьПараметр("ПустаяКатегория",	ПустаяКатегория);
	Запрос.УстановитьПараметр("ТаблицаТоваров",		Товары.Выгрузить(, "НомерСтроки, Номенклатура"));
	Запрос.УстановитьПараметр("ИспользоватьПодакцизныеТовары",
								ПолучитьФункциональнуюОпцию("ИспользоватьПодакцизныеТовары"));
	
	РезультатЗапроса = Запрос.ВыполнитьПакет();
	
	ДанныеКомплекта = РезультатЗапроса[2].Выбрать();
	ДанныеКомплекта.Следующий();
	
	ДанныеКомплектующих = РезультатЗапроса[РезультатЗапроса.ВГраница()].Выгрузить();
	КоличествоКомплектующих = ДанныеКомплектующих.Количество();
	
	ЭтоСборка = ХозяйственнаяОперация = Перечисления.ХозяйственныеОперации.СборкаТоваров;
	
	Если ЭтоСборка
		И ДанныеКомплекта.ПодакцизныйТовар
		И КоличествоКомплектующих = 0 Тогда
		
		ТекстСообщения = НСтр("ru = 'В списке ""Комплектующие"" отсутствуют подакцизные комплектующие.
			|Для сборки подакцизного комплекта необходимо указать хотя бы одну подакцизную комплектующую с категорией ""%1"".';
			|en = 'The ""Components"" list does not include any excisable components.
			|To assemble an excisable kit, specify at least one excisable component with ""%1"" category.'");
		ТекстСообщения = СтрШаблон(ТекстСообщения, ДанныеКомплекта.КатегорияТовара);
		
		ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, ЭтотОбъект, , , Отказ);
		
	ИначеЕсли Не (ЭтоСборка
		Или ДанныеКомплекта.ПодакцизныйТовар)
		И КоличествоКомплектующих > 0 Тогда
		
		ИмяПоля		= "Номенклатура";
		ОтборСтрок	= Новый Структура(ИмяПоля);
		
		ШаблонСообщения = НСтр("ru = 'В строке %1 списка ""Комплектующие"" указана подакцизная комплектующая.
			|Такие позиции недопустимы, если выполняется разборка неподакцизного комплекта.';
			|en = 'In line %1 of the ""Components"" list, the excisable component is specified.
			|These items are invalid if the non-excisable kit is being disassembled.'");
		
		Для Каждого ДанныеНоменклатуры Из ДанныеКомплектующих Цикл
			ТекстСообщения = СтрШаблон(ШаблонСообщения, ДанныеНоменклатуры.НомерСтроки);
			Поле = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти("Товары", ДанныеНоменклатуры.НомерСтроки, ИмяПоля);
			ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, ЭтотОбъект, Поле, , Отказ);
		КонецЦикла;
		
	КонецЕсли;
	
	Если Отказ
		Или Не ДанныеКомплекта.ПодакцизныйТовар Тогда
		
		Возврат;
		
	КонецЕсли;
	
	ТекстОперации = ?(ЭтоСборка, НСтр("ru = 'сборка';
										|en = 'kitting'"), НСтр("ru = 'разборка';
															|en = 'disassembly'"));
	
	Если ЗначениеЗаполнено(ДанныеКомплекта.КатегорияТовара) Тогда
		ШаблонСообщения = НСтр("ru = 'В строке %1 списка ""Комплектующие"" указана комплектующая с подакцизной категорией отличной от категории комплекта ""%КатегорияТовара%"".
			|Такие позиции недопустимы, если выполняется %Операция% подакцизного комплекта.';
			|en = 'In line %1 of the ""Components"" list, the excisable component with an excisable category different from the category of the ""%КатегорияТовара%"" kit is specified.
			|These items are invalid if performed %Операция% of the excisable kit.'");
		ШаблонСообщения = СтрЗаменить(ШаблонСообщения, "%КатегорияТовара%", ДанныеКомплекта.КатегорияТовара);
	Иначе
		ШаблонСообщения = НСтр("ru = 'В строке %1 списка ""Комплектующие"" указана комплектующая с подакцизной категорией отличной от категории комплекта.
			|Такие позиции недопустимы, если выполняется %Операция% подакцизного комплекта.';
			|en = 'In line %1 of the ""Components"" list, the excisable component with an excisable category different from the kit category is specified.
			|These items are invalid if %Операция% of the excisable kit is performed.'");
	КонецЕсли;
	
	ШаблонСообщения = СтрЗаменить(ШаблонСообщения, "%Операция%", ТекстОперации);
	
	ИмяПоля		= "Номенклатура";
	ОтборСтрок	= Новый Структура(ИмяПоля);
	
	Для Каждого ДанныеНоменклатуры Из ДанныеКомплектующих Цикл
		Если ДанныеНоменклатуры.КатегорияТовара = ДанныеКомплекта.КатегорияТовара Тогда
			Продолжить;
		КонецЕсли;
		ТекстСообщения = СтрШаблон(ШаблонСообщения, ДанныеНоменклатуры.НомерСтроки);
		Поле = ОбщегоНазначенияКлиентСервер.ПутьКТабличнойЧасти("Товары", ДанныеНоменклатуры.НомерСтроки, ИмяПоля);
		ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, ЭтотОбъект, Поле, , Отказ);
	КонецЦикла;
	
	Если Не Отказ
		И Не ЗначениеЗаполнено(ДанныеКомплекта.КатегорияТовара) Тогда
		
		ТекстОперации			= ?(ЭтоСборка, НСтр("ru = 'собираемого';
													|en = 'assembled'"), НСтр("ru = 'разбираемого';
																				|en = 'disassembled'"));
		ПредставлениеКомплекта	= НоменклатураКлиентСервер.ПредставлениеНоменклатуры(Номенклатура, Характеристика);
		
		ТекстСообщения = НСтр("ru = 'Не задана категория для %1 подакцизного комплекта ""%2"".';
								|en = 'Category for %1 of the ""%2"" excisable kit is not specified.'");
		ТекстСообщения = СтрШаблон(ТекстСообщения, ТекстОперации, ПредставлениеКомплекта);
		
		ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, ЭтотОбъект, , , Отказ);
		
	КонецЕсли;
	
КонецПроцедуры

Процедура ПроверитьКоличествоПодакцизногоКомплекта(Отказ)
	
	Запрос = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ТаблицаТовары.ВидЗапасов КАК ВидЗапасов,
	|	ТаблицаТовары.АналитикаУчетаНоменклатуры КАК АналитикаУчетаНоменклатуры,
	|	ТаблицаТовары.Количество КАК Количество
	|ПОМЕСТИТЬ ВТВидыЗапасовОприходование
	|ИЗ
	|	&ВидыЗапасовОприходование КАК ТаблицаТовары
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	ВидЗапасов,
	|	АналитикаУчетаНоменклатуры
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	ТаблицаТовары.ВидЗапасов КАК ВидЗапасов,
	|	ТаблицаТовары.АналитикаУчетаНоменклатуры КАК АналитикаУчетаНоменклатуры,
	|	ТаблицаТовары.Количество КАК Количество
	|ПОМЕСТИТЬ ВТВидыЗапасовСписание
	|ИЗ
	|	&ВидыЗапасовСписание КАК ТаблицаТовары
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	ВидЗапасов,
	|	АналитикаУчетаНоменклатуры
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	КлючиАналитики.Номенклатура		КАК Номенклатура,
	|	СУММА(ТаблицаТовары.Количество)	КАК Количество
	|ПОМЕСТИТЬ ВидыЗапасовОприходование
	|ИЗ
	|	ВТВидыЗапасовОприходование КАК ТаблицаТовары
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.ВидыЗапасов КАК СправочникВидыЗапасов
	|		ПО ТаблицаТовары.ВидЗапасов = СправочникВидыЗапасов.Ссылка
	|		
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.КлючиАналитикиУчетаНоменклатуры КАК КлючиАналитики
	|		ПО ТаблицаТовары.АналитикаУчетаНоменклатуры = КлючиАналитики.Ссылка
	|ГДЕ
	|	СправочникВидыЗапасов.ОблагаетсяАкцизом
	|
	|СГРУППИРОВАТЬ ПО
	|	КлючиАналитики.Номенклатура
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	Номенклатура
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	КлючиАналитики.Номенклатура		КАК Номенклатура,
	|	СУММА(ТаблицаТовары.Количество)	КАК Количество
	|ПОМЕСТИТЬ ВидыЗапасовСписание
	|ИЗ
	|	ВТВидыЗапасовСписание КАК ТаблицаТовары
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.ВидыЗапасов КАК СправочникВидыЗапасов
	|		ПО ТаблицаТовары.ВидЗапасов = СправочникВидыЗапасов.Ссылка
	|		
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Справочник.КлючиАналитикиУчетаНоменклатуры КАК КлючиАналитики
	|		ПО ТаблицаТовары.АналитикаУчетаНоменклатуры = КлючиАналитики.Ссылка
	|ГДЕ
	|	СправочникВидыЗапасов.ОблагаетсяАкцизом
	|
	|СГРУППИРОВАТЬ ПО
	|	КлючиАналитики.Номенклатура
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	Номенклатура
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	КатегорииТоваров.Номенклатура			КАК Номенклатура,
	|	КатегорииТоваров.КоэффициентПересчета	КАК КоэффициентПересчета,
	|	КатегорииТоваров.КатегорияПодакцизногоТовара КАК КатегорияТовара
	|ПОМЕСТИТЬ ВТПодакцизныеКатегорииТоваров
	|ИЗ
	|	РегистрСведений.КатегорииПодакцизныхТоваров.СрезПоследних(
	|			&Дата,
	|			Страна = &Страна
	|			И Номенклатура В
	|				(ВЫБРАТЬ РАЗЛИЧНЫЕ
	|					ТаблицаТоваров.Номенклатура КАК Номенклатура
	|				ИЗ
	|					ВидыЗапасовОприходование КАК ТаблицаТоваров
	|				
	|				ОБЪЕДИНИТЬ ВСЕ
	|				
	|				ВЫБРАТЬ РАЗЛИЧНЫЕ
	|					ТаблицаТоваров.Номенклатура КАК Номенклатура
	|				ИЗ
	|					ВидыЗапасовСписание КАК ТаблицаТоваров)
	|		) КАК КатегорииТоваров
	|
	|ГДЕ
	|	КатегорииТоваров.ПодакцизныйТовар
	|
	|ИНДЕКСИРОВАТЬ ПО
	|	Номенклатура
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	СУММА(ТаблицаТовары.Количество * ДанныеКатегорий.КоэффициентПересчета) КАК Количество
	|ИЗ
	|	ВидыЗапасовОприходование КАК ТаблицаТовары
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ ВТПодакцизныеКатегорииТоваров КАК ДанныеКатегорий
	|		ПО ТаблицаТовары.Номенклатура = ДанныеКатегорий.Номенклатура
	|
	|ИМЕЮЩИЕ
	|	СУММА(ТаблицаТовары.Количество * ДанныеКатегорий.КоэффициентПересчета) > 0
	|;
	|
	|////////////////////////////////////////////////////////////////////////////////
	|ВЫБРАТЬ
	|	СУММА(ТаблицаТовары.Количество * ДанныеКатегорий.КоэффициентПересчета) КАК Количество
	|ИЗ
	|	ВидыЗапасовСписание КАК ТаблицаТовары
	|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ ВТПодакцизныеКатегорииТоваров КАК ДанныеКатегорий
	|		ПО ТаблицаТовары.Номенклатура = ДанныеКатегорий.Номенклатура
	|
	|ИМЕЮЩИЕ
	|	СУММА(ТаблицаТовары.Количество * ДанныеКатегорий.КоэффициентПересчета) > 0";
	
	ВыгружаемыеКолонки = "ВидЗапасов, АналитикаУчетаНоменклатуры, Количество";
	
	СтранаРегистрации = ЗначениеНастроекКлиентСерверПовтИсп.СтранаРегистрацииОрганизации(Организация);
	
	Запрос.УстановитьПараметр("Дата",	Дата);
	Запрос.УстановитьПараметр("Страна",	СтранаРегистрации);
	Запрос.УстановитьПараметр("ВидыЗапасовСписание",		ВидыЗапасовСписание.Выгрузить(, ВыгружаемыеКолонки));
	Запрос.УстановитьПараметр("ВидыЗапасовОприходование",	ВидыЗапасовОприходование.Выгрузить(, ВыгружаемыеКолонки));
	
	РезультатЗапроса = Запрос.ВыполнитьПакетСПромежуточнымиДанными();
	
	КоличествоСписания		= 0;
	КоличествоОприходования	= 0;
	
	Если Не РезультатЗапроса[РезультатЗапроса.ВГраница()].Пустой() Тогда
		ДанныеСписания = РезультатЗапроса[РезультатЗапроса.ВГраница()].Выбрать();
		ДанныеСписания.Следующий();
		
		КоличествоСписания = ДанныеСписания.Количество;
	КонецЕсли;
	
	Если Не РезультатЗапроса[РезультатЗапроса.ВГраница() - 1].Пустой() Тогда
		ДанныеОприходования = РезультатЗапроса[РезультатЗапроса.ВГраница() - 1].Выбрать();
		ДанныеОприходования.Следующий();
		
		КоличествоОприходования = ДанныеОприходования.Количество;
	КонецЕсли;
	
	ТекстОперации			= ?(ХозяйственнаяОперация = Перечисления.ХозяйственныеОперации.СборкаТоваров,
								НСтр("ru = 'собираемого';
									|en = 'assembled'"),
								НСтр("ru = 'разбираемого';
									|en = 'disassembled'"));
	ПредставлениеКомплекта	= НоменклатураКлиентСервер.ПредставлениеНоменклатуры(Номенклатура, Характеристика);
	
	Если КоличествоОприходования = 0
		И КоличествоСписания = КоличествоОприходования Тогда
		
		ТекстСообщения = НСтр("ru = 'Не задан коэффициент пересчета для %1 подакцизного комплекта ""%2"".';
								|en = 'Conversion ratio for %1 of the ""%2"" excisable kit is not specified.'");
		ТекстСообщения = СтрШаблон(ТекстСообщения, ТекстОперации, ПредставлениеКомплекта);
		
		ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, ЭтотОбъект, , , Отказ);
		
	ИначеЕсли КоличествоСписания <> КоличествоОприходования Тогда
		
		ДанныеКатегорий = РезультатЗапроса[РезультатЗапроса.ВГраница() - 2].Выгрузить();
		ДанныеКатегорий.Индексы.Добавить("Номенклатура");
		
		ОтборСтрок = Новый Структура("Номенклатура", Номенклатура);
		КатегорииКомплекта = ДанныеКатегорий.НайтиСтроки(ОтборСтрок);
		
		КатегорияТовара = Строка(КатегорииКомплекта[0].КатегорияТовара);
		
		ТекстСообщения = НСтр("ru = 'Количество %1 подакцизного комплекта ""%2"" не соответствует количеству подакцизных комплектующих в единице измерения подакцизной категории ""%3"" по подразделению ""%4"".';
								|en = 'The %1 quantity of the ""%2"" excisable kit does not match the quantity of excisable components in the unit of measure of the ""%3"" excisable category for the ""%4"" business unit.'");
		ТекстСообщения = СтрШаблон(ТекстСообщения, ТекстОперации, ПредставлениеКомплекта, КатегорияТовара,
			ПодразделениеПроизводства);
		
		ОбщегоНазначения.СообщитьПользователю(ТекстСообщения, ЭтотОбъект, , , Отказ);
		
	КонецЕсли;
	
КонецПроцедуры
