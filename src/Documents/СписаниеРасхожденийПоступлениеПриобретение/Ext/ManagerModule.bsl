			ЭлементБлокировки.Режим = РежимБлокировкиДанных.Исключительный;
			
			Блокировка.Заблокировать();
			
			ДокументОбъект = Документ.Ссылка.ПолучитьОбъект(); // ДокументОбъект.СписаниеРасхожденийПоступлениеПриобретение - 
			
			Если ДокументОбъект <> Неопределено Тогда
				Запрос.УстановитьПараметр("Ссылка", ДокументОбъект.Ссылка);
				
				РезультатЗапроса = Запрос.Выполнить();
				
				Если Не РезультатЗапроса.Пустой() Тогда
					Выборка = РезультатЗапроса.Выбрать();
					
					Пока Выборка.Следующий() Цикл
						СтрокаРасхождения = ДокументОбъект.Расхождения[Выборка.НомерСтроки - 1];
						СтрокаРасхождения.СтатусУказанияСерийТоварыУПартнеров = ?(ЗначениеЗаполнено(СтрокаРасхождения.Серия),
