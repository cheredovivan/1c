&НаСервере
Процедура УстановитьПараметрСпискаАктов()
	
	ПараметрыИсправленного = Неопределено;
	ЭтоИсправление = ИсправлениеДокументовЗарплатаКадрыКлиентСервер.ЭтоИсправление(ЭтотОбъект, ПараметрыИсправленного);
	
	Если ЭтоИсправление Тогда
		Если ЗначениеЗаполнено(Объект.Ссылка) Тогда
			ПоследнийВЦепочке = Объект.Ссылка;
		Иначе
			ПоследнийВЦепочке = ПараметрыИсправленного.Ссылка;
		КонецЕсли;
		Договоры = ИсправлениеДокументовЗарплатаКадры.ПолучитьДокументыЦепочкиИсправлений(ПоследнийВЦепочке);
		Договоры.Добавить(ПоследнийВЦепочке);
	Иначе
		Договоры = Новый Массив;
		Договоры.Добавить(Объект.Ссылка);
	КонецЕсли;
	
	Акты.Параметры.УстановитьЗначениеПараметра("Договоры", Договоры);
	
