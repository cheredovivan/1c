Процедура ЗаполнитьПараметрыИнициализацииПоСсылке(Запрос, ТекстыЗапроса, ДокументОбъект)
	
	МенеджерВременныхТаблиц = Запрос.МенеджерВременныхТаблиц;
	
	ТекстыЗапросаВременный = Новый СписокЗначений;
	
	Если Не ПроведениеДокументов.ЕстьТаблицаЗапроса(
				"ДанныеДокументаШапка", ТекстыЗапросаВременный, МенеджерВременныхТаблиц) Тогда
		ТекстЗапросаДанныеДокументаШапка(Запрос, ТекстыЗапросаВременный, ДокументОбъект);
	КонецЕсли;
	
	Если ТекстыЗапросаВременный.Количество() > 0 Тогда
		
		Запрос.Текст = ТекстыЗапросаВременный[0].Значение;
		
		УстановитьПривилегированныйРежим(Истина);
		Запрос.Выполнить();
		УстановитьПривилегированныйРежим(Ложь);
		
	КонецЕсли;
	
	Результат = Запрос.МенеджерВременныхТаблиц.Таблицы["ДанныеДокументаШапка"].ПолучитьДанные();
	Реквизиты = Результат.Выбрать();
	Реквизиты.Следующий();
	
	Для каждого Колонка Из Результат.Колонки Цикл
		
		ИмяПоля = Колонка.Имя;
		
		Запрос.УстановитьПараметр(ИмяПоля, Реквизиты[ИмяПоля]);
		
		Если ИмяПоля = "Дата" Тогда
			Запрос.УстановитьПараметр("Период", Реквизиты[ИмяПоля]);
		КонецЕсли;
		
	КонецЦикла;
	
	НакладнаяЯвляетсяРаспоряжением = ЗакупкиСервер.РаспоряжениеНаПриемкуТовараНакладная(Реквизиты.ВариантПриемкиТоваров);
	
