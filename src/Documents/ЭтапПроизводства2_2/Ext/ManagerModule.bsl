// Возвращает статусы документа, в которых доступно выполнение производственных операций.
//
// Параметры:
//  Параметры	 - ДанныеФормыСтруктура, Структура	 - структура, содержащая параметры подразделения.
//
// Возвращаемое значение:
//  Массив - массив статусов документа.
//
Функция СтатусыДоступноВыполнениеОпераций(Параметры) Экспорт
	
	Результат = Новый Массив;
	
	Если Параметры.ИспользоватьСменныеЗадания
		ИЛИ Параметры.ИспользоватьПооперационноеПланирование Тогда
		Результат.Добавить(Перечисления.СтатусыЭтаповПроизводства2_2.КВыполнению);
	КонецЕсли;
	Результат.Добавить(Перечисления.СтатусыЭтаповПроизводства2_2.Начат);
	
	Возврат Результат;
	
КонецФункции

// Возвращает данные этапов для расчета очереди производственных операций.
//
// Параметры:
//  Ссылки - ДокументСсылка.ЭтапПроизводства2_2, Массив из ДокументСсылка.ЭтапПроизводства2_2 - этап производства.
//  ИспользоватьТекущуюОчередьОпераций - Неопределено,Булево - необходимость включить в результат существующий перечень операций из регистра очереди
//
// Возвращаемое значение:
//  Соответствие из КлючИЗначение:
//   * Ключ - ДокументСсылка.ЭтапПроизводства2_2 - ссылка на этап.
//   * Значение - Структура:
//        * Ключ - Строка - имя свойства.
//        * Значение - Строка - значение свойства.
//
Функция ДанныеДляРасчетаОчередиОпераций(Ссылки, ИспользоватьТекущуюОчередьОпераций = Неопределено) Экспорт
	
	ТекстЗапроса = "
	|ВЫБРАТЬ
	|	РеквизитыДокумента.Ссылка                        КАК Ссылка,
	|	РеквизитыДокумента.Проведен                      КАК Проведен,
	|	РеквизитыДокумента.Статус                        КАК Статус,
	|	РеквизитыДокумента.Распоряжение                  КАК Распоряжение,
	|	РеквизитыДокумента.Подразделение                 КАК Подразделение,
	|	РеквизитыДокумента.Спецификация                  КАК Спецификация,
	|	РеквизитыДокумента.Этап                          КАК ЭтапСпецификации,
	|	РеквизитыДокумента.НаправлениеДеятельности       КАК НаправлениеДеятельности,
	|
	|	РеквизитыДокумента.ПартияПроизводства                                                                      КАК ПартияПроизводства,
	|	РеквизитыДокумента.ПартияПроизводства.ОсновноеИзделиеНоменклатура                                          КАК Номенклатура,
	|	РеквизитыДокумента.ПартияПроизводства.ОсновноеИзделиеХарактеристика                                        КАК Характеристика,
	|	ВЫРАЗИТЬ(РеквизитыДокумента.ПартияПроизводства.Документ КАК Документ.ЗаказНаПроизводство2_2).Подразделение КАК ПодразделениеДиспетчер,
	|	ВЫРАЗИТЬ(РеквизитыДокумента.ПартияПроизводства.Документ КАК Документ.ЗаказНаПроизводство2_2).НачатьНеРанее КАК НачалоПроизводства,
	|
	|	РеквизитыДокумента.КоличествоУпаковокПлан  КАК КоличествоУпаковокПлан,
	|	РеквизитыДокумента.УпаковкаПлан            КАК УпаковкаПлан,
	|	ЕСТЬNULL(&КоэффициентУпаковки, 1)          КАК КоэффициентУпаковки,
	|
	|	ЕСТЬNULL(Техпроцесс.ИдентификаторПервойОперации, 0)     КАК ИдентификаторПервойОперации,
	|	ЕСТЬNULL(Техпроцесс.ИдентификаторПоследнейОперации, 0)  КАК ИдентификаторПоследнейОперации,
	|	ЕСТЬNULL(Техпроцесс.ОтмененоПоследняяОперация, 0)       КАК ОтмененоПоследняяОперация,
	|	&ПараметрыТехпроцесса,
	|
	|	ЕСТЬNULL(РеквизитыДокумента.Подразделение.ИспользоватьПооперационноеУправление, ЛОЖЬ) КАК ИспользоватьПооперационноеУправление,
	|	ЕСТЬNULL(РеквизитыДокумента.Подразделение.ИспользоватьСменныеЗадания, ЛОЖЬ) КАК ИспользоватьСменныеЗадания,
	|	ЕСТЬNULL(РеквизитыДокумента.Подразделение.ИспользоватьПооперационноеПланирование, ЛОЖЬ) КАК ИспользоватьПооперационноеПланирование,
	|
	|	ЛОЖЬ КАК ЕстьНезавершенныеОперации
	|
	|ИЗ
	|	Документ.ЭтапПроизводства2_2 КАК РеквизитыДокумента
	|
	|	ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.ТехнологическиеПроцессыЭтаповПроизводства КАК Техпроцесс
	|	ПО РеквизитыДокумента.Ссылка = Техпроцесс.Этап
	|
	|ГДЕ
	|	РеквизитыДокумента.Ссылка В (&Ссылки)
	|";
	
	ТекстЗапросаКоэффициентУпаковки = Справочники.УпаковкиЕдиницыИзмерения.ТекстЗапросаКоэффициентаУпаковки(
		"РеквизитыДокумента.УпаковкаПлан",
		"РеквизитыДокумента.ПартияПроизводства.ОсновноеИзделиеНоменклатура");
		
	ТекстЗапроса = СтрЗаменить(
		ТекстЗапроса,
		"&КоэффициентУпаковки",
		ТекстЗапросаКоэффициентУпаковки);
		
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса,
		"&ПараметрыТехпроцесса",
		РедакторПроизводственногоПроцесса.ТекстЗапросаПараметрыТехпроцессаЭтапа());
		
	ТекстыЗапросов = Новый Массив;
	ТекстыЗапросов.Добавить(ТекстЗапроса);
	
	ПараметрыТекстаЗапроса = РегистрыСведений.ОчередьПроизводственныхОпераций.ПараметрыТекстаЗапросаОчередьОпераций();
	ПараметрыТекстаЗапроса.РеквизитыИсполнителяОперации = Истина;
	ПараметрыТекстаЗапроса.РеквизитыРасчетаВремениВыполненияОперации = Истина;
	ПараметрыТекстаЗапроса.РеквизитыОперацииРасширенные = Истина;
	ПараметрыТекстаЗапроса.ПоказателиВыполнения = Истина;
	ПараметрыТекстаЗапроса.Отборы.Добавить("Очередь.Этап В (&Ссылки)");
	ТекстыЗапросов.Добавить(РегистрыСведений.ОчередьПроизводственныхОпераций.ТекстЗапросаОчередьОпераций(ПараметрыТекстаЗапроса));
	
	Запрос = Новый Запрос;
	Запрос.Текст = СтрСоединить(ТекстыЗапросов, ОбщегоНазначения.РазделительПакетаЗапросов());
	Запрос.УстановитьПараметр("Ссылки", Ссылки);
	
	УстановитьПривилегированныйРежим(Истина);
	Результаты = Запрос.ВыполнитьПакет();
	УстановитьПривилегированныйРежим(Ложь);
	
	ОперацииЭтапов = Результаты[1].Выгрузить();
	ОперацииЭтапов.Индексы.Добавить("Этап");
	
	Выборка = Результаты[0].Выбрать();
	
	Результат = Новый Соответствие();
	
	Пока Выборка.Следующий() Цикл
		ДанныеЭтапа = Новый Структура(
			"Ссылка,
			|Проведен,
			|Статус,
			|Распоряжение,
			|Подразделение,
			|Спецификация,
			|ЭтапСпецификации,
			|НаправлениеДеятельности,
			|ПодразделениеДиспетчер,
			|НачалоПроизводства,
			|НаправлениеДеятельности,
			|ПодразделениеДиспетчер,
			|НачалоПроизводства,
			|ТипТехнологическогоПроцесса,
			|ТехнологическийПроцесс,
			|КоэффициентТехнологическогоПроцесса,
			|ИдентификаторПервойОперации,
			|ИдентификаторПоследнейОперации,
			|ОтмененоПоследняяОперация,
			|ПартияПроизводства,
			|Номенклатура,
			|Характеристика,
			|КоличествоУпаковокПлан,
			|КоэффициентУпаковки,
			|ТребуетсяРассчитать,
			|ИспользоватьПооперационноеУправление,
			|ИспользоватьСменныеЗадания,
			|ИспользоватьПооперационноеПланирование,
			|ЕстьТехнологическиеОперации,
			|ЕстьНезавершенныеОперации,
			|ВАрхиве");
		ЗаполнитьЗначенияСвойств(ДанныеЭтапа, Выборка);
		СтрокиОперации = ОперацииЭтапов.НайтиСтроки(Новый Структура("Этап", Выборка.Ссылка));
		Если СтрокиОперации.Количество() > 0 Тогда
			ТаблицаОпераций = Справочники.ТехнологическиеОперации.ТаблицаОперацииКонструктор();
			Для каждого СтрокаОперация Из СтрокиОперации Цикл
				Если ИспользоватьТекущуюОчередьОпераций = Истина
					ИЛИ (ИспользоватьТекущуюОчередьОпераций = Неопределено
						И Выборка.ТипТехнологическогоПроцесса = Перечисления.ТипыТехнологическихПроцессовЭтапа.Индивидуальный) Тогда
					НоваяСтрока = ТаблицаОпераций.Добавить();
					ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаОперация);
					НоваяСтрока.ОперацияПредставление = СтрокаОперация.Наименование;
					Коэффициент = ?(НоваяСтрока.КоэффициентТехнологическогоПроцесса > 1, НоваяСтрока.КоэффициентТехнологическогоПроцесса, 1);
					ОперативныйУчетПроизводстваКлиентСервер.РассчитатьОбщееВремяВыполненияОперации(НоваяСтрока, Коэффициент);
				КонецЕсли;
				Если СтрокаОперация.Запланировано > СтрокаОперация.Выполнено + СтрокаОперация.Пропущено + СтрокаОперация.Брак Тогда
					ДанныеЭтапа.ЕстьНезавершенныеОперации = Истина;
				КонецЕсли;
			КонецЦикла;
			Если ТаблицаОпераций.Количество() > 0 Тогда
				ТаблицаОпераций.Сортировать("НомерОперации,ОперацияПредставление");
				ДанныеЭтапа.Вставить("Операции", ТаблицаОпераций);
			КонецЕсли;
		КонецЕсли;
		ДанныеЭтапа.ТребуетсяРассчитать = РеквизитОчередьТребуетсяРассчитать(ДанныеЭтапа);
		ДанныеЭтапа.ВАрхиве = РеквизитОчередьВАрхиве(ДанныеЭтапа);
		Результат.Вставить(Выборка.Ссылка, ДанныеЭтапа);
	КонецЦикла;
	
	Возврат Результат;
	
КонецФункции

// Формирует массив из ДокументСсылка.ЭтапПроизводства2_2 требующих  расчета очереди производственных операций.
//  При этом будет анализироваться состояние операций по этапу, когда это не пакетное создание этапов.
//
// Параметры:
//  Ссылки - ДокументСсылка.ЭтапПроизводства2_2, Массив из ДокументСсылка.ЭтапПроизводства2_2 - этап производства.
//  ЭтоНеПакетноеФормированиеЭтапов - Булево - признак запуска из точки изменения этапов (а не их пакетнтного создания)
//
// Возвращаемое значение:
//  Массив из ДокументСсылка.ЭтапПроизводства2_2 
//
Функция ТребуетсяРассчитатьОчередьОпераций(Знач Ссылки, ЭтоНеПакетноеФормированиеЭтапов = Ложь) Экспорт
	
	МассивЭтаповДляРасчетаОчереди = Новый Массив;
	
	ТекстЗапроса = "
	|ВЫБРАТЬ
	|	РеквизитыДокумента.Ссылка                        КАК Ссылка,
	|	РеквизитыДокумента.Проведен                      КАК Проведен,
	|	РеквизитыДокумента.Статус                        КАК Статус,
	|	&ПараметрыТехпроцесса,
	|
	|	ЕСТЬNULL(РеквизитыДокумента.Подразделение.ИспользоватьПооперационноеУправление, ЛОЖЬ) КАК ИспользоватьПооперационноеУправление,
	|	ЕСТЬNULL(РеквизитыДокумента.Подразделение.ИспользоватьСменныеЗадания, ЛОЖЬ) КАК ИспользоватьСменныеЗадания,
	|	ЕСТЬNULL(РеквизитыДокумента.Подразделение.ИспользоватьПооперационноеПланирование, ЛОЖЬ) КАК ИспользоватьПооперационноеПланирование,
	|
	|	ЛОЖЬ КАК ЕстьНезавершенныеОперации
	|
	|ИЗ
	|	Документ.ЭтапПроизводства2_2 КАК РеквизитыДокумента
	|
	|	ЛЕВОЕ СОЕДИНЕНИЕ РегистрСведений.ТехнологическиеПроцессыЭтаповПроизводства КАК Техпроцесс
	|	ПО РеквизитыДокумента.Ссылка = Техпроцесс.Этап
	|
	|ГДЕ
	|	РеквизитыДокумента.Ссылка В (&Ссылки)
	|";
	
	ТекстЗапроса = СтрЗаменить(ТекстЗапроса,
		"&ПараметрыТехпроцесса",
		РедакторПроизводственногоПроцесса.ТекстЗапросаПараметрыТехпроцессаЭтапа(,, 
							"ТипТехнологическогоПроцесса, ЕстьТехнологическиеОперации"));
		
	Если ЭтоНеПакетноеФормированиеЭтапов Тогда
			
		ТекстыЗапросов = Новый Массив;
		ТекстыЗапросов.Добавить(ТекстЗапроса);
		
		ПараметрыТекстаЗапроса = РегистрыСведений.ОчередьПроизводственныхОпераций.ПараметрыТекстаЗапросаОчередьОпераций();
		ПараметрыТекстаЗапроса.ПоказателиВыполнения = Истина;
		ПараметрыТекстаЗапроса.Отборы.Добавить("Очередь.Этап В (&Ссылки)");
		ТекстыЗапросов.Добавить(РегистрыСведений.ОчередьПроизводственныхОпераций.ТекстЗапросаОчередьОпераций(ПараметрыТекстаЗапроса));
		
		Запрос = Новый Запрос;
		Запрос.Текст = СтрСоединить(ТекстыЗапросов, ОбщегоНазначения.РазделительПакетаЗапросов());
		Запрос.УстановитьПараметр("Ссылки", Ссылки);
		
		УстановитьПривилегированныйРежим(Истина);
		Результаты = Запрос.ВыполнитьПакет();
		УстановитьПривилегированныйРежим(Ложь);
		
		ОперацииЭтапов = Результаты[1].Выгрузить();
		ОперацииЭтапов.Индексы.Добавить("Этап");
		
		Выборка = Результаты[0].Выбрать();
		
	Иначе
		
		Запрос = Новый Запрос;
		Запрос.Текст = ТекстЗапроса;
		Запрос.УстановитьПараметр("Ссылки", Ссылки);

		УстановитьПривилегированныйРежим(Истина);
		РезультатЗапроса = Запрос.Выполнить();
		УстановитьПривилегированныйРежим(Ложь);
		
		Выборка = РезультатЗапроса.Выбрать();
		
	КонецЕсли;
	
	Пока Выборка.Следующий() Цикл
		
		ДанныеЭтапа = Новый Структура(
			"Проведен,
			|Статус,
			|ИспользоватьПооперационноеУправление,
			|ИспользоватьСменныеЗадания,
			|ИспользоватьПооперационноеПланирование,
			|ЕстьТехнологическиеОперации,
			|ЕстьНезавершенныеОперации");
		ЗаполнитьЗначенияСвойств(ДанныеЭтапа, Выборка); 
		Если ЭтоНеПакетноеФормированиеЭтапов Тогда
			
			СтрокиОперации = ОперацииЭтапов.НайтиСтроки(Новый Структура("Этап", Выборка.Ссылка));
			Если СтрокиОперации.Количество() > 0  Тогда
				Для каждого СтрокаОперация Из СтрокиОперации Цикл
					Если СтрокаОперация.Запланировано > СтрокаОперация.Выполнено + СтрокаОперация.Пропущено + СтрокаОперация.Брак Тогда
						ДанныеЭтапа.ЕстьНезавершенныеОперации = Истина;
						Прервать;
					КонецЕсли;
				КонецЦикла;
			КонецЕсли;
			
		КонецЕсли;
		
		Если РеквизитОчередьТребуетсяРассчитать(ДанныеЭтапа) Тогда
			МассивЭтаповДляРасчетаОчереди.Добавить(Выборка.Ссылка);
		КонецЕсли;
		
	КонецЦикла;
	
	Возврат МассивЭтаповДляРасчетаОчереди;
	
КонецФункции

