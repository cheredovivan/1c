&НаСервереБезКонтекста
Функция СправкаИспользованаВЗаявках(Заявка, Справка)
	
	Результат = Новый Структура("Используется,СообщениеПроверки", Ложь);
	
	Запрос = Новый Запрос;
	Запрос.УстановитьПараметр("Справка", Справка);
	Запрос.УстановитьПараметр("Заявка", Заявка);
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ДокументыПоЗаявкам.Заявка КАК Заявка
	|ИЗ
	|	РегистрСведений.ДокументыПоЗаявкамКабинетСотрудника КАК ДокументыПоЗаявкам
	|ГДЕ
	|	ДокументыПоЗаявкам.ДокументПоЗаявке = &Справка
	|	И ДокументыПоЗаявкам.Заявка <> &Заявка";
	ДанныеПоСправке = Запрос.Выполнить().Выгрузить();
	Если ДанныеПоСправке.Количество() > 0 Тогда
		Результат.Используется = Истина;
		ШаборнТекста = НСтр("ru = '%1 использована в заявке %2, выберите другой документ или создайте новый';
							|en = '%1 is used in the %2 request, select another document or create a new one'");
		СообщениеПроверки = СтрШаблон(ШаборнТекста, Строка(Справка), Строка(ДанныеПоСправке[0].Заявка));
		Результат.СообщениеПроверки = СообщениеПроверки;
	КонецЕсли;
	
	Возврат Результат;

КонецФункции

