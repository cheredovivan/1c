&НаКлиентеНаСервереБезКонтекста
Процедура НастроитьЗависимыеЭлементыФормыНаКлиентеНаСервере(Знач Форма, Знач ИзмененныеРеквизиты = "")

	Объект = Форма.Объект;
	Элементы = Форма.Элементы;
	СлужебныеПараметрыФормы = Форма.СлужебныеПараметрыФормы;
	
	ВспомогательныеРеквизиты = Новый Структура;
	ВспомогательныеРеквизиты.Вставить("ВедетсяРегламентированныйУчетВНА", СлужебныеПараметрыФормы.ВедетсяРегламентированныйУчетВНА);
	ВспомогательныеРеквизиты.Вставить("ВалютыСовпадают", СлужебныеПараметрыФормы.ВалютыСовпадают);
	ВспомогательныеРеквизиты.Вставить("РеглУчетВНАВедетсяНезависимо", СлужебныеПараметрыФормы.РеглУчетВНАВедетсяНезависимо);
	
	ПараметрыРеквизитовОбъекта = ВнеоборотныеАктивыКлиентСервер.ЗначенияСвойствЗависимыхРеквизитов_ПереоценкаОС(
										Объект, ВспомогательныеРеквизиты, ИзмененныеРеквизиты);
	
	ОбщегоНазначенияУТКлиентСервер.НастроитьЗависимыеЭлементыФормы(Форма, ПараметрыРеквизитовОбъекта);
	
	СтруктураИзмененныхРеквизитов = Новый Структура(ИзмененныеРеквизиты);
	
	ОбновитьВсе = СтруктураИзмененныхРеквизитов.Количество() = 0;
	
	Если НЕ ОбновитьВсе Тогда
		ОбщегоНазначенияУТКлиентСервер.ОчиститьНеиспользуемыеРеквизиты(Объект, ПараметрыРеквизитовОбъекта, "ОС");
	КонецЕсли;
	
	Если СтруктураИзмененныхРеквизитов.Свойство("Организация")
		ИЛИ СтруктураИзмененныхРеквизитов.Свойство("Дата")
		ИЛИ СтруктураИзмененныхРеквизитов.Свойство("ОтражатьВУпрУчете")
		ИЛИ СтруктураИзмененныхРеквизитов.Свойство("ОтражатьВРеглУчете")
		ИЛИ ОбновитьВсе Тогда
		
		Элементы.ВариантОтраженияВУчете.Видимость = СлужебныеПараметрыФормы.РеглУчетВНАВедетсяНезависимо;
		
		Если НЕ СлужебныеПараметрыФормы.РеглУчетВНАВедетсяНезависимо 
			И НЕ ОбновитьВсе Тогда
			
			Форма.ВариантОтраженияВУчете = ПредопределенноеЗначение("Перечисление.ВариантыОтраженияВУчетеВнеоборотныхАктивов.УправленческомИРегламентированномУчетах");
			Объект.ОтражатьВРеглУчете = Истина;
			Объект.ОтражатьВУпрУчете = Истина;
		КонецЕсли;
		
		Элементы.СпособПереоценки.Видимость = 
			Объект.ОтражатьВУпрУчете
				И СлужебныеПараметрыФормы.НастройкиУчета.ПорядокУчетаВНА = ПредопределенноеЗначение("Перечисление.ПорядокУчетаВНА.ПоСтандартамМУ")
				И СлужебныеПараметрыФормы.НастройкиУчета.МетодПереоценкиОС = ПредопределенноеЗначение("Перечисление.МетодыПереоценкиВНА.МетодПропорциональногоПересчета")
			ИЛИ Объект.ОтражатьВРеглУчете
				И СлужебныеПараметрыФормы.НастройкиУчета.ПрименяетсяФСБУ6
				И СлужебныеПараметрыФормы.НастройкиУчета.МетодПереоценкиОСРегл = ПредопределенноеЗначение("Перечисление.МетодыПереоценкиВНА.МетодПропорциональногоПересчета");
				
		Если Объект.ОтражатьВУпрУчете
			И Объект.ОтражатьВРеглУчете
			И СлужебныеПараметрыФормы.ВедетсяРегламентированныйУчетВНА
			И СлужебныеПараметрыФормы.НастройкиУчета.ПорядокУчетаВНА = ПредопределенноеЗначение("Перечисление.ПорядокУчетаВНА.ПоСтандартамМУ")
			И СлужебныеПараметрыФормы.НастройкиУчета.МетодПереоценкиОС = ПредопределенноеЗначение("Перечисление.МетодыПереоценкиВНА.МетодПропорциональногоПересчета")
			И (НЕ СлужебныеПараметрыФормы.НастройкиУчета.ПрименяетсяФСБУ6
				ИЛИ СлужебныеПараметрыФормы.НастройкиУчета.МетодПереоценкиОСРегл = ПредопределенноеЗначение("Перечисление.МетодыПереоценкиВНА.СальдовыйМетод")) Тогда
			
			Элементы.СпособПереоценки.Заголовок = НСтр("ru = 'Способ переоценки (упр)';
														|en = 'Способ переоценки (упр)'");
			
		ИначеЕсли Объект.ОтражатьВУпрУчете
			И СлужебныеПараметрыФормы.ВедетсяРегламентированныйУчетВНА
			И СлужебныеПараметрыФормы.НастройкиУчета.ПрименяетсяФСБУ6
			И СлужебныеПараметрыФормы.НастройкиУчета.МетодПереоценкиОСРегл = ПредопределенноеЗначение("Перечисление.МетодыПереоценкиВНА.МетодПропорциональногоПересчета")
			И (НЕ СлужебныеПараметрыФормы.НастройкиУчета.ПрименяетсяФСБУ6
				ИЛИ СлужебныеПараметрыФормы.НастройкиУчета.МетодПереоценкиОС = ПредопределенноеЗначение("Перечисление.МетодыПереоценкиВНА.СальдовыйМетод")) Тогда
			
			Элементы.СпособПереоценки.Заголовок = НСтр("ru = 'Способ переоценки (регл)';
														|en = 'Способ переоценки (регл)'");
			
		Иначе
			Элементы.СпособПереоценки.Заголовок = НСтр("ru = 'Способ переоценки';
														|en = 'Способ переоценки'");
		КонецЕсли;
		
	КонецЕсли;
	
	Если СтруктураИзмененныхРеквизитов.Свойство("СпособОтраженияРасходов") 
		ИЛИ ОбновитьВсе Тогда
			
		ВнеоборотныеАктивыКлиентСервер.НастроитьЭлементыПоСпособуОтраженияРасходов(
			Объект.СпособОтраженияРасходов,
			Форма, 
			"СтатьяРасходов,АналитикаРасходов,ПодразделениеРасходов,НаправлениеДеятельностиРасходов,ПодразделениеИНаправлениеДеятельностиСовпадаютСДаннымиУчета");
	
	КонецЕсли;
	
	Если СтруктураИзмененныхРеквизитов.Свойство("Организация")
		ИЛИ СтруктураИзмененныхРеквизитов.Свойство("Дата")
		ИЛИ СтруктураИзмененныхРеквизитов.Свойство("ПереоценкаПоСправедливойСтоимости")
		ИЛИ ОбновитьВсе Тогда
		
		Если Объект.ПереоценкаПоСправедливойСтоимости
			ИЛИ СлужебныеПараметрыФормы.НастройкиУчета.МетодПереоценкиОС = ПредопределенноеЗначение("Перечисление.МетодыПереоценкиВНА.СальдовыйМетод") Тогда
			
			Элементы.ОССтоимостьУУ.Заголовок = СтрШаблон(НСтр("ru = 'Справедливая стоимость упр. (%1)';
																|en = 'Справедливая стоимость упр. (%1)'"), СлужебныеПараметрыФормы.ВалютаУпрПредставление);
				
		Иначе
			
			Элементы.ОССтоимостьУУ.Заголовок = СтрШаблон(НСтр("ru = 'Восстановительная стоимость упр. (%1)';
																|en = 'Восстановительная стоимость упр. (%1)'"), СлужебныеПараметрыФормы.ВалютаУпрПредставление);
			
		КонецЕсли;
		
		Если Объект.ПереоценкаПоСправедливойСтоимости
			ИЛИ СлужебныеПараметрыФормы.НастройкиУчета.МетодПереоценкиОСРегл = ПредопределенноеЗначение("Перечисление.МетодыПереоценкиВНА.СальдовыйМетод") Тогда
			
			Элементы.ОССтоимостьБУ.Заголовок = СтрШаблон(НСтр("ru = 'Справедливая стоимость регл. (%1)';
																|en = 'Справедливая стоимость регл. (%1)'"), СлужебныеПараметрыФормы.ВалютаРеглПредставление);
				
		Иначе
			
			Элементы.ОССтоимостьБУ.Заголовок = СтрШаблон(НСтр("ru = 'Восстановительная стоимость регл. (%1)';
																|en = 'Восстановительная стоимость регл. (%1)'"), СлужебныеПараметрыФормы.ВалютаРеглПредставление);
			
		КонецЕсли;
			
		Если Объект.ПереоценкаПоСправедливойСтоимости
			ИЛИ СлужебныеПараметрыФормы.НастройкиУчета.МетодПереоценкиОС = ПредопределенноеЗначение("Перечисление.МетодыПереоценкиВНА.СальдовыйМетод") Тогда
			
			Элементы.ОССтоимостьУУ.Подсказка = НСтр("ru = 'Справедливая стоимость в валюте упр. учета';
													|en = 'Справедливая стоимость в валюте упр. учета'");
				
		Иначе
			
			Элементы.ОССтоимостьУУ.Подсказка = НСтр("ru = 'Текущая рыночная (восстановительная) стоимость в валюте упр. учета';
													|en = 'Текущая рыночная (восстановительная) стоимость в валюте упр. учета'");
			
		КонецЕсли;

		Если Объект.ПереоценкаПоСправедливойСтоимости
			ИЛИ СлужебныеПараметрыФормы.НастройкиУчета.МетодПереоценкиОСРегл = ПредопределенноеЗначение("Перечисление.МетодыПереоценкиВНА.СальдовыйМетод") Тогда
			
			Элементы.ОССтоимостьБУ.Подсказка = НСтр("ru = 'Справедливая стоимость в валюте регл. учета';
													|en = 'Справедливая стоимость в валюте регл. учета'");
				
		Иначе
			
			Элементы.ОССтоимостьБУ.Подсказка = НСтр("ru = 'Текущая рыночная (восстановительная) стоимость в валюте регл. учета';
													|en = 'Текущая рыночная (восстановительная) стоимость в валюте регл. учета'");
			
		КонецЕсли;
		
	КонецЕсли;
	
	Если СтруктураИзмененныхРеквизитов.Свойство("ПереоценкаПоСправедливойСтоимости")
		ИЛИ ОбновитьВсе Тогда
			
		Форма.СпособПереоценки = ?(Объект.ПереоценкаПоСправедливойСтоимости, 1, 0);

	КонецЕсли;
	
КонецПроцедуры

&НаСервере
Процедура НастроитьЗависимыеЭлементыФормыНаСервере(Знач ИзмененныеРеквизиты = "")
	
	СтруктураИзмененныхРеквизитов = Новый Структура(ИзмененныеРеквизиты);
	ОбновитьВсе = СтруктураИзмененныхРеквизитов.Количество() = 0;
	
	Если СтруктураИзмененныхРеквизитов.Свойство("Организация") 
		ИЛИ СтруктураИзмененныхРеквизитов.Свойство("Дата")
		ИЛИ ОбновитьВсе Тогда
		
		ВнеоборотныеАктивы.УстановитьПараметрыФункциональныхОпцийФормыОбъекта(ЭтотОбъект, Объект.Организация, Объект.Дата);
		
		//
		ВалютаРегл = ЗначениеНастроекПовтИсп.ВалютаРегламентированногоУчетаОрганизации(Объект.Организация);
		ВалютаРеглПредставление = ?(ЗначениеЗаполнено(ВалютаРегл), Строка(ВалютаРегл), "");

		ВнеоборотныеАктивыСлужебный.УстановитьСвойствоСтруктуры(
			"ВалютаРеглПредставление",
			ВалютаРеглПредставление,
			СлужебныеПараметрыФормы);

		ВнеоборотныеАктивыСлужебный.УстановитьСвойствоСтруктуры(
			"ВалютыСовпадают",
			СлужебныеПараметрыФормы.ВалютаУпр = ВалютаРегл,
			СлужебныеПараметрыФормы);
		
	КонецЕсли;
	
	НастроитьЗависимыеЭлементыФормыНаКлиентеНаСервере(ЭтотОбъект, ИзмененныеРеквизиты);
	
КонецПроцедуры

