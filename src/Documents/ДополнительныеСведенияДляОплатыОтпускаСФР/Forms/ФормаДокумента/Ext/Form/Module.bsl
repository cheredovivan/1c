&НаКлиенте
Процедура ДобавитьСтрокуВложения(Файл)
	НайденныеСтроки = Объект.Вложения.НайтиСтроки(Новый Структура("Файл", Файл));
	Если НайденныеСтроки.Количество() = 0 Тогда
		НоваяСтрока = Объект.Вложения.Добавить();
		НоваяСтрока.Файл = Файл;
		НоваяСтрока.Дата = ТекущаяДата();
	Иначе
		НоваяСтрока = НайденныеСтроки[0];
		ПоказатьОповещениеПользователя(СтрШаблон(НСтр("ru = 'Файл %1 уже выбран.';
														|en = 'The %1 file is already selected.'"), НоваяСтрока.Файл));
	КонецЕсли;
КонецПроцедуры

&НаСервере
Процедура ОбновитьЭлементыГруппыВложения(Группа, Представление, Заполнена, Развернута, Видимость)
	Если Не Видимость Тогда
		Возврат;
	КонецЕсли;
	ЕстьФайлы = Объект.Вложения.Количество() > 0;
	Заполнена = ЕстьФайлы;
	Если Объект.Ссылка.Пустая() Тогда
		Развернута = Истина;
	КонецЕсли;
	Если Не Развернута И ЕстьФайлы Тогда
		Представления = Новый Массив;
		Индекс = 0;
		Для Каждого Вложение Из Объект.Вложения Цикл
			Если Индекс = 3 Тогда
				Представления.Добавить("...");
				Прервать;
			КонецЕсли;
			Представления.Добавить(Строка(Вложение.Файл));
			Индекс = Индекс + 1;
		КонецЦикла;
		Представление = СтрСоединить(Представления, ", ");
	КонецЕсли;
КонецПроцедуры

