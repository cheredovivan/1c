Функция РеквизитыДляПроведения(ДокументСсылка)

	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	АктПроверкиСтраховыхВзносов.Ссылка КАК Ссылка,
		|	АктПроверкиСтраховыхВзносов.Организация КАК Организация,
		|	АктПроверкиСтраховыхВзносов.ПериодРегистрации КАК ПериодРегистрации,
		|	АктПроверкиСтраховыхВзносов.ОснованиеДляДоначисления КАК ОснованиеДляДоначисления
		|ИЗ
		|	Документ.АктПроверкиСтраховыхВзносов КАК АктПроверкиСтраховыхВзносов
		|ГДЕ
		|	АктПроверкиСтраховыхВзносов.Ссылка = &Ссылка";
	
	Запрос.УстановитьПараметр("Ссылка", ДокументСсылка);
	
	РезультатЗапроса = Запрос.Выполнить();
	Выборка = РезультатЗапроса.Выбрать();
	
	РеквизитыДляПроведения = РеквизитыДляПроведенияПустаяСтруктура();
	
	Пока Выборка.Следующий() Цикл
		ЗаполнитьЗначенияСвойств(РеквизитыДляПроведения, Выборка);
	КонецЦикла;
	
    Возврат РеквизитыДляПроведения;
	
КонецФункции

Функция ДанныеДляПроведения(РеквизитыДляПроведения, СтруктураВидовУчета)
	
	Если СтруктураВидовУчета.СтраховыеВзносы Тогда
		
		Запрос = Новый Запрос;
		Запрос.УстановитьПараметр("Ссылка", РеквизитыДляПроведения.Ссылка);
		Запрос.Текст = 
		"ВЫБРАТЬ
		|	ДанныеОДоходах.ФизическоеЛицо КАК ФизическоеЛицо,
		|	ДанныеОДоходах.МесяцРасчетногоПериода КАК ДатаПолученияДохода,
		|	ДанныеОДоходах.ВидДохода КАК ВидДохода,
		|	СУММА(ДанныеОДоходах.Сумма) КАК Сумма,
		|	СУММА(ДанныеОДоходах.Скидка) КАК Скидка,
		|	ДанныеОДоходах.ОблагаетсяЕНВД КАК ОблагаетсяЕНВД,
		|	ДанныеОДоходах.ОблагаетсяВзносамиНаДоплатуЛетчикам КАК ОблагаетсяВзносамиНаДоплатуЛетчикам,
		|	ДанныеОДоходах.ОблагаетсяВзносамиНаДоплатуШахтерам КАК ОблагаетсяВзносамиНаДоплатуШахтерам,
		|	ДанныеОДоходах.ЯвляетсяДоходомФармацевта КАК ЯвляетсяДоходомФармацевта,
		|	ДанныеОДоходах.ЯвляетсяДоходомЧленаЭкипажаСуднаПодФлагомРФ КАК ЯвляетсяДоходомЧленаЭкипажаСуднаПодФлагомРФ,
		|	ДанныеОДоходах.ОблагаетсяВзносамиЗаЗанятыхНаРаботахСДосрочнойПенсией КАК ОблагаетсяВзносамиЗаЗанятыхНаРаботахСДосрочнойПенсией,
		|	ДанныеОДоходах.КлассУсловийТруда КАК КлассУсловийТруда,
		|	ДанныеОДоходах.ЛьготныйТерриториальныйТариф КАК ЛьготныйТерриториальныйТариф
		|ИЗ
		|	Документ.АктПроверкиСтраховыхВзносов.СведенияОДоходах КАК ДанныеОДоходах
		|ГДЕ
		|	ДанныеОДоходах.Ссылка = &Ссылка
		|
		|СГРУППИРОВАТЬ ПО
		|	ДанныеОДоходах.ВидДохода,
		|	ДанныеОДоходах.ФизическоеЛицо,
		|	ДанныеОДоходах.ОблагаетсяЕНВД,
		|	ДанныеОДоходах.ОблагаетсяВзносамиНаДоплатуЛетчикам,
		|	ДанныеОДоходах.ОблагаетсяВзносамиНаДоплатуШахтерам,
		|	ДанныеОДоходах.ЯвляетсяДоходомФармацевта,
		|	ДанныеОДоходах.ЯвляетсяДоходомЧленаЭкипажаСуднаПодФлагомРФ,
		|	ДанныеОДоходах.ОблагаетсяВзносамиЗаЗанятыхНаРаботахСДосрочнойПенсией,
		|	ДанныеОДоходах.КлассУсловийТруда,
		|	ДанныеОДоходах.МесяцРасчетногоПериода,
		|	ДанныеОДоходах.ЛьготныйТерриториальныйТариф";
		
		ДанныеДляПроведения = Новый Структура;
		ДанныеДляПроведения.Вставить("СведенияОДоходах", Запрос.Выполнить().Выгрузить());
		ДанныеДляПроведения.Вставить("СтраховыеВзносы", УчетСтраховыхВзносов.ДанныеОВзносахИзДокумента(РеквизитыДляПроведения.Ссылка,,,,Истина, "МесяцРасчетногоПериода"));
		
	КонецЕсли;
	
	Если СтруктураВидовУчета.ОстальныеВидыУчета Тогда
	КонецЕсли;
	
	Возврат ДанныеДляПроведения;
	
КонецФункции

