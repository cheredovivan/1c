Функция ПодобратьКонтрагентаПоРеквизитам(ЗагружаемаяСтрока, ТаблицаКонтрагентов, СписокНеоднозначностей)
	
	СтрокаПоискаИНН = ВРег(СтрЗаменить(ЗагружаемаяСтрока.ИНН, " ", "")); 
	СтрокаПоискаКПП = ВРег(СтрЗаменить(ЗагружаемаяСтрока.КПП, " ", "")); 
	СтрокаПоискаКонтрагент = ВРег(СтрЗаменить(ЗагружаемаяСтрока.КонтрагентНаименование, " ", ""));
	
	ЕстьИНН = ЗначениеЗаполнено(ЗагружаемаяСтрока.ИНН);
	ЕстьКПП = ЗначениеЗаполнено(ЗагружаемаяСтрока.КПП);
	ЕстьИмя = ЗначениеЗаполнено(ЗагружаемаяСтрока.КонтрагентНаименование);
	
	ДанныеНайдены = Ложь;
	
	// Поиск по всем заполненным полям
	СтруктураПоиска = Новый Структура;
	Если ЕстьИНН Тогда
		СтруктураПоиска.Вставить("ИНН", СтрокаПоискаИНН);
	КонецЕсли;
	Если ЕстьКПП Тогда
		СтруктураПоиска.Вставить("КПП", СтрокаПоискаКПП);
	КонецЕсли;
	Если ЕстьИмя Тогда
		СтруктураПоиска.Вставить("НаименованиеПоиск", СтрокаПоискаКонтрагент);
	КонецЕсли;
	
	НайденныеСтроки = ТаблицаКонтрагентов.НайтиСтроки(СтруктураПоиска);
	Если НайденныеСтроки.Количество() > 0 Тогда
		ДанныеНайдены = Истина;
	КонецЕсли;
	
	Если НЕ ДанныеНайдены
	   И ЕстьИмя Тогда
		
		СтруктураПоиска.Удалить("НаименованиеПоиск");
		СтруктураПоиска.Вставить("НаименованиеПолноеПоиск", СтрокаПоискаКонтрагент);
		
	КонецЕсли;
	
	НайденныеСтроки = ТаблицаКонтрагентов.НайтиСтроки(СтруктураПоиска);
	Если НайденныеСтроки.Количество() > 0 Тогда
		ДанныеНайдены = Истина;
	КонецЕсли;
	
	// Высший приоритет по ИНН
	Если НЕ ДанныеНайдены
	   И ЕстьИНН
	   И ЕстьИмя Тогда
		
		СтруктураПоиска = Новый Структура;
		СтруктураПоиска.Вставить("ИНН", СтрокаПоискаИНН);
		
		Если ЕстьКПП Тогда
			СтруктураПоиска.Вставить("КПП", СтрокаПоискаКПП);
		КонецЕсли;
		
		НайденныеСтроки = ТаблицаКонтрагентов.НайтиСтроки(СтруктураПоиска);
		Если НайденныеСтроки.Количество() > 0 Тогда
			ДанныеНайдены = Истина;
		КонецЕсли;
		
	КонецЕсли;
	
	// Поиск по наименованию
	Если НЕ ДанныеНайдены
	   И ЕстьИНН
	   И ЕстьИмя Тогда
		
		СтруктураПоиска.Вставить("НаименованиеПоиск", СтрокаПоискаКонтрагент);
		НайденныеСтроки = ТаблицаКонтрагентов.НайтиСтроки(СтруктураПоиска);
		Если НайденныеСтроки.Количество() > 0 Тогда
			ДанныеНайдены = Истина;
		КонецЕсли;
		
	КонецЕсли;
	
	// Поиск по полному наименованию
	Если НЕ ДанныеНайдены
	   И ЕстьИНН
	   И ЕстьИмя Тогда
		
		СтруктураПоиска.Вставить("НаименованиеПолноеПоиск", СтрокаПоискаКонтрагент);
		НайденныеСтроки = ТаблицаКонтрагентов.НайтиСтроки(СтруктураПоиска);
		Если НайденныеСтроки.Количество() > 0 Тогда
			ДанныеНайдены = Истина;
		КонецЕсли;
		
	КонецЕсли;
	
	НайденныйКонтрагент = Справочники.Контрагенты.ПустаяСсылка();
	
	Если ДанныеНайдены Тогда
		
		Если НайденныеСтроки.Количество() = 1 Тогда
			
			СтрокаКонтрагента = НайденныеСтроки[0];
			НайденныйКонтрагент = СтрокаКонтрагента.Контрагент;
			
		Иначе
			
			СтрокаНеоднозначности = СписокНеоднозначностей.Добавить();
			СтрокаНеоднозначности.Идентификатор = ЗагружаемаяСтрока.Идентификатор;
			СтрокаНеоднозначности.Колонка = "Контрагент";
			
		КонецЕсли;
		
	КонецЕсли;
	
	Возврат НайденныйКонтрагент;
	
КонецФункции

// Параметры:
//  СписокНеоднозначностей - Массив из СправочникСсылка.Контрагенты
//  ЗагружаемыеЗначенияСтрока - СтрокаТаблицыЗначений:
//  * КонтрагентНаименование - Строка
//  * ИНН - Строка
//  * КПП - Строка
//
Процедура ЗаполнитьСписокНеоднозначностейКонтрагентов(СписокНеоднозначностей, ЗагружаемыеЗначенияСтрока)
	
	Запрос = Новый Запрос;
	
	ТекстыУсловий = Новый Массив; // Массив из Строка
	
	Если ЗначениеЗаполнено(ЗагружаемыеЗначенияСтрока.КонтрагентНаименование) Тогда
		
		ТекстУсловия =
		"(Контрагенты.Наименование = &Наименование
		| ИЛИ Контрагенты.НаименованиеПолное = &Наименование)";
		
		ТекстыУсловий.Добавить(ТекстУсловия);
		Запрос.УстановитьПараметр("Наименование", ЗагружаемыеЗначенияСтрока.КонтрагентНаименование);
		
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ЗагружаемыеЗначенияСтрока.ИНН) Тогда
		
		ТекстУсловия =
		"Контрагенты.ИНН = &ИНН";
		ТекстыУсловий.Добавить(ТекстУсловия);
		Запрос.УстановитьПараметр("ИНН", ЗагружаемыеЗначенияСтрока.ИНН);
		
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ЗагружаемыеЗначенияСтрока.КПП) Тогда
		
		ТекстУсловия =
		"Контрагенты.КПП = &КПП";
		
		ТекстыУсловий.Добавить(ТекстУсловия);
		Запрос.УстановитьПараметр("Наименование", ЗагружаемыеЗначенияСтрока.КПП);
		
	КонецЕсли;
	
	ТекстИ = Символы.ПС + "И "; //@query-part
	
	ТекстЗапроса =
	"ВЫБРАТЬ
	|	Контрагенты.Ссылка КАК Ссылка
	|ИЗ
	|	Справочник.Контрагенты КАК Контрагенты
	|ГДЕ
	|	НЕ Контрагенты.ПометкаУдаления";
	
	Если ТекстыУсловий.Количество() > 0 Тогда
		
		ПолныйТекстУсловий = СтрСоединить(ТекстыУсловий, ТекстИ);
		ТекстЗапроса = ТекстЗапроса + ТекстИ + ПолныйТекстУсловий;
		
	КонецЕсли;
	
	Запрос.Текст = ТекстЗапроса;
	
	Выборка = Запрос.Выполнить().Выбрать();
	Пока Выборка.Следующий() Цикл
		
		СписокНеоднозначностей.Добавить(Выборка.Ссылка);
		
	КонецЦикла;
	
КонецПроцедуры

// Параметры:
//  ЗагружаемыеДанные - ТаблицаЗначений:
//   * Код - Строка
//   * Дата - Дата
//   * Номер - Строка
//   * ЗначениеСвойства - Произвольный
//   * Идентификатор - Число
//   * КоличествоПлан - Число
//   * НачалоДействия - Дата
//   * ОкончаниеДействия- Дата
//   * ОписаниеОшибки - Строка
//   * Процент - Строка
//   * РезультатСопоставленияСтроки - Строка
//  ТаблицаДляЗаполнения -  ТаблицаЗначений:
//   * ЗначениеСвойства - Произвольный
//  ДополнительныеПараметры - Структура:
//   * НастройкиОтображенияПолей - Структура:
//    ** БазоваяЦена - Булево
//    ** КоличествоПлан- Булево
//    ** Период - Булево
//    ** Процент - Булево
//   * СведенияОбИсточнике - Структура:
//    ** ДлинаКода - Число
//    ** ДлинаНаименования - Число
//    ** ДлинаНомера - Число
//    ** Имя - Строка
//    ** ПолноеИмя - Строка
//    ** СвойствоНоменклатурыПредставление - Строка
//    ** СодержитГруппы - Булево
//    ** Тип - ОписаниеТипов
//    ** ЭтоДата - Булево
//    ** ЭтоЧисло - Булево
//    ** ЭтоДокумент - Булево
//    ** ЭтоПеречисление - Булево
//    ** ЭтоПланВидовХарактеристик - Булево
//    ** ЭтоСправочник - Булево
//  СписокНеоднозначностей - ТаблицаЗначений - Список неоднозначностей:
// * Колонка - Строка - 
// * Идентификатор - Число
//  
Процедура СопоставитьЗагружаемыеДанныеТЧСвойстваНоменклатуры(ЗагружаемыеДанные, ТаблицаДляЗаполнения, ДополнительныеПараметры, СписокНеоднозначностей)
	
	СведенияОбИсточнике = ДополнительныеПараметры.СведенияОбИсточнике;
	Сопоставлять = НЕ (СведенияОбИсточнике.ЭтоЧисло 
					ИЛИ СведенияОбИсточнике.ЭтоДата);
	
	Если Сопоставлять Тогда
		
		ТаблицаЗначенийСвойств = ЗначениеСвойства(СведенияОбИсточнике, ЗагружаемыеДанные);
		
	КонецЕсли;
	
	Для Каждого СтрокаДанных Из ЗагружаемыеДанные Цикл
		
		НоваяСтрока = ТаблицаДляЗаполнения.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяСтрока, СтрокаДанных);
		
		Если Сопоставлять Тогда
			
			Если СведенияОбИсточнике.ЭтоСправочник
			 ИЛИ СведенияОбИсточнике.ЭтоПланВидовХарактеристик Тогда
				
				НоваяСтрока.ЗначениеСвойства = ПодобратьЗначениеСвойстваСправочникаПланаВидаХарактеристики(
					СтрокаДанных,
					ТаблицаЗначенийСвойств,
					СведенияОбИсточнике,
					СписокНеоднозначностей);
				
			ИначеЕсли СведенияОбИсточнике.ЭтоДокумент Тогда
				
				НоваяСтрока.ЗначениеСвойства = ПодобратьЗначениеСвойстваДокумента(
					СтрокаДанных,
					ТаблицаЗначенийСвойств,
					СведенияОбИсточнике,
					СписокНеоднозначностей);
				
			ИначеЕсли СведенияОбИсточнике.ЭтоПеречисление Тогда
				
				НоваяСтрока.ЗначениеСвойства = ПодобратьЗначениеСвойстваПеречисления(
					СтрокаДанных,
					ТаблицаЗначенийСвойств,
					СведенияОбИсточнике);
				
			КонецЕсли;
			
		КонецЕсли;
		
	КонецЦикла;
	
КонецПроцедуры

// Параметры:
//  СведенияОбИсточнике - Структура - Сведения об источнике:
// * ДлинаКода - Число - 
// * ДлинаНаименования - Число - 
// * ДлинаНомера - Число - 
// * Имя - Число - 
// * ПолноеИмя - Строка - 
// * СвойствоНоменклатурыПредставление - Строка - 
// * СодержитГруппы - Булево - 
// * Тип - ОписаниеТипов - 
// * ЭтоДата - Булево - 
// * ЭтоЧисло - Булево - 
// * ЭтоДокумент - Булево - 
// * ЭтоПеречисление - Булево - 
// * ЭтоПланВидовХарактеристик - Булево - 
// * ЭтоСправочник - Булево - 
//  ЗагружаемыеДанные - ТаблицаЗначений, Произвольный - Загружаемые данные:
// * Код - Строка
// * Дата - Дата 
// * ЗначениеСвойства - Произвольный - 
// * Идентификатор - Число - 
// * КоличествоПлан - Число - 
// * НачалоДействия - Дата - 
// * ОкончаниеДействия - Дата - 
// * ОписаниеОшибки - Строка - 
// * Процент - Строка - 
// * РезультатСопоставленияСтроки - Строка - 
// 
// Возвращаемое значение:
//  ТаблицаЗначений:
// * Значение - Произвольный
// * Дата - Дата
// * Код - Строка
// * Наименование - Строка
// * Ссылка - ЛюбаяСсылка
// * НаименованиеПоиск - Строка
//
Функция ЗначениеСвойства(СведенияОбИсточнике, ЗагружаемыеДанные)
	
	ОписаниеТиповСтрока = Новый ОписаниеТипов("Строка");
	
	Если СведенияОбИсточнике.ЭтоПеречисление Тогда
		
		ТаблицаЗначенийСвойств = НоваяТаблицаПоискаЗначенийПеречисления();
		
		Для Каждого ЗначениеПеречисления Из Перечисления[СведенияОбИсточнике.Имя] Цикл
			
			НоваяСтрока = ТаблицаЗначенийСвойств.Добавить();
			НоваяСтрока.Значение = ЗначениеПеречисления;
			
			НаименованиеПоиск = СтрЗаменить(Строка(ЗначениеПеречисления), " ", "");
			НоваяСтрока.НаименованиеПоиск = ВРег(НаименованиеПоиск);
			
		КонецЦикла;
		
	ИначеЕсли СведенияОбИсточнике.ЭтоДокумент Тогда
		
		ТаблицаДанных = ЗагружаемыеДанные.Скопировать(,"Дата, ЗначениеСвойства");
		
		ТекстЗапроса = 
		"ВЫБРАТЬ
		|	ТаблицаДанных.Дата КАК Дата,
		|	ТаблицаДанных.ЗначениеСвойства КАК Номер
		|ПОМЕСТИТЬ ВТ_ТаблицаДанных
		|ИЗ
		|	&ТаблицаДанных КАК ТаблицаДанных
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|ВЫБРАТЬ РАЗРЕШЕННЫЕ РАЗЛИЧНЫЕ
		|	Документ.Номер КАК Номер,
		|	НАЧАЛОПЕРИОДА(Документ.Дата, ДЕНЬ) КАК Дата,
		|	Документ.Ссылка КАК Ссылка
		|ИЗ
		|	ВТ_ТаблицаДанных КАК ВТ_ТаблицаДанных
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Документ.УсловияРетроБонусовПоставщика КАК Документ
		|		ПО (Документ.Дата МЕЖДУ НАЧАЛОПЕРИОДА(ВТ_ТаблицаДанных.Дата, ДЕНЬ) И КОНЕЦПЕРИОДА(ВТ_ТаблицаДанных.Дата, ДЕНЬ))";
		
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "Документ.УсловияРетроБонусовПоставщика", СведенияОбИсточнике.ПолноеИмя);
		
		Запрос = Новый Запрос;
		Запрос.Текст = ТекстЗапроса;
		Запрос.УстановитьПараметр("ТаблицаДанных", ТаблицаДанных);
		РезультатЗапроса = Запрос.Выполнить();
		
		ТаблицаЗначенийСвойств = РезультатЗапроса.Выгрузить();
		ЗаполнитьПоляПоискаЗначенийСвойствДокумента(ТаблицаЗначенийСвойств);
		
	Иначе
		
		Если СведенияОбИсточнике.ДлинаКода > 0 Тогда
			
			ТекстЗапроса = 
			"ВЫБРАТЬ
			|	ИсточникЗначений.Код КАК Код,
			|	ИсточникЗначений.Наименование КАК Наименование,
			|	ИсточникЗначений.Ссылка КАК Ссылка
			|ИЗ
			|	&ИсточникЗначений КАК ИсточникЗначений
			|ГДЕ
			|	НЕ ИсточникЗначений.ПометкаУдаления";
			
		Иначе
			
			ТекстЗапроса = 
			"ВЫБРАТЬ
			|	ИсточникЗначений.Наименование КАК Наименование,
			|	ИсточникЗначений.Ссылка КАК Ссылка
			|ИЗ
			|	&ИсточникЗначений КАК ИсточникЗначений
			|ГДЕ
			|	НЕ ИсточникЗначений.ПометкаУдаления";
			
		КонецЕсли;
		
		Если СведенияОбИсточнике.СодержитГруппы Тогда
			
			ТекстЗапроса = ТекстЗапроса + "
			|	И НЕ ИсточникЗначений.ЭтоГруппа";
			
		КонецЕсли;
		
		ТекстЗапроса = СтрЗаменить(ТекстЗапроса, "&ИсточникЗначений", СведенияОбИсточнике.ПолноеИмя);
		
		Запрос = Новый Запрос;
		Запрос.Текст = ТекстЗапроса;
		
		РезультатЗапроса = Запрос.Выполнить();
		
		ТаблицаЗначенийСвойств = РезультатЗапроса.Выгрузить();
		ТаблицаЗначенийСвойств.Колонки.Добавить("НаименованиеПоиск", ОписаниеТиповСтрока);
		ТаблицаЗначенийСвойств.Колонки.Добавить("КодПоиск", ОписаниеТиповСтрока);
		ЗаполнитьПоляПоискаЗначенийСвойствСправочника(ТаблицаЗначенийСвойств, СведенияОбИсточнике);
		
	КонецЕсли;
	
	Возврат ТаблицаЗначенийСвойств;
	
КонецФункции

// Возвращаемое значение:
//  ТаблицаЗначений - Новая таблица поиска значений:
// * Значение - Произвольный 
// * НаименованиеПоиск - Строка
// 
Функция НоваяТаблицаПоискаЗначенийПеречисления()
	
	ТаблицаЗначений = Новый ТаблицаЗначений();
	ТаблицаЗначений.Колонки.Добавить("Значение");
	ТаблицаЗначений.Колонки.Добавить("НаименованиеПоиск", Новый ОписаниеТипов("Строка"));
	
	Возврат ТаблицаЗначений;
	
КонецФункции

// Параметры:
//  ТаблицаЗначенийСвойств - ТаблицаЗначений:
//   * Код - Строка
//   * Наименование - Строка
//   * НаименованиеПоиск - Строка
//   * КодПоиск - Строка
//  СведенияОбИсточнике - Структура - Сведения об источнике:
// * ДлинаКода - Число - 
// * ДлинаНаименования - Число - 
// * ДлинаНомера - Число - 
// * Имя - Число - 
// * ПолноеИмя - Строка - 
// * СвойствоНоменклатурыПредставление - Строка - 
// * СодержитГруппы - Булево - 
// * Тип - ОписаниеТипов - 
// * ЭтоДата - Булево - 
// * ЭтоЧисло - Булево - 
// * ЭтоДокумент - Булево - 
// * ЭтоПеречисление - Булево - 
// * ЭтоПланВидовХарактеристик - Булево - 
// * ЭтоСправочник - Булево 
// 
Процедура ЗаполнитьПоляПоискаЗначенийСвойствСправочника(ТаблицаЗначенийСвойств, СведенияОбИсточнике)
	
	Для Каждого СтрокаТаблицы Из ТаблицаЗначенийСвойств Цикл
		
		Если СведенияОбИсточнике.ДлинаКода > 0 Тогда
			
			Код = СтрЗаменить(СтрокаТаблицы.Код, " ", "");
			СтрокаТаблицы.Код = ВРег(Код);
			СтрокаТаблицы.КодПоиск = ВРег(Код);
			
		КонецЕсли;
		
		НаименованиеПоиск = СтрЗаменить(СтрокаТаблицы.Наименование, " ", "");
		СтрокаТаблицы.НаименованиеПоиск = ВРег(НаименованиеПоиск);
		
	КонецЦикла;
	
КонецПроцедуры 

// Параметры:
//  ТаблицаЗначенийСвойств - ТаблицаЗначений:
//   * Номер - Строка
//
Процедура ЗаполнитьПоляПоискаЗначенийСвойствДокумента(ТаблицаЗначенийСвойств)
	
	Для Каждого СтрокаТаблицы Из ТаблицаЗначенийСвойств Цикл
		
		Номер = СтрЗаменить(СтрокаТаблицы.Номер, " ", "");
