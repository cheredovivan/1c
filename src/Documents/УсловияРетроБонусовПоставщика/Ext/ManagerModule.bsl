	ТаблицаСвойстваНоменклатуры = НоваяТаблицаДанныхПечатиСвойстваНоменклатуры();
	Индекс = 1;
	
	Пока Выборка.Следующий() Цикл
		
		СтрокаТЗ = ТаблицаСвойстваНоменклатуры.Добавить();
		ЗаполнитьЗначенияСвойств(СтрокаТЗ, Выборка);
		СтрокаТЗ.НомерСтроки = Индекс;
		
		Индекс = Индекс + 1;
		
	КонецЦикла;
	
	ИменаПолей = "ЗначениеСвойства";
	ТаблицаКОбработке = ТаблицаСвойстваНоменклатуры.Скопировать(, ИменаПолей);
	ТаблицаКОбработке.Свернуть(ИменаПолей);
	РетроБонусыСервер.ОбозначениеДиапазонаСтрокСвойств(ТаблицаСвойстваНоменклатуры, ТаблицаКОбработке);
	
	Возврат ТаблицаСвойстваНоменклатуры;
	
КонецФункции

