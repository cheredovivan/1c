&НаСервере
Процедура ПерезаполнитьИРассчитатьНачисленияНаСервере(ПараметрыЗаполнения, ПараметрыРасчета)
	ЗапланироватьЗаполнениеСведенийДляФССЗависящихОтНачислений();
	
	Документ = РеквизитФормыВЗначение("Объект");
	РеквизитыВДанные(Документ);
	
	// Стандартные параметры заполнения.
	ПараметрыЗаполнения.Форма = ЭтотОбъект;
	ПараметрыЗаполнения.ВыводитьСообщения = ПараметрыРасчета.ВыводитьСообщения;
	
	// Заполнение документа.
	Документ.Заполнить(ПараметрыЗаполнения);
	РезультатЗаполнения = ПараметрыЗаполнения.Результат;
	
	// Перенос результатов заполенения в параметры расчета.
	ЗаполнитьЗначенияСвойств(ПараметрыРасчета, ПараметрыЗаполнения);
	ЗаполнитьЗначенияСвойств(ПараметрыРасчета, РезультатЗаполнения);
	Если РезультатЗаполнения.ИзмененПериодРасчетаСреднего Тогда
		ПараметрыРасчета.ОчиститьСреднийЗаработок  = Истина;
		ПараметрыРасчета.ЗаполнитьСреднийЗаработок = Истина;
	КонецЕсли;
	
	// Проверка готовности к расчету и расчет.
	РезультатРасчета = Документ.Рассчитать(ПараметрыРасчета);
	ЗначениеВРеквизитФормы(Документ, "Объект");
	ДанныеВРеквизиты();
	НазначенияРасчетаДенежногоСодержания = РезультатРасчета.НазначенияРасчетаДенежногоСодержания;
	
	ТребуетсяОбновитьДанныеСреднегоЗаработка = Истина;
	
	Если РезультатЗаполнения.ПериодыУходаЗаполнены Тогда
		ОбновитьВидимостьДоступностьСтраницыУходЗаРодственниками();
		ОбновитьПредставленияПериодовУхода();
	КонецЕсли;
	Если РезультатЗаполнения.ПараметрыОплатыЗаполнены Тогда
		ОбновитьЭлементыПараметровОплаты(РезультатРасчета.Кэш);
	КонецЕсли;
	Если РезультатЗаполнения.ПриостановленияТДЗаполнены Тогда
		ПроверитьПриостановленияТрудовыхДоговоров(Истина, РезультатЗаполнения.РезультатыПроверкиПриостановленийТД);
	КонецЕсли;
	Если ТипЗнч(РезультатЗаполнения.ДляСотрудникаВведенСтраховойСтаж) = Тип("Булево") Тогда
		ДляСотрудникаВведенСтраховойСтаж = РезультатЗаполнения.ДляСотрудникаВведенСтраховойСтаж;
	КонецЕсли;
	ОбновитьИсправленияОтпусков(РезультатРасчета);
	Если РезультатРасчета.Успех Или РезультатРасчета.СреднийЗаработокИзменен Тогда
		ЗаполнениеВыполнено = Истина;
	КонецЕсли;
	Если РезультатРасчета.СреднийЗаработокИзменен Тогда
		УстановитьИнфонадписьРасчетаСреднегоЗаработка();
		ОбновитьЭлементыЗаработкаСтраницыГлавное();
	КонецЕсли;
	Если ТипЗнч(РезультатРасчета.ДоступенФлажокРассчитатьЗарплату) = Тип("Булево") Тогда
		ОбщегоНазначенияКлиентСервер.УстановитьСвойствоЭлементаФормы(Элементы, "РассчитатьЗарплату", "Доступность",
			РезультатРасчета.ДоступенФлажокРассчитатьЗарплату);
	КонецЕсли;
	Если РезультатРасчета.РассчитатьЗарплатуИзменен Тогда
		РассчитатьЗарплатуПриИзмененииНаСервере();
	КонецЕсли;
	Если РезультатРасчета.Успех Тогда
		ЗарплатаКадрыРасширенныйКлиентСервер.СброситьФлагНеобходимостиВыполненияРасчета(ЭтотОбъект);
		НеобходимоПерезаполнитьНачисления = Ложь;
		ТребуетсяОчиститьДанныеСреднегоЗаработка = Ложь;
		УстановитьСвойствоДокументРассчитан();
	КонецЕсли;
	Если РезультатРасчета.ФлажокУчитыватьЗаработокПредыдущихСтрахователейЗаполнен Тогда
		ТребуетсяПрочитатьФлажокУчитыватьЗаработокПредыдущихСтрахователей = Ложь;
	КонецЕсли;
	ОбработатьСообщенияПользователю();
	УстановитьОтметкуНезаполненногоПланируемойДатыВыплаты();
	
	ОбновитьОстаткиДнейУхода = ПараметрыЗаполнения.ЗаполнитьПериодыУхода
		Или РезультатЗаполнения.ПериодыУходаЗаполнены;
	ПолностьюОбновитьФорму(Ложь, ОбновитьОстаткиДнейУхода);
	
	ОбновитьСведенияДляФСС();
	
	// Обновление видимости команд.
	ПодключаемыеКомандыКлиентСервер.ОбновитьКоманды(ЭтотОбъект, Объект);
КонецПроцедуры

&НаСервере
Функция ПараметрыРасчета()
	ПараметрыРасчета = Документы.БольничныйЛист.ПараметрыРасчета();
	ПараметрыРасчета.ИспользуетсяРасчетЗарплаты = ИспользуетсяРасчетЗарплаты;
	ПараметрыРасчета.ОчиститьСреднийЗаработок = ТребуетсяОчиститьДанныеСреднегоЗаработка;
	ПараметрыРасчета.ЗаполнитьСреднийЗаработок = ТребуетсяОбновитьДанныеСреднегоЗаработка
		Или ПараметрыРасчета.ОчиститьСреднийЗаработок;
	ПараметрыРасчета.ОчищатьДенежноеСодержание = ТребуетсяОбновитьДанныеСреднегоЗаработка;
	ПараметрыРасчета.ЗаполнитьФлажокУчитыватьЗаработокПредыдущихСтрахователей =
		ТребуетсяПрочитатьФлажокУчитыватьЗаработокПредыдущихСтрахователей;
	ПараметрыРасчета.ИдентификаторФормы = УникальныйИдентификатор;
	ПараметрыРасчета.НазначенияРасчетаДенежногоСодержания = НазначенияРасчетаДенежногоСодержания;
	Возврат ПараметрыРасчета;
КонецФункции

