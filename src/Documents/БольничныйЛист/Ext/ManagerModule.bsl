	Документ.ДатаНачалаПоловиннойОплаты = '00010101';
	
	Если Не ЗначениеЗаполнено(Документ.ДатаНачалаОплаты)
		И Не ЗначениеЗаполнено(Документ.ДатаОкончанияОплаты)  Тогда
		ДатаНачалаОплаты    = Документ.ДатаНачала;
		ДатаОкончанияОплаты = Документ.ДатаОкончания;
	Иначе
		ДатаНачалаОплаты    = Документ.ДатаНачалаОплаты;
		ДатаОкончанияОплаты = Документ.ДатаОкончанияОплаты;
	КонецЕсли;
	
	Если Не ЗначениеЗаполнено(Документ.ДатаНачалаСобытия)
		Или Не ЗначениеЗаполнено(ДатаНачалаОплаты)
		Или Не ЗначениеЗаполнено(ДатаОкончанияОплаты)
		Или УчетПособийСоциальногоСтрахования.ИспользуетсяУсловиеИсчисления(Документ, "44")
		Или Не ИспользоватьПериодыУходаВШапке(Документ) Тогда
		Возврат;
	КонецЕсли;
	
	ДнейПолнойОплаты = УчетПособийСоциальногоСтрахования.ДнейПолнойОплатыПередПоловинной(
		Документ.СлучайУходаЗаБольнымРебенком,
		Документ.ДатаНачалаСобытия);
	Если ДнейПолнойОплаты = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	ДатаНачалаПоловиннойОплаты = Документ.ДатаНачалаСобытия + ДнейПолнойОплаты * 86400;
	Если ДатаОкончанияОплаты < НачалоДня(ДатаНачалаПоловиннойОплаты) - 1 Тогда
		Возврат;
	КонецЕсли;
	
	Документ.ДатаНачалаПоловиннойОплаты = Макс(ДатаНачалаПоловиннойОплаты, ДатаНачалаОплаты);
	
КонецПроцедуры

