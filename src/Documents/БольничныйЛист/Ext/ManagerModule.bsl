// Получает последний больничный по № ЛН.
Процедура ЗаполнитьПервичныйДокументДляРасчетаПособияФСС(ДокументСЭДО, Реквизиты) Экспорт
	Если ТипЗнч(ДокументСЭДО.ПервичныйДокумент) = Тип("ДокументСсылка.БольничныйЛист")
		И ЗначениеЗаполнено(ДокументСЭДО.ПервичныйДокумент) Тогда
		ИменаРеквизитов = "ГоловнаяОрганизация, ФизическоеЛицо";
		Больничный = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(ДокументСЭДО.ПервичныйДокумент, ИменаРеквизитов);
		Если Больничный.ГоловнаяОрганизация = ДокументСЭДО.ГоловнаяОрганизация
			И Больничный.ФизическоеЛицо = ДокументСЭДО.ФизическоеЛицо Тогда
			Возврат;
		КонецЕсли;
	КонецЕсли;
	
	Отбор = Новый Структура;
	Отбор.Вставить("ФизическоеЛицо", ДокументСЭДО.ФизическоеЛицо);
	Больничный = ПоследнийДокументВЦепочкеИсправлений(ДокументСЭДО.НомерЛН, ДокументСЭДО.ГоловнаяОрганизация, Отбор);
	Если Больничный <> Неопределено Тогда
		Реквизиты.Вставить("ПервичныйДокумент", Больничный.Ссылка);
	КонецЕсли;
КонецПроцедуры

// Возникает при заполнении документа ОтветНаЗапросФССДляРасчетаПособия на основании больничного.
Процедура ЗаполнитьОтветНаЗапросФССДляРасчетаПособия(БольничныйСсылка, ДокументСЭДО, Реквизиты, ДанныеДляРасчетаСреднегоЗаработка) Экспорт
	Больничный = БольничныйСсылка.ПолучитьОбъект();
	
	ПричинаНетрудоспособности = Больничный.ПричинаНетрудоспособности;
	Если ПричинаНетрудоспособности = Перечисления.ПричиныНетрудоспособности.ПоБеременностиИРодам Тогда
		Реквизиты.Вставить("ВидПособия", Перечисления.ПособияНазначаемыеФСС.ПособиеПоБеременностиИРодам);
	ИначеЕсли ПричинаНетрудоспособности = Перечисления.ПричиныНетрудоспособности.ТравмаНаПроизводстве
		Или ПричинаНетрудоспособности = Перечисления.ПричиныНетрудоспособности.Профзаболевание Тогда
		Реквизиты.Вставить("ВидПособия", Перечисления.ПособияНазначаемыеФСС.ПособиеВСвязиСНесчастнымСлучаемНаПроизводстве);
	Иначе
		Реквизиты.Вставить("ВидПособия", Перечисления.ПособияНазначаемыеФСС.ПособиеПоВременнойНетрудоспособности);
	КонецЕсли;
	
	НомерНаПечать = ЗарплатаКадрыОтчеты.НомерНаПечать(Больничный.Номер);
	
	Реквизиты.Вставить("Организация",         Больничный.Организация);
	Реквизиты.Вставить("Сотрудник",           Больничный.Сотрудник);
	Реквизиты.Вставить("НомерЛН",             Больничный.НомерЛисткаНетрудоспособности);
	Реквизиты.Вставить("ДатаНачалаСобытия",   Больничный.ДатаНачалаСобытия);
	Реквизиты.Вставить("РайонныйКоэффициент", Больничный.РайонныйКоэффициентРФНаНачалоСобытия);
	
	ОтпускПоУходуДатаНачала = Больничный.ДатаНачала;
	ОтпускПоУходуДатаОкончания = Больничный.ДатаОкончания;
	Для Каждого ИсключенныйПериод Из Больничный.ИсключаемыеПериоды Цикл
		Если ОтпускПоУходуДатаНачала = ИсключенныйПериод.ДатаНачала Тогда
			ОтпускПоУходуДатаНачала = ИсключенныйПериод.ДатаОкончания + 86400;
		КонецЕсли;
		Если ОтпускПоУходуДатаОкончания = ИсключенныйПериод.ДатаОкончания Тогда
			ОтпускПоУходуДатаОкончания = ИсключенныйПериод.ДатаНачала - 86400;
		КонецЕсли;
	КонецЦикла;
	Реквизиты.Вставить("ОтпускПоУходуДата",           Больничный.Дата);
	Реквизиты.Вставить("ОтпускПоУходуДатаНачала",     ОтпускПоУходуДатаНачала);
	Реквизиты.Вставить("ОтпускПоУходуДатаОкончания",  ОтпускПоУходуДатаОкончания);
	Реквизиты.Вставить("ОтпускПоУходуНомер",          НомерНаПечать);
	
	// Исключаемые периоды должны заполняться только по тем дням, которые приходятся на период оплаты СФР.
	ДатаНачалаОплатыСФРПоОбщимПравилам = Макс(
		УчетПособийСоциальногоСтрахования.ДатаНачалаОплатыЗаСчетФСС(
			Больничный.ДатаНачалаСобытия, Больничный.ПричинаНетрудоспособности, Больничный.НачалоВПериодПриостановленияТД),
		Больничный.ДатаНачала);
	Если Не Больничный.СдвигатьПериодОплаты И Больничный.ИсключаемыеПериоды.Количество() > 0 Тогда
		ОбратныйИндекс = Больничный.ИсключаемыеПериоды.Количество();
		Пока ОбратныйИндекс > 0 Цикл
			ОбратныйИндекс = ОбратныйИндекс - 1;
			ИсключаемыйПериод = Больничный.ИсключаемыеПериоды[ОбратныйИндекс];
			Если ИсключаемыйПериод.ДатаНачала < ДатаНачалаОплатыСФРПоОбщимПравилам Тогда
				ИсключаемыйПериод.ДатаНачала = ДатаНачалаОплатыСФРПоОбщимПравилам;
			КонецЕсли;
			Если ИсключаемыйПериод.ДатаНачала > ИсключаемыйПериод.ДатаОкончания Тогда
				Больничный.ИсключаемыеПериоды.Удалить(ИсключаемыйПериод);
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	
	// Признак наличи оплаты за счет СФР можно получить из фактических начислений.
	// Если документ не рассчитан, то тоже будет значение Ложь.
	ЕстьОплатаЗаСчетСФР = Больничный.Начисления.Найти(Больничный.ВидОплатыПособия, "Начисление") <> Неопределено;
	
	// При отсутствии оплаты за счет СФР необходимо включать флажок "Пособие не требуется".
	//   СФР после приема 101 сообщения убирает из оплаты исключаемые периоды.
	//   И если получается пустой период оплаты, то страхователю возвращаются ошибки:
	//   - Не заполнено обязательное поле 'Период за который начисляется пособие ФСС.Начало периода'.
	//   - Не заполнено обязательное поле 'Период за который начисляется пособие ФСС.Окончание периода'.
	Реквизиты.Вставить("ОтказВНазначенииПособия", Больничный.ДокументРассчитан И Не ЕстьОплатаЗаСчетСФР);
	Реквизиты.Вставить("ОтказВНазначенииПособияПричина", "");
	Если Реквизиты.ОтказВНазначенииПособия Тогда
		ПредставленияИсключаемыхПериодов = Новый Массив;
		Для Каждого ИсключаемыйПериод Из Больничный.ИсключаемыеПериоды Цикл
			Представление = ОбщегоНазначенияБЗК.НаименованиеПериода(ИсключаемыйПериод.ДатаНачала, ИсключаемыйПериод.ДатаОкончания);
			Если ЗначениеЗаполнено(ИсключаемыйПериод.Причина) Тогда
				Представление = Представление + " (" + ИсключаемыйПериод.Причина + ")";
			КонецЕсли;
			ПредставленияИсключаемыхПериодов.Добавить(Представление);
		КонецЦикла;
		Если ПредставленияИсключаемыхПериодов.Количество() > 0 Тогда
			ТекстПричины = СтрШаблон(НСтр("ru = 'Исключаемые периоды (%1): %2';
											|en = 'Исключаемые периоды (%1): %2'"),
				ЗарплатаКадрыКлиентСервер.ПредставлениеДней(Больничный.ИсключаемыеПериоды.Итог("КалендарныхДней")),
				СтрСоединить(ПредставленияИсключаемыхПериодов, ", "));
		Иначе
			ТекстПричины = НСтр("ru = 'Нет дней оплачиваемых за счет СФР';
								|en = 'Нет дней оплачиваемых за счет СФР'");
		КонецЕсли;
		Реквизиты.ОтказВНазначенииПособияПричина = ТекстПричины;
	КонецЕсли;
	
	// Есть случаи когда дата начала оплаты за счет СФР может сдвигаться.
	Если ЕстьОплатаЗаСчетСФР Тогда
		ДатаНачалаОплатыСФР = ДатаНачалаОплатыСФРПоОбщимПравилам;
		// Функция ДатыНачислений учитывает изменения исключаемых периодов в данном экземпляре больничного (см. выше).
		ДатыНачислений = ДатыНачислений(Больничный, Новый Соответствие);
		// СФР сам учитывает исключаемые периоды, поэтому дата начала оплаты СФР определяется
		// путем добавления 1 дня к наибольшей дате оплаты за счет работодателя.
		Фильтр = Новый Структура("ВидРасчета", Больничный.ВидОплатыЗаСчетРаботодателя);
		ДатыОплатыЗаСчетРаботодателя = ДатыНачислений.Скопировать(Фильтр);
		Количество = ДатыОплатыЗаСчетРаботодателя.Количество();
		Если Количество > 0 Тогда
			ДатыОплатыЗаСчетРаботодателя.Сортировать("Дата");
			ДатаОкончанияОплатыЗаСчетРаботодателя = ДатыОплатыЗаСчетРаботодателя[Количество-1].Дата;
			Если ДатаОкончанияОплатыЗаСчетРаботодателя >= ДатаНачалаОплатыСФР Тогда
				ДатаНачалаОплатыСФР = ДатаОкончанияОплатыЗаСчетРаботодателя + 86400;
			КонецЕсли;
		КонецЕсли;
		ДатаНачалаОплатыСФРБезУчетаФлажков = Макс(
			УчетПособийСоциальногоСтрахования.ДатаНачалаОплатыЗаСчетФСС(
				Больничный.ДатаНачалаСобытия, Больничный.ПричинаНетрудоспособности, Ложь),
			Больничный.ДатаНачала);
		Если ЗначениеЗаполнено(ДатаНачалаОплатыСФР) И ДатаНачалаОплатыСФР <> ДатаНачалаОплатыСФРБезУчетаФлажков Тогда
			Реквизиты.Вставить("ОплатаФССДатаНачала", ДатаНачалаОплатыСФР);
		КонецЕсли;
	КонецЕсли;
	
	Если Больничный.НачалоВПериодПриостановленияТД Тогда
		Реквизиты.Вставить("СотрудникКатегория", "ENDOFMILITARY");
	КонецЕсли;
	
	Реквизиты.Вставить("ПричинаПредоставленияЛьготы", Больничный.ФинансированиеФедеральнымБюджетом);
	Реквизиты.Вставить("УсловияИсчисленияКод1",       Больничный.УсловияИсчисленияКод1);
	Реквизиты.Вставить("УсловияИсчисленияКод2",       Больничный.УсловияИсчисленияКод2);
	Реквизиты.Вставить("УсловияИсчисленияКод3",       Больничный.УсловияИсчисленияКод3);
	Реквизиты.Вставить("ИсключаемыеПериоды",          Больничный.ИсключаемыеПериоды.Выгрузить());
	Реквизиты.Вставить("ПериодыПростоя",              Больничный.ПериодыПростоя.Выгрузить());
	
	Реквизиты.Вставить("ПриостановленияТрудовыхДоговоров", Больничный.ПриостановленияТрудовыхДоговоров.Выгрузить());
	
	МинимальныйСреднедневной = УчетПособийСоциальногоСтрахования.МинимальныйСреднедневнойЗаработокДляСравненияСМРОТ(
		Больничный.МинимальныйСреднедневнойЗаработок,
		Больничный.РайонныйКоэффициентРФнаНачалоСобытия,
		Больничный.ДатаНачалаСобытия);
	Среднедневной = Макс(Больничный.СреднийДневнойЗаработок, МинимальныйСреднедневной);
	Реквизиты.Вставить("СреднемесячныйЗаработок", Окр(Среднедневной * 30.4, 2));
	Реквизиты.Вставить("ПервыйРасчетныйГод",      Больничный.ПериодРасчетаСреднегоЗаработкаПервыйГод);
	Реквизиты.Вставить("ВторойРасчетныйГод",      Больничный.ПериодРасчетаСреднегоЗаработкаВторойГод);
	
	НестраховойСтаж = УчетПособийСоциальногоСтрахования.НестраховойСтаж(Больничный);
	Если НестраховойСтаж.Лет <> 0 Или НестраховойСтаж.Месяцев <> 0 Тогда
		Реквизиты.Вставить("СтраховойСтажЛет",       Больничный.СтажРасширенныйЛет);
		Реквизиты.Вставить("СтраховойСтажМесяцев",   Больничный.СтажРасширенныйМесяцев);
		Реквизиты.Вставить("НестраховойСтажЛет",     НестраховойСтаж.Лет);
		Реквизиты.Вставить("НестраховойСтажМесяцев", НестраховойСтаж.Месяцев);
	Иначе
		Реквизиты.Вставить("СтраховойСтажЛет",       Больничный.СтажЛет);
		Реквизиты.Вставить("СтраховойСтажМесяцев",   Больничный.СтажМесяцев);
		Реквизиты.Вставить("НестраховойСтажЛет",     0);
		Реквизиты.Вставить("НестраховойСтажМесяцев", 0);
	КонецЕсли;
	
	Если Больничный.ДокументРассчитан
		И ЗначениеЗаполнено(Больничный.ПериодРасчетаСреднегоЗаработкаПервыйГод)
		И ЗначениеЗаполнено(Больничный.ПериодРасчетаСреднегоЗаработкаВторойГод) Тогда
		ДанныеДляРасчетаСреднегоЗаработка = ДанныеДокументаДляРасчетаСреднегоЗаработкаФСС(Больничный);
	КонецЕсли;
	
КонецПроцедуры

// Возникает при заполнении документа ИсходящееСообщениеОСтраховомСлучаеФСС на основании больничного.
Процедура ЗаполнитьИсходящееСообщениеОСтраховомСлучаеФСС(Больничный, ДокументСЭДО, Реквизиты) Экспорт
	Запрос = Новый Запрос;
	Запрос.Текст =
