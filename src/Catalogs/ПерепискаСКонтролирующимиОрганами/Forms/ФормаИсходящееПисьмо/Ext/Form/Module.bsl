&НаКлиенте
Процедура ПослеВыбораШаблона()
	
	Для каждого Шаблон Из ШаблоныПисем Цикл
		
		Если ВРег(Шаблон.Значение) = ВРег(Объект.Наименование) Тогда
			
			Объект.Содержание = Шаблон.Представление;
			ПодставитьРеквизитыОрганизацииВШаблон();
			Модифицированность = Истина;
			
		КонецЕсли;
	
	КонецЦикла;
	
КонецПроцедуры

&НаСервере
Процедура ПодставитьРеквизитыОрганизацииВШаблон()
	
	ЭтоЮридическоеЛицо = РегламентированнаяОтчетностьВызовСервера.ЭтоЮридическоеЛицо(Объект.Отправитель);
	
	ВсеДанные = Новый Структура();
	ВсеДанные.Вставить("Организация", Объект.Отправитель);
	ВсеДанные.Вставить("ПриОткрытии", Истина);
	ВсеДанные.Вставить("АдресЮридический", "");
	ВсеДанные.Вставить("АдресФактический", "");
	
	КонтекстЭДОСервер = ДокументооборотСКО.ПолучитьОбработкуЭДО();
	КонтекстЭДОСервер.ЗаполнитьДанныеОрганизации(ВсеДанные);
	
	Данные = Новый Массив;
	Данные.Добавить("ИНН " + ВсеДанные.СтруктураДанныхОрганизации.ИННЮЛ);
	
	Если ЭтоЮридическоеЛицо Тогда
		Данные.Добавить("КПП " + ВсеДанные.СтруктураДанныхОрганизации.КППЮЛ);
		Данные.Добавить("ОГРН " + ВсеДанные.СтруктураДанныхОрганизации.ОГРН);
	Иначе
		Данные.Добавить("ОГРНИП " + ВсеДанные.СтруктураДанныхОрганизации.ОГРН);
	КонецЕсли;
	
	Данные.Добавить("адрес " + ВсеДанные.АдресЮридическийПредставление);
	
	ДанныеСтрокой = СтрСоединить(Данные, ", ");
	
	Объект.Содержание = СтрЗаменить(Объект.Содержание, "[ДанныеОрганизации]", ДанныеСтрокой);
	Объект.Содержание = СтрЗаменить(Объект.Содержание, "[Наименование]", Строка(Объект.Отправитель));
	
КонецПроцедуры

