// Продолжение ПроверитьВставкуШтампа
&НаКлиенте
Процедура ПроверитьВставкуШтампаПродолжениеПослеВыбораДокумента(Результат, Параметры) Экспорт
	
	Если НЕ ЗначениеЗаполнено(Результат) Тогда
		Возврат;
	КонецЕсли;  
	
	МассивФайлов = РаботаСФайламиВызовСервера.ПриложенныеФайлыДляВставкиШтампа(Результат);
	
	Если МассивФайлов.Количество() = 0 Тогда
		ПоказатьПредупреждение(, НСтр("ru = 'Проверка невозможна. В выбранном документе нет файлов, куда можно вставить штамп ЭП'"));
		Возврат;
	КонецЕсли;	

	Если МассивФайлов.Количество() = 1 Тогда
		// сразу идем дальше
		ПроверитьВставкуШтампаПоФайлу(МассивФайлов[0]);
		Возврат;
	КонецЕсли;	
	
	Если МассивФайлов.Количество() > 1 Тогда
		// покажем выбор из списка
		
		СписокФайлов = Новый СписокЗначений;	
		
		Для Каждого Стр Из МассивФайлов Цикл            
			
			Картинка = БиблиотекаКартинок.Скрепка;
			
			Если НРег(Стр.Расширение) = "doc" Или НРег(Стр.Расширение) = "docx" Тогда
				Картинка = БиблиотекаКартинок.ФорматWord;
			ИначеЕсли НРег(Стр.Расширение) = "xls" Или НРег(Стр.Расширение) = "xlsx" Тогда
				Картинка = БиблиотекаКартинок.ФорматExcel; 
				
			ИначеЕсли НРег(Стр.Расширение) = "pdf" Тогда
				Картинка = БиблиотекаКартинок.ФорматPDF;
				
			ИначеЕсли НРег(Стр.Расширение) = "txt" Тогда
				Картинка = БиблиотекаКартинок.ФорматTXT;
				
			ИначеЕсли НРег(Стр.Расширение) = "htm" Или НРег(Стр.Расширение) = "html" Тогда
				Картинка = БиблиотекаКартинок.ФорматHTML;
				
			ИначеЕсли НРег(Стр.Расширение) = "odt" Тогда
				Картинка = БиблиотекаКартинок.ФорматOpenOfficeWriter;
				
			ИначеЕсли НРег(Стр.Расширение) = "ods" Тогда
				Картинка = БиблиотекаКартинок.ФорматOpenOfficeCalc;

			ИначеЕсли ТипЗнч(Стр.Приложение) <> Тип("СправочникСсылка.Файлы") Тогда
				Картинка = БиблиотекаКартинок.ПредметВспомогательный16;
				
			КонецЕсли;	                
			
			ПредставлениеСтроки = Стр.Наименование;
			Если СтрДлина(ПредставлениеСтроки) < 50 Тогда
				ПредставлениеСтроки = 
					СтроковыеФункцииКлиентСервер.ДополнитьСтроку(ПредставлениеСтроки, 50, " ", "Справа");
			КонецЕсли;	
			
			СписокФайлов.Добавить(Стр, ПредставлениеСтроки,,Картинка);
			
		КонецЦикла;	
		
		ОписаниеОповещения = Новый ОписаниеОповещения(
			"ПроверитьВставкуШтампаПродолжениеПослеВыбораФайла",
			ЭтотОбъект);
		
		ПоказатьВыборИзСписка(ОписаниеОповещения, СписокФайлов, Элементы.ПроверитьВставкуШтампа);	
		Возврат;		
		
	КонецЕсли;	
	
КонецПроцедуры

