				ДействиеУчастникаОбъект.СостояниеУчастникаЗадачи,
				ВидЗадачи);
		КонецЕсли;
		
		ДействиеУчастникаОбъект.Записать(РежимЗаписиДокумента.Проведение);
		
	КонецЦикла;
	
КонецПроцедуры

// Отмечает действия задачи "Проверено".
