	Запрос.УстановитьПараметр("ДействиеЗадачи", ДействиеЗадачи);
	
	РезультатЗапроса = Запрос.Выполнить();
	
	ЭтоИсторическоеДействиеЗадачи = РезультатЗапроса.Пустой();
	
	Возврат ЭтоИсторическоеДействиеЗадачи;
	
