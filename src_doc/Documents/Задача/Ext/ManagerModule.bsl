	Если СтрНайти(Номер, "-") Тогда
		МассивНомер = СтрРазделить(Номер, "-", Истина);
		ПрефиксСтрокой = МассивНомер[0] + "-";
		НомерСтрокой = МассивНомер[1];
	Иначе
