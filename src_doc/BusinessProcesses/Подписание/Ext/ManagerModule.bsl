			СтандартнаяОбработка = Ложь;
			Параметры.Вставить("Заголовок", НСтр("ru = 'Подписания'"));
			Параметры.Вставить("ТипПроцесса", Тип("БизнесПроцессСсылка.Подписание"));
			ВыбраннаяФорма = Метаданные.ОбщиеФормы.ВыборБизнесПроцесса;
			
		КонецЕсли;
	
	КонецЕсли;

