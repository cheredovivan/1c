		Запрос.УстановитьПараметр("ВидОбъектаОбработки", 
			ОбщегоНазначения.ЗначениеРеквизитаОбъекта(Значение, "ВидДокумента"));
	Иначе 
		Запрос.Текст = Запрос.Текст + "
		|	И ЭлементГруппировки = &Значение";
