	ИмяПредопределенногоЗначения = СтрШаблон("%1.%2.%3",
		"Справочник", "ВидыКонтактнойИнформации", "EmailПользователя");
	
	Возврат ПредопределенноеЗначение(ИмяПредопределенногоЗначения);
	
