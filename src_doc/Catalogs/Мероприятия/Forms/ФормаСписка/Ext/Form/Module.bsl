		ДанныеСтроки = КлючИЗначение.Значение.Данные;
		
		// Задачи
		Если ДанныеСтроки.Свойство("Задачи") Тогда
			
			ДанныеСтроки.Задачи =
				ДействияСервер.ИндексКартинкиКоллекцияВзаимодействияСотрудников(
					ТекущиеСостоянияОбработок[ДанныеСтроки.Ссылка]);
			
		КонецЕсли;
		
	КонецЦикла;
	
