	ДанныеМиникарточки.Вставить("ОсновныеЗадачи", ПолучитьДанныеЗадач(Результаты[0]));
	ДанныеМиникарточки.Вставить("ВспомогательныеЗадачи", ПолучитьДанныеЗадач(Результаты[1]));
	
