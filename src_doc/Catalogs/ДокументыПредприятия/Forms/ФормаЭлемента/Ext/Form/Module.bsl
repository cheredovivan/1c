			ПараметрыФормы.Вставить("ВидДокумента", Объект.ВидДокумента);

			ОткрытьФорму(
				"Справочник.ДокументыПредприятия.Форма.МастерСозданияНаОсновании", ПараметрыФормы, , , , ,
				ОписаниеОповещения);

			Отказ = Истина;
			Возврат;

		КонецЕсли;

	КонецЕсли;

	ЕстьПрошедшиеДаты = Ложь;
	ТекДата = НачалоДня(ТекущаяДата());
	Если ПараметрыЗаписи.Свойство("Регистрация") И Не ПараметрыЗаписи.Свойство(
		"ПоказаноПредупреждениеОПревышенииСрокаОтмены") Тогда

		Для Каждого СтрокаДокумент Из СписокНеДействующихДокументов Цикл

			Если ЗначениеЗаполнено(СтрокаДокумент.ДатаОтмены) И СтрокаДокумент.ДатаОтмены < ТекДата Тогда

				ТекстСообщения = НСтр("ru = 'Для некоторых отменяемых документов указана прошедшая дата. 
