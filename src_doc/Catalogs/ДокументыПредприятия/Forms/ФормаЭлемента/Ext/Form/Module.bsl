			ПараметрыФормы.Вставить("ПоказатьСвязи", МассивТиповСвязейАргумент.Количество() > 0);
			ПараметрыФормы.Вставить("ПоказатьОбязательныеСвязи", (ОбязательныеТипыСвязей.Количество() <> 0
				И ОбязательныеТипыСвязей.Количество() <> ОбязательныеСвязи.Количество()));
			ПараметрыФормы.Вставить("ПоказатьНеДействует", ВидДокументаКэш.УчитыватьНедействующиеДокументы);
			ПараметрыФормы.Вставить("ОбязательныеСвязи", ОбязательныеСвязиПараметр);
