		Если Не Записать(ПараметрыЗаписи) Тогда
			Возврат;
		КонецЕсли;

		ПоказатьОповещениеПользователя(
			НСтр("ru = 'Создание:'"), ПолучитьНавигационнуюСсылку(Объект.Ссылка), Строка(Объект.Ссылка),
			БиблиотекаКартинок.Информация32);

	КонецЕсли;

	Если Не ДействияКлиент.МожноЛиПодписатьКЭП(ЭтаФорма) Тогда

		ТекстПредупреждения = НСтр(
			"ru = 'Нельзя подписать документ, т.к. по нему запущена обработка, содержащая согласование в режиме замечаний.'");
		ПоказатьПредупреждение( , ТекстПредупреждения);
		Возврат;

	КонецЕсли;

	ПараметрыОбработчика = Новый Структура;
	ПараметрыОбработчика.Вставить("Объект", Объект.Ссылка);
	ОбработчикЗавершения = Новый ОписаниеОповещения("ПодписатьДокументЗавершение", ЭтотОбъект, ПараметрыОбработчика);

