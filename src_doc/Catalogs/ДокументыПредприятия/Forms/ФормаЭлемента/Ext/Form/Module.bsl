			ВидДокументаИзменен, Объект.Ссылка);

		Если ОписаниеВозврата.Отказ Тогда
			Отказ = Истина;
		КонецЕсли;

		Если Отказ Тогда
			ПоказатьПредупреждение( , ОписаниеВозврата.ТекстОшибки);
