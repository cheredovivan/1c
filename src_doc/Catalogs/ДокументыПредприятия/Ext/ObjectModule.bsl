			Отказ);
	ИначеЕсли Не ТематикаНазначенаВидуДокумента(Объект.Тематика, Объект.ВидДокумента) Тогда
		ОбщегоНазначенияКлиентСервер.СообщитьПользователю(
			НСтр("ru = 'Указанная тематика не соответствует данному виду документа.'"),
			,
			"ВидИТематикаТекст",, 
			Отказ);
	КонецЕсли;
	
КонецПроцедуры

// Проверяет что тематика назначена виду документа.
//
Функция ТематикаНазначенаВидуДокумента(Тематика, ВидДокумента)
	
	УстановитьПривилегированныйРежим(Истина);
	
	Запрос = Новый Запрос(
		"ВЫБРАТЬ
		|	ТематикиДокументов.Ссылка
		|ИЗ
		|	Справочник.ТематикиДокументов КАК ТематикиДокументов
		|ГДЕ
		|	ТематикиДокументов.Ссылка = &Тематика
		|	И ТематикиДокументов.ВидДокумента В (&ВидыДокумента)");

	Запрос.УстановитьПараметр("Тематика", Тематика);
	Запрос.УстановитьПараметр("ВидыДокумента", 
		Делопроизводство.СписокРодителейВидаДокумента(ВидДокумента));
	
	Выборка = Запрос.Выполнить().Выбрать();
	Если Выборка.Следующий() Тогда
		Возврат Истина;
	КонецЕсли;
	
	Возврат Ложь;
	
КонецФункции

