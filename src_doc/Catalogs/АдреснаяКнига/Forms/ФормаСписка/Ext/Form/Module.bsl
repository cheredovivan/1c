	ПараметрыОжидания = ДлительныеОперацииКлиент.ПараметрыОжидания(ЭтотОбъект);
	ПараметрыОжидания.ТекстСообщения = Нстр("ru = 'Выполняется обновление адресной книги.'");
	ПараметрыОжидания.ОповещениеПользователя.Показать = Истина;
	ПараметрыОжидания.ОповещениеПользователя.Текст = Нстр("ru = 'Обновление адресной книги'");
	ПараметрыОжидания.ОповещениеПользователя.Пояснение = Нстр("ru = 'Обновление адресной книги завершено.'");
	
	Если РаботаСАдреснойКнигойКлиентПовтИсп.ИспользоватьОтложенноеОбновление() Тогда
		ПараметрыОжидания.ТекстСообщения =
			Нстр("ru = 'Выполняется заполнение очереди отложенного обновления адресной книги.'");
		ПараметрыОжидания.ОповещениеПользователя.Текст =
			Нстр("ru = 'Заполнение очереди обновления адресной книги'");
		ПараметрыОжидания.ОповещениеПользователя.Пояснение =
			Нстр("ru = 'Заполнение очереди обновления адресной книги завершено. Обновление данных адресной книги будет выполняться постепенно.'");
	КонецЕсли;
	
	ДлительнаяОперация = ВыполнитьЗапускПроцедурыОбновленияАдреснойКниги(УникальныйИдентификатор);
	
	ДлительныеОперацииКлиент.ОжидатьЗавершение(
		ДлительнаяОперация,
		Новый ОписаниеОповещения("Завершение_ОбновитьДанныеАдреснойКниги", ЭтотОбъект),
		ПараметрыОжидания);
	
