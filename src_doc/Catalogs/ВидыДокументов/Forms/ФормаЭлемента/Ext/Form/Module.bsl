		Если ТекИндекс = Файлы.Количество() - 1 Тогда
			Возврат;
		КонецЕсли;	
		
		Файлы.Сдвинуть(ТекИндекс, 1);
		
		ЗаписатьПорядокВложений();
		
	КонецЕсли;	
	
