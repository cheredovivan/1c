	НачатьТранзакцию();
	Попытка
		Порция = Справочники.ЗамещающиеИПомощники.НовыйДанныеДействийЗадачКОбработке();
		Порция.Замещение = Замещение;
		Порция.РеквизитыЗамещения = ВсеДанныеКОбработке.РеквизитыЗамещения;
		РазмерПорции = 500;
		КолвоСуществующихДействий = ВсеДанныеКОбработке.ИсполнителиДействийЗадач.Количество();
		КолвоНовыхДействий = ВсеДанныеКОбработке.НовыеДействияКОбработке.Количество();
		КолвоУдаляемыхДействий = ВсеДанныеКОбработке.УдаляемыеДействияКОбработке.Количество();
		
		Счетчик = 0; Индекс = 0;
		Пока Истина Цикл
			
			// Кладем только необходимое, в зависимости от того действует Замещение или нет:
			Если ВсеДанныеКОбработке.РеквизитыЗамещения.Действует Тогда
				Если Индекс < КолвоНовыхДействий Тогда
					Порция.НовыеДействияКОбработке.Добавить(ВсеДанныеКОбработке.НовыеДействияКОбработке[Индекс]);
				КонецЕсли;
				Если Индекс < КолвоУдаляемыхДействий Тогда
					Порция.УдаляемыеДействияКОбработке.Добавить(ВсеДанныеКОбработке.УдаляемыеДействияКОбработке[Индекс]);
				КонецЕсли;
			Иначе
				Если Индекс < КолвоСуществующихДействий Тогда
					НоваяСтрока = Порция.ИсполнителиДействийЗадач.Добавить();
					ЗаполнитьЗначенияСвойств(НоваяСтрока, ВсеДанныеКОбработке.ИсполнителиДействийЗадач[Индекс]);
				КонецЕсли;
			КонецЕсли;
			
			Счетчик = Счетчик + 1;
			Индекс = Индекс + 1;
			ДанныеКончились = (
				Индекс >= КолвоСуществующихДействий
				И Индекс >= КолвоНовыхДействий
				И Индекс >= КолвоУдаляемыхДействий);
			
			Если Счетчик >= РазмерПорции Или ДанныеКончились Тогда
				
				// Порция кончилась, создаем задание:
				НазваниеДочернего = СтрШаблон(
