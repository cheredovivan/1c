							НачалоТегаСтр = Сред(ТекстПисьмаДляПравки, ПозицияНачалаСкобкиДоСлова + 1, СтрДлина(ПодстрокаНашегоТега));
							
							Если НРег(НачалоТегаСтр) = ПодстрокаНашегоТега Тогда
								
								Слово = "";
								СловоСобрано = Ложь;
								
