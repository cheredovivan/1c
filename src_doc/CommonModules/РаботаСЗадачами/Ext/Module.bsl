// Рассчитывает дни просрочки выполнения действия.
//
// Параметры:
//  Исполнитель - ОпределяемыйТип.УчастникЗадач - Исполнитель.
//  Срок - Дата - Срок.
//  ДатаВыполнения - Дата - Дата выполнения
// 
// Возвращаемое значение:
//  Число - Дни просрочки выполнения действия.
//
Функция ДниПросрочки(Исполнитель, Срок, ДатаВыполнения) Экспорт
	
	ДниПросрочки = 0;
	
	ДатаОкончанияПросрочки = ?(ЗначениеЗаполнено(ДатаВыполнения), ДатаВыполнения, ТекущаяДатаСеанса());
	Если Не ЗначениеЗаполнено(Срок) Или ДатаОкончанияПросрочки <= Срок Тогда
		Возврат ДниПросрочки;
	КонецЕсли;
	
	КэшГрафиковРаботы = КэшиНаВремяВызоваПовтИсп.КэшГрафиковРаботы();
	Если ТипЗнч(Исполнитель) = Тип("СправочникСсылка.Сотрудники") Тогда
		ГрафикРаботы = КэшГрафиковРаботы[Исполнитель];
		Если ГрафикРаботы = Неопределено Тогда
			КэшГрафиковРаботы[Исполнитель] = ГрафикиРаботы.ГрафикРаботыСотрудника(Исполнитель);
			ГрафикРаботы = КэшГрафиковРаботы[Исполнитель];
		КонецЕсли;
	Иначе
		КлючОсновногоГрафикаРаботы = Справочники.Сотрудники.ПустаяСсылка();
		ГрафикРаботы = КэшГрафиковРаботы[КлючОсновногоГрафикаРаботы];
		Если ГрафикРаботы = Неопределено Тогда
			КэшГрафиковРаботы[КлючОсновногоГрафикаРаботы] = ГрафикиРаботы.ПолучитьОсновнойГрафикРаботы();
			ГрафикРаботы = КэшГрафиковРаботы[КлючОсновногоГрафикаРаботы];
		КонецЕсли;
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ГрафикРаботы) Тогда
		
		// Критичное для производительности отчёта "Сводка работ" место.
		// Может вызываться много раз для одного запуска отчёта, в том числе на несколько лет может быть срок.
		ПерезаполнитьКоличествоРабочихДней = Ложь;
		
		КэшРабочихДней = КэшиНаВремяВызоваПовтИсп.КэшРабочихДней(ГрафикРаботы);
		Если Не ЗначениеЗаполнено(КэшРабочихДней.НачалоОтсчета) Или НачалоГода(Срок) < КэшРабочихДней.НачалоОтсчета Тогда
			КэшРабочихДней.НачалоОтсчета = НачалоГода(Срок);
			КэшРабочихДней.КоличествоРабочихДней.Очистить();
			КэшРабочихДней.ЗаполненныеГода.Очистить();
			КэшРабочихДней.РабочиеДни.Очистить();
			ПерезаполнитьКоличествоРабочихДней = Истина;
		КонецЕсли;
		
		Календарь = Неопределено;
		КоличествоСекундВДне = 86400;
		ДатаРасчета = Мин(НачалоГода(Срок), КэшРабочихДней.НачалоОтсчета);
		ДатаОкончанияРасчета = Макс(КонецГода(ДатаОкончанияПросрочки), КонецГода(КэшРабочихДней.НачалоОтсчета));
		Пока ДатаРасчета < ДатаОкончанияРасчета Цикл
			
			ПерезаполнитьКоличествоРабочихДнейЗаГод = Ложь;
			
			ГодРасчета = Год(ДатаРасчета);
			Если КэшРабочихДней.ЗаполненныеГода[ГодРасчета] <> Истина Тогда
				
				Если Календарь = Неопределено Тогда
					Календарь = ГрафикиРаботыПовтИсп.КалендарьГрафикаРаботы(ГрафикРаботы);
				КонецЕсли;
				
				ДанныеГрафика = Справочники.Календари.ПрочитатьДанныеГрафикаИзРегистра(Календарь, ГодРасчета);
				Для Каждого ДатаГрафика Из ДанныеГрафика Цикл
					КэшРабочихДней.РабочиеДни[ДатаГрафика] = Истина;
				КонецЦикла;
				
				ПерезаполнитьКоличествоРабочихДнейЗаГод = Истина;
				
				КэшРабочихДней.ЗаполненныеГода[ГодРасчета] = Истина;
				
			КонецЕсли;
			
			Если ПерезаполнитьКоличествоРабочихДней Или ПерезаполнитьКоличествоРабочихДнейЗаГод Тогда
				
				ДатаРасчетаКоличества = ДатаРасчета;
				ДатаОкончанияРасчетаКоличества = КонецГода(ДатаРасчета);
				Пока ДатаРасчетаКоличества < ДатаОкончанияРасчетаКоличества Цикл
					
					Если ДатаРасчетаКоличества = КэшРабочихДней.НачалоОтсчета Тогда
						КоличествоРабочихДней = 0;
					Иначе
						ПредыдущийДень = ДатаРасчетаКоличества - КоличествоСекундВДне;
						КоличествоРабочихДней = КэшРабочихДней.КоличествоРабочихДней[ПредыдущийДень];
					КонецЕсли;
					
					Если КэшРабочихДней.РабочиеДни[ДатаРасчетаКоличества] = Истина Тогда
						КоличествоРабочихДней = КоличествоРабочихДней + 1;
					КонецЕсли;
					КэшРабочихДней.КоличествоРабочихДней[ДатаРасчетаКоличества] = КоличествоРабочихДней;
					
					ДатаРасчетаКоличества = ДатаРасчетаКоличества + КоличествоСекундВДне;
					
				КонецЦикла;
				
			КонецЕсли;
			
			ДатаРасчета = КонецГода(ДатаРасчета) + 1;
			
		КонецЦикла;
		
		НачальноеКоличествоРабочихДней = КэшРабочихДней.КоличествоРабочихДней[НачалоДня(Срок)];
		КонечноеКоличествоРабочихДней = КэшРабочихДней.КоличествоРабочихДней[НачалоДня(ДатаОкончанияПросрочки)];
		ДниПросрочки = КонечноеКоличествоРабочихДней - НачальноеКоличествоРабочихДней;
		
	Иначе
		
		КоличествоСекундВДне = 86400;
		ДниПросрочки = (ДатаОкончанияПросрочки - Срок) / КоличествоСекундВДне;
		
	КонецЕсли;
	
	ДниПросрочки = Окр(ДниПросрочки);
	Если ДниПросрочки = 0 Тогда
		ДниПросрочки = 1;
	КонецЕсли;
	
	Возврат ДниПросрочки;
	
КонецФункции

