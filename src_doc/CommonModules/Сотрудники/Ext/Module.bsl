// Если ФИО на дату совпадает с текущим, то берет представление из сотрудника, иначе - сам формирует.
//
// Параметры:
//  ПараметрСотрудники - Массив Из СправочникСсылка.Сотрудники
//  Дата - Дата
// 
// Возвращаемое значение:
//  Соответствие из КлючИЗначение:
//   * Ключ - СправочникСсылка.Сотрудники
//   * Значение - Строка
//
Функция ПредставленияСотрудниковНаДату(ПараметрСотрудники, Дата) Экспорт
	
	ПредставленияСотрудниковНаДату = Новый Соответствие;
	Если ПараметрСотрудники.Количество() = 0 Тогда
		Возврат ПредставленияСотрудниковНаДату;
	КонецЕсли;
	
	Для Каждого Сотрудник Из ПараметрСотрудники Цикл
		ПредставленияСотрудниковНаДату[Сотрудник] = "";
	КонецЦикла;
	
	Запрос = Новый Запрос(
		"ВЫБРАТЬ РАЗРЕШЕННЫЕ
		|	РеквизитыСотрудников.Ссылка КАК Сотрудник,
		|	РеквизитыСотрудников.Владелец КАК ФизическоеЛицо,
		|	РеквизитыСотрудников.Наименование КАК ТекущееФИО,
		|	РеквизитыСотрудников.Представление КАК Представление
		|ИЗ
		|	Справочник.Сотрудники КАК РеквизитыСотрудников
		|ГДЕ
		|	РеквизитыСотрудников.Ссылка В (&ПараметрСотрудники)");
	
	Запрос.УстановитьПараметр("ПараметрСотрудники", ПараметрСотрудники);
	РезультатЗапроса = Запрос.Выполнить();
	Выборка = РезультатЗапроса.Выбрать();
	
	ФизическиеЛицаСотрудников = Новый Массив;
	Пока Выборка.Следующий() Цикл
		ФизическиеЛицаСотрудников.Добавить(Выборка.ФизическоеЛицо);
	КонецЦикла;
	
	Запрос = Новый Запрос(
		"ВЫБРАТЬ РАЗРЕШЕННЫЕ
		|	ФИОФизическихЛицСрезПоследних.ФизическоеЛицо КАК ФизическоеЛицо,
		|	ФИОФизическихЛицСрезПоследних.ФИО КАК ФИОНаДату
		|ИЗ
		|	РегистрСведений.ФИОФизическихЛиц.СрезПоследних(&Период, ФизическоеЛицо В (&ФизическиеЛицаСотрудников)) КАК
		|		ФИОФизическихЛицСрезПоследних");
	Запрос.УстановитьПараметр("Период", Дата);
	Запрос.УстановитьПараметр("ФизическиеЛицаСотрудников", ФизическиеЛицаСотрудников);
	РезультатЗапроса = Запрос.Выполнить();
	ФИОФизическихЛицСрезПоследних = РезультатЗапроса.Выгрузить();
	ФИОФизическихЛицСрезПоследних.Индексы.Добавить("ФизическоеЛицо");
	
	Выборка.Сбросить();
	Пока Выборка.Следующий() Цикл
		НайденнаяСтрока = ФИОФизическихЛицСрезПоследних.Найти(Выборка.ФизическоеЛицо, "ФизическоеЛицо");
		Если НайденнаяСтрока <> Неопределено Тогда
			ФИОНаДату = НайденнаяСтрока.ФИОНаДату;
		Иначе
			ФИОНаДату = "";
		КонецЕсли;
		Если Выборка.ТекущееФИО <> ФИОНаДату И ЗначениеЗаполнено(ФИОНаДату) Тогда
			Представление = СтрЗаменить(Выборка.Представление, Выборка.ТекущееФИО, ФИОНаДату);
		Иначе
			Представление = Выборка.Представление;
		КонецЕсли;
		ПредставленияСотрудниковНаДату[Выборка.Сотрудник] = Представление;
	КонецЦикла;
	
	Возврат ПредставленияСотрудниковНаДату;
	
