			КонецЕсли;	
			
			Если НайденныйИд2 <> -1 Тогда
				НайденныйИд = НайденныйИд2;
				Прервать;
			КонецЕсли;	
			
			ТекУзел = ТекУзел.parentNode;
			
		КонецЦикла;
		
		Если НайденныйИд <> -1 Тогда
			ИдНачала = Формат(НайденныйИд, "ЧГ=0");
