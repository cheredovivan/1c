	HTMLТекст = HTMLТекст + "</td>";
	
	Для Каждого СтрокаСсылка Из Результат.Строки Цикл
		HTMLТекст = HTMLТекст + "<table border=""1"" bordercolor = ""black"" style=""border-collapse: collapse;"" >";
