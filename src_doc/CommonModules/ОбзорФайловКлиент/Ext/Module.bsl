		Возврат "";
	КонецЕсли;	
	
	ПозицияКонцаТэга = СтрНайти(НРегТекстHTML, ">", НаправлениеПоиска.СНачала, ПозицияТэга+1);
	Если ПозицияКонцаТэга = 0 Тогда
		Возврат "";
	КонецЕсли;	
	
	ПозицияНачала = ПозицияКонцаТэга + 1;
	
	
