	Если Кнопка = Неопределено Тогда
		Возврат;
	КонецЕсли;

	Если ТипЗнч(Кнопка) <> Тип("КнопкаФормы") Тогда
		Возврат;
	КонецЕсли;

	ОформитьБазовуюКнопку(Кнопка);

#Если Не ВнешнееСоединение Тогда
	Кнопка.Высота = 2;

	Кнопка.Шрифт = ШрифтыСтиля.МК_ШрифтАкцентнойКнопки;
