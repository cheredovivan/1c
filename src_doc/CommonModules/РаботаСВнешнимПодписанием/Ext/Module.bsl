	КонецЕсли;
	
	ДополнительныеСвойства = ДокументОбъект.ДополнительныеСвойства;
	ЭтоНовый = Неопределено; // Булево
	ДополнительныеСвойства.Свойство("ЭтоНовый", ЭтоНовый);
	
