		Если КоличествоСтрокЗанятогоВремени <> 0 Тогда
			ЗанятостьСотрудника = Перечисления.СостоянияЗанятости.Занят;
			Возврат;
		КонецЕсли;
		
		НачалоДняИтерации = НачалоДняИтерации + 86400; // 86400 - число секунд в сутках
		
	КонецЦикла;
	
