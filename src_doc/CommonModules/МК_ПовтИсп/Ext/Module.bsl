	ЭлементыСтиля.Вставить("ШрифтПоляФормы",					ШрифтыСтиля.МК_ШрифтПоляФормы);
	ЭлементыСтиля.Вставить("ШрифтСпискаВиджета",				ШрифтыСтиля.МК_ШрифтСпискаВиджета);
	
	//Цвета Стиля
