	ЭлементыСтиля.Вставить("ЦветАвтораИсполнителя", 			ЦветаСтиля.МК_ЦветАвтораИсполнителя);
	ЭлементыСтиля.Вставить("ЦветАктивнойДополнительнойКнопки",	ЦветаСтиля.МК_ЦветАктивнойДополнительнойКнопки);
	ЭлементыСтиля.Вставить("ЦветАкцента",						ЦветаСтиля.ЦветАкцента);
	ЭлементыСтиля.Вставить("ЦветДополнительнойКнопки",			ЦветаСтиля.МК_ЦветДополнительнойКнопки);
	ЭлементыСтиля.Вставить("ЦветПоказателяПревышениеПорога",	ЦветаСтиля.МК_ЦветПоказателяПревышениеПорога);
	ЭлементыСтиля.Вставить("ЦветТекстаАкцентнойКнопки",			ЦветаСтиля.МК_ЦветТекстаАкцентнойКнопки);
	ЭлементыСтиля.Вставить("ЦветТекстаПоляФормы",				ЦветаСтиля.МК_ЦветТекстаПоляФормы);
	ЭлементыСтиля.Вставить("ЦветФонаГруппы",					ЦветаСтиля.МК_ЦветФонаГруппы);

	Возврат ЭлементыСтиля;

