	ЭлементыСтиля.Вставить("ШрифтАвтораИсполнителя",			ШрифтыСтиля.МК_ШрифтАвтораИсполнителя);
	ЭлементыСтиля.Вставить("ШрифтАкцентнойКнопки",				ШрифтыСтиля.МК_ШрифтАкцентнойКнопки);
