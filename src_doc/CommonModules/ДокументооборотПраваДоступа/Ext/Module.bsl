		Условие_ОтборПравообладателей = "СотрудникиПользователей.Пользователь В (&Пользователи)";
		Запрос.УстановитьПараметр("Пользователи", ПользователиОтбор);
	КонецЕсли;
	Запрос.Текст = СтрЗаменить(Запрос.Текст, "&Условие_ОтборПравообладателей", Условие_ОтборПравообладателей);
	
	СотрудникиСПользователями = Запрос.Выполнить().Выгрузить();
	Для Каждого ОбъектДоступа Из ОбъектыДоступа Цикл
		Для Каждого СотрудникСПользователем Из СотрудникиСПользователями Цикл
			СтрокаПрав = ТаблицаПрав.Добавить();
			СтрокаПрав.ОбъектДоступа = ОбъектДоступа;
			СтрокаПрав.Сотрудник = СотрудникСПользователем.Сотрудник;
			СтрокаПрав.Пользователь = СотрудникСПользователем.Пользователь;
		КонецЦикла;
	КонецЦикла;
	ТаблицаПрав.ЗаполнитьЗначения(Истина, "Чтение, Изменение, Добавление, Удаление, УправлениеПравами");
	Возврат ТаблицаПрав;
	
