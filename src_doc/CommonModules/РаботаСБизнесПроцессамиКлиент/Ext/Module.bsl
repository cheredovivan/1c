		ЗаголовокФормыСоздания);
		
	ДопПараметры = Новый Структура;
	ДопПараметры.Вставить("Форма", Форма);
		
	ОписаниеОповещения = Новый ОписаниеОповещения(
		ИмяОбработчика,
		ЭтотОбъект,
		ДопПараметры);
		
