	Если ТипПоля = "Описание" Тогда
		ЗаголовокФормыВыбора = НСтр("ru = 'Выбор шаблона описания'");
		ЗаголовокФормыСоздания = НСтр("ru = 'Шаблон описания'");
		ИмяОбработчика = "ОписаниеНачалоВыбораПродолжение";
