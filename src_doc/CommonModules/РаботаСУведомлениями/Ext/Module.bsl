		РазделительДополнительногоОписанияПриИзмененииЗадачи(), Истина, Истина);
	
	Если Части.Количество() <> 2 Тогда
		Возврат Результат;
	КонецЕсли;
	
	Результат.ПредставлениеЗадачи = Части[0];
	Результат.ОписаниеИзменений = Части[1];
	
