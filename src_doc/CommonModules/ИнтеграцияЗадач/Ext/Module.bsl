	ПредставлениеВидаПредметаКОтмене = "";
	Если ТипЗнч(ПредметКОтмене) = Тип("ДокументСсылка.Задача") Тогда
		Возврат ПредставлениеВидаПредметаКОтмене;
	КонецЕсли;

	ПредставлениеВидаПредметаКОтмене = Строка(ТипЗнч(ПредметКОтмене));
	
