// Настраивает страницы получения данных обработки в карточке предмета
// 
// Параметры:
//  Форма - ФормаКлиентскогоПриложения
//  ПараметрыФормы - см. ДействияКлиентСервер.НовыеПараметрыФормыПредметаОбработки
//  ДанныеОбработки - см. НовыеДанныеОбработкиДляФормыПредмета
Процедура НастроитьСтраницыПолученияДанныхОбработки(Форма, ПараметрыФормы, ДанныеОбработки)
	
	ЭлементыСтраниц = ПараметрыФормы.ПараметрыСтраниц;
	
	ПолучениеДанных = ДанныеОбработки.ПолучениеДанных;
	
	Если ПолучениеДанных.ДанныеПолучены Тогда
		
		УстановитьСвойствоЭлементаФормыБезопасно(ЭлементыСтраниц.ГруппаСтраниц, "ТекущаяСтраница",
			ЭлементыСтраниц.СтраницаДанныхОбработки);
		
	ИначеЕсли ЗначениеЗаполнено(ПолучениеДанных.ОшибкаПолученияДанных) Тогда
		
		УстановитьСвойствоЭлементаФормыБезопасно(ЭлементыСтраниц.ГруппаСтраниц, "ТекущаяСтраница",
			ЭлементыСтраниц.СтраницаОшибки);
		УстановитьСвойствоЭлементаФормыБезопасно(ЭлементыСтраниц.НадписьОшибки, "Заголовок",
			СтрШаблон(НСтр("ru = 'При получении данных обработки возникла ошибка:
			|%1'"), ПолучениеДанных.ОшибкаПолученияДанных));
		
	Иначе
		
		УстановитьСвойствоЭлементаФормыБезопасно(ЭлементыСтраниц.ГруппаСтраниц, "ТекущаяСтраница",
			ЭлементыСтраниц.СтраницаОжидание);
		
	КонецЕсли;
	
КонецПроцедуры

// Заполняет дерево обработки в карточке предмета по отложенному заполнению данных;
// 
// Параметры:
//  Форма - ФормаКлиентскогоПриложения
//  ПараметрыФормы - см. ДействияКлиентСервер.НовыеПараметрыФормыПредметаОбработки
//  ДанныеОбработки - см. НовыеДанныеОбработкиДляФормыПредмета
Процедура ЗаполнитьДеревоОбработкиПоДаннымОбработки(Форма, ПараметрыФормы, ДанныеОбработки)
	
	ИменаРеквизитов = ПараметрыФормы.ИменаРеквизитов;
	
	ДеревоФормы = Форма[ИменаРеквизитов.ДеревоОбработки]; // ДанныеФормыДерево
	
	ДеревоФормы.ПолучитьЭлементы().Очистить();
	
	Если Не ДанныеОбработки.ПолучениеДанных.ДанныеПолучены
		Или ЗначениеЗаполнено(ДанныеОбработки.ПолучениеДанных.ОшибкаПолученияДанных) Тогда
		
		Возврат;
	КонецЕсли;
	
	ПолученныеДанные = ДанныеОбработки.ПолученныеДанные;
	ДеревоОбработки = ПолученныеДанные.ДеревоОбработки;
	
	ПеренестиДеревоОбработкиВФорму(ДеревоФормы, ДеревоОбработки);
	
КонецПроцедуры

// Устанавливает подсказку элемента формы безопасно, без исключений
// 
// Параметры:
//  Форма - ФормаКлиентскогоПриложения
//  Элемент - Произвольный
//  Подсказка - Строка
Процедура УстановитьПодсказкуЭлементаФормы(Форма, Элемент, Подсказка)
	
	Если ТипЗнч(Элемент) = Тип("КнопкаФормы") Тогда
		
		ИмяКоманды = Элемент.ИмяКоманды;
		
		Команда = Форма.Команды.Найти(ИмяКоманды);
		
		Если Команда <> Неопределено Тогда
			Команда.Подсказка = Подсказка;
			Возврат;
		КонецЕсли;
		
	КонецЕсли;
	
	УстановитьСвойствоЭлементаФормыБезопасно(Элемент, "Подсказка", Подсказка);
	
КонецПроцедуры

#КонецОбласти

#Область ЗаполнениеДанныхОбработки

// Заполняет данные обработки для карточки предмета, если имеется текущая обработка
// 
// Параметры:
//  ДанныеОбработки - см. НовыеДанныеОбработкиПредмета
//  ТекущаяОбработка - СправочникСсылка.ОбработкиОбъектов
//  ПараметрыЗаполнения - см. НовыеПараметрыЗаполненияДанныхОбработки
Процедура ЗаполнитьДанныеОбработкиДляФормыПоДаннымТекущейОбработки(ДанныеОбработки, ТекущаяОбработка, ПараметрыЗаполнения)
	
	НужнаИстория = Ложь;
	
	Предмет = ДанныеОбработки.ПараметрыОбъектаОбработки.ОбъектОбработки;
	ПредметОбъект = Предмет.ПолучитьОбъект();
	
	РеквизитыОбработки = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(ТекущаяОбработка,
		"ДатаСоздания, ДатаНачала, ДатаИзмененияСостояния, Состояние");
	
	ДатаОбработки = РеквизитыОбработки.ДатаСоздания;
	ДанныеОбработки.ДатаНачалаТекущейОбработки = РеквизитыОбработки.ДатаНачала;
	ДанныеОбработки.ДатаИзмененияСостоянияТекущейОбработки = РеквизитыОбработки.ДатаИзмененияСостояния;
	ДанныеОбработки.СостояниеТекущейОбработки = РеквизитыОбработки.Состояние;
	
	ВыборкаДействий = ТекущиеДействияПредмета(Предмет, ДанныеОбработки.ВидОбъекта, ДатаОбработки).Выбрать();
	
	Пока ВыборкаДействий.Следующий() Цикл
		
		Действие = ВыборкаДействий.Действие;
		СостояниеДействия = РегистрыСведений.СостоянияДействий.СостояниеДействия(Действие);
		
		ДанныеОбработки.СостоянияДействий[Действие] = СостояниеДействия;
		
		Показывать = 
			Не НеПоказыватьПоНастройке(
				ВыборкаДействий.ВидДействия,
				Действие,
				ПредметОбъект,
				СостояниеДействия)
			Или ПараметрыЗаполнения.ПоказыватьВсеДействия;
		ДанныеОбработки.ПоказДействий[Действие] = Показывать;
		
		Если Не Показывать Тогда
			Продолжить;
		КонецЕсли;
		
		ДанныеОбработки.КоличествоОтображаемыхДействий = ДанныеОбработки.КоличествоОтображаемыхДействий + 1;
		
		СтрокаДействияВДереве = ДанныеОбработки.ДеревоОбработки.Строки.Добавить();
		МенеджерДействия = ОбщегоНазначения.МенеджерОбъектаПоСсылке(Действие);
		
		ДанныеДействия = НовыеДанныеДействияДляЗаполненияДереваОбработки();
		ДанныеДействия.Действие = Действие;
		ДанныеДействия.ПредметОбъект = ПредметОбъект;
		
		МенеджерДействия.ЗаполнитьСтрокуВДеревеОбработки(СтрокаДействияВДереве, ДанныеДействия);
		
	КонецЦикла;
	
	ДанныеОбработки.ОбработкаВОчередиНаОстановку =
		ОбработкаОчередиЗаданийСервер.ОбъектЕстьВОчереди(
			ТекущаяОбработка, ,Перечисления.ТипыЗаданий.ОстановитьОбработку);
	
	ДанныеОбработки.ОбработкаВОчередиНаПродолжение = 
		ОбработкаОчередиЗаданийСервер.ОбъектЕстьВОчереди(
			ТекущаяОбработка, , Перечисления.ТипыЗаданий.ПродолжитьОбработку);
	
	ПронумероватьДействияВДанныхОбработки(ДанныеОбработки);
	ПометитьВытесняемыхУчастников(ДанныеОбработки.ДеревоОбработки, ПредметОбъект);
	
КонецПроцедуры

// Заполняет данные комлексного процесса в данных обработки для карточки предмета
// 
// Параметры:
//  ДанныеОбработки - см. НовыеДанныеОбработкиПредмета
Процедура ЗаполнитьДанныеКомплексногоПроцессаДляДанныхОбработки(ДанныеОбработки)
	
	Предмет = ДанныеОбработки.ПараметрыОбъектаОбработки.ОбъектОбработки;
	
	ДанныеОбработки.КППоПредмету = РаботаСПроцессамиПоОбработкамОбъектов.АктивныйКППоПредмету(
		Предмет);
	ВедущийПроцесс = БизнесПроцессыИЗадачиСервер.КорневойВедущийПроцесс(
		ДанныеОбработки.КППоПредмету);
	Если ЗначениеЗаполнено(ВедущийПроцесс) Тогда
		ДанныеОбработки.КППоПредмету = ВедущийПроцесс;
	КонецЕсли;
	Если ЗначениеЗаполнено(ДанныеОбработки.КППоПредмету) Тогда
		ДанныеОбработки.ЕстьРодительскийКомплексныйПроцесс = Истина;
		ДанныеОбработки.ЕстьПравоИзмененияПроцессаПоПредмету = 
			БизнесПроцессыИЗадачиВызовСервера.ЕстьПраваНаОстановкуБизнесПроцесса(
				ДанныеОбработки.КППоПредмету);
	КонецЕсли;
	
КонецПроцедуры

// Заполняет данные о действия в данных обработки для карточки предмета
// 
// Параметры:
//  ДанныеОбработки - см. НовыеДанныеОбработкиПредмета
Процедура ЗаполнитьДанныеОДействияхВДанныхОбработки(ДанныеОбработки)
	
	ДействияПоТипам = ДействияПоТипамИзДереваОбработки(ДанныеОбработки.ДеревоОбработки);
	
	ДействияСогласования = ДействияПоТипам[Перечисления.ТипыДействий.Согласование];
	Если ДействияСогласования <> Неопределено
		И ДействияСогласования.Количество() > 0 Тогда
		
		РеквизитыСогласований = ОбщегоНазначения.ЗначенияРеквизитовОбъектов(ДействияСогласования,
			"ФормируетВизы, СогласованиеВРежимеЗамечаний");
		
		Для Каждого Действие Из ДействияСогласования Цикл
			
			СостояниеДействия = ДанныеОбработки.СостоянияДействий[Действие];
			
			Если РеквизитыСогласований[Действие].ФормируетВизы Тогда
				ДанныеОбработки.ЕстьЛистСогласования = Истина;
			КонецЕсли;
			
			Если РеквизитыСогласований[Действие].СогласованиеВРежимеЗамечаний Тогда
				
				ДанныеОбработки.ДействиеСогласованияВРежимеЗамечаний = Действие;
				ДанныеОбработки.ЕстьЗамечанияСогласования =
					(СостояниеДействия = Перечисления.СостоянияВыполненияДействий.Завершено
					Или СостояниеДействия = Перечисления.СостоянияВыполненияДействий.Выполняется);
				
			КонецЕсли;
			
		КонецЦикла;
		
	КонецЕсли;
	
	Если ЗначениеЗаполнено(ДанныеОбработки.ДействиеСогласованияВРежимеЗамечаний) Тогда
		ДанныеОбработки.ЕстьПротоколРазногласий =
			ДействиеЗавершеноОтрицательноИЕстьЗамечания(ДанныеОбработки.ДействиеСогласованияВРежимеЗамечаний);
	КонецЕсли;
	
	ДействияОзнакомления = ДействияПоТипам[Перечисления.ТипыДействий.Ознакомление];
	Если ДействияОзнакомления <> Неопределено
		И ДействияОзнакомления.Количество() > 0 Тогда
		
		ДанныеОбработки.ЕстьДействияОзнакомления = Истина;
		ДанныеОбработки.ЕстьДействияОзнакомленияЗапущенные =
			РегистрыСведений.УчастникиОзнакомлений.ЕстьДействияОзнакомленияЗапущенные(
				ДействияОзнакомления);
		
	КонецЕсли;
	
	ДействияПодписания = ДействияПоТипам[Перечисления.ТипыДействий.Подписание];
	Если ДействияПодписания <> Неопределено
		И ДействияПодписания.Количество() > 0 Тогда
		
		ДанныеОбработки.ЕстьДействияПодписания = Истина;
	КонецЕсли;
	
	ДействияУтверждения = ДействияПоТипам[Перечисления.ТипыДействий.Утверждение];
	Если ДействияУтверждения <> Неопределено
		И ДействияУтверждения.Количество() > 0 Тогда
		
		ДанныеОбработки.ЕстьДействияУтверждения = Истина;
	КонецЕсли;
	
КонецПроцедуры

// Возвращает соответствие действий по типам из дерева обработки
// 
// Параметры:
//  ДеревоОбработки - см. НовоеДеревоОбработки
// 
// Возвращаемое значение:
//  Соответствие Из КлючИЗначение:
//    * Ключ - ПеречислениеСсылка.ТипыДействий
//    * Значение - Массив Из ОпределяемыйТип.Действия
Функция ДействияПоТипамИзДереваОбработки(ДеревоОбработки)
	
	ДействияПоТипам = Новый Соответствие();
	
	Для Каждого СтрокаДействия Из ДеревоОбработки.Строки Цикл
		
		Действие = СтрокаДействия.Действие;
		
		ТипДействия = Неопределено;
		Если ДействияКлиентСервер.ЭтоДействиеИсполнения(Действие) Тогда
			ТипДействия = Перечисления.ТипыДействий.Исполнение;
		ИначеЕсли ДействияКлиентСервер.ЭтоДействиеОзнакомления(Действие) Тогда
			ТипДействия = Перечисления.ТипыДействий.Ознакомление;
		ИначеЕсли ДействияКлиентСервер.ЭтоДействиеПодписания(Действие) Тогда
			ТипДействия = Перечисления.ТипыДействий.Подписание;
		ИначеЕсли ДействияКлиентСервер.ЭтоДействиеРегистрации(Действие) Тогда
			ТипДействия = Перечисления.ТипыДействий.Регистрация;
		ИначеЕсли ДействияКлиентСервер.ЭтоДействиеСогласования(Действие) Тогда
			ТипДействия = Перечисления.ТипыДействий.Согласование;
		ИначеЕсли ДействияКлиентСервер.ЭтоДействиеУтверждения(Действие) Тогда
			ТипДействия = Перечисления.ТипыДействий.Утверждение;
		КонецЕсли;
		
		ДействияПоТипу = ДействияПоТипам[ТипДействия];
		Если ДействияПоТипу = Неопределено Тогда
			ДействияПоТипу = Новый Массив();
			ДействияПоТипам[ТипДействия] = ДействияПоТипу;
		КонецЕсли;
		
		ДействияПоТипу.Добавить(Действие);
		
	КонецЦикла;
	
	Возврат ДействияПоТипам;
	
КонецФункции

// Заполняет данные о прерванных ранее обработках в данных обработки для карточки предмета
// 
// Параметры:
//  ДанныеОбработки - см. НовыеДанныеОбработкиПредмета
Процедура ЗаполнитьДанныеОПрерванныхОбработках(ДанныеОбработки)
	
	СостояниеОбработки = ДанныеОбработки.СостояниеТекущейОбработки;
	Предмет = ДанныеОбработки.ПараметрыОбъектаОбработки.ОбъектОбработки;
	
	Если СостояниеОбработки = Перечисления.СостоянияОбработкиОбъектов.Выполняется 
		Или СостояниеОбработки = Перечисления.СостоянияОбработкиОбъектов.Завершена
		Или СостояниеОбработки = Перечисления.СостоянияОбработкиОбъектов.Остановлена Тогда
		
		Возврат;
	КонецЕсли;
	
	Запрос = Новый Запрос;
	Запрос.Текст =
		"ВЫБРАТЬ ПЕРВЫЕ 1
		|	Обработки.Ссылка КАК Ссылка,
		|	Обработки.ПричинаПрерывания КАК ПричинаПрерывания,
		|	Обработки.ДатаОкончания КАК ДатаОкончания,
		|	Обработки.Прервал КАК Прервал,
		|	ПРЕДСТАВЛЕНИЕ(Обработки.Прервал) КАК ПрервалПредставление,
		|	Обработки.Состояние
		|ПОМЕСТИТЬ ВТ_Обработки
		|ИЗ
		|	Справочник.ОбработкиОбъектов КАК Обработки
		|ГДЕ
		|	Обработки.Владелец = &Предмет
		|
		|УПОРЯДОЧИТЬ ПО
		|	Обработки.ДатаНачала УБЫВ
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|ВЫБРАТЬ
		|	ВТ_Обработки.Ссылка,
		|	ВТ_Обработки.ПричинаПрерывания,
		|	ВТ_Обработки.ДатаОкончания,
		|	ВТ_Обработки.Прервал,
		|	ВТ_Обработки.ПрервалПредставление
		|ИЗ
		|	ВТ_Обработки КАК ВТ_Обработки
		|ГДЕ
		|	ВТ_Обработки.Состояние = ЗНАЧЕНИЕ(Перечисление.СостоянияОбработкиОбъектов.Прервана)";

	Запрос.УстановитьПараметр("Предмет", Предмет);
	Выборка = Запрос.Выполнить().Выбрать();
	
	Если Выборка.Следующий() Тогда
		
		ДанныеОбработки.ДатаОкончанияПредыдущейОбработки = Выборка.ДатаОкончания;
		ДанныеОбработки.ПричинаПрерыванияОбработки = Выборка.ПричинаПрерывания;
		ДанныеОбработки.Прервал = Выборка.Прервал;
		ДанныеОбработки.ПрервалПредставление = Выборка.ПрервалПредставление;
		
	КонецЕсли;
	
КонецПроцедуры

// Нумерует действия в дереве обработки, согласно настройкам видимости
// 
// Параметры:
//  ДанныеОбработки - см. НовыеДанныеОбработкиПредмета
Процедура ПронумероватьДействияВДанныхОбработки(ДанныеОбработки)
	
	НомерДействия = 1;
	
	Для Каждого СтрокаДействия Из ДанныеОбработки.ДеревоОбработки.Строки Цикл
		
		Если ДанныеОбработки.ПоказДействий[СтрокаДействия.Действие] <> Истина Тогда
			Продолжить;
		КонецЕсли;
		
		СтрокаДействия.Номер = НомерДействия;
		СтрокаДействия.Представление = СтрШаблон(НСтр("ru = '%1. %2'"),
			СтрокаДействия.Номер, СтрокаДействия.ПредставлениеЧистое);
		
		НомерДействия = НомерДействия + 1;
		
	КонецЦикла;
	
КонецПроцедуры

