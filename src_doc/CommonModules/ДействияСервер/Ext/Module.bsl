	ИначеЕсли ТипЗнч(Действие) = Тип("СправочникСсылка.ДействияРегистрации") Тогда
		Возврат "ДействияРегистрации";
	ИначеЕсли ТипЗнч(Действие) = Тип("СправочникСсылка.ДействияСогласования") Тогда
