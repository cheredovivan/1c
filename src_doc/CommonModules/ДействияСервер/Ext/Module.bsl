	ДанныеЗаполнения = НовыеДанныеОбработкиДляФормыПредмета();
	
	Если ПроцессЗаполнения = Неопределено
		Или ПроцессЗаполнения.Статус = "Ошибка" Тогда
		
		ДанныеЗаполнения.ПолучениеДанных.ДанныеПолучены = Ложь;
		ДанныеЗаполнения.ПолучениеДанных.ОшибкаПолученияДанных = ПроцессЗаполнения.КраткоеПредставлениеОшибки;
		
	ИначеЕсли ПроцессЗаполнения.Статус = "Выполнено" Тогда
		
		ДанныеЗаполнения.ПолучениеДанных.ДанныеПолучены = Истина;
		ДанныеЗаполнения.ПолученныеДанные =
			ПолучитьИзВременногоХранилища(ПроцессЗаполнения.АдресРезультата);
		
	ИначеЕсли ПроцессЗаполнения.Статус = "Выполняется" Тогда
		
		ДанныеЗаполнения.ПолучениеДанных.ДанныеПолучены = Ложь;
		ДанныеЗаполнения.ПолучениеДанных.ОшибкаПолученияДанных = "";
		
	Иначе
		
		ДанныеЗаполнения.ПолучениеДанных.ДанныеПолучены = Ложь;
		ДанныеЗаполнения.ПолучениеДанных.ОшибкаПолученияДанных =
			НСтр("ru = 'Неизвестный статус получения данных'");
		
	КонецЕсли;
	
	НастроитьСтраницыПолученияДанныхОбработки(Форма, ПараметрыФормы, ДанныеЗаполнения);
	УстановитьРеквизитыФормыПоДаннымОбработки(Форма, ПараметрыФормы, ДанныеЗаполнения);
	ЗаполнитьДеревоОбработкиПоДаннымОбработки(Форма, ПараметрыФормы, ДанныеЗаполнения);
	НастроитьЭлементыКомандОбработки(Форма, ПараметрыФормы, ДанныеЗаполнения);
	
КонецПроцедуры

// Возвращает дерево оработки с историей
// 
// Параметры:
//  Предмет - ОпределяемыйТип.ПредметДействия
// 
// Возвращаемое значение:
//  ДеревоЗначений - см. НовоеДеревоОбработки
Функция ДеревоОбработкиСИсторией(Предмет) Экспорт
	
	Дерево = НовоеДеревоОбработки();
	
	ПредметОбъект = Предмет.ПолучитьОбъект();
	
	ТаблицаОбработок = ВсеОбработкиОбъекта(Предмет);
	
	МассивОбработок = ТаблицаОбработок.ВыгрузитьКолонку("Ссылка");
	РеквизитыОбработок = ОбщегоНазначения.ЗначенияРеквизитовОбъектов(МассивОбработок,
		"ДатаОкончания, ДатаНачала, Состояние, ПричинаПрерывания, Прервал");
	
	Для Каждого СтрокаОбработки Из ТаблицаОбработок Цикл
		
		Обработка = СтрокаОбработки.Ссылка;
		РеквизитыОбработки = РеквизитыОбработок[Обработка];
		
		СтрокаОбработкиДерева = Дерево.Строки.Добавить();
		
		ЗаполнитьСтрокуОбработкиДереваСИсторией(СтрокаОбработкиДерева, РеквизитыОбработки);
		
		ВыборкаДействий = ВсеДействияОбработкиИПредмета(
			Предмет, ВидОбъекта(Предмет),
			Обработка, СтрокаОбработки.ДатаСоздания).Выбрать();
		
		НомерДействия = 1;
		
		Пока ВыборкаДействий.Следующий() Цикл
			
			СтрокаДействия = СтрокаОбработкиДерева.Строки.Добавить();
			
			Действие = ВыборкаДействий.Действие;
			МенеджерДействия = ОбщегоНазначения.МенеджерОбъектаПоСсылке(
				Действие);
			
			ДанныеДействия = НовыеДанныеДействияДляЗаполненияДереваОбработки();
			ДанныеДействия.Действие = Действие;
			ДанныеДействия.ПредметОбъект = ПредметОбъект;
			ДанныеДействия.НужнаИсторияОбработки = Истина;
			
			МенеджерДействия.ЗаполнитьСтрокуВДеревеОбработки(СтрокаДействия, ДанныеДействия);
			
			Если ВыборкаДействий.ВыполненоВнеПрограммы Тогда
				СтрокаДействия.ПредставлениеЧистое = СтрШаблон("%1 (%2)",
					СтрокаДействия.ПредставлениеЧистое,
					ДействияКлиентСервер.КомментарийОВыполненииВнеПрограммы(Истина));
			КонецЕсли;
			
			СтрокаДействия.Номер = НомерДействия;
			СтрокаДействия.Представление = СтрШаблон(НСтр("ru = '%1. %2'"),
				СтрокаДействия.Номер, СтрокаДействия.ПредставлениеЧистое);
			
			НомерДействия = НомерДействия + 1;
			
		КонецЦикла;
		
	КонецЦикла;
	
	Возврат Дерево;
	
КонецФункции

// Переносит дерево значений обработки в дерево формы
// 
// Параметры:
//  ДеревоФормы - ДанныеФормыДерево
//  ДеревоОбработки - ДеревоЗначений
Процедура ПеренестиДеревоОбработкиВФорму(ДеревоФормы, ДеревоОбработки) Экспорт
	
	СтрокиДереваКПереносуВФорму = Новый Массив();
	
	Для Каждого СтрокаКорня Из ДеревоОбработки.Строки Цикл
		СтрокиДереваКПереносуВФорму.Добавить(СтрокаКорня);
	КонецЦикла;
	
	СтрокиВФормеПоСтрокамДерева = Новый Соответствие();
	
	Пока СтрокиДереваКПереносуВФорму.Количество() > 0 Цикл
		
		ПереносимаяСтрока = СтрокиДереваКПереносуВФорму[0]; // СтрокаДереваЗначений
		СтрокиДереваКПереносуВФорму.Удалить(0);
		
		РодительСтроки = ПереносимаяСтрока.Родитель;
		Если РодительСтроки = Неопределено Тогда
			НоваяСтрокаФормы = ДеревоФормы.ПолучитьЭлементы().Добавить();
		Иначе
			РодительСтрокиФормы = СтрокиВФормеПоСтрокамДерева[РодительСтроки]; // ДанныеФормыДерево
			НоваяСтрокаФормы = РодительСтрокиФормы.ПолучитьЭлементы().Добавить();
		КонецЕсли;
		
		СтрокиВФормеПоСтрокамДерева[ПереносимаяСтрока] = НоваяСтрокаФормы;
		ЗаполнитьЗначенияСвойств(НоваяСтрокаФормы, ПереносимаяСтрока);
		
		Для Каждого ДочерняяСтрока Из ПереносимаяСтрока.Строки Цикл
			СтрокиДереваКПереносуВФорму.Добавить(ДочерняяСтрока);
		КонецЦикла;
		
	КонецЦикла;
	
КонецПроцедуры

