				Текст_ОшибкаЗагрузкиВходящегоУведомления(), ТекстОшибкиПодробно, ДанныеОтвета);
		КонецЕсли;
	КонецПопытки;
	
	Если ПолученоУспешно Тогда
		ЗаписьВЖурналСобытий(
			Перечисления.УровниСобытийМЭДО.Информация,
			Уведомление.Ссылка,
