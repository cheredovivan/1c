			ОписаниеРоли = Новый Структура(
				"Роль, Обязательная, ТолькоОдинФайл");
			ЗаполнитьЗначенияСвойств(ОписаниеРоли, Стр);
			ВидДокументаКэш.РолиФайлов.Добавить(ОписаниеРоли);
