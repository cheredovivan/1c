//  если нет ни одного докмуента передачи в архив или на уничтожение.
// 
// Параметры:
//  ДокументСсылка - ДокументСсылка.ПередачаДелВАрхив, ДокументСсылка.УничтожениеДел - ссылка на текущий документ
//
Процедура СнятьИспользуетсяПередачаДелХранения(ДокументСсылка) Экспорт
	
	УстановитьПривилегированныйРежим(Истина);
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	ПередачаДелВАрхив.Ссылка КАК Ссылка
		|ИЗ
		|	Документ.ПередачаДелВАрхив КАК ПередачаДелВАрхив
		|ГДЕ
		|	ПередачаДелВАрхив.Проведен
		|	И ПередачаДелВАрхив.Ссылка <> &ДокументСсылка
		|
		|ОБЪЕДИНИТЬ ВСЕ
		|
		|ВЫБРАТЬ ПЕРВЫЕ 1
		|	УничтожениеДел.Ссылка
		|ИЗ
		|	Документ.УничтожениеДел КАК УничтожениеДел
		|ГДЕ
		|	УничтожениеДел.Проведен
		|	И УничтожениеДел.Ссылка <> &ДокументСсылка";
	Запрос.Параметры.Вставить("ДокументСсылка", ДокументСсылка);
	Результат = Запрос.Выполнить();
	Если Результат.Пустой() Тогда
		Константы.ИспользуетсяПередачаДелХранения.Установить(Ложь);
	КонецЕсли;
	
КонецПроцедуры

// Проверить тома гибридного дела.
// 
// Параметры:
//  ПараметрыПроверкиГибридногоДела - Структура:
//  * ПоказыватьПредупреждение - Булево - Показывать или нет предупреждение по результатам проверки
//  * ПараметрыФормыВопроса - Неопределено, Структура - см.ДелопроизводствоКлиент.ПоказатьРасширеннуюФормуВопроса
//  * РеквизитыНоменклатурыДел - Структура:
//    * НоменклатураДел - СправочникСсылка.НоменклатураДел - Номенклатура дел
//    * ФормаДокументов - ПеречислениеСсылка.ВариантыФормДокументов - Форма доументов в НД
//
Процедура ПроверитьТомаГибридногоДела(ПараметрыПроверкиГибридногоДела) Экспорт
	
	РеквизитыНоменклатурыДел = ПараметрыПроверкиГибридногоДела.РеквизитыНоменклатурыДел;
	Если Не ЗначениеЗаполнено(РеквизитыНоменклатурыДел.НоменклатураДел) Тогда
		Возврат;
	КонецЕсли;
	
	РеквизитыТома = Неопределено;
	Если ПараметрыПроверкиГибридногоДела.Свойство("РеквизитыТома") Тогда
		РеквизитыТома = ПараметрыПроверкиГибридногоДела.РеквизитыТома;
	КонецЕсли;
	
	СведенияОГибридномДеле = СведенияОТомахГибридногоДела(РеквизитыНоменклатурыДел.НоменклатураДел, РеквизитыТома);
	ЕстьПервыйЭлектронныйТом = СведенияОГибридномДеле.ПервыйТомЭлектронный;
	ДелоНеСодержитТомов = СведенияОГибридномДеле.Электронных = 0 И СведенияОГибридномДеле.Бумажных = 0;
	
	// Если в гибридном деле нет томов, не информируем пользователя.
	Если ДелоНеСодержитТомов Тогда
		Возврат;
	КонецЕсли;
	
	// Если нет первого электронного тома в гибридном деле или электронных домов более 1,
	// нужно информировать об этом пользователя и показать рекомендации Росархива.
	Если Не ЕстьПервыйЭлектронныйТом Тогда
		НужноПоказатьПредупреждение = Истина;
	ИначеЕсли ЕстьПервыйЭлектронныйТом И СведенияОГибридномДеле.Электронных > 1 Тогда
		НужноПоказатьПредупреждение = Истина;
	Иначе
		НужноПоказатьПредупреждение = Ложь;
	КонецЕсли;
	
	Если НужноПоказатьПредупреждение Тогда
		
		НастройкиИнформированияПриВыбореГибридныхДел =
			ПолучитьНастройкиИнформированияПриРаботеСГибриднымиДелами();
		
		ПоказыватьПредупреждение =
			НастройкиИнформированияПриВыбореГибридныхДел.ПоказыватьПредупреждениеПриПроверкеГибридногоДела;
		Если Не ЗначениеЗаполнено(ПоказыватьПредупреждение) Тогда
			ПоказыватьПредупреждение = Истина;
		КонецЕсли;
		
		ПараметрыПроверкиГибридногоДела.ПоказыватьПредупреждение = ПоказыватьПредупреждение;
		
		Если ПоказыватьПредупреждение Тогда
			ВариантыОтвета = Новый СписокЗначений;
			ВариантыОтвета.Добавить("Да", НСтр("ru = 'Да'"));
			ВариантыОтвета.Добавить("Нет", НСтр("ru = 'Нет'"));
			
			ПараметрыФормы = Новый Структура;
			ПараметрыФормы.Вставить("Заголовок", НСтр("ru = 'Гибридные дела'"));
			
			ТомаСтрокой = "";
			Если СведенияОГибридномДеле.Электронных > 0 Тогда
				ЭлектронныхСтрокой = СтрШаблон(НСтр("ru = 'электронные (%1)'"), СведенияОГибридномДеле.Электронных);
				ТомаСтрокой = ЭлектронныхСтрокой;
			Иначе
				ЭлектронныхСтрокой = "";
			КонецЕсли;
			Если СведенияОГибридномДеле.Бумажных > 0 Тогда
				БумажныхСтрокой = СтрШаблон(НСтр("ru = 'бумажные (%1)'"), СведенияОГибридномДеле.Бумажных);
				ТомаСтрокой = ?(ТомаСтрокой = "", БумажныхСтрокой, ТомаСтрокой + " и " + БумажныхСтрокой);
			Иначе
				БумажныхСтрокой = "";
			КонецЕсли;
			
			УточнениеСтрокой = "";
			Если Не ЕстьПервыйЭлектронныйТом Тогда
				УточнениеСтрокой = УточнениеСтрокой + НСтр("ru = ', первый том не является электронным'");
			КонецЕсли;
			Если СведенияОГибридномДеле.Электронных > 1 Тогда
				УточнениеСтрокой = УточнениеСтрокой + НСтр("ru = ', электронных томов более одного'");
			КонецЕсли;
			
			ТекстВопроса = СтрШаблон(НСтр("ru = 'Элемент номенклатуры дел содержит %1 тома%2.
			|
			|В соответствии с рекомендациями Росархива, электронные документы составляют первый (отдельный) том дела, документы на бумажном носителе формируются во второй и последующие тома. Продолжить?'"),
				ТомаСтрокой, УточнениеСтрокой);
			ПараметрыФормы.Вставить("ТекстВопроса", ТекстВопроса);
			ПараметрыФормы.Вставить("СписокДоступныхВариантов", ВариантыОтвета);
			ПараметрыФормы.Вставить("ВариантОтветаПоУмолчанию", "Да");
			ПараметрыФормы.Вставить("КлючПерсональнойНастройки", НСтр("ru = 'НастройкиИнформированияПриВыбореГибридныхДел'"));
			ПараметрыФормы.Вставить("ИмяПерсональнойНастройки", НСтр("ru = 'ПоказыватьПредупреждениеПриПроверкеГибридногоДела'"));
			
			ПараметрыПроверкиГибридногоДела.ПараметрыФормыВопроса = ПараметрыФормы;
		КонецЕсли;
	КонецЕсли;
	
КонецПроцедуры

// Получает сведения о томах в гибридном деле (количество электронных и бумажных томов, есть ли электронный том №1).
// 
// Параметры:
//  НоменклатураДел - СправочникСсылка.НоменклатураДел - гибридное дело
//  РеквизитыТома - Неопределено, Структура - реквизиты добавляемого в гибридное дело нового или измененного тома:
//   * Том - СправочникСсылка.ДелаХраненияДокументов - ссылка на добавляемый в гибридное дело том.
//   * НомерТома - Число - новый номер тома
//   * ФормаДокументов - ПеречислениеСсылка.ВариантыФормДокументов - новая форма тома.
// 
// Возвращаемое значение:
//  Структура:
//   * Электронных - число - количество электронных томов в гибридном деле
//   * Бумажных - число - количество бумажных томов в гибридном деле
//   * ПервыйТомЭлектронный - Булево - том №1 в гибридном деле является электронным.
//
Функция СведенияОТомахГибридногоДела(НоменклатураДел, РеквизитыТома) Экспорт
	
	СведенияОТомах = Новый Структура;
	СведенияОТомах.Вставить("Электронных", 0);
	СведенияОТомах.Вставить("Бумажных", 0);
	СведенияОТомах.Вставить("ПервыйТомЭлектронный", Ложь);
	
	УстановитьПривилегированныйРежим(Истина);
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	КОЛИЧЕСТВО(ВЫБОР
		|			КОГДА Дела.ФормаДокументов = ЗНАЧЕНИЕ(Перечисление.ВариантыФормДокументов.Электронная)
		|				ТОГДА 1
		|		КОНЕЦ) КАК Электронных,
		|	КОЛИЧЕСТВО(ВЫБОР
		|			КОГДА Дела.ФормаДокументов = ЗНАЧЕНИЕ(Перечисление.ВариантыФормДокументов.Бумажная)
		|				ТОГДА 1
		|		КОНЕЦ) КАК Бумажных,
		|	КОЛИЧЕСТВО(ВЫБОР
		|		КОГДА Дела.ФормаДокументов = ЗНАЧЕНИЕ(Перечисление.ВариантыФормДокументов.Электронная)
		|				И Дела.НомерТома = 1
		|			ТОГДА 1
		|	КОНЕЦ) КАК ПервыйТомЭлектронный
		|ИЗ
		|	Справочник.ДелаХраненияДокументов КАК Дела
		|ГДЕ
		|	Дела.НоменклатураДел = &НоменклатураДел
		|	И Дела.Ссылка <> &ТекущийТом
		|	И Дела.ПометкаУдаления = ЛОЖЬ";
	Запрос.УстановитьПараметр("НоменклатураДел", НоменклатураДел);
	Если РеквизитыТома <> Неопределено И ЗначениеЗаполнено(РеквизитыТома.Том) Тогда
		Запрос.УстановитьПараметр("ТекущийТом", РеквизитыТома.Том);
	Иначе
		Запрос.УстановитьПараметр("ТекущийТом", Справочники.ДелаХраненияДокументов.ПустаяСсылка());
	КонецЕсли;
	
	Результат = Запрос.Выполнить();
	Если Не Результат.Пустой() Тогда
		Выборка = Результат.Выбрать();
		Выборка.Следующий();
		СведенияОТомах.Электронных = Выборка.Электронных;
		СведенияОТомах.Бумажных = Выборка.Бумажных;
		СведенияОТомах.ПервыйТомЭлектронный = Выборка.ПервыйТомЭлектронный > 0;
	КонецЕсли;
	
	// Дополним сведения по гибридному делу данными добавляемого тома.
	Если РеквизитыТома <> Неопределено И ЗначениеЗаполнено(РеквизитыТома.Том) Тогда
		Если РеквизитыТома.ФормаДокументов = Перечисления.ВариантыФормДокументов.Электронная
			И РеквизитыТома.НомерТома = 1 Тогда
			СведенияОТомах.ПервыйТомЭлектронный = Истина;
		КонецЕсли;
		Если РеквизитыТома.ФормаДокументов = Перечисления.ВариантыФормДокументов.Электронная Тогда
			СведенияОТомах.Электронных = СведенияОТомах.Электронных + 1;
		Иначе
			СведенияОТомах.Бумажных = СведенияОТомах.Бумажных + 1;
		КонецЕсли;
	КонецЕсли;
	
	Возврат СведенияОТомах;
	
КонецФункции

