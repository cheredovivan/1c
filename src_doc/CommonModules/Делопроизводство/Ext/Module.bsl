		Если ТекстСообщения <> "" Тогда 
			КодОсновногоЯзыка = ОбщегоНазначения.КодОсновногоЯзыка();
			ЗаписьЖурналаРегистрации(
				НСтр("ru = 'Журнал передачи.Ошибка фиксации'", КодОсновногоЯзыка),
