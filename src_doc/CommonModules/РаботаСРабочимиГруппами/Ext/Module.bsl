		КонецЦикла;
		
		Если ТаблицаНабора.Количество() > КолСтрокДоДобавления Тогда
			//@skip-check query-in-loop
			ПерезаписатьРабочуюГруппуОбъекта(Предмет, ТаблицаНабора, Истина);
		КонецЕсли;
				
	КонецЦикла;
	
