// Возвращает параметры вопроса о лимите циклов.
//
// Параметры:
//  ДанныеВопроса - см. НовыеДанныеВопросаОИсчерпанииЛимитаЦиклов
//
// Возвращаемое значение:
//  Структура:
//   * Заголовок - Строка
//   * ТекстВопроса - Строка
//   * СписокВыбора - СписокЗначений из Строка
//   * ЗначениеПоУмолчанию - Строка
//
Функция ПараметрыВопросаОЛимитеЦикловСогласования(ДанныеВопроса) Экспорт
	
	ВариантыОтветов = ВариантыОтветаНаВопросОЛимитеЦиклов();
	
	СписокВыбора = Новый СписокЗначений;
	СписокВыбора.Добавить(ВариантыОтветов.ВернутьсяКЗадаче,
		ПредставлениеОтветаНаВопросОЛимитеЦиклов(ВариантыОтветов.ВернутьсяКЗадаче));
	ЗначениеПоУмолчанию = ВариантыОтветов.ВернутьсяКЗадаче;
	
	Если ДанныеВопроса.ПродолжатьОбработкуВДействии Тогда
		
		ТекстВопроса = НСтр(
			"ru = 'Повторное согласование запрещено.
			|Вы можете продолжить обработку с результатом «Не согласовано» или вернуться к задаче.
			|
			|Для увеличения количества циклов обратитесь к администратору.'");
		СписокВыбора.Добавить(ВариантыОтветов.Продолжить,
			ПредставлениеОтветаНаВопросОЛимитеЦиклов(ВариантыОтветов.Продолжить));
		
	Иначе
		
		ТекстВопроса = НСтр(
			"ru = 'Повторное согласование запрещено.
			|Вы можете завершить обработку или вернуться к задаче.
			|
			|Для увеличения количества циклов обратитесь к администратору.'");
		СписокВыбора.Добавить(ВариантыОтветов.Завершить,
			ПредставлениеОтветаНаВопросОЛимитеЦиклов(ВариантыОтветов.Завершить));
		
	КонецЕсли;
	
	ПараметрыВопроса = Новый Структура;
	ПараметрыВопроса.Вставить("Заголовок", НСтр("ru = 'Исчерпано количество циклов согласования'"));
	ПараметрыВопроса.Вставить("ТекстВопроса", ТекстВопроса);
	ПараметрыВопроса.Вставить("СписокВыбора", СписокВыбора);
	ПараметрыВопроса.Вставить("ЗначениеПоУмолчанию", ЗначениеПоУмолчанию);
	
	Возврат ПараметрыВопроса;
	
КонецФункции

