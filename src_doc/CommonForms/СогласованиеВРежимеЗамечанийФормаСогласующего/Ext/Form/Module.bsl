			ТекущиеДанные.ТипЗамечания,
			ТекущиеДанные.Автор,
			ТекущиеДанные.Комментарий,
			ТекущиеДанные.РеальныйАвтор,
			ТекущиеДанные.Замечание);
		
		ОткрытьФорму("ОбщаяФорма.ФормаПросмотраПравки",
			ПараметрыОткрытия,,,,,,
			РежимОткрытияОкнаФормы.БлокироватьОкноВладельца);
		
	КонецЕсли;
	
	
КонецПроцедуры

